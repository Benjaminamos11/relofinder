<div id="global-modal" class="modal-overlay hidden">
  <!-- Backdrop -->
  <div class="modal-backdrop" data-close></div>
  
  <!-- Modal Container -->
  <div class="modal-container" role="dialog" aria-modal="true" aria-labelledby="modal-title">
    
    <!-- Header -->
    <header class="modal-header">
      <button class="modal-close" data-close aria-label="Close modal">
        <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      
      <div class="header-content">
        <h1 id="modal-title" class="modal-title">Find Your Perfect Swiss Relocation Partner</h1>
        <p id="modal-subtitle" class="modal-subtitle">Connect with vetted specialists who understand your unique needs</p>
      </div>
    </header>

    <!-- Body -->
    <div class="modal-body">
      <div class="content-grid">
        
        <!-- Main Content -->
        <div class="main-content">
          
          <!-- Trust Signal -->
          <div class="trust-banner">
            <div class="trust-content">
              <svg class="trust-icon" width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
              <span class="trust-text">127 people found their perfect specialist this week</span>
            </div>
          </div>

          <!-- Service Options -->
          <div class="service-options">
            
            <!-- Option 1: Personalized Quotes -->
            <div class="service-card" data-service="quotes">
              <div class="card-header">
                <div class="card-icon">
                  <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10m-10 4h5m5-11v16l-4-2-4 2V1z"/>
                  </svg>
                </div>
                <h3 class="card-title">Compare Relocation Service Quotes</h3>
              </div>
              
              <p class="card-description">
                Receive personalized quotes from 3-5 vetted specialists tailored to your specific needs
              </p>
              
              <ul class="card-benefits">
                <li>Free, no-obligation quotes</li>
                <li>Compare services and pricing</li>
                <li>Vetted, licensed professionals only</li>
                <li>Response within 24 hours</li>
              </ul>
              
              <button class="card-cta" data-action="select-quotes">
                Get My Quotes
                <span class="cta-subtext">Takes 2 minutes</span>
              </button>
            </div>

            <!-- Option 2: Free Consultation -->
            <div class="service-card" data-service="consultation">
              <div class="card-header">
                <div class="card-icon">
                  <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <h3 class="card-title">Free Relocation Strategy Session</h3>
              </div>
              
              <p class="card-description">
                30-minute consultation to understand your needs and recommend the perfect specialist
              </p>
              
              <ul class="card-benefits">
                <li>Expert guidance on choosing specialists</li>
                <li>Personalized recommendations</li>
                <li>No sales pressure</li>
                <li>Available via video call or phone</li>
              </ul>
              
              <button class="card-cta secondary" data-action="select-consultation">
                Schedule Consultation
                <span class="cta-subtext">No commitment required</span>
              </button>
              
              <p class="disclaimer">
                We specialize in helping you find the right relocation specialist. We do not provide job search assistance or direct relocation services.
              </p>
            </div>

            <!-- Option 3: Instant Matching -->
            <div class="service-card" data-service="matching">
              <div class="card-header">
                <div class="card-icon">
                  <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                </div>
                <h3 class="card-title">Instant Specialist Matching</h3>
              </div>
              
              <p class="card-description">
                Answer 3 quick questions and get immediate recommendations for your situation
              </p>
              
              <ul class="card-benefits">
                <li>Immediate results</li>
                <li>AI-powered matching</li>
                <li>No personal information required</li>
                <li>Start your search right away</li>
              </ul>
              
              <button class="card-cta secondary" data-action="select-matching">
                Find My Match
                <span class="cta-subtext">3 questions only</span>
              </button>
            </div>

          </div>
        </div>

        <!-- Consultant Sidebar -->
        <div class="consultant-sidebar">
          <div class="consultant-profile">
            <div class="consultant-header">
              <img 
                src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1747501071/6758848048b5cdaf6ebe884f_WhatsApp_Image_2024-12-11_at_01.55.01_oruhjs.webp" 
                alt="Robert Kolar - Swiss Relocation Consultant" 
                class="consultant-avatar"
              />
              <div class="consultant-info">
                <h3 class="consultant-name">Robert Kolar</h3>
                <p class="consultant-title">Senior Relocation Consultant</p>
                
                <div class="language-badges">
                  <span class="lang-badge">DE</span>
                  <span class="lang-badge">EN</span>
                  <span class="lang-badge">FR</span>
                  <span class="lang-badge">IT</span>
                </div>
              </div>
            </div>
            
            <div class="consultant-credentials">
              <div class="credential-item">
                <svg class="credential-icon" width="16" height="16" fill="currentColor">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>Swiss Licensed</span>
              </div>
              <div class="credential-item">
                <svg class="credential-icon" width="16" height="16" fill="currentColor">
                  <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                </svg>
                <span>8+ Years Experience</span>
              </div>
              <div class="credential-item">
                <svg class="credential-icon" width="16" height="16" fill="currentColor">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
                <span>500+ Successful Relocations</span>
              </div>
            </div>
            
            <blockquote class="consultant-quote">
              "I enjoy helping each client find their perfect relocation specialist. My goal is to make your Swiss move as smooth as possible."
            </blockquote>
          </div>
        </div>

      </div>
    </div>

    <!-- Footer -->
    <footer class="modal-footer">
      <div class="footer-content">
        <div class="footer-left">
          <div class="rating-display">
            <div class="stars">
