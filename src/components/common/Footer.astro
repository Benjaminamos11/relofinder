---
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-secondary-500/20 rounded-full blur-3xl"></div>
  </div>

  <!-- Gradient Frame Effect -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-600/10 via-transparent to-secondary-600/10"></div>
  
  <!-- Main Footer Content -->
  <div class="container relative z-10 py-16">
    <!-- Footer Card -->
    <div class="bg-white/5 backdrop-blur-sm rounded-3xl border border-white/10 p-8 lg:p-12 shadow-2xl">
      
      <!-- Top Section -->
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-12 mb-12">
        
        <!-- Brand Column -->
        <div class="lg:col-span-1">
          <div class="flex items-center mb-6 justify-center">
            <div class="w-24 h-8 md:w-28 md:h-10 rounded-xl overflow-hidden flex items-center justify-center">
              <img 
                src="https://res.cloudinary.com/dphbnwjtx/image/upload/c_crop,w_300,h_100,f_webp,q_auto:good/v1748257779/background_removed_image_EWXUeqkFSJqwJ3xSqQHOUQ_s3w3et.webp" 
                alt="ReloFinder Logo" 
                class="object-contain w-full h-full"
                width="300"
                height="100"
                loading="eager"
                decoding="async"
              />
            </div>
          </div>
          <p class="text-gray-300 leading-relaxed mb-6">
            Your trusted partner for seamless Swiss relocations. Connecting expats with verified professionals since 2023.
          </p>
          
          <!-- Social Links -->
          <div class="flex space-x-4">
            <a href="https://twitter.com/relofinder" target="_blank" rel="noopener" class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-xl flex items-center justify-center transition-colors duration-300" aria-label="Follow us on Twitter">
