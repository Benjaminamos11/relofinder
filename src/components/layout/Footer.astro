---
import { Linkedin, Twitter, Heart } from 'lucide-react';

interface Props {
  theme?: 'light' | 'dark';
}

const { theme = 'light' } = Astro.props;
const bgClass = theme === 'dark' ? 'bg-[#0B1120] border-slate-800' : 'bg-white border-slate-100';
const textClass = theme === 'dark' ? 'text-slate-400' : 'text-slate-500';
// Updated Heading Class: Smaller, uppercase, tighter tracking for "high end" look
const headingClass = theme === 'dark' ? 'text-white text-xs font-bold uppercase tracking-widest' : 'text-slate-900 text-xs font-bold uppercase tracking-widest';
const hoverClass = 'hover:text-[#FF6F61]';
const borderClass = theme === 'dark' ? 'border-slate-800' : 'border-slate-100';
const socialBgClass = theme === 'dark' ? 'bg-slate-800 text-slate-400 hover:bg-[#FF6F61] hover:text-white' : 'bg-slate-50 text-slate-400 hover:bg-[#0077b5] hover:text-white';
---

<footer class={`${bgClass} border-t border-slate-100 pt-24 pb-12 text-sm transition-colors duration-300`}>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    
    <!-- Clean Grid: 4 Cols (No Dividers) -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-y-12 gap-x-8 border-b border-gray-100 pb-20 mb-12">
      
      <!-- Column 1: Brand Identity -->
      <div class="col-span-2 lg:col-span-1 lg:pr-12">
        <a href="/" class="block text-2xl font-bold text-[#FF6F61] tracking-tight mb-6" style="font-family: 'Playfair Display', serif;">
          Relofinder.
        </a>
        <div class="space-y-4 text-[11px] text-slate-400 leading-relaxed font-medium">
          <p>
            Chilegässli 12a<br/>
            8904 Aesch ZH<br/>
            Switzerland
          </p>
          <p>
            hello@relofinder.ch
          </p>
        </div>
        <div class="flex gap-4 mt-8">
            <a href="#" class="text-slate-300 hover:text-slate-900 transition-colors"><Linkedin className="w-4 h-4" /></a>
            <a href="#" class="text-slate-300 hover:text-slate-900 transition-colors"><Twitter className="w-4 h-4" /></a>
        </div>
      </div>

      <!-- Column 2: Regions -->
      <div class="col-span-1">
        <h3 class="text-[11px] font-bold uppercase tracking-widest text-slate-900 mb-6">Regions</h3>
        <ul class="space-y-4">
          <li><a href="/regions/zurich" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Zürich</a></li>
          <li><a href="/regions/geneva" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Geneva</a></li>
          <li><a href="/regions/basel" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Basel</a></li>
          <li><a href="/regions/zug" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Zug</a></li>
          <li><a href="/regions" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors text-[#FF6F61]">All Regions</a></li>
        </ul>
      </div>

      <!-- Column 3: Services -->
      <div class="col-span-1">
        <h3 class="text-[11px] font-bold uppercase tracking-widest text-slate-900 mb-6">Expertise</h3>
        <ul class="space-y-4">
          <li><a href="/services/housing-search" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Housing</a></li>
          <li><a href="/services/visa-immigration" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Immigration</a></li>
          <li><a href="/services/education" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Education</a></li>
          <li><a href="/services/moving-logistics" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Logistics</a></li>
          <li><a href="/services" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors text-[#FF6F61]">All Services</a></li>
        </ul>
      </div>

      <!-- Column 4: Company -->
      <div class="col-span-1">
        <h3 class="text-[11px] font-bold uppercase tracking-widest text-slate-900 mb-6">Corporate</h3>
        <ul class="space-y-4">
          <li><a href="/about" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">About</a></li>
          <li><a href="/partners" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Partners</a></li>
          <li><a href="/blog" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Journal</a></li>
          <li><a href="/contact" class="block text-[13px] font-medium text-slate-500 hover:text-[#FF6F61] transition-colors">Contact</a></li>
        </ul>
      </div>

    </div>

    <!-- Bottom Bar -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="flex items-center gap-8">
        <p class="text-[10px] uppercase tracking-widest text-slate-400 font-medium">
          &copy; 2026 Relofinder AG
        </p>
        <div class="hidden md:block h-px w-8 bg-slate-200"></div>
        <p class="text-[10px] uppercase tracking-widest text-slate-400 font-medium hidden md:block">
            Swiss Quality Verified
        </p>
      </div>

      <div class="text-[11px] text-slate-400 flex items-center gap-1.5 font-medium">
        Made with <Heart className="w-3 h-3 fill-[#FF6F61] text-[#FF6F61]" /> in Switzerland 
        <a href="https://www.vibestudio.ch" target="_blank" class="hover:text-[#FF6F61] transition-colors ml-1">vibestudio.ch</a>
      </div>
      
      <div class="flex gap-8 text-[11px] font-medium text-slate-500">
        <a href="/privacy" class="hover:text-black transition-colors">Privacy</a>
        <a href="/terms" class="hover:text-black transition-colors">Terms</a>
        <a href="/impressum" class="hover:text-black transition-colors">Impressum</a>
      </div>
    </div>
  </div>
</footer>
