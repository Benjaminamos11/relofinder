---
// Sample featured companies
const companies = [
  {
    id: 'relocation-experts',
    name: 'Swiss Relocation Experts',
    logo: 'https://via.placeholder.com/200x200/e5e7eb/6b7280?text=Company+Logo',
    description: 'Full-service relocation agency with 15+ years of experience helping expats settle in Switzerland.',
    services: ['Housing Search', 'Immigration Support', 'School Search'],
    regions: ['Zürich', 'Basel', 'Geneva'],
    rating: 4.8,
    reviewCount: 245
  },
  {
    id: 'swiss-move',
    name: 'SwissMove',
    logo: 'https://via.placeholder.com/200x200/e5e7eb/6b7280?text=Company+Logo',
    description: 'Premium moving and logistics services for international relocations to and within Switzerland.',
    services: ['International Moving', 'Storage Solutions', 'Pet Transport'],
    regions: ['Nationwide'],
    rating: 4.7,
    reviewCount: 183
  },
  {
    id: 'expat-financial',
    name: 'Expat Financial Advisors',
    logo: 'https://via.placeholder.com/200x200/e5e7eb/6b7280?text=Company+Logo',
    description: 'Specialized financial advice for expatriates covering banking, taxes, investments, and insurance.',
    services: ['Banking Setup', 'Tax Advisory', 'Insurance Consulting'],
    regions: ['Geneva', 'Zürich', 'Lugano'],
    rating: 4.9,
    reviewCount: 127
  },
  {
    id: 'alpine-home',
    name: 'Alpine Home Finders',
    logo: 'https://via.placeholder.com/200x200/e5e7eb/6b7280?text=Company+Logo',
    description: 'Boutique real estate agency specializing in finding rental and purchase properties for expats.',
    services: ['Rental Search', 'Property Purchase', 'Relocation Support'],
    regions: ['Zürich', 'Zug', 'Lucerne'],
    rating: 4.6,
    reviewCount: 156
  },
];
---

<section class="section bg-gray-50 py-16">
  <div class="container">
    <div class="section-title max-w-3xl mx-auto text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">Trusted <span class="gradient-text">Companies</span></h2>
      <p class="text-lg text-accent-600">
        Connect with established relocation agencies and service providers that specialize in supporting expats in Switzerland.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-4 gap-8">
      {companies.map(company => (
        <a href={"/companies/" + company.id} class="group">
          <div class="bg-white rounded-2xl shadow-card overflow-hidden hover:shadow-card-hover transition-all duration-500 h-full flex flex-col transform hover:-translate-y-1">
            <!-- Rating Badge -->
            <div class="p-6 pb-0 flex justify-center">
              <div class="flex items-center bg-primary-50 px-4 py-1.5 rounded-full mb-4 border border-primary-100">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-500 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="text-coral-500 font-bold">{company.rating}</span>
                <span class="text-coral-400 text-sm ml-1">({company.reviewCount} reviews)</span>
              </div>
            </div>

            <!-- Content Area -->
            <div class="p-6 pt-0 flex-grow flex flex-col">
              <h3 class="text-xl font-bold mb-3 text-center group-hover:text-coral-500 transition-colors">{company.name}</h3>
              <p class="text-accent-600 mb-6">{company.description}</p>
              
              <div class="mt-auto space-y-4">
                <!-- Services -->
                <div class="flex items-start">
                  <span class="w-8 h-8 rounded-lg bg-primary-100 text-coral-500 flex items-center justify-center mr-3 flex-shrink-0 mt-0.5">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                  </span>
                  <div>
                    <h4 class="text-sm font-semibold text-accent-700 mb-1">Services</h4>
                    <p class="text-accent-600 text-sm">{company.services.join(' • ')}</p>
                  </div>
                </div>
                
                <!-- Regions -->
                <div class="flex items-start">
                  <span class="w-8 h-8 rounded-lg bg-primary-100 text-coral-500 flex items-center justify-center mr-3 flex-shrink-0 mt-0.5">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </span>
                  <div>
                    <h4 class="text-sm font-semibold text-accent-700 mb-1">Regions</h4>
                    <p class="text-accent-600 text-sm">{company.regions.join(' • ')}</p>
                  </div>
                </div>
              </div>
              
              <!-- Call to Action -->
              <div class="mt-6 flex items-center justify-center">
                <div class="inline-flex items-center text-coral-500 font-medium group-hover:text-coral-600 transition-colors">
                  <span>View Profile</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transform group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a href="/companies" class="btn-primary inline-flex items-center px-6 py-3 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
        View All Companies
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>