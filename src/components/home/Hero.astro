---
/**
 * Hero Section - Full-screen background with overlay
 * Professional Swiss photography
 * Mobile-optimized
 */
---

<section class="relative min-h-[90vh] lg:min-h-screen flex items-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <picture>
      <!-- Mobile: portrait-optimized crop -->
      <source 
        media="(max-width: 640px)" 
        srcset="https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_90,w_800,h_1200,c_fill,g_center/v1759740211/joshua-earle--87JyMb9ZfU-unsplash_6_manoc6.jpg"
        type="image/webp"
      >
      <!-- Tablet: balanced crop -->
      <source 
        media="(max-width: 1024px)" 
        srcset="https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_90,w_1400,h_1000,c_fill,g_center/v1759740211/joshua-earle--87JyMb9ZfU-unsplash_6_manoc6.jpg"
        type="image/webp"
      >
      <!-- Desktop: wide panoramic -->
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_90,w_2000,h_1200,c_fill,g_center/v1759740211/joshua-earle--87JyMb9ZfU-unsplash_6_manoc6.jpg"
        alt="Zurich cityscape with Swiss Alps - Professional relocation services"
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
        decoding="async"
      />
    </picture>
    <!-- Dark gradient overlay for text readability -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/40"></div>
  </div>

  <!-- Hero Content -->
  <div class="container relative z-10 mx-auto px-6 lg:px-8 py-20">
    <div class="max-w-3xl space-y-8 fade-up">
      
      <!-- Headline -->
      <div class="space-y-4">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold text-white leading-[1.1] tracking-tight">
          Your Swiss Relocation,<br />
          <span class="bg-gradient-to-r from-[#B61919] to-[#DF3030] bg-clip-text text-transparent">Simplified</span>
        </h1>
        <p class="text-lg sm:text-xl lg:text-2xl text-gray-100 leading-relaxed max-w-2xl">
          Compare verified relocation agencies, explore Swiss regions, and move with confidence. Professional guidance for your journey to Switzerland.
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4">
        <button
          onclick="universalOpenModal({page: 'home'})"
          class="group inline-flex items-center justify-center px-8 py-4 text-white font-semibold rounded-xl transition-all duration-200 hover:shadow-2xl bg-gradient-to-r from-[#B61919] to-[#DF3030] hover:scale-[1.02]"
        >
          Get Free Quotes
          <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </button>
        <a
          href="/companies"
          class="inline-flex items-center justify-center px-8 py-4 font-semibold text-white bg-white/10 backdrop-blur-sm border-2 border-white/30 rounded-xl hover:bg-white/20 hover:border-white/40 transition-all duration-200"
        >
          Browse Agencies
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="flex flex-wrap items-center gap-6 lg:gap-8 pt-8 border-t border-white/20">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm font-medium text-white">1,000+ Successful Relocations</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm font-medium text-white">50+ Verified Agencies</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm font-medium text-white">All 26 Cantons</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator (optional) -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden lg:block">
    <div class="flex flex-col items-center gap-2 text-white/70 animate-bounce">
      <span class="text-sm">Scroll to explore</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
</section>

<style>
  /* Fade-up animation */
  .fade-up {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeUpIn 0.8s ease-out forwards;
  }
  
  @keyframes fadeUpIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Ensure animations work on mobile */
  @media (prefers-reduced-motion: reduce) {
    .fade-up {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
</style>
