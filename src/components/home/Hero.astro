---
import { Image } from 'astro:assets';
---

<section class="relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-gray-50 via-white to-blue-50">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-30">
    <div class="absolute inset-0 bg-repeat" style="background-image: url(data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%23e11d48%22%20fill-opacity%3D%220.05%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%224%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E);"></div>
  </div>
  
  <!-- Content -->
  <div class="container relative z-10 py-12 lg:py-20">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">
      
      <!-- Left Content -->
      <div class="space-y-6 lg:space-y-8 text-center lg:text-left">
        <!-- Trust Badge -->
        <div class="inline-flex items-center px-3 py-2 lg:px-4 lg:py-2 rounded-full bg-gradient-to-r from-primary-50 to-secondary-50 border border-primary-200 text-primary-700 font-medium text-xs lg:text-sm">
          <svg class="w-3 h-3 lg:w-4 lg:h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          Trusted by 5,000+ Swiss Expats
        </div>

        <!-- Main Headline -->
        <div class="space-y-3 lg:space-y-4">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-7xl font-bold leading-tight tracking-tight">
            Your Swiss
            <span class="bg-gradient-to-r from-primary-600 via-primary-500 to-secondary-600 bg-clip-text text-transparent block lg:inline">
              Relocation
          </span>
            Made Simple
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-gray-600 leading-relaxed max-w-xl mx-auto lg:mx-0">
            Connect with <strong class="text-gray-900">verified professionals</strong>, discover ideal locations, and navigate Swiss bureaucracy with confidence.
          </p>
        </div>

        <!-- Value Props -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 lg:gap-4 py-4 lg:py-6">
          <div class="flex items-center space-x-2 lg:space-x-3 justify-center lg:justify-start">
            <div class="w-10 h-10 lg:w-12 lg:h-12 rounded-xl bg-gradient-to-br from-primary-600 via-primary-500 to-secondary-600 flex items-center justify-center flex-shrink-0 backdrop-blur-sm bg-white/10 border border-white/20 shadow-lg">
              <svg class="w-5 h-5 lg:w-6 lg:h-6 text-white drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <span class="text-sm lg:text-base text-gray-700 font-medium">500+ Verified Partners</span>
          </div>
          <div class="flex items-center space-x-2 lg:space-x-3 justify-center lg:justify-start">
            <div class="w-10 h-10 lg:w-12 lg:h-12 rounded-xl bg-gradient-to-br from-primary-600 via-primary-500 to-secondary-600 flex items-center justify-center flex-shrink-0 backdrop-blur-sm bg-white/10 border border-white/20 shadow-lg">
              <svg class="w-5 h-5 lg:w-6 lg:h-6 text-white drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <span class="text-sm lg:text-base text-gray-700 font-medium">3-Day Setup</span>
          </div>
          <div class="flex items-center space-x-2 lg:space-x-3 justify-center lg:justify-start sm:col-span-2 lg:col-span-1">
            <div class="w-10 h-10 lg:w-12 lg:h-12 rounded-xl bg-gradient-to-br from-primary-600 via-primary-500 to-secondary-600 flex items-center justify-center flex-shrink-0 backdrop-blur-sm bg-white/10 border border-white/20 shadow-lg">
              <svg class="w-5 h-5 lg:w-6 lg:h-6 text-white drop-shadow-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0-2.08.402-2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                </svg>
            </div>
            <span class="text-sm lg:text-base text-gray-700 font-medium">Free Consultation</span>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-3 lg:gap-4">
          <button id="hero-cta-button" data-open-modal data-modal-tab="individual" onclick="universalOpenModal({page: 'home'})" class="group relative inline-flex items-center justify-center px-6 py-3 lg:px-8 lg:py-4 font-semibold text-white bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
            Start Your Journey
            <svg class="w-4 h-4 lg:w-5 lg:h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </button>
          <a href="/chat" class="group inline-flex items-center justify-center px-6 py-3 lg:px-8 lg:py-4 font-semibold text-primary-700 bg-white border-2 border-primary-200 rounded-xl hover:bg-primary-50 transition-all duration-300">
            <svg class="w-4 h-4 lg:w-5 lg:h-5 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Ask AI Assistant
          </a>
        </div>

        <!-- Social Proof -->
        <div class="pt-6 lg:pt-8 border-t border-gray-200">
          <p class="text-xs lg:text-sm text-gray-500 mb-3 lg:mb-4">Trusted by employees at</p>
          <div class="flex overflow-x-auto gap-4 lg:gap-8 opacity-60 whitespace-nowrap px-1 hide-scrollbar">
            <div class="text-lg lg:text-2xl font-bold text-gray-400 text-center lg:text-left flex-shrink-0">Google</div>
            <div class="text-lg lg:text-2xl font-bold text-gray-400 text-center lg:text-left flex-shrink-0">Microsoft</div>
            <div class="text-lg lg:text-2xl font-bold text-gray-400 text-center lg:text-left flex-shrink-0">Nestl√©</div>
            <div class="text-lg lg:text-2xl font-bold text-gray-400 text-center lg:text-left flex-shrink-0">UBS</div>
            <div class="text-lg lg:text-2xl font-bold text-gray-400 text-center lg:text-left flex-shrink-0">Roche</div>
          </div>
        </div>
      </div>
      
      <!-- Right Side - Visual Content -->
      <div class="relative order-first lg:order-last lg:pl-12">
        <!-- Main Image -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-primary-400 to-secondary-400 rounded-2xl lg:rounded-3xl rotate-2 lg:rotate-3 transform scale-105 opacity-20"></div>
          <div class="relative bg-white rounded-2xl lg:rounded-3xl shadow-2xl overflow-hidden">
            <!-- Optimized responsive hero image -->
            <picture>
              <!-- Mobile version (show full cow, object-cover, no crop) -->
              <source 
                media="(max-width: 640px)" 
                srcset="https://res.cloudinary.com/dphbnwjtx/image/upload/w_400,h_360,c_fit,f_webp,q_auto:good/v1748002920/a-humorous-slightly-quirky-photograph-of_E3yQygvrSj2lK35PvdcPXA_jo8EU6MaTSePalCxA1yBzA_hnzcxp.webp"
                type="image/webp"
              >
              <!-- Tablet version -->
              <source 
                media="(max-width: 1024px)" 
                srcset="https://res.cloudinary.com/dphbnwjtx/image/upload/w_500,h_350,c_fit,f_webp,q_auto:good/v1748002920/a-humorous-slightly-quirky-photograph-of_E3yQygvrSj2lK35PvdcPXA_jo8EU6MaTSePalCxA1yBzA_hnzcxp.webp"
                type="image/webp"
              >
              <!-- Desktop version -->
              <img 
                src="https://res.cloudinary.com/dphbnwjtx/image/upload/w_700,h_500,c_fit,f_webp,q_auto:good/v1748002920/a-humorous-slightly-quirky-photograph-of_E3yQygvrSj2lK35PvdcPXA_jo8EU6MaTSePalCxA1yBzA_hnzcxp.webp"
                alt="Welcome to Switzerland - Swiss cow with welcome sign for expat relocation"
                class="w-full h-[360px] sm:h-[400px] lg:h-[500px] xl:h-[700px] object-cover rounded-2xl lg:rounded-3xl"
                loading="eager"
                fetchpriority="high"
                decoding="async"
                width="700"
                height="500"
                data-astro-cid-ewxirvlt=""
              />
            </picture>
            <!-- Overlay Content -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent flex items-end rounded-2xl lg:rounded-3xl">
              <div class="p-4 lg:p-8 text-white">
                <h2 class="text-lg lg:text-2xl font-bold mb-2 lg:mb-3">Welcome to Switzerland!</h2>
                <p class="text-sm lg:text-lg opacity-90">Your friendly relocation journey starts here</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator - Hidden on mobile -->
  <div class="hidden lg:block absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-gray-400 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-gray-400 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<style>
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .hide-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>