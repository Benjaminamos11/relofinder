---
/**
 * Hero Section - Editorial & Professional
 * Left-aligned, Swiss minimal aesthetic
 * High-quality Swiss cityscape photography
 */
---

<section class="relative overflow-hidden bg-white">
  <!-- Subtle radial gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-white via-gray-50/30 to-white"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center min-h-[85vh] py-16 lg:py-20">
      
      <!-- Left Content - Editorial Style -->
      <div class="space-y-8 fade-up">
        
        <!-- Headline -->
        <div class="space-y-4">
          <h1 class="text-gray-900 font-bold leading-[1.1] tracking-tight" style="font-size: var(--text-hero);">
            Your Swiss Relocation,<br />
            <span class="text-brand-gradient">Simplified</span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed max-w-xl">
            Compare verified relocation agencies, explore Swiss regions, and move with confidence. Professional guidance for your journey to Switzerland.
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <button
            onclick="universalOpenModal({page: 'home'})"
            class="group inline-flex items-center justify-center px-8 py-4 text-white font-semibold rounded-lg transition-all duration-200 hover:shadow-lg bg-brand-gradient hover:scale-[1.02]"
          >
            Get Free Quotes
            <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </button>
          <a
            href="/companies"
            class="inline-flex items-center justify-center px-8 py-4 font-semibold text-gray-700 bg-white border-2 border-gray-200 rounded-lg hover:border-gray-300 hover:bg-gray-50 transition-all duration-200"
          >
            Browse Agencies
          </a>
        </div>

        <!-- Trust Indicators - Minimal -->
        <div class="flex flex-wrap items-center gap-8 pt-8 border-t border-gray-100">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[var(--rf-red-start)]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-gray-700">1,000+ Successful Relocations</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[var(--rf-red-start)]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-gray-700">50+ Verified Agencies</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[var(--rf-red-start)]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-gray-700">All 26 Cantons</span>
          </div>
        </div>
      </div>
      
      <!-- Right Side - Professional Swiss Photography -->
      <div class="relative fade-up delay-200">
        <!-- Soft shadow container -->
        <div class="relative rounded-2xl overflow-hidden soft-shadow">
          <picture>
            <!-- High-quality Swiss cityscape - Sharp WebP format -->
            <source 
              media="(max-width: 640px)" 
              srcset="https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_90,w_600,h_500,c_fill/v1759740211/joshua-earle--87JyMb9ZfU-unsplash_6_manoc6.jpg"
              type="image/webp"
            >
            <source 
              media="(max-width: 1024px)" 
              srcset="https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_90,w_800,h_600,c_fill/v1759740211/joshua-earle--87JyMb9ZfU-unsplash_6_manoc6.jpg"
              type="image/webp"
            >
            <img 
              src="https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_90,w_1200,h_800,c_fill/v1759740211/joshua-earle--87JyMb9ZfU-unsplash_6_manoc6.jpg"
              alt="Zurich cityscape with Swiss Alps - Professional relocation services"
              class="w-full h-[400px] sm:h-[500px] lg:h-[600px] object-cover"
              loading="eager"
              fetchpriority="high"
              decoding="async"
              width="1200"
              height="800"
            />
          </picture>
          
          <!-- Subtle overlay gradient -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent"></div>
        </div>
        
        <!-- Decorative element - subtle -->
        <div class="absolute -bottom-4 -right-4 w-32 h-32 bg-gradient-to-br from-[var(--rf-red-start)]/10 to-[var(--rf-red-end)]/10 rounded-full blur-2xl -z-10"></div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Scroll-triggered fade-up animation */
  .fade-up {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeUpIn 0.8s ease-out forwards;
  }
  
  .delay-200 {
    animation-delay: 200ms;
  }
  
  @keyframes fadeUpIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Ensure animations work on mobile */
  @media (prefers-reduced-motion: reduce) {
    .fade-up {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }
</style>