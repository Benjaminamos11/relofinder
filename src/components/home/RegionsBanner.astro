        {regions.map((region) => (
          <div 
            class={"region-detail bg-white rounded-xl shadow-sm overflow-hidden border border-gray-100 " + (region.id === defaultRegion.id ? 'block' : 'hidden')}
            id={`region-${region.id}`}
          >
