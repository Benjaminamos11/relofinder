---
const testimonials = [
  {
    id: 1,
    name: "Richard Otto",
    role: "Founder",
    company: "Immo-Otti.ch",
    image: null,
    quote: "ReloFinder's platform is the most efficient way to match relocation needs with high-quality service providers in Switzerland. Their data-driven approach is unique.",
    rating: 5,
    location: "Zurich"
  },
  {
    id: 2,
    name: "Kati",
    role: "Managing Director",
    company: "Primerelocation.ch",
    image: null,
    quote: "Being a preferred partner on ReloFinder allows us to focus on what we do best—relocating families—while their platform handles the initial comparison and lead qualification flawlessly.",
    rating: 5,
    location: "Zug"
  },
  {
    id: 3,
    name: "Chregu Sonderegger",
    role: "Owner",
    company: "Versicherigsheini.ch",
    image: null,
    quote: "The integration between insurance advisory and relocation is seamless. ReloFinder understands that a successful move involves more than just finding a house.",
    rating: 5,
    location: "Basel"
  }
];
---

<section class="section bg-gradient-to-br from-gray-50 to-white py-20">
  <div class="container">
    <div class="section-title text-center mb-16">
      <h2 class="text-4xl font-bold mb-4">
        Trusted by <span class="gradient-text">Professionals</span> Worldwide
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Join thousands of successful expats who made Switzerland their new home with our help
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      {testimonials.map(testimonial => (
        <div class="card p-8 hover:shadow-2xl transition-all duration-500 group relative overflow-hidden">
          <!-- Background Gradient -->
          <div class="absolute inset-0 bg-gradient-to-br from-primary-50 via-white to-secondary-50 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="relative z-10">
            <!-- Rating Stars -->
            <div class="flex mb-6">
              {[...Array(testimonial.rating)].map((_, i) => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>

            <!-- Quote -->
            <blockquote class="text-gray-700 text-lg leading-relaxed mb-8 italic">
              "{testimonial.quote}"
            </blockquote>

            <!-- Author Info -->
            <div class="flex items-center">
              {testimonial.image ? (
                <img 
                  src={testimonial.image} 
                  alt={testimonial.name}
                  class="w-14 h-14 rounded-full object-cover border-3 border-white shadow-lg"
                />
              ) : (
                <div class="w-14 h-14 rounded-full bg-slate-900 text-white flex items-center justify-center font-bold text-lg border-3 border-white shadow-lg uppercase">
                  {testimonial.name.split(' ').map(n => n[0]).join('')}
                </div>
              )}
              <div class="ml-4">
                <div class="font-semibold text-gray-900 text-lg">{testimonial.name}</div>
                <div class="text-sm text-gray-600">{testimonial.role}</div>
                <div class="text-sm font-medium text-coral-500">{testimonial.company}</div>
                <div class="text-xs text-gray-500 flex items-center mt-1">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                  </svg>
                  {testimonial.location}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Stats Section -->
    <div class="bg-white rounded-3xl shadow-xl p-12 border border-gray-100">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="space-y-2">
          <div class="text-4xl font-bold gradient-text">5,000+</div>
          <div class="text-gray-600 font-medium">Successful Relocations</div>
        </div>
        <div class="space-y-2">
          <div class="text-4xl font-bold gradient-text">500+</div>
          <div class="text-gray-600 font-medium">Verified Partners</div>
        </div>
        <div class="space-y-2">
          <div class="text-4xl font-bold gradient-text">26</div>
          <div class="text-gray-600 font-medium">Swiss Cantons</div>
        </div>
        <div class="space-y-2">
          <div class="text-4xl font-bold gradient-text">4.9</div>
          <div class="text-gray-600 font-medium">Average Rating</div>
        </div>
      </div>
    </div>
  </div>
</section> 