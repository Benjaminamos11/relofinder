---
// Sample blog posts
const blogPosts = [
  {
    id: 'swiss-visa-guide',
    title: 'Complete Guide to Swiss Visa Requirements',
    excerpt: 'Everything you need to know about obtaining a Swiss visa for your relocation.',
    image: 'https://via.placeholder.com/800x600/e5e7eb/6b7280?text=Blog+Image',
    category: 'Immigration',
    author: 'Sarah Johnson',
    authorImage: 'https://via.placeholder.com/100x100/e5e7eb/6b7280?text=Author',
    date: '2025-01-15',
    readTime: '8 min read'
  },
  {
    id: 'swiss-tax-system',
    title: 'Swiss Health Insurance: A Complete Overview',
    excerpt: 'Understanding mandatory health insurance requirements and options for expatriates.',
    image: 'https://via.placeholder.com/800x600/e5e7eb/6b7280?text=Blog+Image',
    category: 'Healthcare',
    author: 'Michael Chen',
    authorImage: 'https://via.placeholder.com/100x100/e5e7eb/6b7280?text=Author',
    date: '2025-01-12',
    readTime: '12 min read'
  },
  {
    id: 'renting-in-zurich',
    title: 'Best Neighborhoods in Zurich for Expats',
    excerpt: 'Discover the most popular residential areas for international professionals in Zurich.',
    image: 'https://via.placeholder.com/800x600/e5e7eb/6b7280?text=Blog+Image',
    category: 'Housing',
    author: 'Emma Rodriguez',
    authorImage: 'https://via.placeholder.com/100x100/e5e7eb/6b7280?text=Author',
    date: '2025-01-10',
    readTime: '15 min read'
  },
];

// Format date for display
function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<section class="section bg-accent-50">
  <div class="container">
    <div class="section-title">
      <h2>Latest from our <span class="gradient-text">Blog</span></h2>
      <p>
        Expert advice, guides, and news to help you navigate your relocation to Switzerland.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {blogPosts.map(post => (
        <a href={`/blog/${post.id}`} class="card group h-full flex flex-col">
          <div class="relative overflow-hidden h-48">
            <img 
              src={post.image} 
              alt={post.title} 
              class="w-full h-full object-cover transition-all duration-500 group-hover:scale-110"
            />
            <div class="absolute top-0 right-0 bg-primary-600 text-white px-3 py-1 text-sm font-medium">
              {post.category}
            </div>
          </div>
          
          <div class="p-6 flex flex-col flex-grow">
            <div class="flex items-center mb-4">
              <img src={post.authorImage} alt={post.author} class="w-8 h-8 rounded-full mr-3 object-cover" />
              <div>
                <p class="text-sm font-medium">{post.author}</p>
                <p class="text-xs text-accent-500">{formatDate(post.date)} Â· {post.readTime}</p>
              </div>
            </div>
            
            <h3 class="text-xl font-semibold mb-3 group-hover:text-primary-600 transition-colors">{post.title}</h3>
            <p class="text-accent-600 mb-4 flex-grow">{post.excerpt}</p>
            
            <div class="mt-auto flex items-center gradient-text font-medium transition-all duration-300 group-hover:translate-x-2">
              Read Article
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a href="/blog" class="btn-primary">
        View All Articles
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>