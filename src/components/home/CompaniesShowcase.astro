---
import { getCollection } from 'astro:content';

// Fetch companies from content collection
const allCompanies = await getCollection('companies');

// Get Prime Relocation as the preferred partner
const primeRelocation = allCompanies.find(c => c.data.id === 'prime-relocation');

// Get 3 other top-rated companies for directory samples
const directorySamples = allCompanies
  .filter(c => c.data.id !== 'prime-relocation')
  .sort((a, b) => b.data.rating.score - a.data.rating.score)
  .slice(0, 3);
---

<section class="py-24 bg-white relative overflow-hidden">
  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 text-gray-900">
        Trusted <span class="bg-gradient-to-r from-primary-600 to-blue-600 bg-clip-text text-transparent">Relocation Agencies</span>
      </h2>
    </div>

    <!-- Row 1: Prime Relocation (Preferred Partner) -->
    {primeRelocation && (
      <div class="mb-12">
        <div class="bg-gradient-to-br from-primary-50 via-white to-red-50 border-2 border-primary-200 rounded-2xl p-8 relative">
          <!-- Yellow Badge -->
          <div class="absolute top-6 right-6">
            <span class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-yellow-400 to-yellow-500 text-yellow-900 rounded-full text-sm font-bold shadow-md">
              üèÜ Preferred Partner
            </span>
          </div>

          <div class="grid md:grid-cols-2 gap-8 items-center">
            <!-- Left: Info -->
            <div>
              <h3 class="text-3xl font-bold text-gray-900 mb-3">{primeRelocation.data.name}</h3>
              <p class="text-gray-700 text-lg leading-relaxed mb-6">
                Switzerland's leading relocation specialist with 15+ years of experience helping professionals and families.
              </p>

              <!-- Services -->
              <div class="mb-6">
                <h4 class="font-semibold text-gray-900 mb-3">Services</h4>
                <div class="flex flex-wrap gap-2">
                  <span class="px-3 py-1 bg-white border border-gray-200 text-gray-700 rounded-full text-sm font-medium">Housing</span>
                  <span class="px-3 py-1 bg-white border border-gray-200 text-gray-700 rounded-full text-sm font-medium">Immigration</span>
                  <span class="px-3 py-1 bg-white border border-gray-200 text-gray-700 rounded-full text-sm font-medium">Finance</span>
                  <span class="px-3 py-1 bg-white border border-gray-200 text-gray-700 rounded-full text-sm font-medium">Settling-In</span>
                </div>
              </div>

              <!-- Locations -->
              <div class="mb-6">
                <h4 class="font-semibold text-gray-900 mb-3">Locations</h4>
                <div class="flex flex-wrap gap-2">
                  <span class="px-3 py-1 bg-white border border-gray-200 text-gray-700 rounded-full text-sm">Zurich</span>
                  <span class="px-3 py-1 bg-white border border-gray-200 text-gray-700 rounded-full text-sm">Geneva</span>
                  <span class="px-3 py-1 bg-white border border-gray-200 text-gray-700 rounded-full text-sm">Basel</span>
                  <span class="px-3 py-1 bg-white border border-gray-200 text-gray-700 rounded-full text-sm">Zug</span>
                </div>
              </div>

              <!-- Rating -->
              <div class="flex items-center gap-3 mb-6">
                <div class="flex text-yellow-500">
                  {[...Array(5)].map(() => (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
                <span class="text-2xl font-bold text-gray-900">{primeRelocation.data.rating.score}</span>
                <span class="text-gray-600">({primeRelocation.data.rating.reviews} reviews)</span>
              </div>

              <!-- CTA -->
              <a
                href={`/companies/${primeRelocation.data.id}`}
                class="inline-flex items-center justify-center px-8 py-4 font-bold text-white bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 hover:scale-102"
              >
                View Profile & Get Quote
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>

            <!-- Right: Logo/Image placeholder -->
            <div class="hidden md:flex items-center justify-center">
              <div class="w-64 h-64 bg-gradient-to-br from-primary-100 to-primary-200 rounded-full flex items-center justify-center">
                <svg class="w-32 h-32 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    )}

    <!-- Row 2: Directory Agencies (Sample Cards) -->
    <div class="mb-12">
      <div class="text-center mb-6">
        <span class="inline-block px-4 py-2 bg-gray-100 text-gray-600 rounded-full text-sm font-semibold">
          From Directory
        </span>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {directorySamples.map((company) => (
          <a
            href={`/companies/${company.data.id}`}
            class="group bg-white border-2 border-gray-200 rounded-2xl p-6 hover:border-primary-300 hover:shadow-lg transition-all duration-200"
          >
            <div class="mb-4">
              <h3 class="text-xl font-bold text-gray-900 mb-1 group-hover:text-primary-600 transition-colors">
                {company.data.name}
              </h3>
              <p class="text-gray-600 text-sm line-clamp-2">
                {company.data.description}
              </p>
            </div>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-4">
              {company.data.services.slice(0, 3).map((service) => (
                <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-full">
                  {service}
                </span>
              ))}
            </div>

            <!-- Rating -->
            <div class="flex items-center gap-2">
              <div class="flex text-yellow-500">
                {[...Array(Math.floor(company.data.rating.score))].map(() => (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
              </div>
              <span class="text-sm font-semibold text-gray-900">{company.data.rating.score}</span>
              <span class="text-xs text-gray-500">({company.data.rating.reviews})</span>
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Row 3: Directory CTA -->
    <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 border-2 border-gray-200 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-3">
        Browse all <span class="text-primary-600">50+ vetted agencies</span> by region and service
      </h3>
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
        Compare providers, read reviews, and find the perfect match for your relocation needs.
      </p>
      <a
        href="/companies"
        class="inline-flex items-center justify-center px-8 py-4 font-bold text-white bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 hover:scale-102"
      >
        Browse All Agencies
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .hover\:scale-102:hover {
    transform: scale(1.02);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
