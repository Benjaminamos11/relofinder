---
// CTA Section for lead generation
---

<section class="py-20 bg-gradient-to-br from-primary-600 via-primary-700 to-secondary-600 relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-white/5 rounded-full blur-3xl"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-primary-600/50 to-secondary-600/50"></div>
  </div>

  <!-- Pattern Overlay -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-repeat" style="background-image: url('data:image/svg+xml,%3Csvg width=%22100%22 height=%22100%22 viewBox=%220 0 100 100%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22white%22 fill-opacity=%220.1%22%3E%3Cpath d=%22M50 50m-20 0a20 20 0 1 1 40 0a20 20 0 1 1 -40 0%22/%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="container relative z-10">
    <div class="text-center text-white animate-on-scroll">
      <!-- Main Heading -->
      <div class="mb-8">
        <span class="inline-block px-4 py-2 rounded-full bg-white/20 backdrop-blur-sm font-medium text-sm mb-6">
          Ready to Start Your Swiss Journey?
        </span>
        <h2 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          Let's Make Your Swiss
          <br class="hidden md:block">
          <span class="bg-gradient-to-r from-yellow-300 to-yellow-100 bg-clip-text text-transparent">
            Relocation Simple
          </span>
        </h2>
        <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto leading-relaxed">
          Join thousands of successful expats who found their perfect Swiss life through our platform. 
          Get personalized assistance from day one to settlement.
        </p>
      </div>

      <!-- Value Props -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <div class="flex flex-col items-center animate-on-scroll" style="animation-delay: 0.1s">
          <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Fast Setup</h3>
          <p class="text-white/80">Get matched with partners in 24 hours</p>
        </div>

        <div class="flex flex-col items-center animate-on-scroll" style="animation-delay: 0.2s">
          <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Verified Partners</h3>
          <p class="text-white/80">Only trusted, pre-screened professionals</p>
        </div>

        <div class="flex flex-col items-center animate-on-scroll" style="animation-delay: 0.3s">
          <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">No Hidden Costs</h3>
          <p class="text-white/80">Transparent pricing, no surprises</p>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-12 animate-on-scroll">
        <!-- Individual CTA -->
        <button 
          onclick="openModal('individual-lead-modal')" 
          class="group relative inline-flex items-center justify-center px-8 py-4 bg-white text-primary-700 font-bold rounded-2xl shadow-2xl hover:shadow-3xl transform hover:scale-105 transition-all duration-300"
        >
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          I'm Moving as Individual/Family
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </button>

        <!-- Corporate CTA -->
        <button 
          onclick="openModal('corporate-lead-modal')" 
          class="group relative inline-flex items-center justify-center px-8 py-4 bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white font-bold rounded-2xl hover:bg-white/20 transition-all duration-300"
        >
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          I'm Relocating Employees
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </button>
      </div>

      <!-- Trust Indicators -->
      <div class="border-t border-white/20 pt-8 animate-on-scroll">
        <p class="text-white/70 text-sm mb-4">Trusted by employees at</p>
        <div class="flex flex-wrap justify-center items-center gap-8 opacity-70">
          <div class="text-xl font-bold text-white">Google</div>
          <div class="text-xl font-bold text-white">Microsoft</div>
          <div class="text-xl font-bold text-white">Nestlé</div>
          <div class="text-xl font-bold text-white">UBS</div>
          <div class="text-xl font-bold text-white">Credit Suisse</div>
          <div class="text-xl font-bold text-white">Roche</div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Modal for Individual Lead Capture -->
<div id="individual-lead-modal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-3xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
    <div class="p-8">
      <!-- Modal Header -->
      <div class="flex justify-between items-center mb-6">
        <div>
          <h3 class="text-2xl font-bold text-gray-900">Start Your Swiss Journey</h3>
          <p class="text-gray-600">Tell us about your relocation needs and get matched with perfect partners</p>
        </div>
        <button onclick="closeModal('individual-lead-modal')" class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- Form Content -->
      <form id="individual-lead-form" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
            <input type="text" name="firstName" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
            <input type="text" name="lastName" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
          <input type="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Preferred Swiss Region</label>
          <select name="region" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
            <option value="">Select a region...</option>
            <option value="zurich">Zürich</option>
            <option value="geneva">Geneva</option>
            <option value="basel">Basel</option>
            <option value="bern">Bern</option>
            <option value="lausanne">Lausanne</option>
            <option value="other">Other / Not Sure</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Services Needed</label>
          <div class="grid grid-cols-2 gap-3">
            <label class="flex items-center">
              <input type="checkbox" name="services" value="housing" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
              <span class="ml-2 text-sm text-gray-700">Housing</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="services" value="visa" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
              <span class="ml-2 text-sm text-gray-700">Visa/Immigration</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="services" value="banking" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
              <span class="ml-2 text-sm text-gray-700">Banking</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" name="services" value="education" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
              <span class="ml-2 text-sm text-gray-700">Education</span>
            </label>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Timeline</label>
          <select name="timeline" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
            <option value="immediate">ASAP (within 1 month)</option>
            <option value="short">1-3 months</option>
            <option value="medium">3-6 months</option>
            <option value="long">6+ months</option>
          </select>
        </div>

        <button type="submit" class="w-full btn-primary py-4 text-lg">
          Get Matched with Partners
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>

<!-- Modal for Corporate Lead Capture -->
<div id="corporate-lead-modal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-3xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
    <div class="p-8">
      <!-- Modal Header -->
      <div class="flex justify-between items-center mb-6">
        <div>
          <h3 class="text-2xl font-bold text-gray-900">Corporate Relocation Solutions</h3>
          <p class="text-gray-600">Streamline your employee relocations with our enterprise services</p>
        </div>
        <button onclick="closeModal('corporate-lead-modal')" class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- Form Content -->
      <form id="corporate-lead-form" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Contact Name</label>
            <input type="text" name="contactName" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Job Title</label>
            <input type="text" name="jobTitle" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Company Name</label>
            <input type="text" name="companyName" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Company Size</label>
            <select name="companySize" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
              <option value="startup">Startup (1-50 employees)</option>
              <option value="medium">Medium (51-500 employees)</option>
              <option value="large">Large (500+ employees)</option>
            </select>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
          <input type="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Number of Employees to Relocate</label>
          <select name="employeeCount" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
            <option value="1-5">1-5 employees</option>
            <option value="6-20">6-20 employees</option>
            <option value="21-50">21-50 employees</option>
            <option value="50+">50+ employees</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Budget Range (CHF per employee)</label>
          <select name="budget" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent">
            <option value="5000-10000">CHF 5,000 - 10,000</option>
            <option value="10000-25000">CHF 10,000 - 25,000</option>
            <option value="25000-50000">CHF 25,000 - 50,000</option>
            <option value="50000+">CHF 50,000+</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Additional Requirements</label>
          <textarea name="requirements" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent" placeholder="Specific needs, executive level, family considerations..."></textarea>
        </div>

        <button type="submit" class="w-full btn-primary py-4 text-lg">
          Request Corporate Consultation
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  // Form submission handlers
  document.addEventListener('DOMContentLoaded', function() {
    // Individual form handler
    const individualForm = document.getElementById('individual-lead-form') as HTMLFormElement;
    if (individualForm) {
      individualForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data: Record<string, any> = Object.fromEntries(formData.entries());
        
        // Collect multiple checkbox values
        const services = formData.getAll('services');
        data.services = services;
        
        try {
          const response = await fetch('/api/individual-lead', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
          });
          
          if (response.ok) {
            (window as any).closeModal('individual-lead-modal');
            // Show success message or redirect
            alert('Thank you! We\'ll be in touch within 24 hours.');
          } else {
            alert('Something went wrong. Please try again.');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Something went wrong. Please try again.');
        }
      });
    }

    // Corporate form handler
    const corporateForm = document.getElementById('corporate-lead-form') as HTMLFormElement;
    if (corporateForm) {
      corporateForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data: Record<string, any> = Object.fromEntries(formData.entries());
        
        try {
          const response = await fetch('/api/corporate-lead', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
          });
          
          if (response.ok) {
            (window as any).closeModal('corporate-lead-modal');
            // Show success message or redirect
            alert('Thank you! Our corporate team will contact you within 24 hours.');
          } else {
            alert('Something went wrong. Please try again.');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Something went wrong. Please try again.');
        }
      });
    }
  });
</script> 