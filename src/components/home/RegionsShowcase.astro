    description: 'Global hub for banking, tech, and culture.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-whimsical-slightly-quirky-photograph-d_zq8vecXuSUm5G0iW2zVS2A_ahKrzbyPSHujmZTV4weezQ_fefkl9.webp',
    tags: ['Global Hub', 'ETH Zurich', 'Lake Views']
  },
  {
    id: 'geneva',
    name: 'Geneva',
    subtitle: 'International Diplomatic Hub',
    description: 'UN agencies, global finance, luxury lifestyle.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_jygtMk7MRVCGIR4b-pXn1w_u_7qRvYXQmqaQVXTr4FhIQ_exkzuu.webp',
    tags: ['UN HQ', 'International', 'French Culture']
  },
  {
    id: 'basel',
    name: 'Basel',
    subtitle: 'Life Sciences Capital',
    description: 'Pharma hub with art and Rhine river charm.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_byvGP0Q4RKyeAN-ygL2jbg_aTPr-BU2TWSrb4xXReYWMw_tw5r7l.webp',
    tags: ['Pharma', 'Art Basel', 'Rhine']
  },
  {
    id: 'lausanne',
    name: 'Lausanne',
    subtitle: 'Olympic Capital',
    description: 'University & innovation city on Lake Geneva.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_s2o30GAgRB2T9AZDpXe4_A_RED4Ygx9Rw2E2XeYdgDzog_jyhysn.webp',
    tags: ['EPFL/UNIL', 'Olympic', 'Lakeside']
  },
  {
    id: 'zug',
    name: 'Zug',
    subtitle: 'Crypto Valley',
    description: 'Tax-friendly, fintech-driven business hub.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054307/a-whimsical-slightly-quirky-photograph-c_ESZqUcnqSiCNpGzcV89dBw_o-YAUo9-RbC7oy5d4C2v2Q_ehpyba.webp',
    tags: ['Tax Haven', 'Blockchain', 'Business']
  },
  {
    id: 'alps',
    name: 'Alpine Regions',
    subtitle: 'Luxury Lifestyle Relocation',
    description: 'Exclusive relocation to St. Moritz, Gstaad, Zermatt, Andermatt, Crans-Montana.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054307/a-whimsical-photograph-of-a-friendly-typ_eIhtU-yYRV6QkH2ycfp9hQ_PJcuPNslT6iZbK83d0zYLQ_gocgoe.webp',
    tags: ['HNWI', 'Luxury', 'Tax Deals']
  }
];
---

<section class="py-24 bg-white relative overflow-hidden">
  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 rounded-full bg-gray-100 text-gray-700 font-semibold text-sm mb-4">
        Step 1: Choose Your Destination
      </span>
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 text-gray-900">
        Explore Switzerland's Most Popular Hubs
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        for expats and professionals
      </p>
    </div>

    <!-- 6-Card Grid (2×3) -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {featuredRegions.map((region) => (
        <a 
          href={`/regions/${region.id}`}
          class="group bg-white border-2 border-gray-200 rounded-2xl overflow-hidden hover:border-primary-300 hover:shadow-lg transition-all duration-200 flex flex-col h-full"
        >
          <!-- Image -->
          <div class="relative h-48 overflow-hidden">
            <img 
              src={region.image} 
              alt={`Relocation to ${region.name}, Switzerland`}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4">
              <h3 class="text-xl font-bold text-white mb-1">
                {region.name}
              </h3>
              <p class="text-white/90 text-sm font-medium italic">
                {region.subtitle}
              </p>
            </div>
          </div>

          <!-- Content -->
          <div class="p-6 flex-1 flex flex-col">
            <!-- Description -->
            <p class="text-gray-600 text-sm leading-relaxed mb-4 flex-1">
              {region.description}
            </p>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2">
              {region.tags.map((tag) => (
                <span class="inline-block px-3 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center">
      <a
        href="/regions"
        class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-bold text-lg hover:shadow-lg transition-all duration-200 hover:scale-102"
      >
        View All Regions
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .hover\:scale-102:hover {
    transform: scale(1.02);
  }
</style>
