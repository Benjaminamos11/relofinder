---
/**
 * Regions Showcase - Neumorphic Design
 * Soft shadows, overlapping layout, professional photography
 */
import SectionHeading from '../common/SectionHeading.astro';

const featuredRegions = [
  {
    id: 'zurich',
    name: 'Zürich',
    subtitle: 'Financial & Tech Hub',
    description: 'Global banking center with ETH Zurich, vibrant culture, and stunning lake views.',
    image: 'https://images.unsplash.com/photo-1527004013197-933c4bb611b3?w=800&h=600&fit=crop&q=80',
    tags: ['Banking', 'Tech', 'University']
  },
  {
    id: 'geneva',
    name: 'Geneva',
    subtitle: 'International Capital',
    description: 'Home to UN agencies, global organizations, and French-speaking culture.',
    image: 'https://images.unsplash.com/photo-1514565131-fce0801e5785?w=800&h=600&fit=crop&q=80',
    tags: ['UN HQ', 'Diplomacy', 'Luxury']
  },
  {
    id: 'basel',
    name: 'Basel',
    subtitle: 'Life Sciences Hub',
    description: 'Pharmaceutical capital with world-class art scene and Rhine river charm.',
    image: 'https://images.unsplash.com/photo-1551882547-ff40c63fe5fa?w=800&h=600&fit=crop&q=80',
    tags: ['Pharma', 'Art', 'Culture']
  },
  {
    id: 'lausanne',
    name: 'Lausanne',
    subtitle: 'Olympic Capital',
    description: 'University city with EPFL innovation hub on beautiful Lake Geneva shores.',
    image: 'https://images.unsplash.com/photo-1559827260-dc66d52bef19?w=800&h=600&fit=crop&q=80',
    tags: ['EPFL', 'Sports', 'Lakeside']
  },
  {
    id: 'zug',
    name: 'Zug',
    subtitle: 'Crypto Valley',
    description: 'Tax-friendly business hub with thriving blockchain and fintech ecosystem.',
    image: 'https://images.unsplash.com/photo-1531366936337-7c912a4589a7?w=800&h=600&fit=crop&q=80',
    tags: ['Tax', 'Blockchain', 'Business']
  },
  {
    id: 'alps',
    name: 'Alpine Regions',
    subtitle: 'Luxury Lifestyle',
    description: 'Exclusive mountain living in St. Moritz, Gstaad, Zermatt, and Verbier.',
    image: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=800&h=600&fit=crop&q=80',
    tags: ['HNWI', 'Luxury', 'Skiing']
  }
];
---

<section class="relative overflow-hidden" style="padding: var(--section-padding) 0; background: var(--bg-gradient-subtle);">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    
    <!-- Section Heading -->
    <SectionHeading 
      title="Explore Swiss Regions"
      subtitle="From global business hubs to alpine luxury — find your perfect location in Switzerland"
      align="left"
    />

    <!-- Regions Grid - Neumorphic Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {featuredRegions.map((region, index) => (
        <a 
          href={`/regions/${region.id}`}
          class:list={['neuro-card group fade-up', `delay-${Math.min(index * 100, 400)}`]}
        >
          <!-- Image with Overlay -->
          <div class="relative h-56 overflow-hidden rounded-t-xl">
            <img 
              src={region.image} 
              alt={`${region.name} - Swiss relocation destination`}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
            
            <!-- Region Name Overlay -->
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-2xl font-bold text-white mb-1">
                {region.name}
              </h3>
              <p class="text-white/90 text-sm font-medium">
                {region.subtitle}
              </p>
            </div>
            
            <!-- Red accent line on hover -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-brand-gradient transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
          </div>

          <!-- Content -->
          <div class="p-6">
            <!-- Description -->
            <p class="text-gray-600 text-sm leading-relaxed mb-4">
              {region.description}
            </p>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-4">
              {region.tags.map((tag) => (
                <span class="inline-block px-3 py-1.5 bg-gray-50 text-gray-700 text-xs font-medium rounded-full border border-gray-100">
                  {tag}
                </span>
              ))}
            </div>
            
            <!-- Arrow Link -->
            <div class="flex items-center text-sm font-semibold text-gray-700 group-hover:text-[var(--rf-red-start)] transition-colors">
              Explore {region.name}
              <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center fade-up delay-400">
      <a
        href="/regions"
        class="inline-flex items-center justify-center px-8 py-4 text-white font-semibold rounded-lg transition-all duration-200 hover:shadow-lg bg-brand-gradient hover:scale-[1.02]"
      >
        View All Swiss Regions
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  // Intersection Observer for fade-up animations
  if (typeof window !== 'undefined') {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.fade-up').forEach(el => observer.observe(el));
  }
</script>