---
const featuredRegions = [
  {
    id: 'zurich',
    name: 'Zürich',
    subtitle: 'Switzerland\'s Financial Capital',
    description: 'Global business hub with world-class amenities and Lake Zürich beauty.',
    image: 'https://images.unsplash.com/photo-1541542515888-b9c4db3c9066?w=800&h=600&fit=crop',
    highlights: ['Global Business Hub', 'ETH Zurich', 'Lake Views'],
    size: 'large',
    gridClass: 'md:col-span-2 lg:col-span-2 md:row-span-2',
    heightClass: 'h-[350px] md:h-[400px] lg:h-[500px]'
  },
  {
    id: 'geneva',
    name: 'Geneva',
    subtitle: 'International Organizations',
    description: 'Diplomatic center with international flair and stunning Alpine backdrop.',
    image: 'https://images.unsplash.com/photo-1599828623240-09a1bbec98c8?w=800&h=600&fit=crop',
    highlights: ['UN Headquarters', 'Luxury Lifestyle', 'French Culture'],
    size: 'tall',
    gridClass: 'md:col-span-1 lg:col-span-1 md:row-span-2',
    heightClass: 'h-[350px] md:h-[400px] lg:h-[500px]'
  },
  {
    id: 'basel',
    name: 'Basel',
    subtitle: 'Pharmaceutical Hub',
    description: 'Life sciences capital with rich cultural heritage.',
    image: 'https://images.unsplash.com/photo-1571115764595-644a1f56a55c?w=800&h=600&fit=crop',
    highlights: ['Pharma Industry', 'Art Scene', 'Rhine River'],
    size: 'wide',
    gridClass: 'md:col-span-2 lg:col-span-2 md:row-span-1',
    heightClass: 'h-[250px] md:h-[280px] lg:h-[300px]'
  },
  {
    id: 'bern',
    name: 'Bern',
    subtitle: 'Swiss Capital',
    description: 'UNESCO World Heritage old town with political importance.',
    image: 'https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=800&h=600&fit=crop',
    highlights: ['Federal Capital', 'UNESCO Heritage', 'Bear Park'],
    size: 'normal',
    gridClass: 'md:col-span-1 lg:col-span-1 md:row-span-1',
    heightClass: 'h-[220px] md:h-[240px]'
  },
  {
    id: 'lausanne',
    name: 'Lausanne',
    subtitle: 'Olympic Capital',
    description: 'Vibrant university city overlooking Lake Geneva.',
    image: 'https://images.unsplash.com/photo-1544947950-fa07a98d237f?w=800&h=600&fit=crop',
    highlights: ['Olympic Committee', 'EPFL University', 'Lake Geneva'],
    size: 'normal',
    gridClass: 'md:col-span-1 lg:col-span-1 md:row-span-1',
    heightClass: 'h-[220px] md:h-[240px]'
  },
  {
    id: 'zug',
    name: 'Zug',
    subtitle: 'Crypto Valley',
    description: 'Financial innovation center with tax advantages.',
    image: 'https://images.unsplash.com/photo-1469474968028-56623f02e42e?w=800&h=600&fit=crop',
    highlights: ['Low Taxes', 'Blockchain Hub', 'Mountain Views'],
    size: 'normal',
    gridClass: 'md:col-span-1 lg:col-span-1 md:row-span-1',
    heightClass: 'h-[220px] md:h-[240px]'
  }
];
---

<section class="py-12 lg:py-20 bg-gradient-to-br from-gray-50 via-white to-blue-50 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-repeat" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23e11d48%22 fill-opacity=%220.1%22%3E%3Ccircle cx=%2230%22 cy=%2230%22 r=%224%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-12 lg:mb-16 animate-on-scroll">
      <span class="inline-block px-3 py-1 lg:px-4 lg:py-2 rounded-full bg-primary-100 text-primary-700 font-medium text-xs lg:text-sm mb-3 lg:mb-4">
        Step 1: Choose Your Destination
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4 lg:mb-6">
        Where in <span class="gradient-text">Switzerland</span> Will You Call Home?
      </h2>
      <p class="text-base lg:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed px-4 lg:px-0">
        Discover the perfect Swiss region for your lifestyle. From bustling financial centers to peaceful lakeside towns, each canton offers unique opportunities for expats.
      </p>
    </div>

    <!-- Mobile: Simple Stack Layout, Desktop: Bento Grid -->
    <!-- Mobile Layout (below md) -->
    <div class="block md:hidden space-y-4 mb-8">
      {featuredRegions.slice(0, 4).map((region, index) => (
        <a 
          href={`/regions/${region.id}`}
          class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-500 transform hover:scale-[1.02] animate-on-scroll block h-[280px]"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Background Image -->
          <div class="absolute inset-0">
            <img 
              src={region.image} 
              alt={`Relocation to ${region.name}, Switzerland`}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
          </div>

          <!-- Content -->
          <div class="relative z-10 h-full flex flex-col justify-between p-5">
            <!-- Top Badge -->
            <div class="flex justify-between items-start">
              <span class="inline-block px-2 py-1 bg-white/20 backdrop-blur-sm text-white text-xs font-medium rounded-full">
                {region.subtitle}
              </span>
              <svg class="w-5 h-5 text-white/70 group-hover:text-white group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>

            <!-- Bottom Content -->
            <div>
              <h3 class="text-xl font-bold text-white mb-2 group-hover:scale-105 transition-transform duration-300">
                {region.name}
              </h3>
              <p class="text-white/90 text-sm mb-3 leading-relaxed">
                {region.description}
              </p>

              <!-- Highlights -->
              <div class="flex flex-wrap gap-1">
                {region.highlights.slice(0, 2).map((highlight) => (
                  <span class="inline-block px-2 py-1 bg-white/10 backdrop-blur-sm text-white text-xs rounded-md">
                    {highlight}
                  </span>
                ))}
                {region.highlights.length > 2 && (
                  <span class="inline-block px-2 py-1 bg-white/10 backdrop-blur-sm text-white text-xs rounded-md">
                    +{region.highlights.length - 2}
                  </span>
                )}
              </div>
            </div>
          </div>

          <!-- Hover Effect -->
          <div class="absolute inset-0 bg-gradient-to-t from-primary-600/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>
      ))}
    </div>

    <!-- Desktop Bento Grid Layout (md and above) -->
    <div class="hidden md:grid md:grid-cols-3 lg:grid-cols-4 gap-4 lg:gap-6 mb-8 lg:mb-12">
      {featuredRegions.map((region, index) => (
        <a 
          href={`/regions/${region.id}`}
          class={`group relative overflow-hidden rounded-2xl lg:rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:scale-105 animate-on-scroll ${region.gridClass} ${region.heightClass}`}
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Background Image -->
          <div class="absolute inset-0">
            <img 
              src={region.image} 
              alt={`Relocation to ${region.name}, Switzerland`}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
          </div>

          <!-- Content -->
          <div class="relative z-10 h-full flex flex-col justify-between p-4 lg:p-6 xl:p-8">
            <!-- Top Badge -->
            <div class="flex justify-between items-start">
              <span class="inline-block px-2 py-1 lg:px-3 lg:py-1 bg-white/20 backdrop-blur-sm text-white text-xs lg:text-sm font-medium rounded-full">
                {region.subtitle}
              </span>
              <svg class="w-5 h-5 lg:w-6 lg:h-6 text-white/70 group-hover:text-white group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>

            <!-- Bottom Content -->
            <div>
              <h3 class="text-xl lg:text-2xl xl:text-3xl font-bold text-white mb-2 group-hover:scale-105 transition-transform duration-300">
                {region.name}
              </h3>
              <p class="text-white/90 text-sm lg:text-base mb-3 lg:mb-4 leading-relaxed">
                {region.description}
              </p>

              <!-- Highlights -->
              <div class="flex flex-wrap gap-1 lg:gap-2">
                {region.highlights.map((highlight) => (
                  <span class="inline-block px-2 py-1 bg-white/10 backdrop-blur-sm text-white text-xs rounded-md">
                    {highlight}
                  </span>
                ))}
              </div>
            </div>
          </div>

          <!-- Hover Effect -->
          <div class="absolute inset-0 bg-gradient-to-t from-primary-600/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center animate-on-scroll">
      <div class="inline-flex flex-col sm:flex-row items-center space-y-3 sm:space-y-0 sm:space-x-4 bg-white rounded-xl lg:rounded-2xl shadow-lg p-4 lg:p-6">
        <div class="text-center sm:text-left">
          <p class="font-semibold text-gray-900 text-sm lg:text-base">Explore All 26 Swiss Cantons</p>
          <p class="text-xs lg:text-sm text-gray-600">Detailed relocation guides for every region</p>
        </div>
        <a href="/regions" class="btn-primary whitespace-nowrap text-sm lg:text-base px-4 py-2 lg:px-6 lg:py-3">
          View All Regions
          <svg class="w-3 h-3 lg:w-4 lg:h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section> 