---
const featuredRegions = [
  {
    id: 'zurich',
    name: 'Zürich',
    subtitle: 'Switzerland\'s Financial Capital',
    description: 'Global business hub with world-class amenities and stunning Lake Zürich beauty.',
    image: 'https://images.unsplash.com/photo-1541542515888-b9c4db3c9066?w=600&h=400&fit=crop&auto=format',
    tags: ['Global Business Hub', 'ETH Zurich', 'Lake Views'],
    category: 'Financial Center'
  },
  {
    id: 'geneva',
    name: 'Geneva',
    subtitle: 'International Diplomatic Hub',
    description: 'Diplomatic center with international flair and stunning Alpine backdrop.',
    image: 'https://images.unsplash.com/photo-1599828623240-09a1bbec98c8?w=600&h=400&fit=crop&auto=format',
    tags: ['UN Headquarters', 'Luxury Lifestyle', 'French Culture'],
    category: 'Diplomatic Center'
  },
  {
    id: 'basel',
    name: 'Basel',
    subtitle: 'Life Sciences Capital',
    description: 'Pharmaceutical hub with rich cultural heritage and Rhine River charm.',
    image: 'https://images.unsplash.com/photo-1571115764595-644a1f56a55c?w=600&h=400&fit=crop&auto=format',
    tags: ['Pharma Industry', 'Art Scene', 'Rhine River'],
    category: 'Pharmaceutical Hub'
  },
  {
    id: 'bern',
    name: 'Bern',
    subtitle: 'UNESCO World Heritage Capital',
    description: 'Switzerland\'s charming capital with medieval old town and political significance.',
    image: 'https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=600&h=400&fit=crop&auto=format',
    tags: ['Federal Capital', 'UNESCO Heritage', 'Historic Center'],
    category: 'Swiss Capital'
  },
  {
    id: 'lausanne',
    name: 'Lausanne',
    subtitle: 'Olympic Capital',
    description: 'Vibrant university city overlooking Lake Geneva with Olympic heritage.',
    image: 'https://images.unsplash.com/photo-1544947950-fa07a98d237f?w=600&h=400&fit=crop&auto=format',
    tags: ['Olympic Committee', 'EPFL University', 'Lake Geneva'],
    category: 'Olympic Capital'
  },
  {
    id: 'zug',
    name: 'Zug',
    subtitle: 'Crypto Valley',
    description: 'Financial innovation center with tax advantages and mountain views.',
    image: 'https://images.unsplash.com/photo-1469474968028-56623f02e42e?w=600&h=400&fit=crop&auto=format',
    tags: ['Low Taxes', 'Blockchain Hub', 'Mountain Views'],
    category: 'Crypto Valley'
  }
];
---

<section class="py-16 lg:py-24 bg-gradient-to-br from-gray-50 via-white to-blue-50/30 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-repeat" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23e11d48%22 fill-opacity=%220.1%22%3E%3Ccircle cx=%2230%22 cy=%2230%22 r=%224%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 lg:mb-20">
      <span class="inline-block px-4 py-2 rounded-full bg-primary-100 text-primary-700 font-semibold text-sm mb-4">
        Step 1: Choose Your Destination
      </span>
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        Where in <span class="gradient-text">Switzerland</span> Will You Call Home?
      </h2>
      <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
        Discover the perfect Swiss region for your lifestyle. From bustling financial centers to peaceful lakeside towns, each canton offers unique opportunities for expats.
      </p>
    </div>

    <!-- Regions Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {featuredRegions.map((region, index) => (
        <a 
          href={`/regions/${region.id}`}
          class="group relative overflow-hidden rounded-2xl bg-white shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 animate-on-scroll"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Image Container -->
          <div class="relative h-64 overflow-hidden">
            <img 
              src={region.image} 
              alt={`Relocation to ${region.name}, Switzerland`}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              loading="lazy"
            />
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
            
            <!-- Category Badge -->
            <div class="absolute top-4 left-4">
              <span class="inline-block px-3 py-1 bg-white/90 backdrop-blur-sm text-gray-900 text-xs font-semibold rounded-full">
                {region.category}
              </span>
            </div>

            <!-- Arrow Icon -->
            <div class="absolute top-4 right-4 w-8 h-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors duration-300">
              <svg class="w-4 h-4 text-white group-hover:translate-x-0.5 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>

            <!-- Title Overlay -->
            <div class="absolute bottom-4 left-4 right-4">
              <h3 class="text-2xl font-bold text-white mb-1 group-hover:scale-105 transition-transform duration-300">
                {region.name}
              </h3>
              <p class="text-white/90 text-sm font-medium">
                {region.subtitle}
              </p>
            </div>
          </div>

          <!-- Content -->
          <div class="p-6">
            <!-- Description -->
            <p class="text-gray-600 text-sm leading-relaxed mb-4">
              {region.description}
            </p>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2">
              {region.tags.slice(0, 3).map((tag) => (
                <span class="inline-block px-3 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded-full group-hover:bg-primary-50 group-hover:text-primary-700 transition-colors duration-300">
                  {tag}
                </span>
              ))}
            </div>
          </div>

          <!-- Hover Effect Border -->
          <div class="absolute inset-0 border-2 border-primary-500/0 group-hover:border-primary-500/20 rounded-2xl transition-colors duration-300"></div>
        </a>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center">
      <div class="inline-flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6 bg-white rounded-2xl shadow-lg p-8 max-w-2xl mx-auto">
        <div class="text-center sm:text-left">
          <h3 class="text-xl font-bold text-gray-900 mb-2">Explore All 26 Swiss Cantons</h3>
          <p class="text-gray-600">Detailed relocation guides and insights for every region in Switzerland</p>
        </div>
        <a href="/regions" class="btn-primary group whitespace-nowrap">
          View All Regions
          <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section> 