---
const services = [
  {
    id: 'housing',
    title: 'Housing & Real Estate',
    description: 'Apartment search, lease support, off-market access.',
    icon: 'home'
  },
  {
    id: 'immigration',
    title: 'Visa & Immigration',
    description: 'Permits, compliance, application support.',
    icon: 'document'
  },
  {
    id: 'finance',
    title: 'Banking & Finance',
    description: 'Accounts (incl. neobanks), tax planning, wealth.',
    icon: 'credit-card'
  },
  {
    id: 'advisory',
    title: 'Advisory (HNWI/Corporate)',
    description: 'Strategy, lump-sum tax deals, vendor selection.',
    icon: 'briefcase'
  },
  {
    id: 'education',
    title: 'Education & Schools',
    description: 'International and Swiss school search, admissions.',
    icon: 'academic-cap'
  },
  {
    id: 'settling-in',
    title: 'Settling-In',
    description: 'Orientation, registrations, utilities.',
    icon: 'check-circle'
  }
];
---

<section class="py-24 bg-gradient-to-br from-gray-50 via-white to-gray-50 relative overflow-hidden">
  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 rounded-full bg-gray-100 text-gray-700 font-semibold text-sm mb-4">
        Step 2: Choose Your Services
      </span>
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 text-gray-900">
        Build Your Move from Core Services
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Agencies tailor packages to your needs
      </p>
    </div>

    <!-- 6-Service Grid (2×3) -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {services.map((service) => (
        <a 
          href={`/services/${service.id}`}
          class="group bg-white border-2 border-gray-200 rounded-2xl p-6 hover:border-primary-300 hover:shadow-lg transition-all duration-200 flex flex-col h-full"
        >
          <!-- Icon -->
          <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
            {service.icon === 'home' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
            )}
            {service.icon === 'document' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            )}
            {service.icon === 'credit-card' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
              </svg>
            )}
            {service.icon === 'briefcase' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            )}
            {service.icon === 'academic-cap' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path d="M12 14l9-5-9-5-9 5 9 5z"/>
                <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
              </svg>
            )}
            {service.icon === 'check-circle' && (
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            )}
          </div>

          <!-- Content -->
          <div class="flex-1">
            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
              {service.title}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed">
              {service.description}
            </p>
          </div>

          <!-- Arrow Icon -->
          <div class="mt-4 flex items-center text-primary-600 text-sm font-semibold">
            Learn More
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </a>
      ))}
    </div>

    <!-- Inline Panel -->
    <div class="bg-gradient-to-br from-primary-50 to-red-50 rounded-2xl p-8 border-2 border-primary-100 mb-12">
      <div class="text-center max-w-3xl mx-auto">
        <h3 class="text-2xl font-bold text-gray-900 mb-3">Need Multiple Services?</h3>
        <p class="text-gray-700 mb-6 leading-relaxed">
          Most relocations combine 3–5 services. We'll match you with the right providers.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button
            onclick="universalOpenModal({page: 'service'})"
            class="inline-flex items-center justify-center px-8 py-4 font-bold text-white bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200 hover:scale-102"
          >
            Book Free Consultation
          </button>
          <a
            href="/services"
            class="inline-flex items-center justify-center px-8 py-4 font-bold text-primary-700 bg-white border-2 border-gray-200 rounded-xl hover:border-primary-300 hover:bg-gray-50 transition-all duration-200"
          >
            Browse All Services
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hover\:scale-102:hover {
    transform: scale(1.02);
  }
</style>
