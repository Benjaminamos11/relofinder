---
/**
 * Services Showcase - Connected Layout
 * Minimal icons, red accent lines, integrated design
 */
import SectionHeading from '../common/SectionHeading.astro';

const services = [
  {
    id: 'housing',
    title: 'Housing & Real Estate',
    description: 'Apartment search, lease negotiation, and off-market property access.',
    icon: 'home'
  },
  {
    id: 'immigration',
    title: 'Visa & Immigration',
    description: 'Work permits, residence applications, and compliance support.',
    icon: 'document'
  },
  {
    id: 'finance',
    title: 'Banking & Finance',
    description: 'Swiss bank accounts, tax planning, and wealth management.',
    icon: 'credit-card'
  },
  {
    id: 'advisory',
    title: 'Advisory Services',
    description: 'HNWI tax deals, corporate strategy, and vendor selection.',
    icon: 'briefcase'
  },
  {
    id: 'education',
    title: 'Education & Schools',
    description: 'International school search, admissions, and enrollment support.',
    icon: 'academic-cap'
  },
  {
    id: 'settling-in',
    title: 'Settling-In Support',
    description: 'Orientation tours, registrations, utilities, and local integration.',
    icon: 'check-circle'
  }
];
---

<section class="relative overflow-hidden bg-white" style="padding: var(--section-padding) 0;">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    
    <!-- Section Heading -->
    <SectionHeading 
      title="Core Relocation Services"
      subtitle="Comprehensive support for every aspect of your move to Switzerland"
      align="left"
    />

    <!-- Services Grid - Connected Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {services.map((service, index) => (
        <a 
          href={`/services/${service.id}`}
          class:list={['group relative fade-up', `delay-${Math.min(index * 100, 400)}`]}
        >
          <!-- Red Accent Line (Top) -->
          <div class="absolute top-0 left-0 w-16 h-1 bg-brand-gradient rounded-full"></div>
          
          <!-- Card Content -->
          <div class="pt-6">
            <!-- Icon - Minimal Outline Style -->
            <div class="w-12 h-12 rounded-lg bg-gray-50 border border-gray-200 flex items-center justify-center mb-4 group-hover:border-[var(--rf-red-start)] group-hover:bg-red-50/50 transition-all duration-200">
              {service.icon === 'home' && (
                <svg class="w-6 h-6 text-gray-700 group-hover:text-[var(--rf-red-start)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
              )}
              {service.icon === 'document' && (
                <svg class="w-6 h-6 text-gray-700 group-hover:text-[var(--rf-red-start)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              )}
              {service.icon === 'credit-card' && (
                <svg class="w-6 h-6 text-gray-700 group-hover:text-[var(--rf-red-start)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
              )}
              {service.icon === 'briefcase' && (
                <svg class="w-6 h-6 text-gray-700 group-hover:text-[var(--rf-red-start)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              )}
              {service.icon === 'academic-cap' && (
                <svg class="w-6 h-6 text-gray-700 group-hover:text-[var(--rf-red-start)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
                </svg>
              )}
              {service.icon === 'check-circle' && (
                <svg class="w-6 h-6 text-gray-700 group-hover:text-[var(--rf-red-start)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
            </div>

            <!-- Content -->
            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-[var(--rf-red-start)] transition-colors">
              {service.title}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-4">
              {service.description}
            </p>

            <!-- Learn More Link -->
            <div class="flex items-center text-sm font-semibold text-gray-700 group-hover:text-[var(--rf-red-start)] transition-colors">
              Learn more
              <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- CTA Panel - Soft Neumorphic -->
    <div class="neuro-card p-8 md:p-10 text-center fade-up delay-400">
      <h3 class="text-2xl font-bold text-gray-900 mb-3">Need a Complete Relocation Package?</h3>
      <p class="text-gray-600 text-lg mb-6 max-w-2xl mx-auto">
        Most relocations combine 3â€“5 services. Get matched with verified agencies that offer tailored solutions.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <button
          onclick="universalOpenModal({page: 'service'})"
          class="inline-flex items-center justify-center px-8 py-4 text-white font-semibold rounded-lg transition-all duration-200 hover:shadow-lg bg-brand-gradient hover:scale-[1.02]"
        >
          Get Free Quotes
        </button>
        <a
          href="/services"
          class="inline-flex items-center justify-center px-8 py-4 font-semibold text-gray-700 bg-white border-2 border-gray-200 rounded-lg hover:border-gray-300 hover:bg-gray-50 transition-all duration-200"
        >
          Browse All Services
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  // Intersection Observer for fade-up animations
  if (typeof window !== 'undefined') {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.fade-up').forEach(el => observer.observe(el));
  }
</script>