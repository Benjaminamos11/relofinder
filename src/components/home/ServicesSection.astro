---
// Service categories for relocation with bento grid sizing
const services = [
  {
    id: 'housing',
    title: 'Housing & Real Estate',
    description: 'Find apartments, houses, property managers, and real estate agents.',
    icon: 'home',
    size: 'large', // This will be the largest box spanning 2 rows and 2 columns
  },
  {
    id: 'finance',
    title: 'Banking & Insurance',
    description: 'Bank account setup, financial advisors, insurance, and tax services.',
    icon: 'credit-card',
    size: 'wide', // This will span 2 columns
  },
  {
    id: 'education',
    title: 'Education & Schools',
    description: 'International schools, language courses, universities, and childcare.',
    icon: 'academic-cap',
    size: 'wide', // This will span 2 columns
  },
  {
    id: 'health',
    title: 'Healthcare',
    description: 'Health insurance, medical services, hospitals, and wellness providers.',
    icon: 'heart',
    size: 'normal', // Changed from 'tall' to 'normal' to match other standard boxes
  },
  {
    id: 'legal',
    title: 'Legal & Immigration',
    description: 'Visa assistance, work permits, residency applications, and legal advice.',
    icon: 'document',
    size: 'normal', // Standard sized box
  },
  {
    id: 'transport',
    title: 'Transportation',
    description: 'Moving services, public transportation, car leasing, and driving licenses.',
    icon: 'truck',
    size: 'normal', // Standard sized box
  },
  {
    id: 'language',
    title: 'Language & Integration',
    description: 'Language courses and cultural integration for adapting to Swiss life.',
    icon: 'chat',
    size: 'normal', // Standard sized box
  },
];

// Common gradient for all icons
const commonGradient = 'from-primary-600 to-primary-700';
---

<section class="section bg-white py-12">
  <div class="container">
    <div class="section-title max-w-3xl mx-auto text-center mb-10">
      <h2 class="text-3xl font-bold mb-4">Our Relocation <span class="gradient-text">Services</span></h2>
      <p class="text-lg text-accent-600">
        Connect with trusted service providers to make your relocation to Switzerland seamless and stress-free.
      </p>
    </div>
    
    <!-- True Bento Grid Layout -->
    <div class="grid grid-cols-4 gap-3 auto-rows-[minmax(150px,auto)]">
      {services.map(service => {
        // Calculate grid span classes based on size
        const colSpanClass = 
          service.size === 'large' ? 'col-span-2' : 
          service.size === 'wide' ? 'col-span-2' : 
          'col-span-1';
          
        const rowSpanClass = 
          service.size === 'large' ? 'row-span-2' : 
          service.size === 'tall' ? 'row-span-2' : 
          'row-span-1';
            
        return (
          <a href={`/services/${service.id}`} class={`group ${colSpanClass} ${rowSpanClass} relative overflow-hidden rounded-2xl shadow-sm hover:shadow-lg transition-all duration-500 ease-in-out border border-gray-100`}>
            <!-- Content Container -->
            <div class="relative h-full w-full bg-white rounded-2xl p-5 flex flex-col justify-between overflow-hidden">
              <!-- Content -->
              <div class="relative z-10">
                <div class={`w-12 h-12 rounded-full flex items-center justify-center mb-3 transition-all duration-500 group-hover:scale-110 bg-gradient-to-r ${commonGradient} shadow-lg`}>
                  <span class="text-white">
                    {service.icon === 'home' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                      </svg>
                    )}
                    {service.icon === 'document' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    )}
                    {service.icon === 'credit-card' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                      </svg>
                    )}
                    {service.icon === 'academic-cap' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path d="M12 14l9-5-9-5-9 5 9 5z" />
                        <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998a12.078 12.078 0 01.665-6.479L12 14z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998a12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                      </svg>
                    )}
                    {service.icon === 'heart' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                      </svg>
                    )}
                    {service.icon === 'truck' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />
                      </svg>
                    )}
                    {service.icon === 'chat' && (
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                      </svg>
                    )}
                  </span>
                </div>
                <h3 class="text-lg md:text-xl font-semibold mb-2 group-hover:text-primary-600 transition-colors">{service.title}</h3>
                <p class="text-accent-600 text-sm">{service.description}</p>
              </div>
              
              <div class="relative z-10 mt-3 flex items-center font-medium transition-all duration-500 ease-in-out group-hover:translate-x-2">
                <span class="text-primary-600 text-sm">
                  Explore Services
                </span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 text-primary-600" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
            </div>
          </a>
        );
      })}
    </div>
    
    <div class="mt-10 text-center">
      <a href="/services" class="btn-primary inline-flex items-center px-6 py-3 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
        View All Services
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>