---
const trustIndicators = [
  {
    icon: 'shield-check',
    title: 'Swiss Certified',
    description: 'Officially registered with Swiss authorities',
    badge: 'Verified'
  },
  {
    icon: 'lock',
    title: 'Data Protected',
    description: 'GDPR compliant with bank-level security',
    badge: 'Secure'
  },
  {
    icon: 'award',
    title: 'Quality Assured',
    description: '100% satisfaction guarantee',
    badge: 'Guaranteed'
  },
  {
    icon: 'users',
    title: 'Expert Network',
    description: 'Vetted professionals only',
    badge: 'Verified'
  }
];

const certifications = [
  { name: 'Swiss Business Registry', logo: 'üá®üá≠' },
  { name: 'GDPR Compliant', logo: 'üîí' },
  { name: 'ISO 27001', logo: 'üõ°Ô∏è' },
  { name: 'TrustPilot Verified', logo: '‚≠ê' }
];
---

<section class="py-16 bg-white border-t border-gray-100">
  <div class="container">
    <!-- Trust Indicators -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-16">
      {trustIndicators.map(indicator => (
        <div class="text-center group">
          <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            {indicator.icon === 'shield-check' && (
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            )}
            {indicator.icon === 'lock' && (
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            )}
            {indicator.icon === 'award' && (
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
            )}
            {indicator.icon === 'users' && (
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            )}
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">{indicator.title}</h3>
          <p class="text-sm text-gray-600 mb-3">{indicator.description}</p>
          <span class="inline-block px-3 py-1 bg-emerald-100 text-emerald-700 text-xs font-medium rounded-full">
            {indicator.badge}
          </span>
        </div>
      ))}
    </div>

    <!-- Certifications -->
    <div class="bg-gray-50 rounded-2xl p-8">
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-2">Certified & Compliant</h3>
        <p class="text-gray-600">Meeting the highest standards of Swiss business practices</p>
      </div>
      <div class="flex justify-center items-center space-x-12 opacity-70">
        {certifications.map(cert => (
          <div class="text-center group cursor-pointer">
            <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">{cert.logo}</div>
            <div class="text-sm font-medium text-gray-600">{cert.name}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Money Back Guarantee -->
    <div class="mt-16 text-center">
      <div class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-emerald-500 to-emerald-600 text-white rounded-full font-semibold shadow-lg">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        30-Day Money Back Guarantee
      </div>
    </div>
  </div>
</section> 