---
// Featured Swiss regions
const regions = [
  {
    id: 'zurich',
    name: 'Zurich',
    description: 'Switzerland\'s economic hub with international flair',
    image: 'https://via.placeholder.com/800x600/e5e7eb/6b7280?text=Zurich',
    href: '/locations/zurich',
    highlights: ['Financial District', 'International Schools', 'Lake Views']
  },
  {
    id: 'geneva',
    name: 'Geneva',
    description: 'International center for diplomacy and business',
    image: 'https://via.placeholder.com/800x600/e5e7eb/6b7280?text=Geneva',
    href: '/locations/geneva',
    highlights: ['UN Headquarters', 'Luxury Living', 'French Culture']
  },
  {
    id: 'basel',
    name: 'Basel',
    description: 'Cultural capital with pharmaceutical industry',
    image: 'https://via.placeholder.com/800x600/e5e7eb/6b7280?text=Basel',
    href: '/locations/basel',
    highlights: ['Pharma Hub', 'Art Scene', 'Rhine River']
  },
  {
    id: 'zug',
    name: 'Zug',
    description: 'Business-friendly canton with blockchain innovation',
    image: 'https://via.placeholder.com/800x600/e5e7eb/6b7280?text=Zug',
    href: '/locations/zug',
    highlights: ['Crypto Valley', 'Low Taxes', 'Blockchain Hub']
  }
];
---

<section class="section bg-accent-50">
  <div class="container">
    <div class="section-title">
      <h2>Explore Swiss <span class="gradient-text">Regions</span></h2>
      <p>
        Explore different regions of Switzerland to find your perfect home, whether you prefer vibrant cities or scenic countryside.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 auto-rows-[200px]">
      <!-- Zürich - Large Feature -->
      <a href="/locations/zurich" class="relative overflow-hidden rounded-xl group transition-all duration-500 hover:shadow-2xl md:col-span-2 md:row-span-2">
        <div class="absolute inset-0">
          <img 
            src={regions[0].image}
            alt="Zürich, Switzerland"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-accent-900/90 via-accent-900/40 to-transparent"></div>
        </div>
        <div class="relative h-full p-6 flex flex-col justify-end text-white">
          <h3 class="text-3xl md:text-4xl font-bold mb-2">{regions[0].name}</h3>
          <p class="text-white/90 text-lg mb-4">{regions[0].description}</p>
          <div class="grid grid-cols-3 gap-4">
            <div>
              <p class="text-white/70 text-xs">Population</p>
              <p class="font-semibold text-base">{regions[0].population}</p>
            </div>
            <div>
              <p class="text-white/70 text-xs">Language</p>
              <p class="font-semibold text-base">{regions[0].language}</p>
            </div>
            <div>
              <p class="text-white/70 text-xs">Industry</p>
              <p class="font-semibold text-base">{regions[0].industry}</p>
            </div>
          </div>
        </div>
      </a>

      <!-- Geneva - Tall -->
      <a href="/locations/geneva" class="relative overflow-hidden rounded-xl group transition-all duration-500 hover:shadow-2xl md:row-span-2">
        <div class="absolute inset-0">
          <img 
            src={regions[1].image}
            alt="Geneva, Switzerland"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-accent-900/90 via-accent-900/40 to-transparent"></div>
        </div>
        <div class="relative h-full p-6 flex flex-col justify-end text-white">
          <h3 class="text-2xl font-bold mb-2">{regions[1].name}</h3>
          <p class="text-white/90 text-sm mb-4">{regions[1].description}</p>
          <div class="grid grid-cols-1 gap-2">
            <div>
              <p class="text-white/70 text-xs">Population</p>
              <p class="font-semibold text-sm">{regions[1].population}</p>
            </div>
            <div>
              <p class="text-white/70 text-xs">Language</p>
              <p class="font-semibold text-sm">{regions[1].language}</p>
            </div>
            <div>
              <p class="text-white/70 text-xs">Industry</p>
              <p class="font-semibold text-sm">{regions[1].industry}</p>
            </div>
          </div>
        </div>
      </a>

      <!-- Basel - Wide -->
      <a href="/locations/basel" class="relative overflow-hidden rounded-xl group transition-all duration-500 hover:shadow-2xl md:col-span-2">
        <div class="absolute inset-0">
          <img 
            src={regions[2].image}
            alt="Basel, Switzerland"
            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-accent-900/90 via-accent-900/40 to-transparent"></div>
        </div>
        <div class="relative h-full p-6 flex flex-col justify-end text-white">
          <h3 class="text-2xl font-bold mb-2">{regions[2].name}</h3>
          <p class="text-white/90 text-sm mb-4">{regions[2].description}</p>
          <div class="grid grid-cols-3 gap-2">
            <div>
              <p class="text-white/70 text-xs">Population</p>
              <p class="font-semibold text-sm">{regions[2].population}</p>
            </div>
            <div>
              <p class="text-white/70 text-xs">Language</p>
              <p class="font-semibold text-sm">{regions[2].language}</p>
            </div>
            <div>
              <p class="text-white/70 text-xs">Industry</p>
              <p class="font-semibold text-sm">{regions[2].industry}</p>
            </div>
          </div>
        </div>
      </a>
      <!-- Zug - Small Square -->
      {regions.slice(3).map(region => (
        <a href={region.href} class="relative overflow-hidden rounded-xl group transition-all duration-500 hover:shadow-2xl">
          <div class="absolute inset-0">
            <img 
              src={region.image}
              alt={region.name + ", Switzerland"}
              class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-accent-900/90 via-accent-900/40 to-transparent"></div>
          </div>
          <div class="relative h-full p-4 flex flex-col justify-end text-white">
            <h3 class="text-xl font-bold mb-1">{region.name}</h3>
            <p class="text-white/90 text-sm mb-2">{region.description}</p>
            <div class="grid grid-cols-3 gap-1 text-xs">
              <div>
                <p class="text-white/70">Population</p>
                <p class="font-semibold">{region.population}</p>
              </div>
              <div>
                <p class="text-white/70">Language</p>
                <p class="font-semibold">{region.language}</p>
              </div>
              <div>
                <p class="text-white/70">Industry</p>
                <p class="font-semibold">{region.industry}</p>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a href="/companies" class="btn-primary">
        Browse All Agencies
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>