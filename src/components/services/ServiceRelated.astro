---
interface Service {
  title: string;
  description: string;
  link: string;
}

interface Props {
  title: string;
  services: Service[];
}

const { title, services } = Astro.props;
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
      {title}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <a
          href={service.link}
          class="group bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow"
        >
          <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
            {service.title}
          </h3>
          <p class="text-gray-600">
            {service.description}
          </p>
        </a>
      ))}
    </div>
  </div>
</section> 