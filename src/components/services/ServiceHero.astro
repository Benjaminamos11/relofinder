---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  icon: string;
  badge: string;
}

const { title, subtitle, description, icon, badge } = Astro.props;
---

<section class="bg-gradient-to-br from-gray-50 via-white to-primary-50 py-16 md:py-24">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <span class="inline-block px-4 py-2 rounded-full bg-primary-100 text-coral-700 text-sm font-medium mb-6">
        {badge}
      </span>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        {title}
      </h1>
      <h2 class="text-2xl md:text-3xl font-semibold bg-gradient-to-r from-coral-500 to-coral-600 bg-clip-text text-transparent mb-8">
        {subtitle}
      </h2>
      <p class="text-lg text-gray-600 leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</section> 