---
import CTATrigger from '../common/CTATrigger.astro';
---

<!-- Example integrations for the Universal Contact Modal -->

<!-- Homepage Hero Section -->
<section class="hero-section">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-center mb-8">
      Your Swiss Relocation Journey Starts Here
    </h1>
    <div class="text-center">
      <CTATrigger 
        text="Start Your Journey"
        variant="primary"
        size="lg"
        context={{ page: 'home' }}
      />
    </div>
  </div>
</section>

<!-- Blog Article CTA -->
<article class="blog-article">
  <div class="article-content">
    <h2>Swiss Banking Guide for Expats</h2>
    <p>Everything you need to know about opening a bank account in Switzerland...</p>
    
    <!-- Context-aware CTA -->
    <div class="mt-8 p-6 bg-blue-50 rounded-xl">
      <h3 class="font-semibold mb-4">Ready to open your Swiss bank account?</h3>
      <CTATrigger 
        text="Get Banking Expert Help"
        variant="primary"
        context={{
          page: 'blog',
          topic: 'Swiss Banking Guide',
          service: 'Banking & Finance'
        }}
      />
    </div>
  </div>
</article>

<!-- Service Page Integration -->
<section class="service-page">
  <div class="container mx-auto px-4">
    <h1>Housing & Accommodation Services</h1>
    <p>Find your perfect home in Switzerland with our expert guidance...</p>
    
    <div class="cta-section mt-12">
      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-white p-6 rounded-xl shadow-lg">
          <h3 class="font-semibold mb-2">Need Housing Help?</h3>
          <p class="text-gray-600 mb-4">Connect with housing specialists in your area</p>
          <CTATrigger 
            text="Find Housing Experts"
            variant="primary"
            context={{
              page: 'service',
              service: 'Housing & Accommodation'
            }}
          />
        </div>
        
        <div class="bg-white p-6 rounded-xl shadow-lg">
          <h3 class="font-semibold mb-2">Corporate Relocation?</h3>
          <p class="text-gray-600 mb-4">Streamlined solutions for employee relocations</p>
          <CTATrigger 
            text="Get Corporate Quote"
            variant="secondary"
            context={{
              page: 'corporate',
              service: 'Housing & Accommodation'
            }}
          />
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Region Page Integration -->
<section class="region-page">
  <div class="container mx-auto px-4">
    <h1>Relocating to Zurich</h1>
    <p>Switzerland's financial capital offers incredible opportunities...</p>
    
    <div class="local-experts-cta bg-gradient-to-br from-blue-50 to-purple-50 p-8 rounded-2xl mt-12">
      <div class="text-center">
        <h3 class="text-2xl font-bold mb-4">Connect with Zurich Experts</h3>
        <p class="text-gray-600 mb-6">Get personalized guidance from local relocation specialists</p>
        <CTATrigger 
          text="Find Zurich Specialists"
          variant="primary"
          size="lg"
          context={{
            page: 'region',
            region: 'Zurich'
          }}
        />
      </div>
    </div>
  </div>
</section>

<!-- Corporate Page Integration -->
<section class="corporate-page">
  <div class="container mx-auto px-4">
    <h1>Corporate Relocation Solutions</h1>
    <p>Streamline your employee relocations with our enterprise services...</p>
    
    <div class="corporate-cta-grid grid md:grid-cols-3 gap-6 mt-12">
      <div class="text-center p-6 bg-white rounded-xl shadow-lg">
        <div class="text-4xl mb-4">ðŸ“Š</div>
        <h3 class="font-semibold mb-2">Get Quote</h3>
        <p class="text-sm text-gray-600 mb-4">Custom pricing for your needs</p>
        <CTATrigger 
          text="Request Quote"
          variant="outline"
          context={{ page: 'corporate' }}
        />
      </div>
      
      <div class="text-center p-6 bg-white rounded-xl shadow-lg">
        <div class="text-4xl mb-4">ðŸ“ž</div>
        <h3 class="font-semibold mb-2">Schedule Call</h3>
        <p class="text-sm text-gray-600 mb-4">Discuss your requirements</p>
        <CTATrigger 
          text="Book Consultation"
          variant="primary"
          context={{ page: 'corporate' }}
        />
      </div>
      
      <div class="text-center p-6 bg-white rounded-xl shadow-lg">
        <div class="text-4xl mb-4">âš¡</div>
        <h3 class="font-semibold mb-2">Instant Match</h3>
        <p class="text-sm text-gray-600 mb-4">AI-powered recommendations</p>
        <CTATrigger 
          text="Get Instant Match"
          variant="secondary"
          context={{ page: 'corporate' }}
        />
      </div>
    </div>
  </div>
