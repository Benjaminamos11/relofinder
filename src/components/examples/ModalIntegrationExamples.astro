<!-- Floating Action Button (Optional) -->
<div class="fixed bottom-6 right-6 z-40">
  <CTATrigger 
    text="ðŸ’¬ Get Help"
    variant="primary"
    className="rounded-full px-6 py-4 shadow-2xl hover:shadow-3xl"
    context={{ page: 'floating' }}
  />
</div>

<!-- Inline Content CTAs -->
<div class="inline-cta-examples">
  <!-- Within text content -->
  <p>
    If you're planning to move to Switzerland, 
    <CTATrigger 
      text="get personalized guidance"
      variant="outline"
      size="sm"
      className="mx-2"
      context={{ page: 'inline' }}
    />
    from our experts.
  </p>
  
  <!-- After testimonial -->
  <blockquote class="testimonial">
    <p>"ReloFinder made our move to Switzerland seamless and stress-free!"</p>
    <cite>- Sarah M., relocated to Geneva</cite>
  </blockquote>
  
  <div class="mt-4 text-center">
    <CTATrigger 
      text="Start Your Success Story"
      variant="primary"
      context={{
        page: 'testimonial',
        region: 'Geneva'
      }}
    />
  </div>
</div>

<!-- Footer CTA -->
<footer class="footer-cta bg-gray-900 text-white py-16">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-4">Ready to Begin Your Swiss Adventure?</h2>
    <p class="text-xl text-gray-300 mb-8">Join thousands of successful relocations</p>
    <CTATrigger 
      text="Start Your Relocation"
      variant="primary"
      size="lg"
      context={{ page: 'footer' }}
    />
  </div>
</footer>

<!-- Emergency/Urgent Help CTA -->
<div class="urgent-help-banner bg-[#FF6F61]/5 border-l-4 border-red-500 p-4 mb-8">
  <div class="flex items-center">
    <div class="flex-shrink-0">
      <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
      </svg>
    </div>
    <div class="ml-3 flex-1">
      <p class="text-sm text-[#FF6F61]">
        <strong>Urgent relocation needed?</strong> Get immediate assistance from our experts.
      </p>
    </div>
    <div class="ml-4">
      <CTATrigger 
        text="Get Urgent Help"
        variant="primary"
        size="sm"
        context={{
          page: 'urgent',
          timeline: 'immediate'
        }}
      />
    </div>
  </div>
</div> 