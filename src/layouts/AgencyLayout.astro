
---
import SEOHead from '../components/common/SEOHead.astro';
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'ReloFinder Partner Portal',
  description = 'Manage your relocation agency profile and leads.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Fonts - Optimized for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
    
    <ViewTransitions />
  </head>
  <body class="bg-slate-50 min-h-screen font-sans text-slate-900 antialiased selection:bg-[#FF6F61] selection:text-white">
      <slot />
  </body>
</html>
