---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  description: string;
  service: {
    title: string;
    description: string;
    icon?: string;
  };
}

const { title, description, service } = Astro.props;
---

<Layout title={title} description={description}>
  <!-- Hero Section with Clean Split Screen -->
  <section class="py-16 md:py-20">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[600px] rounded-xl overflow-hidden shadow-sm">
        <!-- Left Side - Content -->
        <div class="bg-white py-16 px-8 lg:px-16 flex items-center">
          <div class="max-w-xl">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
              {service.title}
            </h1>
            <p class="text-xl text-accent-700 mb-8">
              {service.description}
            </p>
            <a href="/contact" class="btn-primary inline-flex items-center">
              Schedule Your Free Call
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Right Side - Why Choose Us -->
        <div class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-16 px-8 lg:px-16 flex items-center">
          <div class="max-w-xl">
            <h2 class="text-2xl font-bold mb-6">Why choose our comparison?</h2>
            
            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-full bg-white/20 text-white flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold mb-1">Expert Guidance</h3>
                  <p class="text-white/90">Get personalized advice from licensed and registered professionals with deep knowledge of Swiss relocation services.</p>
                </div>
              </div>
              
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-full bg-white/20 text-white flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold mb-1">Personalized Analysis</h3>
                  <p class="text-white/90">We'll review your current situation and budget to recommend services that match your unique relocation needs.</p>
                </div>
              </div>
              
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-full bg-white/20 text-white flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold mb-1">Clear Communication</h3>
                  <p class="text-white/90">We explain Swiss relocation essentials in plain Englishâ€”no jargon, no confusion.</p>
                </div>
              </div>
              
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-full bg-white/20 text-white flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold mb-1">Tailored Recommendations</h3>
                  <p class="text-white/90">After our call, receive individualized service provider recommendations tailored to your specific relocation needs.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Main Content Slot -->
  <slot />
</Layout> 