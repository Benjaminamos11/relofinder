---
import Layout from '../../layouts/Layout.astro';
import SectionHeading from '../../components/common/SectionHeading.astro';
import { getCollection } from 'astro:content';

// Get blog posts from content collection
const allBlogPosts = await getCollection('blog');

// Sort by publish date (newest first)
const blogPosts = allBlogPosts
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

// Format date helper function
function formatDate(dateString: string) {
  const options: Intl.DateTimeFormatOptions = { year: 'numeric', month: 'long', day: 'numeric' };
  return new Date(dateString).toLocaleDateString('en-US', options);
}

// Page metadata
const title = 'Swiss Relocation Blog & Guides | ReloFinder';
const description = 'Expert guides, tips, and advice for expats relocating to Switzerland. Learn about visas, housing, banking, insurance, and settling in.';
---

<Layout title={title} description={description}>
  
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center overflow-hidden bg-gray-50">
    <div class="container relative z-10 mx-auto px-6 lg:px-8 py-20">
      <div class="max-w-4xl mx-auto text-center">
        
        <!-- Headline -->
        <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Swiss Relocation <span class="bg-gradient-to-r from-[#B61919] to-[#DF3030] bg-clip-text text-transparent">Guides</span>
        </h1>
        
        <p class="text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto mb-8">
          Expert insights, practical tips, and comprehensive guides to make your Swiss relocation smooth and successful.
        </p>

        <!-- Stats -->
        <div class="flex flex-wrap justify-center gap-8 mb-12">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#B61919]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-gray-700">Expert Verified</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#B61919]" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
            </svg>
            <span class="text-sm font-medium text-gray-700">Comprehensive Guides</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#B61919]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-gray-700">Updated 2025</span>
          </div>
        </div>

        <!-- Search (optional - can be functional later) -->
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <input 
              type="text" 
              placeholder="Search guides and articles..."
              class="w-full px-6 py-4 pr-14 rounded-xl border-2 border-gray-200 focus:border-[#B61919] focus:outline-none text-gray-900 placeholder-gray-500"
            />
            <button class="absolute right-2 top-1/2 -translate-y-1/2 p-2 bg-gradient-to-r from-[#B61919] to-[#DF3030] text-white rounded-lg hover:shadow-md transition-all">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Posts Grid or Empty State -->
  {blogPosts.length === 0 ? (
    <!-- Empty State -->
    <section class="relative overflow-hidden bg-white" style="padding: var(--section-padding) 0;">
      <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
        
        <div class="mb-8">
          <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Blog Content Coming Soon
          </h2>
          <p class="text-xl text-gray-600 leading-relaxed mb-8">
            We're working on comprehensive guides and articles to help you with your Swiss relocation. Check back soon for expert insights on visas, housing, insurance, and more.
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/services"
              class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-[#B61919] to-[#DF3030] text-white font-semibold rounded-xl hover:shadow-lg transition-all duration-200 hover:scale-[1.02]"
            >
              Explore Our Services
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </a>
            <a
              href="/companies"
              class="inline-flex items-center justify-center px-8 py-4 font-semibold bg-white text-gray-700 border-2 border-gray-200 rounded-xl hover:border-gray-300 hover:bg-gray-50 transition-all duration-200"
            >
              Browse Agencies
            </a>
          </div>
        </div>

        <!-- Helpful Links -->
        <div class="mt-16 pt-16 border-t border-gray-200">
          <h3 class="text-xl font-bold text-gray-900 mb-6">In the Meantime</h3>
          <div class="grid md:grid-cols-3 gap-6">
            <a href="/regions" class="group p-6 bg-gray-50 rounded-xl hover:bg-gray-100 transition-all hover:-translate-y-1">
              <div class="w-12 h-12 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-xl flex items-center justify-center mb-4 mx-auto">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <h4 class="font-bold text-gray-900 mb-2 group-hover:text-[#B61919] transition-colors">Explore Regions</h4>
              <p class="text-sm text-gray-600">Discover Swiss cities and cantons</p>
            </a>

            <a href="/services" class="group p-6 bg-gray-50 rounded-xl hover:bg-gray-100 transition-all hover:-translate-y-1">
              <div class="w-12 h-12 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-xl flex items-center justify-center mb-4 mx-auto">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <h4 class="font-bold text-gray-900 mb-2 group-hover:text-[#B61919] transition-colors">View Services</h4>
              <p class="text-sm text-gray-600">Housing, visas, insurance & more</p>
            </a>

            <button
              onclick="universalOpenModal({page: 'blog'})"
              class="group p-6 bg-gray-50 rounded-xl hover:bg-gray-100 transition-all hover:-translate-y-1"
            >
              <div class="w-12 h-12 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-xl flex items-center justify-center mb-4 mx-auto">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                </svg>
              </div>
              <h4 class="font-bold text-gray-900 mb-2 group-hover:text-[#B61919] transition-colors">Get Advice</h4>
              <p class="text-sm text-gray-600">Talk to relocation experts</p>
            </button>
          </div>
        </div>
      </div>
    </section>
  ) : (
    <!-- Blog Posts Grid (if we have posts) -->
    <section class="relative overflow-hidden bg-white" style="padding: var(--section-padding) 0;">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        
        <SectionHeading 
          title="Latest Articles"
          subtitle="Expert insights and practical guides for your Swiss relocation"
          align="left"
        />

        <!-- Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {blogPosts.map((post) => (
            <article class="group bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 overflow-hidden border border-gray-100">
              
              <!-- Image -->
              {post.data.heroImage && (
                <div class="relative h-56 overflow-hidden">
                  <img 
                    src={post.data.heroImage} 
                    alt={post.data.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                  
                  <!-- Category Badge -->
                  {post.data.category && (
                    <div class="absolute top-4 left-4">
                      <span class="inline-block px-3 py-1 bg-white/90 backdrop-blur-sm text-gray-900 text-xs font-bold rounded-full">
                        {post.data.category}
                      </span>
                    </div>
                  )}
                  
                  <!-- Reading Time -->
                  {post.data.readingTime && (
                    <div class="absolute bottom-4 right-4">
                      <span class="inline-block px-3 py-1 bg-black/60 backdrop-blur-sm text-white text-xs font-medium rounded-full">
                        {post.data.readingTime} min read
                      </span>
                    </div>
                  )}
                </div>
              )}

              <!-- Content -->
              <div class="p-6">
                <!-- Title -->
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-[#B61919] transition-colors line-clamp-2">
                  {post.data.title}
                </h3>
                
                <!-- Description -->
                <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-3">
                  {post.data.description}
                </p>

                <!-- Meta -->
                <div class="flex items-center gap-4 text-xs text-gray-500 mb-4">
                  {post.data.publishDate && (
                    <time datetime={post.data.publishDate.toISOString()}>
                      {formatDate(post.data.publishDate.toISOString())}
                    </time>
                  )}
                  {post.data.author && (
                    <>
                      <span>•</span>
                      <span>{post.data.author}</span>
                    </>
                  )}
                </div>
                
                <!-- Read More Link -->
                <a
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-sm font-semibold text-gray-700 group-hover:text-[#B61919] transition-colors"
                >
                  Read Article
                  <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>

              <!-- Red accent line on hover -->
              <div class="h-1 bg-gradient-to-r from-[#B61919] to-[#DF3030] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="relative overflow-hidden" style="padding: var(--section-padding) 0; background: linear-gradient(135deg, #B61919 0%, #DF3030 100%);">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center text-white">
      <h2 class="text-4xl font-bold mb-6">
        Need Help With Your Relocation?
      </h2>
      <p class="text-xl mb-8 opacity-90">
        Get expert guidance from verified Swiss relocation agencies. Free quotes, no commitment.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <button
          onclick="universalOpenModal({page: 'blog'})"
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-[#B61919] font-semibold rounded-xl hover:bg-gray-100 transition-all duration-200"
        >
          Get Free Quotes
        </button>
        <a
          href="/services"
          class="inline-flex items-center justify-center px-8 py-4 font-semibold bg-white/10 backdrop-blur-sm border-2 border-white/30 rounded-xl hover:bg-white/20 transition-all duration-200"
        >
          Explore Services
        </a>
      </div>
    </div>
  </section>

</Layout>
