---
import Layout from '../layouts/Layout.astro';
import { openModal } from '../stores/modal';

// Page metadata
const title = 'Corporate Relocation Solutions | ReloFinder - Transparent Relocation Services';
const description = 'ReloFinder brings transparency to corporate relocation. Get competitive quotes from vetted agencies, flexible service packages, and comprehensive support for your employees moving to Switzerland.';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 bg-gradient-to-br from-slate-900 via-primary-900 to-slate-900 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-repeat" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23ffffff%22 fill-opacity=%220.1%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="container relative">
      <div class="max-w-5xl mx-auto text-center">
        <div class="inline-flex items-center bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full mb-6">
          <svg class="w-5 h-5 mr-2 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="text-sm font-medium">The Transparency Revolution in Relocation</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          The <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-secondary-400">Uber of Relocation</span><br />
          for Swiss Companies
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto">
          ReloFinder brings transparency to corporate relocation. Get competitive quotes from vetted agencies anonymously, compare services transparently, and save up to 40% on relocation costs.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-3xl mx-auto mb-10">
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
            <div class="text-3xl font-bold mb-2">50+</div>
            <div class="text-gray-300">Vetted Agencies</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
            <div class="text-3xl font-bold mb-2">40%</div>
            <div class="text-gray-300">Average Savings</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
            <div class="text-3xl font-bold mb-2">100%</div>
            <div class="text-gray-300">Transparent Pricing</div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button id="corporate-hero-cta" class="bg-white text-gray-900 px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-all duration-300 shadow-xl">
            Get Anonymous Quotes
          </button>
          <a href="#how-it-works" class="bg-transparent border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold hover:bg-white/10 transition-all duration-300">
            See How It Works
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Value Proposition -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Why ReloFinder is <span class="text-primary-600">Different</span>
          </h2>
          <p class="text-xl text-gray-600">
            We're revolutionizing how companies manage employee relocation in Switzerland
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Traditional Way -->
          <div class="bg-red-50 rounded-2xl p-8 border-2 border-red-200">
            <h3 class="text-xl font-bold mb-4 text-red-900 flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Traditional Relocation
            </h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-red-600 mr-2">•</span>
                <span class="text-gray-700">Opaque pricing and hidden fees</span>
              </li>
              <li class="flex items-start">
                <span class="text-red-600 mr-2">•</span>
                <span class="text-gray-700">Limited choice of providers</span>
              </li>
              <li class="flex items-start">
                <span class="text-red-600 mr-2">•</span>
                <span class="text-gray-700">Time-consuming vendor selection</span>
              </li>
              <li class="flex items-start">
                <span class="text-red-600 mr-2">•</span>
                <span class="text-gray-700">Inconsistent service quality</span>
              </li>
              <li class="flex items-start">
                <span class="text-red-600 mr-2">•</span>
                <span class="text-gray-700">High costs with little transparency</span>
              </li>
            </ul>
          </div>

          <!-- ReloFinder Way -->
          <div class="bg-green-50 rounded-2xl p-8 border-2 border-green-200">
            <h3 class="text-xl font-bold mb-4 text-green-900 flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              The ReloFinder Way
            </h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-green-600 mr-2">✓</span>
                <span class="text-gray-700">Transparent, competitive pricing</span>
              </li>
              <li class="flex items-start">
                <span class="text-green-600 mr-2">✓</span>
                <span class="text-gray-700">Access to 50+ vetted agencies</span>
              </li>
              <li class="flex items-start">
                <span class="text-green-600 mr-2">✓</span>
                <span class="text-gray-700">Anonymous quote requests</span>
              </li>
              <li class="flex items-start">
                <span class="text-green-600 mr-2">✓</span>
                <span class="text-gray-700">Quality-assured partners only</span>
              </li>
              <li class="flex items-start">
                <span class="text-green-600 mr-2">✓</span>
                <span class="text-gray-700">Save up to 40% on costs</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section id="how-it-works" class="py-20 bg-white">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 rounded-full bg-primary-100 text-primary-700 font-medium text-sm mb-4">
            Simple Process
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            How ReloFinder <span class="text-primary-600">Works</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Get competitive quotes from multiple relocation agencies in 48 hours - anonymously
          </p>
        </div>

        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-3xl font-bold text-primary-600">1</span>
            </div>
            <h3 class="font-bold mb-2">Submit Request</h3>
            <p class="text-gray-600">Tell us your relocation needs anonymously</p>
          </div>

          <div class="text-center">
            <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-3xl font-bold text-primary-600">2</span>
            </div>
            <h3 class="font-bold mb-2">Get Quotes</h3>
            <p class="text-gray-600">Receive competitive quotes from vetted agencies</p>
          </div>

          <div class="text-center">
            <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-3xl font-bold text-primary-600">3</span>
            </div>
            <h3 class="font-bold mb-2">Compare</h3>
            <p class="text-gray-600">Compare services and prices transparently</p>
          </div>

          <div class="text-center">
            <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-3xl font-bold text-primary-600">4</span>
            </div>
            <h3 class="font-bold mb-2">Choose</h3>
            <p class="text-gray-600">Select the best partner for your needs</p>
          </div>
        </div>

        <div class="mt-12 bg-primary-50 rounded-2xl p-8">
          <div class="flex items-center justify-center">
            <svg class="w-8 h-8 text-primary-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <p class="text-lg text-gray-700">
              <strong>100% Anonymous:</strong> Agencies don't know your company identity until you choose to reveal it
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 rounded-full bg-secondary-100 text-secondary-700 font-medium text-sm mb-4">
            Flexible Solutions
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Services Tailored to <span class="text-primary-600">Your Needs</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            From full relocation packages to individual services - we've got you covered
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <!-- Full Service -->
          <div class="bg-white rounded-2xl shadow-xl p-8 border-2 border-primary-200">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mr-4">
