---
import Layout from '../layouts/Layout.astro';
import SchemaMarkup from '../components/common/SchemaMarkup.astro';

// Page metadata
const title = 'Corporate Relocation Switzerland | Transparent Provider Comparisons | ReloFinder';
const description = 'ReloFinder helps HR and global mobility teams compare relocation providers. Get up to 5 quotes anonymously in 48h. Save up to 40%. Transparent & risk-free.';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Corporate",
      "item": "https://relofinder.ch/corporate"
    }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Corporate Relocation Services",
  "description": "Transparent marketplace for corporate relocation. Anonymous quotes from 50+ vetted agencies. Save up to 40% on relocation costs.",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Switzerland"
  },
  "serviceType": "Corporate Relocation"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How does ReloFinder save companies money?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "By enabling transparent competition among 50+ vetted agencies, ReloFinder drives down prices while maintaining quality. Companies typically save 30-40% compared to single-vendor arrangements."
      }
    },
    {
      "@type": "Question",
      "name": "Is my company identity really anonymous?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Agencies receive your requirements without knowing your company name. You only reveal your identity once you decide which provider to work with."
      }
    },
    {
      "@type": "Question",
      "name": "How long does it take to get quotes?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You'll receive competitive quotes from multiple agencies within 48 hours of submitting your request."
      }
    },
    {
      "@type": "Question",
      "name": "Are all agencies vetted?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. All agencies in our network are thoroughly vetted for compliance, service quality, and customer satisfaction."
      }
    }
  ]
};
---

<Layout title={title} description={description}>
  <SchemaMarkup type="service" data={breadcrumbSchema} />
  <SchemaMarkup type="service" data={serviceSchema} />
  <SchemaMarkup type="service" data={faqSchema} />

  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 bg-gradient-to-br from-slate-900 via-primary-900 to-slate-900 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-repeat" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23ffffff%22 fill-opacity=%220.1%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="container relative">
      <div class="max-w-5xl mx-auto text-center">
        <div class="inline-flex items-center bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full mb-6">
          <svg class="w-5 h-5 mr-2 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="text-sm font-medium">For HR & Global Mobility Teams</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          Corporate Relocation Made <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-secondary-400">Transparent</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto">
          Get up to 5 competitive quotes from vetted relocation providers — 100% anonymous, risk-free, and cost-transparent. Stop overpaying for the same service.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-3xl mx-auto mb-10">
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
            <div class="text-3xl font-bold mb-2">50+</div>
            <div class="text-gray-300">Vetted Agencies</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
            <div class="text-3xl font-bold mb-2">40%</div>
            <div class="text-gray-300">Savings</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
            <div class="text-3xl font-bold mb-2">100%</div>
            <div class="text-gray-300">Transparency</div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="#get-rates"
            onclick="event.preventDefault(); document.getElementById('get-rates').scrollIntoView({behavior: 'smooth'});"
            class="bg-white text-gray-900 px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-all duration-300 shadow-xl text-center"
          >
            Get Anonymous Quotes
          </a>
          <a href="#how-it-works" class="bg-transparent border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold hover:bg-white/10 transition-all duration-300 text-center">
            See How It Works
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why ReloFinder: Comparison Table -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 rounded-full bg-primary-100 text-primary-700 font-medium text-sm mb-4">
            The ReloFinder Advantage
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Why HR Leaders Choose <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">ReloFinder</span>
          </h2>
          <p class="text-xl text-gray-600">
            We're not just another relocation vendor — we're your strategic procurement partner
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Traditional Way -->
          <div class="bg-red-50 rounded-2xl p-8 border-2 border-red-200">
            <h3 class="text-xl font-bold mb-6 text-red-900 flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Traditional Relocation
            </h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-red-600 mr-2 text-lg">✗</span>
                <span class="text-gray-700"><strong>Opaque pricing:</strong> Hidden fees, unclear markups</span>
              </li>
              <li class="flex items-start">
                <span class="text-red-600 mr-2 text-lg">✗</span>
                <span class="text-gray-700"><strong>Time-consuming RFPs:</strong> Weeks or months of vendor calls</span>
              </li>
              <li class="flex items-start">
                <span class="text-red-600 mr-2 text-lg">✗</span>
                <span class="text-gray-700"><strong>Limited choice:</strong> 1-2 providers at best</span>
              </li>
              <li class="flex items-start">
                <span class="text-red-600 mr-2 text-lg">✗</span>
                <span class="text-gray-700"><strong>Vendor bias:</strong> No true competition</span>
              </li>
              <li class="flex items-start">
                <span class="text-red-600 mr-2 text-lg">✗</span>
                <span class="text-gray-700"><strong>Budget overruns:</strong> High costs with little transparency</span>
              </li>
            </ul>
          </div>

          <!-- ReloFinder Way -->
          <div class="bg-green-50 rounded-2xl p-8 border-2 border-green-200">
            <h3 class="text-xl font-bold mb-6 text-green-900 flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              The ReloFinder Way
            </h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-green-600 mr-2 text-lg">✓</span>
                <span class="text-gray-700"><strong>Anonymous quotes in 48h:</strong> Fast & confidential</span>
              </li>
              <li class="flex items-start">
                <span class="text-green-600 mr-2 text-lg">✓</span>
                <span class="text-gray-700"><strong>50+ vetted agencies:</strong> True market competition</span>
              </li>
              <li class="flex items-start">
                <span class="text-green-600 mr-2 text-lg">✓</span>
                <span class="text-gray-700"><strong>Full transparency:</strong> Side-by-side service & price comparison</span>
              </li>
              <li class="flex items-start">
                <span class="text-green-600 mr-2 text-lg">✓</span>
                <span class="text-gray-700"><strong>Quality assured:</strong> Only vetted, compliant partners</span>
              </li>
              <li class="flex items-start">
                <span class="text-green-600 mr-2 text-lg">✓</span>
                <span class="text-gray-700"><strong>Save up to 40%:</strong> Proven cost savings</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works: Visual Stepper -->
  <section id="how-it-works" class="py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 rounded-full bg-primary-100 text-primary-700 font-medium text-sm mb-4">
            Simple 4-Step Process
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            How <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">It Works</span>
          </h2>
          <p class="text-xl text-gray-600">
            From request to provider selection in 48 hours — completely anonymous
          </p>
        </div>

        <div class="space-y-6">
          <!-- Step 1 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center text-white font-bold text-lg mr-4">
              1
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Submit Request</h3>
              <p class="text-gray-600">
                Tell us your relocation needs anonymously. Number of employees, destinations, services required, and budget range. Takes 3 minutes.
              </p>
            </div>
          </div>

          <!-- Step 2 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center text-white font-bold text-lg mr-4">
              2
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Get Quotes</h3>
              <p class="text-gray-600">
                Receive up to 5 competitive offers within 48 hours from vetted agencies. No vendor calls. No time wasted. Just transparent proposals.
              </p>
            </div>
          </div>

          <!-- Step 3 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center text-white font-bold text-lg mr-4">
              3
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Compare</h3>
              <p class="text-gray-600">
                Transparent side-by-side comparison of services, pricing, and provider credentials. See exactly what you're paying for, with no hidden costs.
              </p>
            </div>
          </div>

          <!-- Step 4 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center text-white font-bold text-lg mr-4">
              4
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Choose</h3>
              <p class="text-gray-600">
                Select the provider you trust. <strong>Agencies only see your company name once you decide.</strong> Complete control, zero risk.
              </p>
            </div>
          </div>
        </div>

        <div class="mt-12 text-center">
          <a
            href="#get-rates"
            onclick="event.preventDefault(); document.getElementById('get-rates').scrollIntoView({behavior: 'smooth'});"
            class="inline-flex items-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            Request Quotes Now (Free)
          </a>
          <p class="text-sm text-gray-500 mt-3">
            ✓ 100% Anonymous  •  ✓ 48h Turnaround  •  ✓ Zero Obligation
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits for HR & Mobility Teams -->
  <section class="py-20 bg-gradient-to-br from-gray-50 via-white to-primary-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 rounded-full bg-primary-100 text-primary-700 font-medium text-sm mb-4">
            Strategic Value
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Benefits for <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">HR & Mobility Teams</span>
          </h2>
          <p class="text-xl text-gray-600">
            More than just savings — a complete transformation of your relocation procurement
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Benefit 1: Save Costs -->
          <div class="bg-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Save Costs</h3>
            <p class="text-gray-600 text-sm">
              Up to 40% savings through competitive bidding. Real market prices, not inflated vendor quotes.
            </p>
          </div>

          <!-- Benefit 2: Save Time -->
          <div class="bg-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Save Time</h3>
            <p class="text-gray-600 text-sm">
              Quotes in 48h, no endless vendor calls. From request to decision in days, not months.
            </p>
          </div>

          <!-- Benefit 3: Transparency -->
          <div class="bg-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Transparency</h3>
            <p class="text-gray-600 text-sm">
              Side-by-side comparison of services & pricing. No hidden fees. Full visibility into what you're buying.
            </p>
          </div>

          <!-- Benefit 4: Quality Assured -->
          <div class="bg-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Quality Assured</h3>
            <p class="text-gray-600 text-sm">
              All providers vetted for compliance, service quality, and customer satisfaction. No random vendors.
            </p>
          </div>

          <!-- Benefit 5: Employee Satisfaction -->
          <div class="bg-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Employee Satisfaction</h3>
            <p class="text-gray-600 text-sm">
              Smooth onboarding = happier staff. Quality providers = better employee experience = higher retention.
            </p>
          </div>

          <!-- Benefit 6: Risk-Free -->
          <div class="bg-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Risk-Free & Anonymous</h3>
            <p class="text-gray-600 text-sm">
              No exposure until you're ready to choose. Agencies don't see your company name until you decide.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Get Anonymous Rates - Multi-Step Form -->
  <section id="get-rates" class="py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 rounded-full bg-primary-100 text-primary-700 font-medium text-sm mb-4">
            Get Started
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Get <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Anonymous Rates</span>
          </h2>
          <p class="text-xl text-gray-600">
            Tell us about your needs and receive competitive quotes within 48 hours
          </p>
        </div>

        <!-- Multi-Step Form -->
        <div id="multi-step-form" class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 border-2 border-gray-200 shadow-lg">
          <!-- Progress Bar -->
          <div class="mb-8">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-600">Step <span id="current-step">1</span> of 4</span>
              <span class="text-sm font-medium text-gray-600"><span id="progress-percent">25</span>%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div id="progress-bar" class="bg-gradient-to-r from-primary-600 to-primary-700 h-2 rounded-full transition-all duration-300" style="width: 25%"></div>
            </div>
          </div>

          <form id="rate-request-form" class="space-y-6">
            <!-- Step 1: Timeline & Employee Count -->
            <div class="form-step" data-step="1">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">When do you need relocation services?</h3>
              
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Expected Start Date *</label>
                  <input type="date" name="start_date" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Number of Employees to Relocate *</label>
                  <select name="employee_count" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    <option value="">Select...</option>
                    <option value="1">1 employee</option>
                    <option value="2-5">2-5 employees</option>
                    <option value="6-10">6-10 employees</option>
                    <option value="11-20">11-20 employees</option>
                    <option value="21-50">21-50 employees</option>
                    <option value="50+">50+ employees</option>
                  </select>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Relocation Type *</label>
