---
import Layout from '../layouts/Layout.astro';
import SchemaMarkup from '../components/common/SchemaMarkup.astro';

// Page metadata
const title = 'Corporate Relocation Switzerland | Transparent Provider Comparisons | ReloFinder';
const description = 'ReloFinder helps HR and global mobility teams compare relocation providers. Get up to 5 quotes anonymously in 48h. Save up to 40%. Transparent & risk-free.';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Corporate",
      "item": "https://relofinder.ch/corporate"
    }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Corporate Relocation Services",
  "description": "Transparent marketplace for corporate relocation. Anonymous quotes from 50+ vetted agencies. Save up to 40% on relocation costs.",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Switzerland"
  },
  "serviceType": "Corporate Relocation"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How does ReloFinder save companies money?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "By enabling transparent competition among 50+ vetted agencies, ReloFinder drives down prices while maintaining quality. Companies typically save 30-40% compared to single-vendor arrangements."
      }
    },
    {
      "@type": "Question",
      "name": "Is my company identity really anonymous?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Agencies receive your requirements without knowing your company name. You only reveal your identity once you decide which provider to work with."
      }
    },
    {
      "@type": "Question",
      "name": "How long does it take to get quotes?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You'll receive competitive quotes from multiple agencies within 48 hours of submitting your request."
      }
    },
    {
      "@type": "Question",
      "name": "Are all agencies vetted?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. All agencies in our network are thoroughly vetted for compliance, service quality, and customer satisfaction."
      }
    }
  ]
};
---

<Layout title={title} description={description}>
  <SchemaMarkup type="service" data={breadcrumbSchema} />
  <SchemaMarkup type="service" data={serviceSchema} />
  <SchemaMarkup type="service" data={faqSchema} />

  <!-- Hero Section -->
