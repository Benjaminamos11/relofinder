---
import Layout from '../../layouts/Layout.astro';
import SchemaMarkup from '../../components/common/SchemaMarkup.astro';

const title = "Relocation to Zürich | Regional Expat Guide 2025 | ReloFinder";
const description = "Relocate to Zürich with confidence. Learn about housing, costs, jobs, schools, permits, and connect with trusted relocation agencies.";
const canonicalURL = "https://relofinder.ch/regions/zurich";
const keywords = ['zurich relocation', 'moving to zurich', 'zurich expat', 'zurich housing', 'zurich jobs', 'zurich schools', 'gold coast zurich', 'relocation agencies zurich'];

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Regions",
      "item": "https://relofinder.ch/regions"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Zürich",
      "item": "https://relofinder.ch/regions/zurich"
    }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Relocation to Zürich",
  "description": "Comprehensive relocation guide for expats moving to Zürich, Switzerland's largest city and financial hub",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "City",
    "name": "Zürich",
    "containedIn": {
      "@type": "Country",
      "name": "Switzerland"
    }
  },
  "serviceType": "Relocation Services"
};
const combinedSchema = {
  "@context": "https://schema.org",
  "@graph": [
    breadcrumbSchema,
    serviceSchema,
    {
      "@type": "Place",
      "name": "Zürich",
      "description": description,
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Zürich",
        "addressCountry": "CH"
      }
    }
  ]
};
---

<Layout 
  title={title} 
  description={description}
  canonical={canonicalURL}
  keywords={keywords}
  schema={combinedSchema}
>

  <!-- Hero Section -->
  <section class="relative min-h-[600px] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/w_1920,h_800,c_fill,f_webp,q_90,e_sharpen:100/v1759820127/henrique-ferreira-6p-I-X-sPUY-unsplash_1_gqzm3n.jpg"
        alt="Zürich cityscape with lake and financial district"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
    </div>

    <!-- Hero Content -->
    <div class="container relative z-10 py-20">
      <div class="max-w-4xl">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Relocation to <span class="bg-gradient-to-r from-[#B61919] to-[#DF3030] bg-clip-text text-transparent">Zürich</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-200 mb-8 leading-relaxed">
          Switzerland's largest city and global financial hub, Zürich offers outstanding career opportunities, international community, and the highest quality of life.
        </p>

        <!-- Stats Row -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-white mb-1">415,367</div>
            <div class="text-sm text-gray-300">Population</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-white mb-1">32%</div>
            <div class="text-sm text-gray-300">International residents</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-white mb-1">4.7/5</div>
            <div class="text-sm text-gray-300">Expat satisfaction</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-white mb-1">6–8</div>
            <div class="text-sm text-gray-300">Weeks setup</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <button
            onclick="universalOpenModal({page: 'region_zurich_hero', service: 'relocation'})"
            class="px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-bold text-lg hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-xl"
          >
            Start Your Zürich Journey
          </button>
          <a
            href="/companies?region=zurich"
            class="px-8 py-4 bg-white/10 backdrop-blur-sm text-white border-2 border-white/30 rounded-xl font-bold text-lg hover:bg-white/20 transition-all duration-300"
          >
            Find Local Experts
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction Paragraph -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-xl text-gray-700 leading-relaxed">
          Welcome to your complete guide to relocating to Zürich. Whether you're moving for work, lifestyle, or family, this page will walk you through everything you need to know — from finding housing and understanding costs to navigating permits and connecting with local experts. Let's make your Zürich move smooth and successful.
        </p>
      </div>
    </div>
  </section>

  <!-- Section 1: Why Choose Zürich -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Why Zürich
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Why Choose <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Zürich</span>
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Zürich combines the best of Switzerland: career opportunities, international lifestyle, and unmatched quality of life. Here's what makes it special.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Card 1 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Financial Powerhouse</h3>
            <p class="text-gray-600 text-sm">
              Home to UBS, Credit Suisse, and hundreds of fintech startups. Zürich is Switzerland's undisputed financial capital.
            </p>
          </div>

          <!-- Card 2 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Highest Quality of Life</h3>
            <p class="text-gray-600 text-sm">
              Consistently ranked #1 globally for quality of life, with world-class healthcare, education, and infrastructure.
            </p>
          </div>

          <!-- Card 3 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Safe & Efficient</h3>
            <p class="text-gray-600 text-sm">
              Switzerland's safest large city with punctual public transport, clean streets, and low crime rates.
            </p>
          </div>

          <!-- Card 4 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Thriving Tech & Startup Hub</h3>
            <p class="text-gray-600 text-sm">
              Google, Disney+, and hundreds of startups. Zürich's tech scene rivals London and Berlin.
            </p>
          </div>

          <!-- Card 5 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Welcoming International Community</h3>
            <p class="text-gray-600 text-sm">
              32% of residents are foreign nationals. English widely spoken in business and daily life.
            </p>
          </div>

          <!-- Card 6 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Excellent Education System</h3>
            <p class="text-gray-600 text-sm">
              World-class international schools, bilingual programs, and top-ranked universities (ETH, University of Zürich).
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 2: Living in Zürich (Accordion) -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Living Guide
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Living in <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Zürich</span>
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-8">
            From quality of life to finding the perfect neighborhood, here's what daily life in Zürich looks like. Click each section to learn more.
          </p>
        </div>

        <div class="space-y-4">
          <!-- Accordion 1: Quality of Life -->
          <details class="group bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl border-2 border-primary-200 hover:border-primary-400 hover:shadow-lg transition-all cursor-pointer">
            <summary class="text-lg font-bold text-gray-900 cursor-pointer flex items-center justify-between list-none">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
                Quality of Life
              </div>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="mt-4 pl-8 space-y-2">
              <p class="text-gray-700">Zürich consistently ranks as one of the world's best cities to live in:</p>
              <ul class="list-disc list-inside text-gray-700 space-y-1 ml-2">
                <li><strong>Healthcare:</strong> World-class hospitals (University Hospital, Triemli), English-speaking doctors, mandatory insurance ensures access for all</li>
                <li><strong>Safety:</strong> One of Europe's safest cities, low crime rates, safe to walk at night</li>
                <li><strong>Culture:</strong> 50+ museums, opera house, Tonhalle concert hall, vibrant arts scene</li>
                <li><strong>Nature:</strong> Lake Zürich, Üetliberg mountain (30 min from city center), Alps within 1-2 hours</li>
              </ul>
            </div>
          </details>

          <!-- Accordion 2: International Community -->
          <details class="group bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl border-2 border-primary-200 hover:border-primary-400 hover:shadow-lg transition-all cursor-pointer">
            <summary class="text-lg font-bold text-gray-900 cursor-pointer flex items-center justify-between list-none">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                International Community
              </div>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="mt-4 pl-8 space-y-2">
              <p class="text-gray-700">Zürich is one of Europe's most international cities:</p>
              <ul class="list-disc list-inside text-gray-700 space-y-1 ml-2">
                <li><strong>32% foreign nationals</strong> from 170+ countries</li>
                <li><strong>English widely spoken</strong> in business, banking, tech sectors</li>
                <li><strong>International networking:</strong> Expat clubs, InterNations, professional groups</li>
                <li><strong>Multilingual environment:</strong> German (Swiss German), English, French, Italian</li>
              </ul>
            </div>
          </details>

          <!-- Accordion 3: Neighborhoods for Expats -->
          <details class="group bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl border-2 border-primary-200 hover:border-primary-400 hover:shadow-lg transition-all cursor-pointer">
            <summary class="text-lg font-bold text-gray-900 cursor-pointer flex items-center justify-between list-none">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Neighborhoods for Expats
              </div>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="mt-4 pl-8 space-y-2">
              <p class="text-gray-700">Popular expat neighborhoods in Zürich:</p>
              <ul class="list-disc list-inside text-gray-700 space-y-1 ml-2">
                <li><strong>Gold Coast (Küsnacht, Zollikon):</strong> Lakeside luxury, international schools, villas & large apartments. Rent: CHF 2,500-5,000/month (2BR)</li>
                <li><strong>Kreis 1 (Old Town):</strong> City center, walkable, cultural attractions, charming but expensive. Rent: CHF 2,000-4,000/month (1BR)</li>
                <li><strong>Oerlikon (Kreis 11):</strong> Modern, affordable, excellent transport, family-friendly. Rent: CHF 1,500-2,800/month (2BR)</li>
                <li><strong>Fluntern (Kreis 7):</strong> Quiet, green, close to University & ETH, popular with academics. Rent: CHF 1,800-3,200/month (2BR)</li>
              </ul>
            </div>
          </details>
        </div>

        <!-- Inline CTA -->
        <div class="mt-12 text-center">
          <a
            href="/services/housing/zurich"
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-bold text-lg hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-lg"
          >
            Housing in Zürich →
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 3: Costs of Living -->
  <section class="py-20 bg-gradient-to-br from-gray-50 via-white to-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Budget Planning
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Cost of Living in <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Zürich</span>
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Zürich is one of the world's most expensive cities, but salaries reflect that. Here's what you can expect to spend monthly, depending on your situation.
          </p>
        </div>

        <!-- Budget Cards -->
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl border-2 border-primary-200">
            <div class="text-center">
              <div class="text-sm font-semibold text-primary-700 mb-2">Single Professional</div>
              <div class="text-3xl font-bold text-gray-900 mb-1">CHF 3,000–4,500</div>
              <div class="text-sm text-gray-600">/month</div>
            </div>
          </div>
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl border-2 border-primary-200">
            <div class="text-center">
              <div class="text-sm font-semibold text-primary-700 mb-2">Couple</div>
              <div class="text-3xl font-bold text-gray-900 mb-1">CHF 4,500–6,500</div>
              <div class="text-sm text-gray-600">/month</div>
            </div>
          </div>
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl border-2 border-primary-200">
            <div class="text-center">
              <div class="text-sm font-semibold text-primary-700 mb-2">Family of 4</div>
              <div class="text-3xl font-bold text-gray-900 mb-1">CHF 7,000–10,000</div>
              <div class="text-sm text-gray-600">/month</div>
            </div>
          </div>
        </div>

        <!-- Cost Table -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-200">
          <table class="w-full">
            <thead>
              <tr class="bg-gray-50 border-b border-gray-200">
                <th class="px-6 py-4 text-left font-bold text-gray-900">Category</th>
                <th class="px-6 py-4 text-right font-bold text-gray-900">Monthly Cost</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b border-gray-100 hover:bg-gray-50">
                <td class="px-6 py-4 text-gray-700">1BR apartment (city center)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 1,800–2,500</td>
              </tr>
              <tr class="border-b border-gray-100 hover:bg-gray-50">
                <td class="px-6 py-4 text-gray-700">1BR apartment (outside center)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 1,200–1,800</td>
              </tr>
              <tr class="border-b border-gray-100 hover:bg-gray-50">
                <td class="px-6 py-4 text-gray-700">Public transport (monthly pass)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 85</td>
              </tr>
              <tr class="border-b border-gray-100 hover:bg-gray-50">
                <td class="px-6 py-4 text-gray-700">Groceries (single person)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 400–600</td>
              </tr>
