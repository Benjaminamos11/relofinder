---
import Layout from '../../layouts/Layout.astro';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Regions",
      "item": "https://relofinder.ch/regions"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Geneva",
      "item": "https://relofinder.ch/regions/geneva"
    }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Relocation to Geneva Services",
  "description": "Complete relocation guide for Geneva, Switzerland. Housing, costs, jobs, schools, permits, and trusted relocation agencies.",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder"
  },
  "areaServed": {
    "@type": "City",
    "name": "Geneva",
    "containedIn": {
      "@type": "Country",
      "name": "Switzerland"
    }
  }
};

const title = "Relocation to Geneva | International Expat Relocation Guide 2025 | ReloFinder";
const description = "Plan your move to Geneva with confidence. Costs, housing, jobs, schools, permits, and relocation agencies. Compare providers with ReloFinder.";
const canonical = "https://relofinder.ch/regions/geneva";
const keywords = ['geneva relocation', 'moving to geneva', 'geneva expat', 'geneva international', 'geneva housing', 'UN geneva', 'relocation agencies geneva', 'geneva switzerland'];

const combinedSchema = {
  "@context": "https://schema.org",
  "@graph": [
    breadcrumbSchema,
    {
      ...serviceSchema,
      provider: {
        "@type": "Organization",
        "name": "ReloFinder",
        "url": "https://relofinder.ch"
      },
      areaServed: {
        "@type": "City",
        "name": "Geneva",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Geneva",
          "addressCountry": "CH"
        }
      }
    },
    {
      "@type": "Place",
      "name": "Geneva",
      "description": description,
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Geneva",
        "addressCountry": "CH"
      }
    }
  ]
};
---

<Layout 
  title={title}
  description={description}
  canonical={canonical}
  keywords={keywords}
  schema={combinedSchema}
>

  <!-- Hero Section -->
  <section class="relative min-h-[600px] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/w_1920,h_800,c_fill,f_webp,q_90,e_sharpen:100/v1759820141/visualsoflukas-AWjVCFcUIbY-unsplash_1_mvewzi.jpg"
        alt="Geneva with Jet d'Eau and international district"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
    </div>

    <!-- Content -->
    <div class="container relative z-10 py-20">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Relocation to <span class="bg-gradient-to-r from-[#B61919] to-[#DF3030] bg-clip-text text-transparent">Geneva</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-100 leading-relaxed max-w-3xl mx-auto">
          Switzerland's international city — home to the UN, WHO, WTO, financial institutions, and a vibrant global expat community.
        </p>

        <!-- Stats Cards -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-3xl mx-auto">
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">500K+</div>
            <div class="text-sm text-gray-300">Metro Pop.</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">40%+</div>
            <div class="text-sm text-gray-300">International</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">4.5/5</div>
            <div class="text-sm text-gray-300">Satisfaction</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">6–9 wks</div>
            <div class="text-sm text-gray-300">Setup</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button
            onclick="universalOpenModal()"
            class="px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-bold text-lg hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-lg"
          >
            Start Your Geneva Journey
          </button>
          <a
            href="/companies?region=geneva"
            class="px-8 py-4 bg-white/10 backdrop-blur-md text-white border-2 border-white/30 rounded-xl font-bold text-lg hover:bg-white/20 hover:scale-105 transition-all duration-300"
          >
            Find Local Experts
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction Paragraph -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-xl text-gray-700 leading-relaxed">
          Welcome to Geneva — the diplomatic heart of Switzerland. Nestled on Lake Geneva with Mont Blanc views, the city hosts the United Nations, countless NGOs, global banks, and a thriving international community. Geneva combines cosmopolitan life with Swiss quality, making it a top destination for expats and families.
        </p>
      </div>
    </div>
  </section>

  <!-- Section 1: Why Choose Geneva -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Why Geneva
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Why Choose <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Geneva</span>
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Geneva stands out as Switzerland's most international city, blending diplomacy, finance, and culture with stunning natural beauty.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Card 1 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Global Diplomatic Hub</h3>
            <p class="text-gray-600 text-sm">
              Home to the UN, WHO, WTO, ICRC, and 250+ international organizations. The world's most diplomatic city.
            </p>
          </div>

          <!-- Card 2 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Finance & Private Banking</h3>
            <p class="text-gray-600 text-sm">
              Major private banks, wealth management firms, and commodity trading headquarters (Trafigura, Vitol, Cargill).
            </p>
          </div>

          <!-- Card 3 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">International Schools & Universities</h3>
            <p class="text-gray-600 text-sm">
              World-class education: International School of Geneva, Institut Florimont, University of Geneva, Graduate Institute.
            </p>
          </div>

          <!-- Card 4 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Multilingual Environment</h3>
            <p class="text-gray-600 text-sm">
              French is official, but English is widely spoken. Residents from 190+ countries create a truly global atmosphere.
            </p>
          </div>

          <!-- Card 5 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Stunning Lake & Alps Lifestyle</h3>
            <p class="text-gray-600 text-sm">
              Lake Geneva for sailing, Mont Blanc views, world-class skiing 45 minutes away. Premium outdoor lifestyle.
            </p>
          </div>

          <!-- Card 6 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Cross-Border Living with France</h3>
            <p class="text-gray-600 text-sm">
              Many expats live in French border towns (Ferney-Voltaire, St-Julien) for lower housing costs while working in Geneva.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 2: Living in Geneva (Accordion) -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Living Guide
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Living in <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Geneva</span>
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-8">
            Geneva is cosmopolitan but compact, with a unique mix of international energy and Swiss stability. Expand the sections below for details.
          </p>
        </div>

        <div class="space-y-4">
          <!-- Accordion 1: Quality of Life -->
          <details class="group bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl border-2 border-primary-200 hover:border-primary-400 hover:shadow-lg transition-all cursor-pointer">
            <summary class="text-lg font-bold text-gray-900 cursor-pointer flex items-center justify-between list-none">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
                Quality of Life
              </div>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="mt-4 pl-8 space-y-2">
              <p class="text-gray-700">Geneva consistently ranks high for quality of life:</p>
              <ul class="list-disc list-inside text-gray-700 space-y-1 ml-2">
                <li><strong>Healthcare:</strong> Excellent hospitals (HUG - Geneva University Hospitals), English-speaking doctors</li>
                <li><strong>Safety:</strong> Very safe city with low crime rates, secure for families</li>
                <li><strong>Public transport:</strong> Efficient trams, buses, and trains (TPG network)</li>
                <li><strong>Nature:</strong> Lake Geneva waterfront, Jet d'Eau, Mont Blanc views, Jura mountains nearby</li>
              </ul>
            </div>
          </details>

          <!-- Accordion 2: International Community -->
          <details class="group bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl border-2 border-primary-200 hover:border-primary-400 hover:shadow-lg transition-all cursor-pointer">
            <summary class="text-lg font-bold text-gray-900 cursor-pointer flex items-center justify-between list-none">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                International Community
              </div>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="mt-4 pl-8 space-y-2">
              <p class="text-gray-700">Geneva is Switzerland's most international city:</p>
              <ul class="list-disc list-inside text-gray-700 space-y-1 ml-2">
                <li><strong>40%+ foreign nationals</strong> from 190+ countries</li>
                <li><strong>English widely spoken</strong> despite French being official language</li>
                <li><strong>UN/NGO community:</strong> Large diplomatic and humanitarian sector</li>
                <li><strong>Expat networks:</strong> Abundant social clubs, InterNations, international school communities</li>
              </ul>
            </div>
          </details>

          <!-- Accordion 3: Neighborhoods for Expats -->
          <details class="group bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl border-2 border-primary-200 hover:border-primary-400 hover:shadow-lg transition-all cursor-pointer">
            <summary class="text-lg font-bold text-gray-900 cursor-pointer flex items-center justify-between list-none">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Neighborhoods for Expats
              </div>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="mt-4 pl-8 space-y-2">
              <p class="text-gray-700">Popular neighborhoods in Geneva and across the border:</p>
              <ul class="list-disc list-inside text-gray-700 space-y-1 ml-2">
                <li><strong>Eaux-Vives:</strong> Trendy lakeside, restaurants, bars, young professionals. Rent: CHF 2,500-4,000/month (2BR)</li>
                <li><strong>Champel:</strong> Family-friendly, green, quiet, near international schools. Rent: CHF 2,800-4,500/month (3BR)</li>
                <li><strong>Carouge:</strong> Bohemian, artistic, Italian-style village feel, cafés. Rent: CHF 2,200-3,800/month (2BR)</li>
                <li><strong>France (Ferney-Voltaire, St-Julien):</strong> Affordable option, 10-20 min to Geneva. Rent: €1,200-2,000/month (3BR)</li>
              </ul>
            </div>
          </details>
        </div>

        <!-- Inline CTA -->
        <div class="mt-12 text-center">
          <a
            href="/services/housing/geneva"
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-bold text-lg hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-lg"
          >
            Housing in Geneva →
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 3: Costs of Living -->
  <section class="py-20 bg-gradient-to-br from-gray-50 via-white to-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Budget Planning
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Cost of Living in <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Geneva</span>
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Geneva is one of the world's most expensive cities — here's what to expect. Many expats offset costs by living across the border in France.
          </p>
        </div>

        <!-- Budget Cards -->
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl border-2 border-primary-200">
            <div class="text-center">
              <div class="text-sm font-semibold text-primary-700 mb-2">Single Person</div>
              <div class="text-3xl font-bold text-gray-900 mb-1">CHF 3,500–5,000</div>
              <div class="text-sm text-gray-600">per month</div>
            </div>
          </div>
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl border-2 border-primary-200">
            <div class="text-center">
              <div class="text-sm font-semibold text-primary-700 mb-2">Couple</div>
              <div class="text-3xl font-bold text-gray-900 mb-1">CHF 5,000–7,000</div>
              <div class="text-sm text-gray-600">per month</div>
            </div>
          </div>
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl border-2 border-primary-200">
            <div class="text-center">
              <div class="text-sm font-semibold text-primary-700 mb-2">Family of 4</div>
              <div class="text-3xl font-bold text-gray-900 mb-1">CHF 7,500–11,000</div>
              <div class="text-sm text-gray-600">per month</div>
            </div>
          </div>
        </div>

        <!-- Cost Table -->
        <div class="bg-white rounded-xl border-2 border-gray-200 overflow-hidden mb-12">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-4 text-left text-sm font-bold text-gray-900">Category</th>
                <th class="px-6 py-4 text-right text-sm font-bold text-gray-900">Monthly Cost</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <tr>
                <td class="px-6 py-4 text-gray-700">1BR apartment (city center)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 2,000–3,500</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-gray-700">Public transport (monthly pass)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 70–90</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-gray-700">Groceries (single person)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 650–750</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-gray-700">Health insurance (mandatory)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 320–520</td>
