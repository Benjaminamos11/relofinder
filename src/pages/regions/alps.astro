---
import Layout from '../../layouts/Layout.astro';

const title = "Relocation to the Swiss Alps | Luxury & HNWI Expat Guide 2025 | ReloFinder";
const description = "Relocate to Switzerland's Alpine regions with confidence. Luxury lifestyle, chalets, lump-sum taxation, schools, and relocation agencies for HNWI expats.";
const canonical = "https://relofinder.ch/regions/alps";
const keywords = ['swiss alps relocation', 'luxury alps living', 'st moritz relocation', 'gstaad expat', 'zermatt living', 'alpine lifestyle switzerland', 'hnwi switzerland', 'lump sum taxation alps'];

const combinedSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://relofinder.ch"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Regions",
          "item": "https://relofinder.ch/regions"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "Swiss Alps",
          "item": "https://relofinder.ch/regions/alps"
        }
      ]
    },
    {
      "@type": "Service",
      "name": "Relocation to the Swiss Alps Services",
      "description": "Complete relocation guide for Switzerland's Alpine regions. Luxury lifestyle, chalets, lump-sum taxation, schools, and trusted relocation agencies for HNWI expats.",
      "provider": {
        "@type": "Organization",
        "name": "ReloFinder",
        "url": "https://relofinder.ch"
      },
      "areaServed": {
        "@type": "Place",
        "name": "Swiss Alps",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "CH"
        }
      }
    },
    {
      "@type": "Place",
      "name": "Swiss Alps",
      "description": description,
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "CH"
      }
    }
  ]
};
---

<Layout 
  title={title}
  description={description}
  canonical={canonical}
  keywords={keywords}
  schema={combinedSchema}
>

  <!-- Hero Section -->
  <section class="relative min-h-[600px] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/w_1920,h_800,c_fill,f_webp,q_90,e_sharpen:100/v1759820373/andrew-masters-vSS6nhP52_g-unsplash_3_rs8bgt.jpg"
        alt="Swiss Alps luxury mountain lifestyle - St. Moritz, Gstaad, Zermatt"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
    </div>

    <!-- Content -->
    <div class="container relative z-10 py-20">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Relocation to the <span class="bg-gradient-to-r from-[#B61919] to-[#DF3030] bg-clip-text text-transparent">Swiss Alps</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-100 leading-relaxed max-w-3xl mx-auto">
          From St. Moritz to Gstaad, the Alps offer luxury living, tax advantages, and discreet privacy for global families and entrepreneurs.
        </p>

        <!-- Stats Cards -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-3xl mx-auto">
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">1,500–3,800m</div>
            <div class="text-sm text-gray-300">Elevation</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">30%+</div>
            <div class="text-sm text-gray-300">International</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">4.7/5</div>
            <div class="text-sm text-gray-300">Satisfaction</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">6–10 wks</div>
            <div class="text-sm text-gray-300">Setup</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button
            onclick="universalOpenModal()"
            class="px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-bold text-lg hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-lg"
          >
            Start Your Alpine Journey
          </button>
          <a
            href="/companies?region=alps"
            class="px-8 py-4 bg-white/10 backdrop-blur-md text-white border-2 border-white/30 rounded-xl font-bold text-lg hover:bg-white/20 hover:scale-105 transition-all duration-300"
          >
            Find Local Experts
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction Paragraph -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-xl text-gray-700 leading-relaxed">
          Welcome to the Swiss Alps — the world's most exclusive relocation destination. Whether it's skiing in Zermatt, luxury chalets in Gstaad, or discreet tax arrangements in St. Moritz, the Alps attract global families, investors, and entrepreneurs seeking Swiss quality of life with world-class privacy.
        </p>
      </div>
    </div>
  </section>

  <!-- Section 1: Why Choose the Alps -->
