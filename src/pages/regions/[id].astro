---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const regions = await getCollection('regions');
  return regions.map((region) => ({
    params: { id: region.data.id || region.slug },
    props: { region },
  }));
}

const { region } = Astro.props;
const { Content } = await region.render();

// Regional images mapping (same as main page)
const regionalImages = {
  'zurich': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-whimsical-slightly-quirky-photograph-d_zq8vecXuSUm5G0iW2zVS2A_ahKrzbyPSHujmZTV4weezQ_fefkl9.webp',
  'geneva': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_jygtMk7MRVCGIR4b-pXn1w_u_7qRvYXQmqaQVXTr4FhIQ_exkzuu.webp',
  'basel': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_byvGP0Q4RKyeAN-ygL2jbg_aTPr-BU2TWSrb4xXReYWMw_tw5r7l.webp',
  'bern': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-vibrant-slightly-whimsical-photograph-_j_Bc2kuLQfWixPiozYlkZg_3GfAV6UKRZKiLAd7QOavuA_mkvcga.webp',
  'lausanne': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_s2o30GAgRB2T9AZDpXe4_A_RED4Ygx9Rw2E2XeYdgDzog_jyhysn.webp',
  'zug': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054307/a-whimsical-slightly-quirky-photograph-c_ESZqUcnqSiCNpGzcV89dBw_o-YAUo9-RbC7oy5d4C2v2Q_ehpyba.webp'
};

// Regional data with safety checks
const relocationStats = region.data.relocationStats || {
  expatsPercentage: 20,
  avgMoveTime: "4-6 weeks", 
  satisfaction: 4.0,
  topIndustries: ["Finance", "Technology", "Healthcare"]
};

const keyFacts = region.data.keyFacts || {
  costOfLiving: "CHF 3,000-5,000/month",
  avgRent: "CHF 1,500-3,000/month",
  taxRate: "15-25%", 
  internetSpeed: "100+ Mbps",
  publicTransport: "Excellent"
};

const livingCosts = region.data.livingCosts || {
  oneBedroomApt: { min: 1200, max: 2500 },
  threeBedroomApt: { min: 2500, max: 4500 },
  utilities: { min: 150, max: 250 },
  transportation: 85,
  groceries: 500,
  dining: { budget: 20, midRange: 50, highEnd: 100 }
};

const highlights = region.data.highlights || [
  "High quality of life and excellent infrastructure",
  "Strong international business community", 
  "World-class healthcare and education systems",
  "Beautiful natural surroundings and outdoor activities"
];

const districts = region.data.districts || [];
const population = typeof region.data.population === 'string' ? region.data.population : region.data.population?.toLocaleString() || 'N/A';

// Get hero image (use main page image if available, fallback to region data)
const currentRegionId = region.data.id || region.slug;
const regionKey = currentRegionId.toLowerCase();
const heroImage = (regionalImages as any)[regionKey] || region.data.image;

// Regional relocators - companies that serve this region
const regionalRelocators = [
  {
    name: 'PrimeRelocation',
    id: 'prime-relocation',
    specialty: 'Full-Service Relocation',
    description: 'Your trusted partner for seamless relocation to Switzerland.',
    logo: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748055897/logoprimesmal_rb4hxo.webp',
    rating: 4.5,
    reviews: 312,
    services: ['Home Search', 'Immigration', 'Orientation', 'School Search'],
    regions: ['zurich', 'geneva', 'basel', 'zug', 'bern']
  },
  {
    name: 'Auris Relocation',
    id: 'auris-relocation', 
    specialty: 'Corporate Global Mobility',
    description: 'Comprehensive advisory and relocation services for companies and individuals.',
    logo: 'https://www.aurisrelocation.com/cstyle/6680750/images/logo.svg',
    rating: 4.8,
    reviews: 124,
    services: ['Immigration & Permits', 'Home Search', 'Cross-Cultural Training'],
    regions: ['zurich', 'geneva', 'basel', 'bern', 'lausanne']
  },
  {
    name: 'Anchor Relocation',
    id: 'anchor-relocation',
    specialty: 'Family & Corporate Relocations', 
    description: 'Professional relocation services with 20+ years of experience.',
    logo: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748056028/anchor_logo_s1jbo3.webp',
    rating: 4.2,
    reviews: 87,
    services: ['Home Search', 'Settling-in', 'Immigration', 'Education'],
    regions: ['zurich', 'zug', 'lucerne']
  }
];

// Filter relocators that serve this region
const availableRelocators = regionalRelocators.filter(relocator => 
  relocator.regions.includes(currentRegionId.toLowerCase())
);

// Regional services
const regionalServices = [
  {
    id: 'home-search',
    name: `Home Search in ${region.data.name}`,
    description: `Find your perfect home in ${region.data.name} with expert local knowledge of neighborhoods, pricing, and availability.`,
    icon: 'home',
    features: ['Property viewings', 'Lease negotiations', 'Market insights', 'Documentation help']
  },
  {
    id: 'immigration',
    name: `Immigration Services ${region.data.name}`,
    description: `Navigate Swiss immigration requirements with ${region.data.name}-specific expertise and local authority knowledge.`,
    icon: 'document',
    features: ['Visa applications', 'Work permits', 'Residence permits', 'Family reunification']
  },
  {
    id: 'banking',
    name: `Banking Setup ${region.data.name}`,
    description: `Open Swiss bank accounts and establish financial services with local ${region.data.name} banking relationships.`,
    icon: 'credit-card',
    features: ['Account opening', 'Mortgage advice', 'Investment options', 'Tax optimization']
  },
  {
    id: 'education',
    name: `Education in ${region.data.name}`,
    description: `Find the best schools and educational opportunities for your family in ${region.data.name}.`,
    icon: 'academic-cap',
    features: ['School placement', 'International schools', 'University guidance', 'Language courses']
  }
];

// Regional guides and resources
const relatedGuides = [
  {
    title: `Complete Guide to Moving to ${region.data.name}`,
    excerpt: `Everything you need to know about relocating to ${region.data.name}, from paperwork to lifestyle.`,
    link: '/blog/swiss-visa-guide',
    category: 'Relocation Guide'
  },
  {
    title: `Cost of Living in ${region.data.name}`,
    excerpt: `Detailed breakdown of living expenses and budget planning for ${region.data.name}.`,
    link: '/blog/swiss-visa-guide', 
    category: 'Financial Planning'
  },
  {
    title: `Best Neighborhoods in ${region.data.name}`,
    excerpt: `Discover the most popular areas for expats and families in ${region.data.name}.`,
    link: '/blog/swiss-visa-guide',
    category: 'Housing Guide'
  }
];

// SEO metadata
const title = `Relocation to ${region.data.name}: Complete Expat Guide | ReloFinder.ch`;
const description = `Comprehensive relocation guide for moving to ${region.data.name}, Switzerland. Find homes, relocators, costs, and expert advice for your Swiss move.`;
---

<Layout title={title} description={description}>
  <!-- Hero Section - 8pt Grid: 64px height elements -->
  <section class="relative min-h-screen flex items-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src={heroImage} 
        alt={`Relocation to ${region.data.name} Switzerland - Beautiful city overview`}
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
    </div>

    <!-- Content - 8pt Grid: 32px padding -->
    <div class="container relative z-10 py-32">
      <div class="max-w-4xl">
        <!-- Breadcrumb - 8pt Grid: 16px spacing -->
        <nav class="flex items-center space-x-4 text-sm text-white/80 mb-16">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span>→</span>
          <a href="/regions" class="hover:text-white transition-colors">Regions</a>
          <span>→</span>
          <span class="text-white">{region.data.name}</span>
        </nav>

        <!-- Badge - 8pt Grid: 16px padding -->
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/20 backdrop-blur-sm border border-white/30 text-white font-medium text-sm mb-16">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
          </svg>
          {region.data.canton} Canton • Switzerland
        </div>

        <!-- Main Headline - 8pt Grid: 32px spacing -->
        <div class="space-y-8 mb-32">
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold leading-tight text-white">
            Relocation to <span class="bg-gradient-to-r from-primary-400 to-secondary-400 bg-clip-text text-transparent">{region.data.name}</span>
          </h1>
          <p class="text-2xl text-white/90 leading-relaxed max-w-3xl">
            Your complete guide to moving to {region.data.name}. Everything you need to know for a successful Swiss relocation.
          </p>
        </div>

        <!-- Key Stats - 8pt Grid: 16px padding in cards -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
            <div class="text-3xl font-bold text-white mb-2">{population}</div>
            <div class="text-white/80">Population</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
            <div class="text-3xl font-bold text-white mb-2">{relocationStats.expatsPercentage}%</div>
            <div class="text-white/80">International</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
            <div class="text-3xl font-bold text-white mb-2">{relocationStats.satisfaction}/5</div>
            <div class="text-white/80">Satisfaction</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
            <div class="text-3xl font-bold text-white mb-2">{relocationStats.avgMoveTime}</div>
            <div class="text-white/80">Setup Time</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce text-white">
      <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-white/50 rounded-full mt-2 animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- Good to Know Banner - 8pt Grid: 32px section spacing -->
  <section class="py-16 bg-gradient-to-r from-blue-600 to-blue-700 text-white">
    <div class="container">
      <div class="flex items-center justify-center space-x-4 text-center">
        <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-2">Good to Know</h3>
          <p class="text-blue-100">
            {region.data.name} welcomes over {relocationStats.expatsPercentage}% international residents. The average relocation setup takes {relocationStats.avgMoveTime}.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose This Region - Question Format - 8pt Grid: 32px spacing -->
  <section class="py-32 bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-24">
          <h2 class="text-4xl md:text-5xl font-bold mb-8">
            Why Choose <span class="gradient-text">{region.data.name}</span> for Your Relocation?
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            {region.data.description}
          </p>
        </div>

        <!-- Question Cards - 8pt Grid: 16px padding -->
        <div class="grid lg:grid-cols-2 gap-8">
          <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-8 border border-gray-200">
            <h3 class="text-xl font-bold text-gray-900 mb-6">What Makes {region.data.name} Special?</h3>
            <div class="space-y-4">
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-gray-700">High quality of life with excellent infrastructure</p>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-gray-700">Strong international business community</p>
              </div>
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-gray-700">World-class healthcare and education systems</p>
              </div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-8 border border-primary-200">
            <h3 class="text-xl font-bold text-primary-900 mb-6">What Industries Thrive Here?</h3>
            <div class="space-y-4">
              {relocationStats.topIndustries.map((industry) => (
                <div class="flex items-center space-x-3">
                  <div class="w-3 h-3 bg-primary-500 rounded-full"></div>
                  <span class="text-primary-800 font-medium">{industry}</span>
                </div>
              ))}
            </div>
            <div class="mt-6 pt-6 border-t border-primary-200">
              <p class="text-primary-700 text-sm">
                Average professional salaries: <span class="font-bold">CHF 80,000-150,000+</span>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Relocation Services Section - 8pt Grid: 32px spacing -->
  <section class="py-32 bg-gray-50">
    <div class="container">
      <div class="text-center mb-24">
        <h2 class="text-4xl md:text-5xl font-bold mb-8">
          How Can We Help You Relocate to <span class="gradient-text">{region.data.name}</span>?
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Professional relocation services tailored specifically for {region.data.name}. Our local experts understand the unique requirements of this region.
        </p>
      </div>

      <!-- Service Cards - 8pt Grid: 16px padding -->
      <div class="grid md:grid-cols-2 gap-8 mb-16">
        <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="flex items-start space-x-6 mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center flex-shrink-0">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">Need Help Finding a Home in {region.data.name}?</h3>
              <p class="text-gray-600 leading-relaxed mb-6">
                Our expert home search service helps you find the perfect property in {region.data.name} with local market knowledge and negotiation support.
              </p>
            </div>
          </div>
          <div class="space-y-3 mb-8">
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-gray-700">Property viewings and market insights</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-gray-700">Lease negotiations and documentation</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-gray-700">Neighborhood guidance and recommendations</span>
            </div>
          </div>
          <button onclick="openModal('individual-lead-modal')" class="w-full py-4 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold rounded-xl hover:shadow-lg transition-all duration-300">
            Get Home Search Help
          </button>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="flex items-start space-x-6 mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center flex-shrink-0">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-3">Confused About Immigration Requirements?</h3>
              <p class="text-gray-600 leading-relaxed mb-6">
                Navigate Swiss immigration with {region.data.name}-specific expertise. We handle visa applications, permits, and local authority requirements.
              </p>
            </div>
          </div>
          <div class="space-y-3 mb-8">
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-gray-700">Visa and work permit applications</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-gray-700">Residence permit guidance</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-gray-700">Family reunification support</span>
            </div>
          </div>
          <button onclick="openModal('individual-lead-modal')" class="w-full py-4 bg-gradient-to-r from-green-600 to-green-700 text-white font-semibold rounded-xl hover:shadow-lg transition-all duration-300">
            Get Immigration Help
          </button>
        </div>
      </div>

      <!-- CTA Banner - 8pt Grid: 16px padding -->
      <div class="bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl p-8 text-center text-white">
        <h3 class="text-2xl font-bold mb-4">Ready to Start Your {region.data.name} Journey?</h3>
        <p class="text-primary-100 mb-6">Get personalized relocation assistance from local experts</p>
        <button onclick="openModal('individual-lead-modal')" class="bg-white text-primary-600 font-semibold px-8 py-4 rounded-xl hover:bg-gray-50 transition-colors">
          Get Free Consultation
        </button>
      </div>
    </div>
  </section>

  <!-- Living Costs - Question Format - 8pt Grid: 32px spacing -->
  <section class="py-32 bg-white">
    <div class="container">
      <div class="text-center mb-24">
        <h2 class="text-4xl md:text-5xl font-bold mb-8">
          How Much Does it Cost to Live in <span class="gradient-text">{region.data.name}</span>?
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Plan your budget with detailed cost information for living comfortably in {region.data.name}.
        </p>
      </div>

      <!-- Cost Cards - 8pt Grid: 16px padding -->
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-8 border border-blue-200">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-blue-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-blue-900 mb-2">What About Housing Costs?</h3>
          </div>
          <div class="space-y-4">
            <div class="flex justify-between items-center py-2 border-b border-blue-200">
              <span class="text-blue-800">1-Bedroom Apartment</span>
              <span class="font-bold text-blue-900">CHF {livingCosts.oneBedroomApt.min}-{livingCosts.oneBedroomApt.max}</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-blue-200">
              <span class="text-blue-800">3-Bedroom Apartment</span>
              <span class="font-bold text-blue-900">CHF {livingCosts.threeBedroomApt.min}-{livingCosts.threeBedroomApt.max}</span>
            </div>
            <div class="flex justify-between items-center py-2">
              <span class="text-blue-800">Monthly Utilities</span>
              <span class="font-bold text-blue-900">CHF {livingCosts.utilities.min}-{livingCosts.utilities.max}</span>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-8 border border-green-200">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-green-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-green-900 mb-2">How Much for Daily Life?</h3>
          </div>
          <div class="space-y-4">
            <div class="flex justify-between items-center py-2 border-b border-green-200">
              <span class="text-green-800">Monthly Transport Pass</span>
              <span class="font-bold text-green-900">CHF {livingCosts.transportation}</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-green-200">
              <span class="text-green-800">Groceries per Month</span>
              <span class="font-bold text-green-900">CHF {livingCosts.groceries}</span>
            </div>
            <div class="flex justify-between items-center py-2">
              <span class="text-green-800">Internet & Phone</span>
              <span class="font-bold text-green-900">CHF 60-120</span>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-2xl p-8 border border-purple-200">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-purple-900 mb-2">What About Dining Out?</h3>
          </div>
          <div class="space-y-4">
            <div class="flex justify-between items-center py-2 border-b border-purple-200">
              <span class="text-purple-800">Budget Meal</span>
              <span class="font-bold text-purple-900">CHF {livingCosts.dining.budget}</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-purple-200">
              <span class="text-purple-800">Mid-Range Restaurant</span>
              <span class="font-bold text-purple-900">CHF {livingCosts.dining.midRange}</span>
            </div>
            <div class="flex justify-between items-center py-2">
              <span class="text-purple-800">Fine Dining</span>
              <span class="font-bold text-purple-900">CHF {livingCosts.dining.highEnd}+</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Professional Relocators - 8pt Grid: 32px spacing -->
  {availableRelocators.length > 0 && (
    <section class="py-32 bg-gray-50">
      <div class="container">
        <div class="text-center mb-24">
          <h2 class="text-4xl md:text-5xl font-bold mb-8">
            Who Can Help You Move to <span class="gradient-text">{region.data.name}</span>?
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Professional relocation companies with proven expertise in {region.data.name}. These partners understand local requirements and can make your move seamless.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {availableRelocators.map((relocator) => (
            <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100">
              <div class="text-center mb-6">
                <div class="w-16 h-16 bg-gray-50 rounded-2xl flex items-center justify-center mx-auto mb-4 overflow-hidden">
                  <img 
                    src={relocator.logo} 
                    alt={`${relocator.name} logo`}
                    class="w-12 h-12 object-contain"
                  />
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">{relocator.name}</h3>
                <p class="text-gray-600 text-sm">{relocator.specialty}</p>
              </div>

              <p class="text-gray-600 text-sm mb-6 leading-relaxed text-center">
                {relocator.description}
              </p>

              <div class="flex items-center justify-center space-x-4 mb-6">
                <div class="flex space-x-1">
                  {[...Array(5)].map((_, i) => (
                    <svg class={`w-4 h-4 ${i < Math.floor(relocator.rating) ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
                <span class="text-sm font-medium text-gray-700">{relocator.rating} ({relocator.reviews} reviews)</span>
              </div>

              <div class="space-y-2 mb-8">
                <div class="text-xs font-semibold text-gray-700 mb-3 text-center">Services:</div>
                <div class="flex flex-wrap gap-2 justify-center">
                  {relocator.services.slice(0, 3).map((service) => (
                    <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-xs">
                      {service}
                    </span>
                  ))}
                </div>
              </div>

              <div class="flex space-x-2">
                <a href={`/companies/${relocator.id}`} class="flex-1 text-center py-3 bg-gradient-to-r from-primary-600 to-primary-700 text-white font-medium rounded-xl hover:shadow-lg transition-all duration-300 text-sm">
                  View Details
                </a>
                <button onclick="openModal('individual-lead-modal')" class="px-4 py-3 border-2 border-primary-200 text-primary-600 rounded-xl hover:bg-primary-50 transition-all duration-300">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Final CTA - 8pt Grid: 32px spacing -->
  <section class="py-32 bg-gradient-to-br from-primary-600 to-secondary-600 text-white">
    <div class="container">
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold mb-8">
          Ready to Make {region.data.name} Your New Home?
        </h2>
        <p class="text-xl mb-12 opacity-90">
          Join thousands of successful expats who chose {region.data.name} for their Swiss adventure. Get personalized guidance from local experts.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center mb-16">
          <button onclick="openModal('individual-lead-modal')" class="bg-white text-primary-600 font-bold px-10 py-5 rounded-xl hover:bg-gray-50 transition-colors text-lg">
            Start My {region.data.name} Journey
          </button>
          <a href={`/companies?region=${region.data.id}`} class="border-2 border-white text-white font-bold px-10 py-5 rounded-xl hover:bg-white/10 transition-colors text-lg">
            Find Local Experts
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div class="bg-white/10 rounded-2xl p-6">
            <div class="text-4xl font-bold mb-2">{relocationStats.expatsPercentage}%</div>
            <div class="text-sm opacity-75">International Community</div>
          </div>
          <div class="bg-white/10 rounded-2xl p-6">
            <div class="text-4xl font-bold mb-2">{relocationStats.satisfaction}/5</div>
            <div class="text-sm opacity-75">Expat Satisfaction Rating</div>
          </div>
          <div class="bg-white/10 rounded-2xl p-6">
            <div class="text-4xl font-bold mb-2">{relocationStats.avgMoveTime}</div>
            <div class="text-sm opacity-75">Average Setup Time</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>