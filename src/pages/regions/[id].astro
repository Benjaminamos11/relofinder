---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const regions = await getCollection('regions');
  return regions.map((region) => ({
    params: { id: region.data.id },
    props: { region },
  }));
}

const { region } = Astro.props;
const { Content } = await region.render();
---

<Layout title={`Living in ${region.data.name} | Complete Relocation Guide | ReloFinder.ch`}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-primary-50 via-white to-secondary-50 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src={region.data.heroImage} 
        alt={`${region.data.name} Switzerland - Beautiful city view`}
        class="w-full h-full object-cover opacity-20"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-white/80 to-white/60"></div>
    </div>

    <div class="container relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Left Content -->
        <div class="space-y-8">
          <!-- Breadcrumb -->
          <nav class="flex items-center space-x-2 text-sm text-gray-600">
            <a href="/" class="hover:text-primary-600 transition-colors">Home</a>
            <span>→</span>
            <a href="/regions" class="hover:text-primary-600 transition-colors">Regions</a>
            <span>→</span>
            <span class="text-gray-900">{region.data.name}</span>
          </nav>

          <!-- Region Badge -->
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-secondary-100 text-secondary-700 font-medium text-sm">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            {region.data.canton} Canton
          </div>

          <!-- Title & Description -->
          <div class="space-y-6">
            <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
              Living in <span class="gradient-text">{region.data.name}</span>
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed max-w-2xl">
              {region.data.description}
            </p>
          </div>

          <!-- Key Stats -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6 py-6">
            <div class="text-center">
              <div class="text-2xl font-bold text-primary-600">{region.data.population.toLocaleString()}</div>
              <div class="text-sm text-gray-600">Population</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-primary-600">{region.data.relocationStats.expatsPercentage}%</div>
              <div class="text-sm text-gray-600">Expats</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-primary-600">{region.data.relocationStats.satisfaction}</div>
              <div class="text-sm text-gray-600">Satisfaction</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-primary-600">{region.data.relocationStats.avgMoveTime}</div>
              <div class="text-sm text-gray-600">Move Time</div>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <button onclick="openModal('individual-lead-modal')" class="btn-primary px-8 py-4">
              Get Relocation Help
            </button>
            <a href="/companies" class="btn-outline px-8 py-4">
              Browse Local Providers
            </a>
          </div>
        </div>

        <!-- Right Side - Region Image -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-primary-400 to-secondary-400 rounded-3xl rotate-3 transform scale-105 opacity-20"></div>
          <div class="relative bg-white rounded-3xl shadow-2xl overflow-hidden">
            <img 
              src={region.data.image} 
              alt={`${region.data.name} city center and landmarks`}
              class="w-full h-96 lg:h-[500px] object-cover"
            />
            <!-- Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent flex items-end">
              <div class="p-8 text-white">
                <div class="flex items-center space-x-4 mb-4">
                  <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-lg font-semibold">{region.data.subtitle}</div>
                    <div class="text-sm opacity-90">Swiss Excellence</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Facts Section -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Key Facts -->
        <div>
          <h2 class="text-3xl font-bold mb-8">Essential Information</h2>
          <div class="space-y-6">
            {Object.entries(region.data.keyFacts).map(([key, value]) => (
              <div class="flex items-start space-x-4 p-4 bg-gray-50 rounded-xl">
                <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  {key === 'costOfLiving' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                    </svg>
                  )}
                  {key === 'avgRent' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                  )}
                  {key === 'taxRate' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                    </svg>
                  )}
                  {key === 'internetSpeed' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                  )}
                  {key === 'publicTransport' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
                    </svg>
                  )}
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 capitalize">
                    {key.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase())}
                  </h3>
                  <p class="text-gray-600">{value}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Highlights -->
        <div>
          <h2 class="text-3xl font-bold mb-8">Why Choose {region.data.name}?</h2>
          <div class="space-y-4">
            {region.data.highlights.map((highlight: string) => (
              <div class="flex items-start space-x-3">
                <div class="w-6 h-6 bg-emerald-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-gray-700 leading-relaxed">{highlight}</p>
              </div>
            ))}
          </div>

          <!-- Top Industries -->
          <div class="mt-8">
            <h3 class="text-lg font-bold mb-4">Top Industries</h3>
            <div class="flex flex-wrap gap-2">
              {region.data.relocationStats.topIndustries.map((industry: string) => (
                <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
                  {industry}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Districts Section -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Best <span class="gradient-text">Neighborhoods</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Discover the most popular districts for expatriates in {region.data.name}.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {region.data.districts.map((district: any) => (
          <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300">
            <div class="flex items-start justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900">{district.name}</h3>
              <span class="text-sm font-medium bg-primary-100 text-primary-700 px-3 py-1 rounded-full">
                {district.avgRent}
              </span>
            </div>
            
            <p class="text-gray-600 mb-6 leading-relaxed">
              {district.description}
            </p>
            
            <div class="flex flex-wrap gap-2">
              {district.characteristics.map((char: string) => (
                <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded text-sm">
                  {char}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Living Costs Section -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Cost of <span class="gradient-text">Living</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Plan your budget with detailed cost information for living in {region.data.name}.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Housing Costs -->
        <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-6">
          <h3 class="text-lg font-bold mb-4 text-primary-900">Housing</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-700">1-Bedroom Apt</span>
              <span class="font-semibold">CHF {region.data.livingCosts.oneBedroomApt.min}-{region.data.livingCosts.oneBedroomApt.max}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">3-Bedroom Apt</span>
              <span class="font-semibold">CHF {region.data.livingCosts.threeBedroomApt.min}-{region.data.livingCosts.threeBedroomApt.max}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">Utilities</span>
              <span class="font-semibold">CHF {region.data.livingCosts.utilities.min}-{region.data.livingCosts.utilities.max}</span>
            </div>
          </div>
        </div>

        <!-- Daily Expenses -->
        <div class="bg-gradient-to-br from-secondary-50 to-secondary-100 rounded-2xl p-6">
          <h3 class="text-lg font-bold mb-4 text-secondary-900">Daily Expenses</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-700">Transportation</span>
              <span class="font-semibold">CHF {region.data.livingCosts.transportation}/month</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">Groceries</span>
              <span class="font-semibold">CHF {region.data.livingCosts.groceries}/month</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">Internet/Phone</span>
              <span class="font-semibold">CHF 60-120/month</span>
            </div>
          </div>
        </div>

        <!-- Dining Costs -->
        <div class="bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-2xl p-6">
          <h3 class="text-lg font-bold mb-4 text-emerald-900">Dining Out</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-700">Budget Meal</span>
              <span class="font-semibold">CHF {region.data.livingCosts.dining.budget}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">Mid-Range</span>
              <span class="font-semibold">CHF {region.data.livingCosts.dining.midRange}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">Fine Dining</span>
              <span class="font-semibold">CHF {region.data.livingCosts.dining.highEnd}+</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto prose prose-lg prose-primary">
        <Content />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-primary-600 to-secondary-600 text-white">
    <div class="container">
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready to Move to {region.data.name}?
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Get personalized guidance from local experts who understand the unique aspects of relocating to {region.data.name}.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <button onclick="openModal('individual-lead-modal')" class="btn-white px-8 py-4">
            Get Relocation Help
          </button>
          <a href={`/companies?region=${region.data.id}`} class="btn-outline-white px-8 py-4">
            Find Local Providers
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-3xl font-bold mb-2">{region.data.relocationStats.expatsPercentage}%</div>
            <div class="text-sm opacity-75">International Residents</div>
          </div>
          <div>
            <div class="text-3xl font-bold mb-2">{region.data.relocationStats.satisfaction}/5</div>
            <div class="text-sm opacity-75">Expat Satisfaction</div>
          </div>
          <div>
            <div class="text-3xl font-bold mb-2">{region.data.relocationStats.avgMoveTime}</div>
            <div class="text-sm opacity-75">Average Setup Time</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>