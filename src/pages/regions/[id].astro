---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const regions = await getCollection('regions');
  return regions.map((region) => ({
    params: { id: region.data.id || region.slug },
    props: { region },
  }));
}

const { region } = Astro.props;
const { Content } = await region.render();

// Regional images mapping (same as main page)
const regionalImages = {
  'zurich': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-whimsical-slightly-quirky-photograph-d_zq8vecXuSUm5G0iW2zVS2A_ahKrzbyPSHujmZTV4weezQ_fefkl9.webp',
  'geneva': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_jygtMk7MRVCGIR4b-pXn1w_u_7qRvYXQmqaQVXTr4FhIQ_exkzuu.webp',
  'basel': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_byvGP0Q4RKyeAN-ygL2jbg_aTPr-BU2TWSrb4xXReYWMw_tw5r7l.webp',
  'bern': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-vibrant-slightly-whimsical-photograph-_j_Bc2kuLQfWixPiozYlkZg_3GfAV6UKRZKiLAd7QOavuA_mkvcga.webp',
  'lausanne': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_s2o30GAgRB2T9AZDpXe4_A_RED4Ygx9Rw2E2XeYdgDzog_jyhysn.webp',
  'zug': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054307/a-whimsical-slightly-quirky-photograph-c_ESZqUcnqSiCNpGzcV89dBw_o-YAUo9-RbC7oy5d4C2v2Q_ehpyba.webp'
};

// Regional data with safety checks
const relocationStats = region.data.relocationStats || {
  expatsPercentage: 20,
  avgMoveTime: "4-6 weeks", 
  satisfaction: 4.0,
  topIndustries: ["Finance", "Technology", "Healthcare"]
};

const keyFacts = region.data.keyFacts || {
  costOfLiving: "CHF 3,000-5,000/month",
  avgRent: "CHF 1,500-3,000/month",
  taxRate: "15-25%", 
  internetSpeed: "100+ Mbps",
  publicTransport: "Excellent"
};

const livingCosts = region.data.livingCosts || {
  oneBedroomApt: { min: 1200, max: 2500 },
  threeBedroomApt: { min: 2500, max: 4500 },
  utilities: { min: 150, max: 250 },
  transportation: 85,
  groceries: 500,
  dining: { budget: 20, midRange: 50, highEnd: 100 }
};

const highlights = region.data.highlights || [
  "High quality of life and excellent infrastructure",
  "Strong international business community", 
  "World-class healthcare and education systems",
  "Beautiful natural surroundings and outdoor activities"
];

const districts = region.data.districts || [];
const population = typeof region.data.population === 'string' ? region.data.population : region.data.population?.toLocaleString() || 'N/A';

// Get hero image (use main page image if available, fallback to region data)
const currentRegionId = region.data.id || region.slug;
const regionKey = currentRegionId.toLowerCase();
const heroImage = (regionalImages as any)[regionKey] || region.data.image;

// Regional relocators - companies that serve this region
const regionalRelocators = [
  {
    name: 'PrimeRelocation',
    id: 'prime-relocation',
    specialty: 'Full-Service Relocation',
    description: 'Your trusted partner for seamless relocation to Switzerland.',
    logo: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748055897/logoprimesmal_rb4hxo.webp',
    rating: 4.5,
    reviews: 312,
    services: ['Home Search', 'Immigration', 'Orientation', 'School Search'],
    regions: ['zurich', 'geneva', 'basel', 'zug', 'bern']
  },
  {
    name: 'Auris Relocation',
    id: 'auris-relocation', 
    specialty: 'Corporate Global Mobility',
    description: 'Comprehensive advisory and relocation services for companies and individuals.',
    logo: 'https://www.aurisrelocation.com/cstyle/6680750/images/logo.svg',
    rating: 4.8,
    reviews: 124,
    services: ['Immigration & Permits', 'Home Search', 'Cross-Cultural Training'],
    regions: ['zurich', 'geneva', 'basel', 'bern', 'lausanne']
  },
  {
    name: 'Anchor Relocation',
    id: 'anchor-relocation',
    specialty: 'Family & Corporate Relocations', 
    description: 'Professional relocation services with 20+ years of experience.',
    logo: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748056028/anchor_logo_s1jbo3.webp',
    rating: 4.2,
    reviews: 87,
    services: ['Home Search', 'Settling-in', 'Immigration', 'Education'],
    regions: ['zurich', 'zug', 'lucerne']
  }
];

// Filter relocators that serve this region
const availableRelocators = regionalRelocators.filter(relocator => 
  relocator.regions.includes(currentRegionId.toLowerCase())
);

// Regional services
const regionalServices = [
  {
    id: 'home-search',
    name: `Home Search in ${region.data.name}`,
    description: `Find your perfect home in ${region.data.name} with expert local knowledge of neighborhoods, pricing, and availability.`,
    icon: 'home',
    features: ['Property viewings', 'Lease negotiations', 'Market insights', 'Documentation help']
  },
  {
    id: 'immigration',
    name: `Immigration Services ${region.data.name}`,
    description: `Navigate Swiss immigration requirements with ${region.data.name}-specific expertise and local authority knowledge.`,
    icon: 'document',
    features: ['Visa applications', 'Work permits', 'Residence permits', 'Family reunification']
  },
  {
    id: 'banking',
    name: `Banking Setup ${region.data.name}`,
    description: `Open Swiss bank accounts and establish financial services with local ${region.data.name} banking relationships.`,
    icon: 'credit-card',
    features: ['Account opening', 'Mortgage advice', 'Investment options', 'Tax optimization']
  },
  {
    id: 'education',
    name: `Education in ${region.data.name}`,
    description: `Find the best schools and educational opportunities for your family in ${region.data.name}.`,
    icon: 'academic-cap',
    features: ['School placement', 'International schools', 'University guidance', 'Language courses']
  }
];

// Regional guides and resources
const relatedGuides = [
  {
    title: `Complete Guide to Moving to ${region.data.name}`,
    excerpt: `Everything you need to know about relocating to ${region.data.name}, from paperwork to lifestyle.`,
    link: '/blog/swiss-visa-guide',
    category: 'Relocation Guide'
  },
  {
    title: `Cost of Living in ${region.data.name}`,
    excerpt: `Detailed breakdown of living expenses and budget planning for ${region.data.name}.`,
    link: '/blog/swiss-visa-guide', 
    category: 'Financial Planning'
  },
  {
    title: `Best Neighborhoods in ${region.data.name}`,
    excerpt: `Discover the most popular areas for expats and families in ${region.data.name}.`,
    link: '/blog/swiss-visa-guide',
    category: 'Housing Guide'
  }
];

// SEO metadata
const title = `Relocation to ${region.data.name}: Complete Expat Guide | ReloFinder.ch`;
const description = `Comprehensive relocation guide for moving to ${region.data.name}, Switzerland. Find homes, relocators, costs, and expert advice for your Swiss move.`;
---

<Layout title={title} description={description}>
  <!-- Hero Section - 8pt Grid: 64px height elements -->
  <section class="relative min-h-screen flex items-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src={heroImage} 
        alt={`Relocation to ${region.data.name} Switzerland - Beautiful city overview`}
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
    </div>

    <!-- Content - 8pt Grid: 32px padding -->
    <div class="container relative z-10 py-32">
      <div class="max-w-4xl">
        <!-- Breadcrumb - 8pt Grid: 16px spacing -->
        <nav class="flex items-center space-x-4 text-sm text-white/80 mb-16">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span>→</span>
          <a href="/regions" class="hover:text-white transition-colors">Regions</a>
          <span>→</span>
          <span class="text-white">{region.data.name}</span>
        </nav>

        <!-- Badge - 8pt Grid: 16px padding -->
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/20 backdrop-blur-sm border border-white/30 text-white font-medium text-sm mb-16">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
          </svg>
          {region.data.canton} Canton • Switzerland
        </div>

        <!-- Main Headline - 8pt Grid: 32px spacing -->
        <div class="space-y-8 mb-32">
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold leading-tight text-white">
            Relocation to <span class="bg-gradient-to-r from-primary-400 to-secondary-400 bg-clip-text text-transparent">{region.data.name}</span>
          </h1>
          <p class="text-2xl text-white/90 leading-relaxed max-w-3xl">
            Your complete guide to moving to {region.data.name}. Everything you need to know for a successful Swiss relocation.
          </p>
        </div>

        <!-- Key Stats - 8pt Grid: 16px padding in cards -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
            <div class="text-3xl font-bold text-white mb-2">{population}</div>
            <div class="text-white/80">Population</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
            <div class="text-3xl font-bold text-white mb-2">{relocationStats.expatsPercentage}%</div>
            <div class="text-white/80">International</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
            <div class="text-3xl font-bold text-white mb-2">{relocationStats.satisfaction}/5</div>
            <div class="text-white/80">Satisfaction</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
            <div class="text-3xl font-bold text-white mb-2">{relocationStats.avgMoveTime}</div>
            <div class="text-white/80">Setup Time</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce text-white">
      <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-white/50 rounded-full mt-2 animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- Welcome Banner -->
  <section class="py-16 bg-gradient-to-r from-blue-600 to-blue-700 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">Welcome to {region.data.name}</h2>
        <p class="text-xl text-blue-100 leading-relaxed">
          {region.data.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Why Choose This Region - Bento Grid Style -->
  <section class="py-32 bg-white">
    <div class="container">
      <div class="text-center mb-24">
        <h2 class="text-4xl md:text-5xl font-bold mb-8">
          Why Choose <span class="gradient-text">{region.data.name}</span>?
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Discover what makes {region.data.name} the perfect destination for your Swiss relocation
        </p>
      </div>

      <!-- Bento Grid Layout -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
        <!-- Economic Powerhouse -->
        <div class="lg:col-span-2 lg:row-span-2 bg-gradient-to-br from-blue-50 to-blue-100 rounded-3xl p-8 border border-blue-200">
          <div class="flex items-center mb-6">
            <div class="w-16 h-16 bg-blue-500 rounded-2xl flex items-center justify-center mr-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-blue-900">Economic Powerhouse</h3>
          </div>
          <p class="text-blue-800 mb-6">
            {region.data.name} is a global financial center, home to major banks and international corporations, offering exceptional career opportunities.
          </p>
          <div class="space-y-3">
            {relocationStats.topIndustries.map((industry) => (
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <span class="text-blue-800 font-medium">{industry}</span>
              </div>
            ))}
          </div>
          <div class="mt-6 pt-6 border-t border-blue-200">
            <div class="text-sm text-blue-700">Average Salary Range</div>
            <div class="text-2xl font-bold text-blue-900">CHF 80,000-150,000+</div>
          </div>
        </div>

        <!-- Quality of Life -->
        <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-6 border border-green-200">
          <div class="w-12 h-12 bg-green-500 rounded-2xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-green-900 mb-3">Quality of Life</h3>
          <p class="text-green-800 text-sm">World-class infrastructure, pristine environment, and excellent healthcare system.</p>
        </div>

        <!-- International Community -->
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-2xl p-6 border border-purple-200">
          <div class="w-12 h-12 bg-purple-500 rounded-2xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-purple-900 mb-3">International Hub</h3>
          <p class="text-purple-800 text-sm">Over {relocationStats.expatsPercentage}% international residents. English widely spoken in business.</p>
        </div>

        <!-- Safety & Infrastructure -->
        <div class="bg-gradient-to-br from-amber-50 to-amber-100 rounded-2xl p-6 border border-amber-200">
          <div class="w-12 h-12 bg-amber-500 rounded-2xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-amber-900 mb-3">Safety First</h3>
          <p class="text-amber-800 text-sm">One of the world's safest cities with excellent public transportation and infrastructure.</p>
        </div>

        <!-- Natural Beauty -->
        <div class="bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-2xl p-6 border border-emerald-200">
          <div class="w-12 h-12 bg-emerald-500 rounded-2xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-emerald-900 mb-3">Natural Beauty</h3>
          <p class="text-emerald-800 text-sm">Stunning lakes, easy access to Alps, and beautiful outdoor recreation opportunities.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Living Costs - Visual Cards -->
  <section class="py-32 bg-gray-50">
    <div class="container">
      <div class="text-center mb-24">
        <h2 class="text-4xl md:text-5xl font-bold mb-8">
          Cost of Living in <span class="gradient-text">{region.data.name}</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Plan your budget with our comprehensive cost breakdown for living comfortably in {region.data.name}
        </p>
      </div>

      <!-- Budget Overview Cards -->
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Single Professional</h3>
            <div class="text-3xl font-bold text-blue-600">CHF 3,000-4,500</div>
            <div class="text-gray-500">per month</div>
          </div>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Couple</h3>
            <div class="text-3xl font-bold text-green-600">CHF 4,500-6,500</div>
            <div class="text-gray-500">per month</div>
          </div>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Family of 4</h3>
            <div class="text-3xl font-bold text-purple-600">CHF 7,000-10,000</div>
            <div class="text-gray-500">per month</div>
          </div>
        </div>
      </div>

      <!-- Detailed Cost Breakdown -->
      <div class="bg-white rounded-3xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">Detailed Cost Breakdown</h3>
          
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Housing -->
            <div class="space-y-6">
              <div class="border-b border-gray-200 pb-4">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                  <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                  </div>
                  Housing (25-35% of income)
                </h4>
                <div class="space-y-3">
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">1-Bedroom Apartment</span>
                    <span class="font-semibold">CHF {livingCosts.oneBedroomApt.min}-{livingCosts.oneBedroomApt.max}</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">3-Bedroom Apartment</span>
                    <span class="font-semibold">CHF {livingCosts.threeBedroomApt.min}-{livingCosts.threeBedroomApt.max}</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Monthly Utilities</span>
                    <span class="font-semibold">CHF {livingCosts.utilities.min}-{livingCosts.utilities.max}</span>
                  </div>
                </div>
              </div>

              <!-- Daily Expenses -->
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                  <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                    </svg>
                  </div>
                  Daily Expenses
                </h4>
                <div class="space-y-3">
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Public Transport Pass</span>
                    <span class="font-semibold">CHF {livingCosts.transportation}/month</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Groceries</span>
                    <span class="font-semibold">CHF {livingCosts.groceries}/month</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Internet & Phone</span>
                    <span class="font-semibold">CHF 60-120/month</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Healthcare & Dining -->
            <div class="space-y-6">
              <div class="border-b border-gray-200 pb-4">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                  <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                  </div>
                  Healthcare & Insurance
                </h4>
                <div class="space-y-3">
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Basic Health Insurance</span>
                    <span class="font-semibold">CHF 300-500/month</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Dental Insurance</span>
                    <span class="font-semibold">CHF 50-150/month</span>
                  </div>
                </div>
              </div>

              <!-- Dining -->
              <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                  <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                  </div>
                  Dining & Entertainment
                </h4>
                <div class="space-y-3">
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Budget Meal</span>
                    <span class="font-semibold">CHF {livingCosts.dining.budget}</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Mid-Range Restaurant</span>
                    <span class="font-semibold">CHF {livingCosts.dining.midRange}</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Fine Dining</span>
                    <span class="font-semibold">CHF {livingCosts.dining.highEnd}+</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Entertainment</span>
                    <span class="font-semibold">CHF 300-800/month</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Districts & Neighborhoods -->
  {districts.length > 0 && (
    <section class="py-32 bg-white">
      <div class="container">
        <div class="text-center mb-24">
          <h2 class="text-4xl md:text-5xl font-bold mb-8">
            Best <span class="gradient-text">Neighborhoods</span> in {region.data.name}
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Discover the most popular districts and neighborhoods for expatriates in {region.data.name}
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {districts.map((district, index) => (
            <div class={`bg-gradient-to-br ${index % 3 === 0 ? 'from-blue-50 to-blue-100 border-blue-200' : index % 3 === 1 ? 'from-purple-50 to-purple-100 border-purple-200' : 'from-green-50 to-green-100 border-green-200'} rounded-2xl p-8 border`}>
              <div class="flex items-start justify-between mb-6">
                <h3 class="text-2xl font-bold text-gray-900">{district.name}</h3>
                <span class={`text-sm font-medium px-3 py-1 rounded-full ${index % 3 === 0 ? 'bg-blue-200 text-blue-800' : index % 3 === 1 ? 'bg-purple-200 text-purple-800' : 'bg-green-200 text-green-800'}`}>
                  {district.avgRent}
                </span>
              </div>
              
              <p class="text-gray-700 mb-6 leading-relaxed">
                {district.description}
              </p>
              
              <div class="flex flex-wrap gap-2">
                {(district.characteristics || []).map((char) => (
                  <span class={`px-3 py-1 rounded-full text-sm ${index % 3 === 0 ? 'bg-blue-100 text-blue-700' : index % 3 === 1 ? 'bg-purple-100 text-purple-700' : 'bg-green-100 text-green-700'}`}>
                    {char}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Getting Started Section -->
  <section class="py-32 bg-gray-50">
    <div class="container">
      <div class="text-center mb-24">
        <h2 class="text-4xl md:text-5xl font-bold mb-8">
          Getting Started in <span class="gradient-text">{region.data.name}</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Essential first steps for your successful relocation to {region.data.name}
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Step 1 -->
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-white">1</span>
            </div>
            <h3 class="text-lg font-bold text-gray-900">Register with Authorities</h3>
          </div>
          <p class="text-gray-600 text-sm text-center mb-4">
            Register within 14 days of arrival at the local residents' registration office
          </p>
          <button onclick="openModal('individual-lead-modal')" class="w-full py-2 bg-blue-100 text-blue-700 font-medium rounded-lg hover:bg-blue-200 transition-colors">
            Get Help
          </button>
        </div>

        <!-- Step 2 -->
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-white">2</span>
            </div>
            <h3 class="text-lg font-bold text-gray-900">Open Bank Account</h3>
          </div>
          <p class="text-gray-600 text-sm text-center mb-4">
            Essential for most rental applications and daily transactions in Switzerland
          </p>
          <button onclick="openModal('individual-lead-modal')" class="w-full py-2 bg-green-100 text-green-700 font-medium rounded-lg hover:bg-green-200 transition-colors">
            Get Help
          </button>
        </div>

        <!-- Step 3 -->
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-white">3</span>
            </div>
            <h3 class="text-lg font-bold text-gray-900">Health Insurance</h3>
          </div>
          <p class="text-gray-600 text-sm text-center mb-4">
            Mandatory coverage must be obtained within 3 months of arrival
          </p>
          <button onclick="openModal('individual-lead-modal')" class="w-full py-2 bg-purple-100 text-purple-700 font-medium rounded-lg hover:bg-purple-200 transition-colors">
            Get Help
          </button>
        </div>

        <!-- Step 4 -->
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-all duration-300">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-amber-500 to-amber-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-white">4</span>
            </div>
            <h3 class="text-lg font-bold text-gray-900">Residence Permit</h3>
          </div>
          <p class="text-gray-600 text-sm text-center mb-4">
            Apply if staying longer than 90 days, requirements vary by nationality
          </p>
          <button onclick="openModal('individual-lead-modal')" class="w-full py-2 bg-amber-100 text-amber-700 font-medium rounded-lg hover:bg-amber-200 transition-colors">
            Get Help
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Professional Relocators -->
  {availableRelocators.length > 0 && (
    <section class="py-32 bg-white">
      <div class="container">
        <div class="text-center mb-24">
          <h2 class="text-4xl md:text-5xl font-bold mb-8">
            Professional Relocators in <span class="gradient-text">{region.data.name}</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Trusted relocation companies with proven expertise in {region.data.name}
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {availableRelocators.map((relocator, index) => (
            <div class={`bg-gradient-to-br ${index % 3 === 0 ? 'from-blue-50 to-blue-100 border-blue-200' : index % 3 === 1 ? 'from-purple-50 to-purple-100 border-purple-200' : 'from-green-50 to-green-100 border-green-200'} rounded-2xl p-8 border hover:shadow-lg transition-all duration-300`}>
              <div class="text-center mb-6">
                <div class="w-16 h-16 bg-white rounded-2xl flex items-center justify-center mx-auto mb-4 overflow-hidden shadow-sm">
                  <img 
                    src={relocator.logo} 
                    alt={`${relocator.name} logo`}
                    class="w-12 h-12 object-contain"
                  />
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">{relocator.name}</h3>
                <p class="text-gray-600 text-sm">{relocator.specialty}</p>
              </div>

              <p class="text-gray-700 text-sm mb-6 leading-relaxed text-center">
                {relocator.description}
              </p>

              <div class="flex items-center justify-center space-x-2 mb-6">
                <div class="flex space-x-1">
                  {[...Array(5)].map((_, i) => (
                    <svg class={`w-4 h-4 ${i < Math.floor(relocator.rating) ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
                <span class="text-sm font-medium text-gray-700">{relocator.rating} ({relocator.reviews})</span>
              </div>

              <div class="space-y-2 mb-8">
                <div class="text-xs font-semibold text-gray-700 mb-3 text-center">Services:</div>
                <div class="flex flex-wrap gap-2 justify-center">
                  {relocator.services.slice(0, 3).map((service) => (
                    <span class={`px-3 py-1 rounded-full text-xs ${index % 3 === 0 ? 'bg-blue-200 text-blue-800' : index % 3 === 1 ? 'bg-purple-200 text-purple-800' : 'bg-green-200 text-green-800'}`}>
                      {service}
                    </span>
                  ))}
                </div>
              </div>

              <div class="flex space-x-2">
                <a href={`/companies/${relocator.id}`} class={`flex-1 text-center py-3 font-medium rounded-xl hover:shadow-lg transition-all duration-300 text-sm ${index % 3 === 0 ? 'bg-blue-600 text-white hover:bg-blue-700' : index % 3 === 1 ? 'bg-purple-600 text-white hover:bg-purple-700' : 'bg-green-600 text-white hover:bg-green-700'}`}>
                  View Details
                </a>
                <button onclick="openModal('individual-lead-modal')" class={`px-4 py-3 border-2 rounded-xl transition-all duration-300 ${index % 3 === 0 ? 'border-blue-300 text-blue-700 hover:bg-blue-50' : index % 3 === 1 ? 'border-purple-300 text-purple-700 hover:bg-purple-50' : 'border-green-300 text-green-700 hover:bg-green-50'}`}>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CMS Content Section - Beautifully Designed -->
  <section class="py-32 bg-gradient-to-br from-gray-50 via-white to-blue-50/30">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-3xl shadow-lg border border-gray-100 overflow-hidden">
          <div class="p-12">
            <div class="text-center mb-12">
              <h2 class="text-3xl md:text-4xl font-bold mb-6">
                Complete Guide to <span class="gradient-text">{region.data.name}</span>
              </h2>
              <p class="text-xl text-gray-600">
                In-depth information about living, working, and thriving in {region.data.name}
              </p>
            </div>
            
            <div class="prose prose-lg prose-gray max-w-none">
              <Content />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-32 bg-gradient-to-br from-primary-600 to-secondary-600 text-white">
    <div class="container">
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold mb-8">
          Ready to Make {region.data.name} Your New Home?
        </h2>
        <p class="text-xl mb-12 opacity-90">
          Join thousands of successful expats who chose {region.data.name} for their Swiss adventure. Get personalized guidance from local experts.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center mb-16">
          <button onclick="openModal('individual-lead-modal')" class="bg-white text-primary-600 font-bold px-10 py-5 rounded-xl hover:bg-gray-50 transition-colors text-lg">
            Start My {region.data.name} Journey
          </button>
          <a href={`/companies?region=${region.data.id}`} class="border-2 border-white text-white font-bold px-10 py-5 rounded-xl hover:bg-white/10 transition-colors text-lg">
            Find Local Experts
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div class="bg-white/10 rounded-2xl p-6">
            <div class="text-4xl font-bold mb-2">{relocationStats.expatsPercentage}%</div>
            <div class="text-sm opacity-75">International Community</div>
          </div>
          <div class="bg-white/10 rounded-2xl p-6">
            <div class="text-4xl font-bold mb-2">{relocationStats.satisfaction}/5</div>
            <div class="text-sm opacity-75">Expat Satisfaction Rating</div>
          </div>
          <div class="bg-white/10 rounded-2xl p-6">
            <div class="text-4xl font-bold mb-2">{relocationStats.avgMoveTime}</div>
            <div class="text-sm opacity-75">Average Setup Time</div>
          </div>
        </div>
      </div>
    </div>
  </section>
