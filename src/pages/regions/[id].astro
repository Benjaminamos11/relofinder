---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const regions = await getCollection('regions');
  return regions.map((region) => ({
    params: { id: region.data.id || region.slug },
    props: { region },
  }));
}

const { region } = Astro.props;
const { Content } = await region.render();

// Regional data with safety checks
const relocationStats = region.data.relocationStats || {
  expatsPercentage: 20,
  avgMoveTime: "4-6 weeks", 
  satisfaction: 4.0,
  topIndustries: ["Finance", "Technology", "Healthcare"]
};

const keyFacts = region.data.keyFacts || {
  costOfLiving: "CHF 3,000-5,000/month",
  avgRent: "CHF 1,500-3,000/month",
  taxRate: "15-25%", 
  internetSpeed: "100+ Mbps",
  publicTransport: "Excellent"
};

const livingCosts = region.data.livingCosts || {
  oneBedroomApt: { min: 1200, max: 2500 },
  threeBedroomApt: { min: 2500, max: 4500 },
  utilities: { min: 150, max: 250 },
  transportation: 85,
  groceries: 500,
  dining: { budget: 20, midRange: 50, highEnd: 100 }
};

const highlights = region.data.highlights || [
  "High quality of life and excellent infrastructure",
  "Strong international business community", 
  "World-class healthcare and education systems",
  "Beautiful natural surroundings and outdoor activities"
];

const districts = region.data.districts || [];
const population = typeof region.data.population === 'string' ? region.data.population : region.data.population?.toLocaleString() || 'N/A';

// Regional relocators - companies that serve this region
const regionalRelocators = [
  {
    name: 'PrimeRelocation',
    id: 'prime-relocation',
    specialty: 'Full-Service Relocation',
    description: 'Your trusted partner for seamless relocation to Switzerland.',
    logo: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748055897/logoprimesmal_rb4hxo.webp',
    rating: 4.5,
    reviews: 312,
    services: ['Home Search', 'Immigration', 'Orientation', 'School Search'],
    regions: ['zurich', 'geneva', 'basel', 'zug', 'bern']
  },
  {
    name: 'Auris Relocation',
    id: 'auris-relocation', 
    specialty: 'Corporate Global Mobility',
    description: 'Comprehensive advisory and relocation services for companies and individuals.',
    logo: 'https://www.aurisrelocation.com/cstyle/6680750/images/logo.svg',
    rating: 4.8,
    reviews: 124,
    services: ['Immigration & Permits', 'Home Search', 'Cross-Cultural Training'],
    regions: ['zurich', 'geneva', 'basel', 'bern', 'lausanne']
  },
  {
    name: 'Anchor Relocation',
    id: 'anchor-relocation',
    specialty: 'Family & Corporate Relocations', 
    description: 'Professional relocation services with 20+ years of experience.',
    logo: 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748056028/anchor_logo_s1jbo3.webp',
    rating: 4.2,
    reviews: 87,
    services: ['Home Search', 'Settling-in', 'Immigration', 'Education'],
    regions: ['zurich', 'zug', 'lucerne']
  }
];

// Filter relocators that serve this region
const currentRegionId = region.data.id || region.slug;
const availableRelocators = regionalRelocators.filter(relocator => 
  relocator.regions.includes(currentRegionId.toLowerCase())
);

// Regional services
const regionalServices = [
  {
    id: 'home-search',
    name: `Home Search in ${region.data.name}`,
    description: `Find your perfect home in ${region.data.name} with expert local knowledge of neighborhoods, pricing, and availability.`,
    icon: 'home',
    features: ['Property viewings', 'Lease negotiations', 'Market insights', 'Documentation help']
  },
  {
    id: 'immigration',
    name: `Immigration Services ${region.data.name}`,
    description: `Navigate Swiss immigration requirements with ${region.data.name}-specific expertise and local authority knowledge.`,
    icon: 'document',
    features: ['Visa applications', 'Work permits', 'Residence permits', 'Family reunification']
  },
  {
    id: 'banking',
    name: `Banking Setup ${region.data.name}`,
    description: `Open Swiss bank accounts and establish financial services with local ${region.data.name} banking relationships.`,
    icon: 'credit-card',
    features: ['Account opening', 'Mortgage advice', 'Investment options', 'Tax optimization']
  },
  {
    id: 'education',
    name: `Education in ${region.data.name}`,
    description: `Find the best schools and educational opportunities for your family in ${region.data.name}.`,
    icon: 'academic-cap',
    features: ['School placement', 'International schools', 'University guidance', 'Language courses']
  }
];

// Regional guides and resources
const relatedGuides = [
  {
    title: `Complete Guide to Moving to ${region.data.name}`,
    excerpt: `Everything you need to know about relocating to ${region.data.name}, from paperwork to lifestyle.`,
    link: '/blog/swiss-visa-guide',
    category: 'Relocation Guide'
  },
  {
    title: `Cost of Living in ${region.data.name}`,
    excerpt: `Detailed breakdown of living expenses and budget planning for ${region.data.name}.`,
    link: '/blog/swiss-visa-guide', 
    category: 'Financial Planning'
  },
  {
    title: `Best Neighborhoods in ${region.data.name}`,
    excerpt: `Discover the most popular areas for expats and families in ${region.data.name}.`,
    link: '/blog/swiss-visa-guide',
    category: 'Housing Guide'
  }
];

// SEO metadata
const title = `Relocation to ${region.data.name}: Complete Expat Guide | ReloFinder.ch`;
const description = `Comprehensive relocation guide for moving to ${region.data.name}, Switzerland. Find homes, relocators, costs, and expert advice for your Swiss move.`;
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-gray-50 via-white to-blue-50">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src={region.data.image} 
        alt={`Relocation to ${region.data.name} Switzerland - Beautiful city overview`}
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
    </div>

    <!-- Content -->
    <div class="container relative z-10 py-20">
      <div class="grid lg:grid-cols-2 gap-16 items-center text-white">
        <!-- Left Content -->
        <div class="space-y-8">
          <!-- Breadcrumb -->
          <nav class="flex items-center space-x-2 text-sm text-white/80">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <span>→</span>
            <a href="/regions" class="hover:text-white transition-colors">Regions</a>
            <span>→</span>
            <span class="text-white">{region.data.name}</span>
          </nav>

          <!-- Badge -->
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/20 backdrop-blur-sm border border-white/30 text-white font-medium text-sm">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            {region.data.canton} Canton • Switzerland
          </div>

          <!-- Main Headline -->
          <div class="space-y-6">
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight">
              Relocation to <span class="bg-gradient-to-r from-primary-400 to-secondary-400 bg-clip-text text-transparent">{region.data.name}</span>
            </h1>
            <p class="text-xl lg:text-2xl text-white/90 leading-relaxed max-w-2xl">
              Your complete guide to moving to {region.data.name}. Discover why this Swiss location is perfect for expats and how to make your relocation seamless.
            </p>
          </div>

          <!-- Key Stats -->
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 py-6">
            <div class="text-center bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <div class="text-2xl font-bold text-white">{population}</div>
              <div class="text-sm text-white/80">Population</div>
            </div>
            <div class="text-center bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <div class="text-2xl font-bold text-white">{relocationStats.expatsPercentage}%</div>
              <div class="text-sm text-white/80">International</div>
            </div>
            <div class="text-center bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <div class="text-2xl font-bold text-white">{relocationStats.satisfaction}/5</div>
              <div class="text-sm text-white/80">Satisfaction</div>
            </div>
            <div class="text-center bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <div class="text-2xl font-bold text-white">{relocationStats.avgMoveTime}</div>
              <div class="text-sm text-white/80">Setup Time</div>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <button onclick="openModal('individual-lead-modal')" class="group relative inline-flex items-center justify-center px-8 py-4 font-semibold text-black bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
              Get Relocation Help in {region.data.name}
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </button>
            <a href="#services" class="group inline-flex items-center justify-center px-8 py-4 font-semibold text-white bg-white/10 backdrop-blur-sm border-2 border-white/30 rounded-xl hover:bg-white/20 transition-all duration-300">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              View Services
            </a>
          </div>
        </div>

        <!-- Right Side - Stats Card -->
        <div class="lg:ml-12">
          <div class="bg-white/10 backdrop-blur-md rounded-3xl p-8 border border-white/20 shadow-2xl">
            <h3 class="text-2xl font-bold text-white mb-6">Why Choose {region.data.name}?</h3>
            <div class="space-y-4">
              {highlights.slice(0, 4).map((highlight) => (
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-green-400 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-4 h-4 text-green-900" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <p class="text-white/90 leading-relaxed">{highlight}</p>
                </div>
              ))}
            </div>

            <div class="mt-8 pt-6 border-t border-white/20">
              <div class="flex items-center justify-between">
                <span class="text-white/80">Top Industries:</span>
                <div class="flex flex-wrap gap-2">
                  {relocationStats.topIndustries.slice(0, 2).map((industry) => (
                    <span class="px-3 py-1 bg-white/20 text-white text-sm rounded-full">
                      {industry}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce text-white">
      <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-white/50 rounded-full mt-2 animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- City Introduction Section -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Welcome to <span class="gradient-text">{region.data.name}</span>
        </h2>
        <div class="prose prose-lg prose-gray max-w-none">
          <p class="text-xl text-gray-600 leading-relaxed mb-8">
            {region.data.description}
          </p>
          <Content />
        </div>
      </div>
    </div>
  </section>

  <!-- Regional Services Section -->
  <section id="services" class="py-20 bg-gray-50">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Relocation Services in <span class="gradient-text">{region.data.name}</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Professional relocation services tailored specifically for moving to {region.data.name}. Our local experts understand the unique requirements of this region.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {regionalServices.map((service) => (
          <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300 group">
            <div class="flex items-start space-x-4 mb-6">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-xl flex items-center justify-center flex-shrink-0">
                {service.icon === 'home' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                  </svg>
                )}
                {service.icon === 'document' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                )}
                {service.icon === 'credit-card' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                  </svg>
                )}
                {service.icon === 'academic-cap' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                  </svg>
                )}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
                  {service.name}
                </h3>
                <p class="text-gray-600 leading-relaxed">
                  {service.description}
                </p>
              </div>
            </div>

            <div class="space-y-3 mb-6">
              {service.features.map((feature) => (
                <div class="flex items-center space-x-3">
                  <div class="w-5 h-5 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-3 h-3 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <span class="text-gray-700">{feature}</span>
                </div>
              ))}
            </div>

            <button onclick="openModal('individual-lead-modal')" class="w-full py-3 bg-gradient-to-r from-primary-600 to-primary-700 text-white font-semibold rounded-xl hover:shadow-lg transition-all duration-300 group-hover:scale-105">
              Get {service.name.split(' ')[0]} Help
            </button>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Relocators Section -->
  {availableRelocators.length > 0 && (
    <section class="py-20 bg-white">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Trusted Relocators in <span class="gradient-text">{region.data.name}</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Professional relocation companies with proven expertise in {region.data.name}. These partners understand local requirements and can make your move seamless.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {availableRelocators.map((relocator) => (
            <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 group hover:-translate-y-1">
              <div class="flex items-center space-x-4 mb-4">
                <div class="w-16 h-16 bg-gray-50 rounded-xl flex items-center justify-center overflow-hidden">
                  <img 
                    src={relocator.logo} 
                    alt={`${relocator.name} logo`}
                    class="w-12 h-12 object-contain"
                  />
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                    {relocator.name}
                  </h3>
                  <p class="text-sm text-gray-600">{relocator.specialty}</p>
                </div>
              </div>

              <p class="text-gray-600 text-sm mb-4 leading-relaxed">
                {relocator.description}
              </p>

              <div class="flex items-center space-x-4 mb-4">
                <div class="flex items-center space-x-1">
                  <div class="flex space-x-1">
                    {[...Array(5)].map((_, i) => (
                      <svg class={`w-4 h-4 ${i < Math.floor(relocator.rating) ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    ))}
                  </div>
                  <span class="text-sm font-medium text-gray-700">{relocator.rating}</span>
                </div>
                <span class="text-sm text-gray-500">({relocator.reviews} reviews)</span>
              </div>

              <div class="space-y-2 mb-6">
                <div class="text-xs font-semibold text-gray-700 mb-2">Services:</div>
                <div class="flex flex-wrap gap-1">
                  {relocator.services.slice(0, 3).map((service) => (
                    <span class="px-2 py-1 bg-primary-100 text-primary-700 rounded text-xs">
                      {service}
                    </span>
                  ))}
                </div>
              </div>

              <div class="flex space-x-2">
                <a href={`/companies/${relocator.id}`} class="flex-1 text-center py-2 bg-gradient-to-r from-primary-600 to-primary-700 text-white font-medium rounded-xl hover:shadow-lg transition-all duration-300 text-sm">
                  View Details
                </a>
                <button onclick="openModal('individual-lead-modal')" class="px-4 py-2 border-2 border-primary-200 text-primary-600 rounded-xl hover:bg-primary-50 transition-all duration-300">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Quick Facts Section -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Key Facts -->
        <div>
          <h2 class="text-3xl font-bold mb-8">Essential Information</h2>
          <div class="space-y-6">
            {Object.entries(keyFacts).map(([key, value]) => (
              <div class="flex items-start space-x-4 p-4 bg-white rounded-xl shadow-sm">
                <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  {key === 'costOfLiving' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                    </svg>
                  )}
                  {key === 'avgRent' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                  )}
                  {key === 'taxRate' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                    </svg>
                  )}
                  {key === 'internetSpeed' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                  )}
                  {key === 'publicTransport' && (
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
                    </svg>
                  )}
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 capitalize">
                    {key.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase())}
                  </h3>
                  <p class="text-gray-600">{value}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Highlights -->
        <div>
          <h2 class="text-3xl font-bold mb-8">Why Choose {region.data.name}?</h2>
          <div class="space-y-4">
            {highlights.map((highlight) => (
              <div class="flex items-start space-x-3">
                <div class="w-6 h-6 bg-emerald-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-gray-700 leading-relaxed">{highlight}</p>
              </div>
            ))}
          </div>

          <!-- Top Industries -->
          <div class="mt-8">
            <h3 class="text-lg font-bold mb-4">Top Industries</h3>
            <div class="flex flex-wrap gap-2">
              {relocationStats.topIndustries.map((industry) => (
                <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
                  {industry}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Districts Section -->
  {districts.length > 0 && (
    <section class="py-20 bg-white">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Best <span class="gradient-text">Neighborhoods</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Discover the most popular districts for expatriates in {region.data.name}.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {districts.map((district) => (
            <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100">
              <div class="flex items-start justify-between mb-4">
                <h3 class="text-xl font-bold text-gray-900">{district.name}</h3>
                <span class="text-sm font-medium bg-primary-100 text-primary-700 px-3 py-1 rounded-full">
                  {district.avgRent}
                </span>
              </div>
              
              <p class="text-gray-600 mb-6 leading-relaxed">
                {district.description}
              </p>
              
              <div class="flex flex-wrap gap-2">
                {(district.characteristics || []).map((char) => (
                  <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded text-sm">
                    {char}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Living Costs Section -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Cost of <span class="gradient-text">Living</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Plan your budget with detailed cost information for living in {region.data.name}.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Housing Costs -->
        <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-6 border border-primary-200">
          <h3 class="text-lg font-bold mb-4 text-primary-900">Housing</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-700">1-Bedroom Apt</span>
              <span class="font-semibold">CHF {livingCosts.oneBedroomApt.min}-{livingCosts.oneBedroomApt.max}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">3-Bedroom Apt</span>
              <span class="font-semibold">CHF {livingCosts.threeBedroomApt.min}-{livingCosts.threeBedroomApt.max}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">Utilities</span>
              <span class="font-semibold">CHF {livingCosts.utilities.min}-{livingCosts.utilities.max}</span>
            </div>
          </div>
        </div>

        <!-- Daily Expenses -->
        <div class="bg-gradient-to-br from-secondary-50 to-secondary-100 rounded-2xl p-6 border border-secondary-200">
          <h3 class="text-lg font-bold mb-4 text-secondary-900">Daily Expenses</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-700">Transportation</span>
              <span class="font-semibold">CHF {livingCosts.transportation}/month</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">Groceries</span>
              <span class="font-semibold">CHF {livingCosts.groceries}/month</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">Internet/Phone</span>
              <span class="font-semibold">CHF 60-120/month</span>
            </div>
          </div>
        </div>

        <!-- Dining Costs -->
        <div class="bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-2xl p-6 border border-emerald-200">
          <h3 class="text-lg font-bold mb-4 text-emerald-900">Dining Out</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-700">Budget Meal</span>
              <span class="font-semibold">CHF {livingCosts.dining.budget}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">Mid-Range</span>
              <span class="font-semibold">CHF {livingCosts.dining.midRange}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-700">Fine Dining</span>
              <span class="font-semibold">CHF {livingCosts.dining.highEnd}+</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Business & Work Section -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Working in <span class="gradient-text">{region.data.name}</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Discover the business culture, job market, and professional opportunities in {region.data.name}.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-16">
        <div class="space-y-8">
          <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-8 border border-blue-200">
            <h3 class="text-xl font-bold mb-4 text-blue-900">Business Culture</h3>
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <div class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-blue-800">Punctuality: Absolutely essential in all professional settings</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-blue-800">Formality: Use formal address (Sie/Herr/Frau) until invited otherwise</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-blue-800">Networking: Join professional associations and expat groups</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-blue-800">Work-life balance: Generally respected with good vacation policies</p>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-8">
          <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-8 border border-green-200">
            <h3 class="text-xl font-bold mb-4 text-green-900">Job Market</h3>
            <div class="space-y-4">
              <div>
                <div class="text-sm font-semibold text-green-800 mb-2">Key sectors:</div>
                <div class="flex flex-wrap gap-2">
                  {relocationStats.topIndustries.map((industry) => (
                    <span class="px-3 py-1 bg-green-200 text-green-800 rounded-full text-sm">
                      {industry}
                    </span>
                  ))}
                </div>
              </div>
              <div>
                <div class="text-sm font-semibold text-green-800 mb-2">Average salaries:</div>
                <p class="text-green-700">CHF 80,000-150,000+ for professionals</p>
              </div>
              <div>
                <div class="text-sm font-semibold text-green-800 mb-2">Language requirements:</div>
                <p class="text-green-700">English sufficient for many roles, German helpful for career advancement</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Guides Section -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Helpful <span class="gradient-text">Guides</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Essential resources and guides to help you navigate your relocation to {region.data.name}.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {relatedGuides.map((guide) => (
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 group hover:-translate-y-1">
            <div class="mb-4">
              <span class="inline-block px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium mb-3">
                {guide.category}
              </span>
              <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-600 transition-colors mb-3">
                {guide.title}
              </h3>
              <p class="text-gray-600 text-sm leading-relaxed">
                {guide.excerpt}
              </p>
            </div>
            
            <a href={guide.link} class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700 transition-colors">
              Read Guide
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-primary-600 to-secondary-600 text-white">
    <div class="container">
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready to Move to {region.data.name}?
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Get personalized guidance from local experts who understand the unique aspects of relocating to {region.data.name}.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <button onclick="openModal('individual-lead-modal')" class="btn-white px-8 py-4">
            Get Relocation Help
          </button>
          <a href={`/companies?region=${region.data.id}`} class="btn-outline-white px-8 py-4">
            Find Local Providers
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-3xl font-bold mb-2">{relocationStats.expatsPercentage}%</div>
            <div class="text-sm opacity-75">International Residents</div>
          </div>
          <div>
            <div class="text-3xl font-bold mb-2">{relocationStats.satisfaction}/5</div>
            <div class="text-sm opacity-75">Expat Satisfaction</div>
          </div>
          <div>
            <div class="text-3xl font-bold mb-2">{relocationStats.avgMoveTime}</div>
            <div class="text-sm opacity-75">Average Setup Time</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>