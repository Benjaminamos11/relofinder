          <span>â†’</span>
          <span class="text-gray-900">Regions</span>
        </nav>

        <!-- Badge -->
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-secondary-100 text-secondary-700 font-medium text-sm mb-8">
