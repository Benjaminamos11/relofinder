---
import Layout from '../../layouts/Layout.astro';
import { ArrowRight, MapPin } from 'lucide-react';

const regions = [
  {
    title: "ZÃ¼rich",
    description: "The global banking hub and Switzerland's largest metropolis. High salaries, vibrant culture, and competitive housing.",
    link: "/regions/zurich",
    image: "https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_auto:best/v1766817581/claudio-schwarz-uheAB5wsFMM-unsplash_m0gcsl",
    tag: "Global Hub"
  },
  {
    title: "Geneva",
    description: "The City of Peace. innovative, diplomatic, and cosmopolitan. Home to the UN, WHO, and luxury retail HQs.",
    link: "/regions/geneva",
    image: "https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_auto:best/v1766820284/dino-sabic-RHH5rw7GMek-unsplash_1_w3fwnc",
    tag: "Diplomatic Core"
  },
  {
    title: "Zug",
    description: "Crypto Valley. The lowest tax rates in the country, attracting global founders and commodities traders.",
    link: "/regions/zug",
    image: "https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_auto:best/v1766820973/claudio-schwarz-SFUjHAztHcM-unsplash_3_c1ckym",
    tag: "Tax Efficiency"
  },
  {
    title: "Basel",
    description: "The Life Sciences capital. Headquarters of Roche and Novartis, situated at the border of France and Germany.",
    link: "/regions/basel",
    image: "https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_auto:best/v1766820564/birdeye-ch-Ykwh8R4_cKY-unsplash_noh9pg",
    tag: "Pharma Capital"
  },
  {
    title: "Lausanne",
    description: "The Olympic Capital. A vibrant university city on Lake Geneva, combining steep hills with academic excellence.",
    link: "/regions/lausanne",
    image: "https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_auto:best/v1766821274/patrick-william-NvGAO6E65K0-unsplash_rnmvd5",
    tag: "Olympic City"
  },
  {
    title: "Bern",
    description: "The Federal Capital. UNESCO World Heritage architecture and the political heart of the nation.",
    link: "/regions/bern",
    image: "https://res.cloudinary.com/dphbnwjtx/image/upload/w_1920,h_800,c_fill,f_webp,q_90,e_sharpen:100/v1759820132/oksana-burki-B-AMV0437bw-unsplash_nvjrod.jpg",
    tag: "Federal City"
  },
  {
    title: "The Alps",
    description: "St. Moritz, Gstaad, Zermatt. The summit of luxury living and exclusive tax residency.",
    link: "/regions/alps",
    image: "https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_auto:best/v1766821948/explore-with-joshua-4yBogrmcEmM-unsplash_wvticx",
    tag: "Luxury Lifestyle"
  },
  {
    title: "City Hubs",
    description: "Lucerne, Lugano, Montreux. Discover the distinct lifestyle and tax benefits of Switzerland's regional centers.",
    link: "/regions/swiss-hubs",
    image: "https://res.cloudinary.com/dphbnwjtx/image/upload/f_webp,q_auto:best/v1766824413/beat-bossert-VigWbF7EXNE-unsplash_susdcn.jpg",
    tag: "Hidden Gems"
  }
];

const title = "Relocation Destinations Switzerland | City Guides & Housing Profiles";
const description = "Explore our deep-dive relocation guides for Zurich, Geneva, Zug, Basel, and more. Localized insights for your Swiss move.";
const canonical = "https://relofinder.ch/regions";
---

<Layout title={title} description={description} canonical={canonical}>
  
  <!-- Hero Section -->
  <section class="relative pt-24 pb-20 md:pt-32 md:pb-24 bg-slate-50 border-b border-slate-100 overflow-hidden">
    <!-- Subtle Background Grid -->
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#e2e8f0_1px,transparent_1px),linear-gradient(to_bottom,#e2e8f0_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] opacity-40"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-200/50 border border-slate-200 text-slate-600 text-[11px] font-bold uppercase tracking-widest mb-6 animate-fade-in">
          <span class="w-2 h-2 rounded-full bg-[#FF6F61] animate-pulse"></span>
          City & Canton Guides
        </div>
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight text-slate-900 mb-6 leading-tight">
          Where will your <br/>
          <span class="text-[#FF6F61]">new life begin?</span>
        </h1>
        <p class="text-xl text-slate-500 font-normal leading-relaxed max-w-2xl mx-auto">
          Switzerland is a federation of distinct micro-economies. Choosing the right canton defines your taxes, language, and lifestyle.
        </p>
      </div>
    </div>
  </section>

  <!-- Region Grid -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        
        {regions.map((region, index) => (
            <a href={region.link} class="group relative block h-[480px] rounded-2xl overflow-hidden bg-slate-900 shadow-sm hover:shadow-2xl transition-all duration-500 hover:-translate-y-1">
            <!-- Background Image -->
            <div class="absolute inset-0 w-full h-full">
               <img 
                  src={region.image} 
                  alt={region.title} 
                  class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-[1500ms] ease-in-out scale-100 group-hover:scale-105"
               />
               <!-- Dark Gradient Overlay (Lighter on hover to reveal color) -->
               <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/40 to-transparent opacity-80 group-hover:opacity-40 transition-opacity duration-1000"></div>
            </div>

            <!-- Content -->
            <div class="absolute inset-0 p-8 flex flex-col justify-end">
               <!-- Top Tag -->
               <div class="absolute top-8 right-8">
                  <div class="bg-white/10 backdrop-blur-md border border-white/20 text-white text-[10px] font-bold uppercase tracking-widest px-3 py-1 rounded-full opacity-0 translate-y-2 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 delay-100">
                    {region.tag}
                  </div>
               </div>

               <!-- Text Content -->
               <div class="transform group-hover:-translate-y-2 transition-transform duration-500">
                  <div class="w-12 h-1 bg-[#FF6F61] mb-6 w-0 group-hover:w-12 transition-all duration-700 ease-out"></div>
                  
                  <div class="flex items-center gap-3 mb-3">
                    <MapPin className="w-5 h-5 text-[#FF6F61] opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-500" />
                    <h3 class="text-3xl font-bold text-white tracking-tight">
                        {region.title}
                    </h3>
                  </div>
                  
                  <p class="text-slate-200 text-base leading-relaxed mb-6 opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 delay-75 max-w-xs shadow-black drop-shadow-md">
                    {region.description}
                  </p>
                  
                  <div class="flex items-center gap-2 text-white font-semibold text-sm opacity-60 group-hover:opacity-100 transition-opacity duration-300">
                    View Guide <ArrowRight className="w-4 h-4 text-[#FF6F61]" />
                  </div>
               </div>
            </div>
          </a>
        ))}

      </div>
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="py-24 bg-slate-50 border-t border-slate-200">
      <div class="container mx-auto px-4 text-center">
          <h2 class="text-3xl font-bold text-slate-900 mb-6">Undecided on location?</h2>
          <p class="text-slate-500 mb-8 max-w-2xl mx-auto">
              Our "Swiss Hubs" guide compares taxes, commute times, and housing availability across all major cantons.
          </p>
          <a href="/regions/swiss-hubs" class="inline-flex items-center justify-center bg-slate-900 text-white px-8 py-4 rounded-lg font-semibold hover:bg-slate-800 transition-colors shadow-lg hover:shadow-xl">
            Compare Swiss Hubs
          </a>
      </div>
  </section>

</Layout>
