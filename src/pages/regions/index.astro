          </div>
          <h3 class="text-lg font-bold mb-3 text-green-900">International</h3>
          <p class="text-green-700 text-sm mb-4">Global organizations & diplomacy</p>
          <div class="space-y-2">
            {regions.filter(r => r.data.relocationStats?.topIndustries?.includes('International Organizations')).slice(0, 3).map(region => (
              <a href={`/regions/${region.data.id || region.slug}`} class="block text-sm text-green-800 hover:text-green-900 hover:underline">
