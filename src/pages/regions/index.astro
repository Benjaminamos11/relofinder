---
import Layout from '../../layouts/Layout.astro';
import SectionHeading from '../../components/common/SectionHeading.astro';

// Define only the 6 main regions we have
const featuredRegions = [
  {
    id: 'zurich',
    name: 'Zürich',
    subtitle: 'Financial & Tech Hub',
    description: 'Switzerland\'s largest city and global financial center with exceptional career opportunities.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_800,h_600,c_fill,f_webp,q_90,e_sharpen:100/v1759820127/henrique-ferreira-6p-I-X-sPUY-unsplash_1_gqzm3n.jpg',
    tags: ['Banking', 'Tech', 'ETH Zurich'],
    population: '415,000',
    expats: '32%'
  },
  {
    id: 'geneva',
    name: 'Geneva',
    subtitle: 'International Capital',
    description: 'Home to UN agencies, global organizations, and a vibrant French-speaking culture.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_800,h_600,c_fill,f_webp,q_90,e_sharpen:100/v1759820141/visualsoflukas-AWjVCFcUIbY-unsplash_1_mvewzi.jpg',
    tags: ['UN HQ', 'Diplomacy', 'Luxury'],
    population: '203,000',
    expats: '42%'
  },
  {
    id: 'basel',
    name: 'Basel',
    subtitle: 'Life Sciences Hub',
    description: 'Pharmaceutical capital with world-class art scene and Rhine river charm.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_800,h_600,c_fill,f_webp,q_90,e_sharpen:100/v1759820131/karim-imanuel-fox-BTgADYxEMBk-unsplash_fi8dyk.jpg',
    tags: ['Pharma', 'Art', 'Culture'],
    population: '173,000',
    expats: '35%'
  },
  {
    id: 'zug',
    name: 'Zug',
    subtitle: 'Crypto Valley',
    description: 'Tax-friendly business hub with thriving blockchain and fintech ecosystem.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_800,h_600,c_fill,f_webp,q_90,e_sharpen:100/v1759820128/louis-droege-k6rwCx5oAS8-unsplash_wiu51b.jpg',
    tags: ['Tax', 'Blockchain', 'Business'],
    population: '30,000',
    expats: '28%'
  },
  {
    id: 'lausanne',
    name: 'Lausanne',
    subtitle: 'Olympic Capital',
    description: 'University city with EPFL innovation hub on beautiful Lake Geneva shores.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_800,h_600,c_fill,f_webp,q_90,e_sharpen:100/v1759820132/oksana-burki-B-AMV0437bw-unsplash_nvjrod.jpg',
    tags: ['EPFL', 'Sports', 'Lakeside'],
    population: '140,000',
    expats: '38%'
  },
  {
    id: 'alps',
    name: 'Alpine Regions',
    subtitle: 'Luxury Lifestyle',
    description: 'Exclusive mountain living in St. Moritz, Gstaad, Zermatt, and Verbier.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_800,h_600,c_fill,f_webp,q_90,e_sharpen:100/v1759820373/andrew-masters-vSS6nhP52_g-unsplash_3_rs8bgt.jpg',
    tags: ['HNWI', 'Luxury', 'Skiing'],
    population: '50,000+',
    expats: '45%'
  }
];

const title = 'Swiss Regions Guide 2025 | Best Cities for Expats | ReloFinder';
const description = 'Discover the best Swiss regions and cities for expats. Compare Zürich, Geneva, Basel, Zug, Lausanne, and the Alps. Complete relocation guide with housing, costs, and quality of life.';
---

<Layout title={title} description={description}>
  
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center overflow-hidden bg-gray-50">
    <div class="container relative z-10 mx-auto px-6 lg:px-8 py-20">
      <div class="max-w-4xl mx-auto text-center">
        
        <!-- Headline -->
        <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Explore Swiss <span class="bg-gradient-to-r from-[#B61919] to-[#DF3030] bg-clip-text text-transparent">Regions</span>
        </h1>
        
        <p class="text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto mb-8">
          From global business hubs to alpine luxury — find your perfect location in Switzerland. Compare regions by lifestyle, career opportunities, and quality of life.
        </p>

        <!-- Stats -->
        <div class="flex flex-wrap justify-center gap-8 mb-12">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#B61919]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm font-medium text-gray-700">6 Major Regions</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#B61919]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-gray-700">All 26 Cantons</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#B61919]" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
            </svg>
            <span class="text-sm font-medium text-gray-700">25% International</span>
          </div>
        </div>

        <!-- CTA -->
        <button
          onclick="universalOpenModal({page: 'regions'})"
          class="inline-flex items-center justify-center px-8 py-4 text-white font-semibold rounded-xl transition-all duration-200 hover:shadow-lg bg-gradient-to-r from-[#B61919] to-[#DF3030] hover:scale-[1.02]"
        >
          Get Personalized Region Recommendations
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </button>
      </div>
    </div>
  </section>

  <!-- Regions Grid -->
  <section class="relative overflow-hidden bg-white" style="padding: var(--section-padding) 0;">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      
      <SectionHeading 
        title="Major Swiss Regions"
        subtitle="Compare top destinations for international professionals and families relocating to Switzerland"
        align="left"
      />

      <!-- Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredRegions.map((region) => (
          <a 
            href={`/regions/${region.id}`}
            class="group relative bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 overflow-hidden border border-gray-100"
          >
            <!-- Image -->
            <div class="relative h-56 overflow-hidden">
              <img 
                src={region.image} 
                alt={`${region.name} - Swiss relocation destination`}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
              />
              <!-- Gradient Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
              
              <!-- Region Name Overlay -->
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <h3 class="text-2xl font-bold text-white mb-1">
                  {region.name}
                </h3>
                <p class="text-white/90 text-sm font-medium">
                  {region.subtitle}
                </p>
              </div>
              
              <!-- Red accent line on hover -->
              <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-[#B61919] to-[#DF3030] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
            </div>

            <!-- Content -->
            <div class="p-6">
              <!-- Description -->
              <p class="text-gray-600 text-sm leading-relaxed mb-4">
                {region.description}
              </p>

              <!-- Stats -->
              <div class="flex items-center gap-4 mb-4 text-sm text-gray-600">
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                  </svg>
                  <span>{region.population}</span>
                </div>
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 6a3 3 0 013-3h10a1 1 0 01.8 1.6L14.25 8l2.55 3.4A1 1 0 0116 13H6a1 1 0 00-1 1v3a1 1 0 11-2 0V6z" clip-rule="evenodd"/>
                  </svg>
                  <span>{region.expats} expats</span>
                </div>
              </div>

              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mb-4">
                {region.tags.map((tag) => (
                  <span class="inline-block px-3 py-1.5 bg-gray-50 text-gray-700 text-xs font-medium rounded-full border border-gray-100">
                    {tag}
                  </span>
                ))}
              </div>
              
              <!-- Arrow Link -->
              <div class="flex items-center text-sm font-semibold text-gray-700 group-hover:text-[#B61919] transition-colors">
                Explore {region.name}
                <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Switzerland Section -->
  <section class="relative overflow-hidden bg-gray-50" style="padding: var(--section-padding) 0;">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      
      <SectionHeading 
        title="Why Switzerland?"
        subtitle="Consistently ranked #1 for quality of life, Switzerland offers unparalleled opportunities"
        align="center"
      />

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-100">
          <div class="w-12 h-12 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3 text-gray-900">Economic Powerhouse</h3>
          <p class="text-gray-600 leading-relaxed">
            Home to global financial institutions, multinational corporations, and innovative startups with competitive salaries.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-100">
          <div class="w-12 h-12 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3 text-gray-900">Quality of Life</h3>
          <p class="text-gray-600 leading-relaxed">
            Exceptional healthcare, education, and infrastructure combined with stunning natural beauty and safety.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-100">
          <div class="w-12 h-12 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3 text-gray-900">International Hub</h3>
          <p class="text-gray-600 leading-relaxed">
            25% international residents create a welcoming expat community. English widely spoken in business.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative overflow-hidden" style="padding: var(--section-padding) 0; background: linear-gradient(135deg, #B61919 0%, #DF3030 100%);">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center text-white">
      <h2 class="text-4xl font-bold mb-6">
        Ready to Find Your Perfect Swiss Region?
      </h2>
      <p class="text-xl mb-8 opacity-90">
        Get personalized recommendations based on your career, lifestyle, and family needs.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <button
          onclick="universalOpenModal({page: 'regions'})"
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-[#B61919] font-semibold rounded-xl hover:bg-gray-100 transition-all duration-200"
        >
          Get Free Recommendations
        </button>
        <a
          href="/companies"
          class="inline-flex items-center justify-center px-8 py-4 font-semibold bg-white/10 backdrop-blur-sm border-2 border-white/30 rounded-xl hover:bg-white/20 transition-all duration-200"
        >
          Browse Agencies
        </a>
      </div>
    </div>
  </section>

</Layout>

<script>
  // Intersection Observer for fade-up animations
  if (typeof window !== 'undefined') {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.fade-up').forEach(el => observer.observe(el));
  }
</script>
