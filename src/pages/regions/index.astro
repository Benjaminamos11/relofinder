// Page metadata
const title = 'Swiss Regions Guide for Expats | ReloFinder.ch';
const description = 'Explore regions across Switzerland to find your ideal location, with detailed information on languages, industries, and quality of life for expats.';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="py-16 md:py-24 relative">
    <div class="absolute inset-0 bg-accent-900 opacity-70 z-0">
      <div class="absolute inset-0" style="background-image: url('https://images.pexels.com/photos/290386/pexels-photo-290386.jpeg?auto=compress&cs=tinysrgb&w=1920'); background-position: center; background-size: cover; mix-blend-mode: multiply;"></div>
    </div>
    
    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center text-white">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight">
          Discover Switzerland's Diverse Regions
        </h1>
        <p class="text-lg md:text-xl text-white/90 mb-8">
          Explore different cantons and cities to find your perfect home in Switzerland based on language, culture, and lifestyle.
        </p>
        
        <!-- Region Quick Filter -->
        <div class="bg-white p-4 rounded-lg shadow-lg">
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
            <a href="#german" class="flex items-center justify-center p-3 border border-accent-200 rounded-lg hover:bg-accent-50 transition-colors text-accent-800">
              <span>German Switzerland</span>
            </a>
            <a href="#french" class="flex items-center justify-center p-3 border border-accent-200 rounded-lg hover:bg-accent-50 transition-colors text-accent-800">
              <span>French Switzerland</span>
            </a>
            <a href="#italian" class="flex items-center justify-center p-3 border border-accent-200 rounded-lg hover:bg-accent-50 transition-colors text-accent-800">
              <span>Italian Switzerland</span>
            </a>
            <a href="#cities" class="flex items-center justify-center p-3 border border-accent-200 rounded-lg hover:bg-accent-50 transition-colors text-accent-800">
              <span>Major Cities</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Swiss Map Overview -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-3xl font-bold mb-4">Switzerland at a <span class="text-accent-600">Glance</span></h2>
        <p class="text-lg text-accent-600">
          Switzerland is divided into 26 cantons, each with its own unique culture, traditions, and sometimes language.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <!-- This would be a Swiss map with interactive regions -->
          <img 
            src="https://images.pexels.com/photos/11261433/pexels-photo-11261433.jpeg?auto=compress&cs=tinysrgb&w=800" 
            alt="Map of Switzerland" 
            class="rounded-lg shadow-lg w-full"
          />
        </div>
        
        <div class="space-y-6">
          <div>
            <h3 class="text-xl font-semibold mb-2">Language Regions</h3>
            <p class="text-accent-600 mb-4">
              Switzerland has four official languages, distributed across different regions:
            </p>
            <div class="grid grid-cols-2 gap-4">
              <div class="flex items-center">
                <div class="w-4 h-4 rounded-full bg-primary-600 mr-2"></div>
                <span>German (63%)</span>
              </div>
              <div class="flex items-center">
                <div class="w-4 h-4 rounded-full bg-secondary-600 mr-2"></div>
                <span>French (23%)</span>
              </div>
              <div class="flex items-center">
                <div class="w-4 h-4 rounded-full bg-green-600 mr-2"></div>
                <span>Italian (8%)</span>
              </div>
              <div class="flex items-center">
                <div class="w-4 h-4 rounded-full bg-yellow-600 mr-2"></div>
                <span>Romansh (0.5%)</span>
              </div>
            </div>
          </div>
          
          <div>
            <h3 class="text-xl font-semibold mb-2">Key Facts</h3>
            <ul class="space-y-2">
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Population: 8.7 million</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Area: 41,285 km²</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Capital: Bern</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Largest city: Zürich</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Currency: Swiss Franc (CHF)</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Regions Grid -->
  <section class="section bg-accent-50" id="cities">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-3xl font-bold mb-4">Major Swiss <span class="text-accent-600">Cities & Regions</span></h2>
        <p class="text-lg text-accent-600">
          Explore Switzerland's diverse regions and find the perfect place for your relocation.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-on-scroll">
        {regions.map(region => (
          <RegionCard region={region} />
        ))}
      </div>
      
      <!-- Language Region Sections -->
      <div class="mt-20" id="german">
        <h3 class="text-2xl font-bold mb-6 border-b border-accent-200 pb-3">German-Speaking Switzerland</h3>
        <p class="text-accent-600 mb-8">
          German-speaking Switzerland (also called Swiss-German Switzerland) makes up about 65% of the country and includes major cities such as Zürich, Bern, and Basel. The local dialect is Swiss German (Schweizerdeutsch), which can differ significantly from High German.
        </p>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <a href="/regions/zurich" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Zürich</h4>
          </a>
          <a href="/regions/bern" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Bern</h4>
          </a>
          <a href="/regions/basel" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Basel</h4>
          </a>
          <a href="/regions/st-gallen" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">St. Gallen</h4>
          </a>
        </div>
      </div>
      
      <div class="mt-16" id="french">
        <h3 class="text-2xl font-bold mb-6 border-b border-accent-200 pb-3">French-Speaking Switzerland</h3>
        <p class="text-accent-600 mb-8">
          French-speaking Switzerland (Romandy or la Suisse romande) covers the western part of the country, including Geneva and Lausanne. The French spoken here has some unique Swiss expressions but is largely similar to standard French.
        </p>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <a href="/regions/geneva" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Geneva</h4>
          </a>
          <a href="/regions/lausanne" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Lausanne</h4>
          </a>
          <a href="/regions/montreux" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Montreux</h4>
          </a>
          <a href="/regions/neuchatel" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Neuchâtel</h4>
          </a>
        </div>
      </div>
      
      <div class="mt-16" id="italian">
        <h3 class="text-2xl font-bold mb-6 border-b border-accent-200 pb-3">Italian-Speaking Switzerland</h3>
        <p class="text-accent-600 mb-8">
          Italian-speaking Switzerland is primarily in the canton of Ticino in the south, bordering Italy. This region offers a Mediterranean flair with palm trees, Italian cuisine, and a more relaxed lifestyle.
        </p>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <a href="/regions/lugano" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Lugano</h4>
          </a>
          <a href="/regions/locarno" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Locarno</h4>
          </a>
          <a href="/regions/bellinzona" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Bellinzona</h4>
          </a>
          <a href="/regions/mendrisio" class="card p-4 text-center hover:shadow-lg transition-all">
            <h4 class="font-semibold">Mendrisio</h4>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Expat Stories -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-3xl font-bold mb-4">Expat <span class="text-accent-600">Stories</span></h2>
        <p class="text-lg text-accent-600">
          Read about the experiences of other expats who have relocated to different regions of Switzerland.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card overflow-hidden">
          <div class="relative h-48">
            <img 
              src="https://images.pexels.com/photos/1181686/pexels-photo-1181686.jpeg?auto=compress&cs=tinysrgb&w=800" 
              alt="Expat in Zürich" 
              class="w-full h-full object-cover"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-3">"Zürich exceeded all my expectations"</h3>
            <p class="text-accent-600 mb-4">
              "Moving from London to Zürich was a smooth transition. The city offers an incredible quality of life, fantastic public transportation, and beautiful nature just a short train ride away."
            </p>
            <div class="flex items-center">
              <img 
                src="https://images.pexels.com/photos/1181686/pexels-photo-1181686.jpeg?auto=compress&cs=tinysrgb&w=100" 
                alt="Sarah" 
                class="w-10 h-10 rounded-full mr-3 object-cover"
              />
              <div>
                <p class="font-medium">Sarah</p>
                <p class="text-sm text-accent-500">UK expat in Zürich</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="card overflow-hidden">
          <div class="relative h-48">
            <img 
              src="https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg?auto=compress&cs=tinysrgb&w=800" 
              alt="Expat in Geneva" 
              class="w-full h-full object-cover"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-3">"Geneva's international community made me feel at home"</h3>
            <p class="text-accent-600 mb-4">
              "The diverse community in Geneva made it easy to settle in. Working for an international organization, I found colleagues from all over the world who shared their experiences."
            </p>
            <div class="flex items-center">
              <img 
                src="https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg?auto=compress&cs=tinysrgb&w=100" 
                alt="Miguel" 
                class="w-10 h-10 rounded-full mr-3 object-cover"
              />
              <div>
                <p class="font-medium">Miguel</p>
                <p class="text-sm text-accent-500">Spanish expat in Geneva</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="card overflow-hidden">
          <div class="relative h-48">
            <img 
              src="https://images.pexels.com/photos/774909/pexels-photo-774909.jpeg?auto=compress&cs=tinysrgb&w=800" 
              alt="Expat in Lugano" 
              class="w-full h-full object-cover"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-3">"Lugano offers the best of Switzerland and Italy"</h3>
            <p class="text-accent-600 mb-4">
              "Living in Lugano gives me Swiss efficiency with Italian flair. The palm trees, lake views, and proximity to Italy make it a unique place to live within Switzerland."
            </p>
            <div class="flex items-center">
              <img 
                src="https://images.pexels.com/photos/774909/pexels-photo-774909.jpeg?auto=compress&cs=tinysrgb&w=100" 
                alt="Emma" 
                class="w-10 h-10 rounded-full mr-3 object-cover"
              />
              <div>
                <p class="font-medium">Emma</p>
                <p class="text-sm text-accent-500">US expat in Lugano</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="mt-12 text-center">
        <a href="/blog/category/expat-stories" class="btn-outline">
          Read More Expat Stories
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <!-- Region Comparison Tool -->
  <section class="section bg-accent-50">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-3xl font-bold mb-4">Compare Swiss <span class="text-accent-600">Regions</span></h2>
        <p class="text-lg text-accent-600">
          Use our comparison tool to evaluate different Swiss regions based on factors important to you.
        </p>
      </div>
      
      <div class="card p-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div>
            <label class="block text-sm font-medium text-accent-600 mb-2">Region 1</label>
            <select class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-accent-500 text-accent-800 appearance-none bg-white">
              <option value="">Select a region</option>
              <option value="zurich">Zürich</option>
              <option value="geneva">Geneva</option>
              <option value="basel">Basel</option>
              <option value="bern">Bern</option>
              <option value="lausanne">Lausanne</option>
              <option value="lugano">Lugano</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-accent-600 mb-2">Region 2</label>
            <select class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-accent-500 text-accent-800 appearance-none bg-white">
              <option value="">Select a region</option>
              <option value="zurich">Zürich</option>
              <option value="geneva">Geneva</option>
              <option value="basel">Basel</option>
              <option value="bern">Bern</option>
              <option value="lausanne">Lausanne</option>
              <option value="lugano">Lugano</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-accent-600 mb-2">Compare By</label>
            <select class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-accent-500 text-accent-800 appearance-none bg-white">
              <option value="all">All Factors</option>
              <option value="cost">Cost of Living</option>
              <option value="housing">Housing</option>
              <option value="jobs">Job Market</option>
              <option value="transport">Transportation</option>
              <option value="education">Education</option>
              <option value="healthcare">Healthcare</option>
            </select>
          </div>
        </div>
        
        <div class="text-center">
          <button class="btn-primary">Compare Regions</button>
        </div>
        
        <div class="mt-8 text-center text-accent-600">
          <p>Select two regions to see a detailed comparison.</p>
        </div>
      </div>
    </div>
  </section>
  
  <script>
    // Animate elements on scroll
    document.addEventListener('DOMContentLoaded', function() {
      const animateOnScrollElements = document.querySelectorAll('.animate-on-scroll');
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      }, {
        threshold: 0.2
      });
      
      animateOnScrollElements.forEach(element => {
        observer.observe(element);
      });
    });
  </script>
</Layout>