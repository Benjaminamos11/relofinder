            {regions.filter(r => r.data.relocationStats?.topIndustries?.includes('Technology')).slice(0, 3).map(region => (
              <a href={`/regions/${region.data.id || region.slug}`} class="block text-sm text-purple-800 hover:text-purple-900 hover:underline">
