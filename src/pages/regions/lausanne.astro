---
import Layout from '../../layouts/Layout.astro';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Regions",
      "item": "https://relofinder.ch/regions"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Lausanne",
      "item": "https://relofinder.ch/regions/lausanne"
    }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Relocation to Lausanne Services",
  "description": "Complete relocation guide for Lausanne, Switzerland. Housing, costs, jobs, schools, permits, and trusted relocation agencies.",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder"
  },
  "areaServed": {
    "@type": "City",
    "name": "Lausanne",
    "containedIn": {
      "@type": "Country",
      "name": "Switzerland"
    }
  }
};

const title = "Relocation to Lausanne | Expat & Business Relocation Guide 2025 | ReloFinder";
const description = "Relocate to Lausanne with confidence. Housing, costs, jobs, schools, permits, and relocation agencies. Compare providers with ReloFinder.";
const canonical = "https://relofinder.ch/regions/lausanne";
const keywords = ['lausanne relocation', 'moving to lausanne', 'lausanne expat', 'lausanne lake geneva', 'lausanne housing', 'french switzerland', 'relocation agencies lausanne', 'lausanne switzerland'];

const combinedSchema = {
  "@context": "https://schema.org",
  "@graph": [
    breadcrumbSchema,
    {
      ...serviceSchema,
      provider: {
        "@type": "Organization",
        "name": "ReloFinder",
        "url": "https://relofinder.ch"
      },
      areaServed: {
        "@type": "City",
        "name": "Lausanne",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Lausanne",
          "addressCountry": "CH"
        }
      }
    },
    {
      "@type": "Place",
      "name": "Lausanne",
      "description": description,
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Lausanne",
        "addressCountry": "CH"
      }
    }
  ]
};
---

<Layout 
  title={title}
  description={description}
  canonical={canonical}
  keywords={keywords}
  schema={combinedSchema}
>

  <!-- Hero Section -->
  <section class="relative min-h-[600px] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/w_1920,h_800,c_fill,f_webp,q_90,e_sharpen:100/v1759820132/oksana-burki-B-AMV0437bw-unsplash_nvjrod.jpg"
        alt="Lausanne Olympic Capital on Lake Geneva shores"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
    </div>

    <!-- Content -->
    <div class="container relative z-10 py-20">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Relocation to <span class="bg-gradient-to-r from-[#B61919] to-[#DF3030] bg-clip-text text-transparent">Lausanne</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-100 leading-relaxed max-w-3xl mx-auto">
          Switzerland's French-speaking innovation hub — Lausanne offers lakeside beauty, world-class universities, and a dynamic international community.
        </p>

        <!-- Stats Cards -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-3xl mx-auto">
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">400K</div>
            <div class="text-sm text-gray-300">Metro Pop.</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">35%</div>
            <div class="text-sm text-gray-300">International</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">4.6/5</div>
            <div class="text-sm text-gray-300">Satisfaction</div>
          </div>
          <div class="bg-white/10 backdrop-blur-md rounded-xl p-4 border border-white/20">
            <div class="text-3xl font-bold text-primary-300">6–8 wks</div>
            <div class="text-sm text-gray-300">Setup</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button
            onclick="universalOpenModal()"
            class="px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-bold text-lg hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-lg"
          >
            Start Your Lausanne Journey
          </button>
          <a
            href="/companies?region=lausanne"
            class="px-8 py-4 bg-white/10 backdrop-blur-md text-white border-2 border-white/30 rounded-xl font-bold text-lg hover:bg-white/20 hover:scale-105 transition-all duration-300"
          >
            Find Local Experts
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction Paragraph -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-xl text-gray-700 leading-relaxed">
          Welcome to Lausanne — a city where education, culture, and nature meet. Set on the shores of Lake Geneva and surrounded by vineyards, Lausanne is known for its prestigious universities, Olympic spirit, and vibrant French-speaking lifestyle. Here's your guide to relocating to Lausanne.
        </p>
      </div>
    </div>
  </section>

  <!-- Section 1: Why Choose Lausanne -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Why Lausanne
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Why Choose <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Lausanne</span>
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Lausanne stands out as Switzerland's French-speaking university hub, combining academic excellence with stunning lakeside living and innovative spirit.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Card 1 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">University Hub</h3>
            <p class="text-gray-600 text-sm">
              Home to EPFL (Swiss Federal Institute of Technology), University of Lausanne, and IMD Business School — global academic leaders.
            </p>
          </div>

          <!-- Card 2 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Olympic Capital</h3>
            <p class="text-gray-600 text-sm">
              Headquarters of the International Olympic Committee (IOC) and 50+ international sports federations. Olympic Museum a landmark.
            </p>
          </div>

          <!-- Card 3 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">French-Speaking Lifestyle</h3>
            <p class="text-gray-600 text-sm">
              French is the primary language, creating an authentic Romandie (French-Swiss) experience. English common in academia and multinational companies.
            </p>
          </div>

          <!-- Card 4 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Lakeside Living & Vineyards</h3>
            <p class="text-gray-600 text-sm">
              Stunning Lake Geneva waterfront, UNESCO Lavaux vineyards nearby, surrounded by natural beauty. Premium outdoor lifestyle.
            </p>
          </div>

          <!-- Card 5 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Thriving Innovation & Startup Scene</h3>
            <p class="text-gray-600 text-sm">
              EPFL Innovation Park, emerging tech startups, research excellence. Vibrant entrepreneurial ecosystem.
            </p>
          </div>

          <!-- Card 6 -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Access to Geneva & Alps</h3>
            <p class="text-gray-600 text-sm">
              40 minutes to Geneva by train, 1 hour to world-class ski resorts. Perfect central location in Romandie.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 2: Living in Lausanne (Accordion) -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Living Guide
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Living in <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Lausanne</span>
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-8">
            Lausanne combines a small-city feel with big opportunities. Expand the sections below to learn more about daily life here.
          </p>
        </div>

        <div class="space-y-4">
          <!-- Accordion 1: Quality of Life -->
          <details class="group bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl border-2 border-primary-200 hover:border-primary-400 hover:shadow-lg transition-all cursor-pointer">
            <summary class="text-lg font-bold text-gray-900 cursor-pointer flex items-center justify-between list-none">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
                Quality of Life
              </div>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="mt-4 pl-8 space-y-2">
              <p class="text-gray-700">Lausanne offers exceptional quality of life:</p>
              <ul class="list-disc list-inside text-gray-700 space-y-1 ml-2">
                <li><strong>Safety:</strong> Very safe city with low crime rates, family-friendly</li>
                <li><strong>Healthcare:</strong> CHUV (University Hospital), excellent care, English-speaking doctors</li>
                <li><strong>Culture:</strong> Museums, theaters, festivals (Montreux Jazz nearby), Olympic Museum</li>
                <li><strong>Outdoor access:</strong> Lake Geneva for sailing, vineyards, Alps within 1 hour for skiing</li>
              </ul>
            </div>
          </details>

          <!-- Accordion 2: International Community -->
          <details class="group bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl border-2 border-primary-200 hover:border-primary-400 hover:shadow-lg transition-all cursor-pointer">
            <summary class="text-lg font-bold text-gray-900 cursor-pointer flex items-center justify-between list-none">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                International Community
              </div>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="mt-4 pl-8 space-y-2">
              <p class="text-gray-700">Lausanne has a vibrant international community:</p>
              <ul class="list-disc list-inside text-gray-700 space-y-1 ml-2">
                <li><strong>35% foreign nationals</strong> from around the world</li>
                <li><strong>English common</strong> in academia (EPFL, UNIL), international businesses</li>
                <li><strong>Student atmosphere:</strong> Young, dynamic, international university community</li>
                <li><strong>Expat networks:</strong> InterNations, professional clubs, international school communities</li>
              </ul>
            </div>
          </details>

          <!-- Accordion 3: Neighborhoods for Expats -->
          <details class="group bg-gradient-to-br from-white to-gray-50 p-6 rounded-xl border-2 border-primary-200 hover:border-primary-400 hover:shadow-lg transition-all cursor-pointer">
            <summary class="text-lg font-bold text-gray-900 cursor-pointer flex items-center justify-between list-none">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Neighborhoods for Expats
              </div>
              <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="mt-4 pl-8 space-y-2">
              <p class="text-gray-700">Popular neighborhoods in Lausanne and surrounding areas:</p>
              <ul class="list-disc list-inside text-gray-700 space-y-1 ml-2">
                <li><strong>Ouchy:</strong> Lakeside, waterfront living, restaurants, Olympic Museum. Rent: CHF 2,000-3,200/month (2BR)</li>
                <li><strong>Chailly:</strong> Residential, family-friendly, near EPFL, green spaces. Rent: CHF 1,800-2,800/month (3BR)</li>
                <li><strong>Flon:</strong> Trendy, nightlife, young professionals, urban living. Rent: CHF 1,800-2,600/month (2BR)</li>
                <li><strong>Lutry:</strong> Suburban, vineyards, peaceful, lakeside village. Rent: CHF 1,800-2,800/month (3BR)</li>
              </ul>
            </div>
          </details>
        </div>

        <!-- Inline CTA -->
        <div class="mt-12 text-center">
          <a
            href="/services/housing/lausanne"
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-bold text-lg hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-lg"
          >
            Housing in Lausanne →
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 3: Costs of Living -->
  <section class="py-20 bg-gradient-to-br from-gray-50 via-white to-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Budget Planning
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Cost of Living in <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Lausanne</span>
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Lausanne is more affordable than Geneva but still premium by global standards. Here's what to expect for monthly expenses.
          </p>
        </div>

        <!-- Budget Cards -->
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl border-2 border-primary-200">
            <div class="text-center">
              <div class="text-sm font-semibold text-primary-700 mb-2">Single Person</div>
              <div class="text-3xl font-bold text-gray-900 mb-1">CHF 2,800–4,200</div>
              <div class="text-sm text-gray-600">per month</div>
            </div>
          </div>
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl border-2 border-primary-200">
            <div class="text-center">
              <div class="text-sm font-semibold text-primary-700 mb-2">Couple</div>
              <div class="text-3xl font-bold text-gray-900 mb-1">CHF 4,200–6,000</div>
              <div class="text-sm text-gray-600">per month</div>
            </div>
          </div>
          <div class="bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl border-2 border-primary-200">
            <div class="text-center">
              <div class="text-sm font-semibold text-primary-700 mb-2">Family of 4</div>
              <div class="text-3xl font-bold text-gray-900 mb-1">CHF 6,500–9,000</div>
              <div class="text-sm text-gray-600">per month</div>
            </div>
          </div>
        </div>

        <!-- Cost Table -->
        <div class="bg-white rounded-xl border-2 border-gray-200 overflow-hidden mb-12">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-4 text-left text-sm font-bold text-gray-900">Category</th>
                <th class="px-6 py-4 text-right text-sm font-bold text-gray-900">Monthly Cost</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <tr>
                <td class="px-6 py-4 text-gray-700">1BR apartment (city center)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 1,600–2,600</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-gray-700">Public transport (monthly pass)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 70–85</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-gray-700">Groceries (single person)</td>
                <td class="px-6 py-4 text-right font-semibold text-gray-900">CHF 600</td>
