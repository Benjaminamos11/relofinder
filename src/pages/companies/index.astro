---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary-600 to-secondary-700 text-white py-16 md:py-24">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight">
          Find the Perfect Relocation Partners in Switzerland
        </h1>
        <p class="text-lg md:text-xl text-white/90 mb-8">
          Connect with trusted companies specializing in expat relocation services across Switzerland.
        </p>
        
        <!-- Search & Filter Box -->
        <div class="bg-white p-4 rounded-lg shadow-lg max-w-xl mx-auto">
          <div class="flex flex-col md:flex-row gap-4">
            <div class="flex-grow">
              <input 
                type="text" 
                placeholder="Search companies" 
                class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-secondary-500 text-accent-800"
              />
            </div>
            <div class="md:w-1/3">
              <select class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-secondary-500 text-accent-800 appearance-none bg-white">
                <option value="">All Services</option>
                <option value="housing">Housing & Real Estate</option>
                <option value="legal">Legal & Immigration</option>
                <option value="finance">Banking & Finance</option>
                <option value="education">Education & Schools</option>
                <option value="health">Healthcare</option>
                <option value="transport">Transportation</option>
              </select>
            </div>
          </div>
          <div class="flex flex-col md:flex-row gap-4 mt-4">
            <div class="md:w-1/2">
              <select class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-secondary-500 text-accent-800 appearance-none bg-white">
                <option value="">All Regions</option>
                <option value="zurich">Zürich</option>
                <option value="geneva">Geneva</option>
                <option value="basel">Basel</option>
                <option value="bern">Bern</option>
                <option value="lausanne">Lausanne</option>
                <option value="nationwide">Nationwide</option>
              </select>
            </div>
            <div class="md:w-1/2">
              <select class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-secondary-500 text-accent-800 appearance-none bg-white">
                <option value="rating">Sort by: Rating</option>
                <option value="name">Sort by: Name</option>
                <option value="reviews">Sort by: Most Reviews</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Companies Grid -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-on-scroll">
        {companies.map(company => (
          <CompanyCard company={company} />
        ))}
      </div>
      
      <!-- Pagination -->
      <div class="mt-12 flex justify-center">
        <div class="flex space-x-1">
          <a href="#" class="px-4 py-2 border border-gray-300 rounded-md text-accent-700 hover:bg-accent-50">Previous</a>
          <a href="#" class="px-4 py-2 bg-secondary-600 text-white rounded-md">1</a>
          <a href="#" class="px-4 py-2 border border-gray-300 rounded-md text-accent-700 hover:bg-accent-50">2</a>
          <a href="#" class="px-4 py-2 border border-gray-300 rounded-md text-accent-700 hover:bg-accent-50">3</a>
