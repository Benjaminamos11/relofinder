// Fetch companies from Supabase
const { data: companies, error } = await supabase
  .from('relocators')
  .select(`
    id,
    name,
    logo,
    description,
    rating,
    google_rating,
    regions_served,
    languages,
    team
  `)
  .order('name');

// Page metadata
const title = 'Relocation Companies in Switzerland | ReloFinder.ch';
const description = 'Discover top-rated relocation companies in Switzerland offering specialized services for expats, from housing and moving to finance and education.';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="min-h-[600px] flex items-stretch">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[600px]">
        <div class="flex flex-col justify-center py-16 md:py-24 lg:pr-8 bg-white">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
            Compare Service Companies
          </h1>
          <p class="text-xl text-accent-600 mb-8 max-w-xl">
            Get expert guidance on choosing the right service providers—completely free. Our comparison tools help you evaluate companies and find the perfect match for your needs.
          </p>
          <a href="/contact" class="btn-primary">
            Get Started
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>

        <div class="bg-gradient-to-r from-red-600 to-rose-600 flex items-center p-8 lg:p-12">
          <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-8 shadow-xl w-full">
            <h2 class="text-2xl font-bold mb-6">Find Your Perfect Match</h2>
            <form class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-accent-700 mb-1">Service Type</label>
                <select class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-primary-500">
                  <option value="">Select a service</option>
                  <option value="relocation">Relocation Services</option>
                  <option value="housing">Housing & Real Estate</option>
                  <option value="finance">Financial Services</option>
                  <option value="education">Education</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium text-accent-700 mb-1">Location</label>
                <select class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-primary-500">
                  <option value="">Select a location</option>
                  <option value="zurich">Zürich</option>
                  <option value="geneva">Geneva</option>
                  <option value="basel">Basel</option>
                  <option value="bern">Bern</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium text-accent-700 mb-1">Budget Range</label>
                <select class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-primary-500">
                  <option value="">Select budget range</option>
                  <option value="economy">Economy</option>
                  <option value="standard">Standard</option>
                  <option value="premium">Premium</option>
                </select>
              </div>
              <button type="submit" class="w-full btn-primary">
                Compare Companies
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Companies Grid -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-on-scroll">
        {error && (
          <div class="col-span-full bg-red-50 text-red-600 p-4 rounded-lg">
            Error loading companies: {error.message}
          </div>
        )}
        {companies.map(company => (
          <CompanyCard company={company} />
        ))}
      </div>
      
      <!-- Pagination -->
      <div class="mt-12 flex justify-center">
        <div class="flex space-x-1">
          <a href="#" class="px-4 py-2 border border-gray-300 rounded-md text-accent-700 hover:bg-accent-50">Previous</a>
          <a href="#" class="px-4 py-2 bg-secondary-600 text-white rounded-md">1</a>
          <a href="#" class="px-4 py-2 border border-gray-300 rounded-md text-accent-700 hover:bg-accent-50">2</a>
          <a href="#" class="px-4 py-2 border border-gray-300 rounded-md text-accent-700 hover:bg-accent-50">3</a>
          <span class="px-4 py-2 text-accent-700">...</span>
          <a href="#" class="px-4 py-2 border border-gray-300 rounded-md text-accent-700 hover:bg-accent-50">8</a>
          <a href="#" class="px-4 py-2 border border-gray-300 rounded-md text-accent-700 hover:bg-accent-50">Next</a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Become a Partner -->
  <section class="section bg-accent-50">
    <div class="container">
      <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-xl overflow-hidden">
        <div class="grid grid-cols-1 md:grid-cols-2">
          <div class="p-8 md:p-12">
            <h2 class="text-2xl md:text-3xl font-bold mb-4">Are you a relocation service provider?</h2>
            <p class="text-accent-600 mb-6">
              Join our network of trusted companies and connect with expatriates looking for your services in Switzerland.
            </p>
            <ul class="space-y-3 mb-6">
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Increase your visibility to expats</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Connect with qualified leads</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Build your brand reputation</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>Showcase your expertise</span>
              </li>
            </ul>
            <a href="/for-businesses" class="btn-secondary">
              Become a Partner
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
          <div class="hidden md:block">
            <img 
              src="https://images.pexels.com/photos/3182812/pexels-photo-3182812.jpeg?auto=compress&cs=tinysrgb&w=800" 
              alt="Business partners" 
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <script>
    // Animate elements on scroll
    document.addEventListener('DOMContentLoaded', function() {
      const animateOnScrollElements = document.querySelectorAll('.animate-on-scroll');
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      }, {
        threshold: 0.2
      });
      
      animateOnScrollElements.forEach(element => {
        observer.observe(element);
      });
    });
  </script>
</Layout>