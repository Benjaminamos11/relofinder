            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
            </div>

        <!-- Filter Tags -->
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
          <div class="flex flex-wrap gap-4">
            <!-- Service Filter -->
            <div class="flex-1 min-w-[200px]">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Service Type</label>
              <select id="serviceFilter" class="w-full px-4 py-2.5 rounded-xl border-2 border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-100 transition-all">
                <option value="">All Services</option>
                {allServices.map(service => (
                  <option value={service}>{service.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</option>
                ))}
              </select>
            </div>

            <!-- Region Filter -->
            <div class="flex-1 min-w-[200px]">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Region</label>
              <select id="regionFilter" class="w-full px-4 py-2.5 rounded-xl border-2 border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-100 transition-all">
                <option value="">All Regions</option>
                {allRegions.map(region => (
                  <option value={region}>{region.charAt(0).toUpperCase() + region.slice(1)}</option>
                ))}
              </select>
            </div>

            <!-- Rating Filter -->
            <div class="flex-1 min-w-[200px]">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Minimum Rating</label>
              <select id="ratingFilter" class="w-full px-4 py-2.5 rounded-xl border-2 border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-100 transition-all">
                <option value="0">All Ratings</option>
                <option value="4.5">4.5+ Stars</option>
                <option value="4.0">4.0+ Stars</option>
                <option value="3.5">3.5+ Stars</option>
              </select>
            </div>

            <!-- Verified Filter -->
            <div class="flex-1 min-w-[200px]">
              <label class="block text-sm font-semibold text-gray-700 mb-2">Verification</label>
              <select id="verifiedFilter" class="w-full px-4 py-2.5 rounded-xl border-2 border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-100 transition-all">
                <option value="">All Companies</option>
                <option value="verified">Verified Only</option>
              </select>
            </div>
          </div>

          <!-- Clear Filters Button -->
          <div class="mt-4 flex items-center justify-between border-t border-gray-100 pt-4">
            <p class="text-sm text-gray-600">
              <span id="resultCount" class="font-semibold text-gray-900">{sortedCompanies.length}</span> companies found
            </p>
            <button 
              id="clearFilters"
              class="text-sm font-medium text-primary-600 hover:text-primary-700 transition-colors px-4 py-2 rounded-lg hover:bg-primary-50"
            >
              Clear All Filters
            </button>
          </div>
          </div>
        </div>

        <!-- Companies Grid -->
      <div id="companiesGrid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedCompanies.map(company => {
          const supabaseData = relocatorMap.get(company.data.name);
          const rating = supabaseData?.rating || company.data.rating?.score || 4.5;
          
          return (
            <div 
              class="company-card bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 flex flex-col"
              data-name={company.data.name.toLowerCase()}
              data-description={company.data.description.toLowerCase()}
              data-services={company.data.services.join(',')}
              data-regions={company.data.regions.join(',')}
              data-rating={rating}
              data-verified={company.data.verified ? 'true' : 'false'}
            >
              <div class="p-6 flex flex-col flex-grow">
                <div class="flex items-start justify-between mb-4 min-h-[28px]">
                  {company.data.verified && (
                    <span class="bg-green-50 text-green-700 text-xs font-medium px-2.5 py-1 rounded-full border border-green-200">
                      ✓ Verified
                    </span>
                  )}
                </div>

                <h3 class="text-xl font-bold mb-2 min-h-[56px] line-clamp-2">{company.data.name}</h3>
                <p class="text-gray-600 mb-4 line-clamp-3 min-h-[72px]">{company.data.description}</p>

                <div class="flex items-center mb-4">
                  <div class="flex text-yellow-400 mr-2">
                    {Array(5).fill(0).map((_, i) => (
                      <svg class={"w-4 h-4 " + (i < Math.floor(rating) ? 'text-yellow-400' : 'text-gray-300')} fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    ))}
                  </div>
                  <span class="text-sm text-gray-600 font-medium">{rating.toFixed(1)}</span>
                </div>

                <!-- Spacer to push button to bottom -->
                <div class="flex-grow"></div>

                <div class="border-t border-gray-100 pt-4 mt-auto">
                  <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                      <p class="text-xs text-gray-500 mb-1">Services</p>
                      <p class="text-sm text-gray-700 font-medium">{company.data.services.length} types</p>
                    </div>
                    <div>
                      <p class="text-xs text-gray-500 mb-1">Coverage</p>
                      <p class="text-sm text-gray-700 font-medium">{company.data.regions.length} regions</p>
                    </div>
                  </div>

                  <a href={`/companies/${company.slug}`} class="btn-primary w-full text-center text-sm block">
                    View Details
                  </a>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Insurance & Financial Services Section -->
  {insuranceAgencies.length > 0 && (
    <section class="py-16 bg-white border-t-2 border-gray-100">
      <div class="container">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 rounded-full bg-gradient-to-r from-blue-50 to-indigo-50 text-blue-700 font-medium text-sm mb-4">
            Specialized Services
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Insurance & <span class="gradient-text">Financial Services</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            FINMA-certified insurance brokers and financial advisors specializing in expat services
          </p>
          </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {insuranceAgencies.map(company => {
            const supabaseData = relocatorMap.get(company.data.name);
            const rating = supabaseData?.rating || company.data.rating?.score || 4.5;
            const tier = supabaseData?.tier || 'standard';
            
            return (
              <div class="bg-gradient-to-br from-white to-blue-50/30 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border-2 border-blue-100">
                <div class="p-6">
                  {tier === 'preferred' && (
                    <div class="mb-4">
                      <span class="bg-gradient-to-r from-yellow-400 to-yellow-500 text-yellow-900 px-3 py-1.5 rounded-full text-xs font-bold shadow-md">
                        ⭐ Preferred Partner
                      </span>
                    </div>
                    )}

                  <h3 class="text-xl font-bold mb-2">{company.data.name}</h3>
                  <p class="text-gray-600 mb-4 line-clamp-2">{company.data.description}</p>

                  <div class="flex items-center mb-4">
                    <div class="flex text-yellow-400 mr-2">
                      {Array(5).fill(0).map((_, i) => (
                        <svg class={"w-4 h-4 " + (i < Math.floor(rating) ? 'text-yellow-400' : 'text-gray-300')} fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      ))}
                    </div>
                    <span class="text-sm text-gray-600 font-medium">{rating.toFixed(1)}</span>
                  </div>

                  <div class="border-t border-blue-100 pt-4">
                    <p class="text-sm text-gray-600 mb-4">
                      <strong class="text-gray-900">Services:</strong> {company.data.services.slice(0, 2).join(', ')}
                      {company.data.services.length > 2 && ` +${company.data.services.length - 2} more`}
                    </p>
                    <a href={`/companies/${company.slug}`} class="btn-primary w-full text-center text-sm">
                        View Details
                      </a>
                  </div>
                </div>
              </div>
            );
          })}
      </div>
    </div>
  </section>
  )}

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-br from-primary-600 to-secondary-600 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Need Help Choosing?
        </h2>
        <p class="text-xl text-white/90 mb-8">
          Our relocation experts can help you find the perfect company for your specific needs and budget
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-white text-primary-600 px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-all duration-300 shadow-xl">
            Get Expert Advice
          </a>
          <a href="/chat" class="bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold hover:bg-white/20 transition-all duration-300">
            Use AI Assistant
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Filter and Search Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('searchInput') as HTMLInputElement;
      const serviceFilter = document.getElementById('serviceFilter') as HTMLSelectElement;
      const regionFilter = document.getElementById('regionFilter') as HTMLSelectElement;
      const ratingFilter = document.getElementById('ratingFilter') as HTMLSelectElement;
      const verifiedFilter = document.getElementById('verifiedFilter') as HTMLSelectElement;
      const clearFiltersBtn = document.getElementById('clearFilters') as HTMLButtonElement;
      const resultCount = document.getElementById('resultCount') as HTMLSpanElement;
      const companyCards = document.querySelectorAll('.company-card') as NodeListOf<HTMLElement>;

      function filterCompanies() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        const selectedService = serviceFilter.value;
        const selectedRegion = regionFilter.value;
        const minRating = parseFloat(ratingFilter.value);
        const onlyVerified = verifiedFilter.value === 'verified';

        let visibleCount = 0;

        companyCards.forEach(card => {
          const name = card.dataset.name || '';
          const description = card.dataset.description || '';
          const services = card.dataset.services || '';
          const regions = card.dataset.regions || '';
          const rating = parseFloat(card.dataset.rating || '0');
          const verified = card.dataset.verified === 'true';

          // Check all filter conditions
          const matchesSearch = !searchTerm || 
            name.includes(searchTerm) || 
            description.includes(searchTerm);
          
          const matchesService = !selectedService || 
            services.split(',').includes(selectedService);
          
          const matchesRegion = !selectedRegion || 
            regions.split(',').includes(selectedRegion);
          
          const matchesRating = rating >= minRating;
          
          const matchesVerified = !onlyVerified || verified;

          // Show/hide card based on all conditions
          if (matchesSearch && matchesService && matchesRegion && matchesRating && matchesVerified) {
            card.style.display = 'block';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });

        // Update result count
        resultCount.textContent = visibleCount.toString();

        // Show "no results" message if needed
        const grid = document.getElementById('companiesGrid');
        let noResultsMsg = document.getElementById('noResultsMessage');
        
        if (visibleCount === 0) {
          if (!noResultsMsg) {
            noResultsMsg = document.createElement('div');
            noResultsMsg.id = 'noResultsMessage';
            noResultsMsg.className = 'col-span-full text-center py-16';
            noResultsMsg.innerHTML = `
              <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
