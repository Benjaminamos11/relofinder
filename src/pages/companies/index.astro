---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { supabase } from '../../lib/supabase';

// Fetch companies from content collection
const companies = await getCollection('companies');

// Fetch real stats from Supabase
const { data: relocators } = await supabase
  .from('relocators')
  .select('id, name, tier, rating, seo_summary');

// Create a map for quick lookup
const relocatorMap = new Map();
if (relocators) {
  relocators.forEach(r => {
    relocatorMap.set(r.name, r);
  });
}

// Fetch total review count
const { data: googleReviews } = await supabase
  .from('google_reviews')
  .select('id');

const totalReviews = googleReviews?.length || 0;

// Calculate average rating from Supabase data
const avgRating = relocators && relocators.length > 0
  ? (relocators.reduce((sum, r) => sum + (r.rating || 0), 0) / relocators.length).toFixed(1)
  : '4.7';

// Separate relocation companies from insurance agencies
const relocationCompanies = companies.filter(c => 
  !c.data.name.toLowerCase().includes('expat savvy') &&
  !c.data.name.toLowerCase().includes('expat services switzerland') &&
  !c.data.name.toLowerCase().includes('swiss prime international')
);

const insuranceAgencies = companies.filter(c => 
  c.data.name.toLowerCase().includes('expat savvy') ||
  c.data.name.toLowerCase().includes('expat services switzerland') ||
  c.data.name.toLowerCase().includes('swiss prime international')
);

// Get featured companies (preferred and partner tiers from Supabase)
const featuredCompanies = relocationCompanies
  .filter(c => {
    const supabaseData = relocatorMap.get(c.data.name);
    return supabaseData && (supabaseData.tier === 'preferred' || supabaseData.tier === 'partner');
  })
  .sort((a, b) => {
    const aData = relocatorMap.get(a.data.name);
    const bData = relocatorMap.get(b.data.name);
    const aTier = aData?.tier === 'preferred' ? 2 : (aData?.tier === 'partner' ? 1 : 0);
    const bTier = bData?.tier === 'preferred' ? 2 : (bData?.tier === 'partner' ? 1 : 0);
    if (aTier !== bTier) return bTier - aTier;
    return (bData?.rating || 0) - (aData?.rating || 0);
  })
  .slice(0, 3);

// Sort remaining companies by rating
const sortedCompanies = relocationCompanies
  .filter(c => !featuredCompanies.includes(c))
  .sort((a, b) => {
    const aData = relocatorMap.get(a.data.name);
    const bData = relocatorMap.get(b.data.name);
    return (bData?.rating || 0) - (aData?.rating || 0);
  });

// Extract unique values
const allServices = [...new Set(relocationCompanies.flatMap(c => c.data.services))].sort();
const allRegions = [...new Set(relocationCompanies.flatMap(c => c.data.regions))].sort();

// Page metadata
const title = 'Relocation Companies Directory Switzerland | Find Trusted Relocators | ReloFinder.ch';
const description = 'Browse our directory of verified relocation companies in Switzerland. Compare services, read reviews, and find the perfect relocation partner for your move to Switzerland.';
---

