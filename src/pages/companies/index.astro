---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { supabase } from '../../lib/supabase';

// Fetch companies from content collection
const companies = await getCollection('companies');

// Fetch real stats from Supabase
const { data: relocators } = await supabase
  .from('relocators')
  .select('id, name, tier, rating, seo_summary');

// Create a map for quick lookup
const relocatorMap = new Map();
if (relocators) {
  relocators.forEach(r => {
    relocatorMap.set(r.name, r);
  });
}

// Fetch total review count
const { data: googleReviews } = await supabase
  .from('google_reviews')
  .select('id');

const totalReviews = googleReviews?.length || 0;

// Calculate average rating from Supabase data
const avgRating = relocators && relocators.length > 0
  ? (relocators.reduce((sum, r) => sum + (r.rating || 0), 0) / relocators.length).toFixed(1)
  : '4.7';

// Separate relocation companies from insurance agencies
const relocationCompanies = companies.filter(c => 
  !c.data.name.toLowerCase().includes('expat savvy') &&
  !c.data.name.toLowerCase().includes('expat services switzerland') &&
  !c.data.name.toLowerCase().includes('swiss prime international')
);

const insuranceAgencies = companies.filter(c => 
  c.data.name.toLowerCase().includes('expat savvy') ||
  c.data.name.toLowerCase().includes('expat services switzerland') ||
  c.data.name.toLowerCase().includes('swiss prime international')
);

// Get featured companies (preferred and partner tiers from Supabase)
const featuredCompanies = relocationCompanies
  .filter(c => {
    const supabaseData = relocatorMap.get(c.data.name);
    return supabaseData && (supabaseData.tier === 'preferred' || supabaseData.tier === 'partner');
  })
  .sort((a, b) => {
    const aData = relocatorMap.get(a.data.name);
    const bData = relocatorMap.get(b.data.name);
    const aTier = aData?.tier === 'preferred' ? 2 : (aData?.tier === 'partner' ? 1 : 0);
    const bTier = bData?.tier === 'preferred' ? 2 : (bData?.tier === 'partner' ? 1 : 0);
    if (aTier !== bTier) return bTier - aTier;
    return (bData?.rating || 0) - (aData?.rating || 0);
  })
  .slice(0, 3);

// Sort remaining companies by rating
const sortedCompanies = relocationCompanies
  .filter(c => !featuredCompanies.includes(c))
  .sort((a, b) => {
    const aData = relocatorMap.get(a.data.name);
    const bData = relocatorMap.get(b.data.name);
    return (bData?.rating || 0) - (aData?.rating || 0);
  });

// Extract unique values
const allServices = [...new Set(relocationCompanies.flatMap(c => c.data.services))].sort();
const allRegions = [...new Set(relocationCompanies.flatMap(c => c.data.regions))].sort();

// Page metadata
const title = 'Relocation Companies Directory Switzerland | Find Trusted Relocators | ReloFinder.ch';
const description = 'Browse our directory of verified relocation companies in Switzerland. Compare services, read reviews, and find the perfect relocation partner for your move to Switzerland.';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative py-16 md:py-24 bg-gradient-to-br from-gray-50 via-white to-primary-50/30 overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 bg-repeat" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23dc2626%22 fill-opacity=%220.1%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="container relative">
      <div class="max-w-6xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="mb-8" aria-label="Breadcrumb">
          <ol class="flex items-center justify-center space-x-2 text-sm text-gray-600">
            <li><a href="/" class="hover:text-primary-600 transition-colors">Home</a></li>
            <li><span class="text-gray-400">/</span></li>
            <li class="text-gray-900 font-medium">Relocation Companies</li>
          </ol>
        </nav>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Find Your Perfect <span class="gradient-text">Relocation Partner</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-12">
          Browse {relocationCompanies.length} verified relocation companies in Switzerland. Compare services, read reviews, and connect with trusted professionals who specialize in making your move seamless.
        </p>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
          <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-100">
            <div class="text-3xl md:text-4xl font-bold gradient-text mb-2">{relocationCompanies.length}</div>
            <div class="text-sm text-gray-600">Verified Companies</div>
          </div>
          <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-100">
            <div class="text-3xl md:text-4xl font-bold gradient-text mb-2">{totalReviews}</div>
            <div class="text-sm text-gray-600">Total Reviews</div>
          </div>
          <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-100">
            <div class="text-3xl md:text-4xl font-bold gradient-text mb-2">{allRegions.length}</div>
            <div class="text-sm text-gray-600">Regions Covered</div>
          </div>
          <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-100">
            <div class="text-3xl md:text-4xl font-bold gradient-text mb-2">{avgRating}</div>
            <div class="text-sm text-gray-600">Average Rating</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Companies -->
  {featuredCompanies.length > 0 && (
    <section class="py-16 bg-white">
      <div class="container">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 rounded-full bg-gradient-to-r from-primary-50 to-secondary-50 text-primary-700 font-medium text-sm mb-4">
            Featured Partners
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Top-Rated <span class="gradient-text">Relocation Companies</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Our featured partners have consistently delivered exceptional service to expats moving to Switzerland
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {featuredCompanies.map((company) => {
            const supabaseData = relocatorMap.get(company.data.name);
            const tier = supabaseData?.tier || 'standard';
            const rating = supabaseData?.rating || company.data.rating?.score || 4.5;
            
            return (
              <div class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition-all duration-300 border-2 border-primary-100 hover:border-primary-300">
                <div class="flex items-center justify-between mb-6">
                  {tier === 'preferred' && (
                    <span class="bg-gradient-to-r from-yellow-400 to-yellow-500 text-yellow-900 px-3 py-1.5 rounded-full text-xs font-bold shadow-md">
                      ⭐ Preferred Partner
                    </span>
                  )}
                  {tier === 'partner' && (
                    <span class="bg-gradient-to-r from-blue-400 to-blue-500 text-blue-900 px-3 py-1.5 rounded-full text-xs font-bold shadow-md">
                      ✓ Featured Partner
                    </span>
                  )}
                </div>
                
                <h3 class="text-xl font-bold mb-3">{company.data.name}</h3>
                <p class="text-gray-600 mb-4 line-clamp-2">{company.data.description}</p>
                
                <div class="flex items-center mb-4">
                  <div class="flex text-yellow-400 mr-2">
                    {Array(5).fill(0).map((_, i) => (
                      <svg class={"w-5 h-5 " + (i < Math.floor(rating) ? 'text-yellow-400' : 'text-gray-300')} fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    ))}
                  </div>
                  <span class="text-sm text-gray-600 font-medium">{rating.toFixed(1)}</span>
                </div>

                <div class="border-t border-gray-100 pt-4">
                  <p class="text-sm text-gray-600 mb-3">
                    <strong class="text-gray-900">Services:</strong> {company.data.services.slice(0, 3).join(', ')}
                    {company.data.services.length > 3 && ` +${company.data.services.length - 3} more`}
                  </p>
                  <p class="text-sm text-gray-600 mb-4">
                    <strong class="text-gray-900">Regions:</strong> {company.data.regions.slice(0, 3).join(', ')}
                  </p>
                  <a href={`/companies/${company.slug}`} class="btn-primary w-full text-center">
                    View Details
                  </a>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- All Relocation Companies -->
  <section class="py-16 bg-gradient-to-br from-gray-50 to-white">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          All <span class="gradient-text">Relocation Companies</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Comprehensive directory of verified relocation services across Switzerland
        </p>
      </div>

      <!-- Companies Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedCompanies.map(company => {
          const supabaseData = relocatorMap.get(company.data.name);
          const rating = supabaseData?.rating || company.data.rating?.score || 4.5;
          
          return (
            <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100">
              <div class="p-6">
                <div class="flex items-start justify-between mb-4">
                  {company.data.verified && (
                    <span class="bg-green-50 text-green-700 text-xs font-medium px-2.5 py-1 rounded-full border border-green-200">
                      ✓ Verified
                    </span>
                  )}
                </div>

                <h3 class="text-xl font-bold mb-2">{company.data.name}</h3>
                <p class="text-gray-600 mb-4 line-clamp-2">{company.data.description}</p>

                <div class="flex items-center mb-4">
                  <div class="flex text-yellow-400 mr-2">
                    {Array(5).fill(0).map((_, i) => (
                      <svg class={"w-4 h-4 " + (i < Math.floor(rating) ? 'text-yellow-400' : 'text-gray-300')} fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    ))}
                  </div>
                  <span class="text-sm text-gray-600 font-medium">{rating.toFixed(1)}</span>
                </div>

                <div class="border-t border-gray-100 pt-4">
                  <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                      <p class="text-xs text-gray-500 mb-1">Services</p>
                      <p class="text-sm text-gray-700 font-medium">{company.data.services.length} types</p>
                    </div>
                    <div>
                      <p class="text-xs text-gray-500 mb-1">Coverage</p>
                      <p class="text-sm text-gray-700 font-medium">{company.data.regions.length} regions</p>
                    </div>
                  </div>

                  <a href={`/companies/${company.slug}`} class="btn-primary w-full text-center text-sm">
                    View Details
                  </a>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Insurance & Financial Services Section -->
  {insuranceAgencies.length > 0 && (
    <section class="py-16 bg-white border-t-2 border-gray-100">
      <div class="container">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 rounded-full bg-gradient-to-r from-blue-50 to-indigo-50 text-blue-700 font-medium text-sm mb-4">
            Specialized Services
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Insurance & <span class="gradient-text">Financial Services</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            FINMA-certified insurance brokers and financial advisors specializing in expat services
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {insuranceAgencies.map(company => {
            const supabaseData = relocatorMap.get(company.data.name);
            const rating = supabaseData?.rating || company.data.rating?.score || 4.5;
            const tier = supabaseData?.tier || 'standard';
            
            return (
              <div class="bg-gradient-to-br from-white to-blue-50/30 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border-2 border-blue-100">
                <div class="p-6">
                  {tier === 'preferred' && (
                    <div class="mb-4">
                      <span class="bg-gradient-to-r from-yellow-400 to-yellow-500 text-yellow-900 px-3 py-1.5 rounded-full text-xs font-bold shadow-md">
                        ⭐ Preferred Partner
                      </span>
                    </div>
                  )}

                  <h3 class="text-xl font-bold mb-2">{company.data.name}</h3>
                  <p class="text-gray-600 mb-4 line-clamp-2">{company.data.description}</p>

                  <div class="flex items-center mb-4">
                    <div class="flex text-yellow-400 mr-2">
                      {Array(5).fill(0).map((_, i) => (
                        <svg class={"w-4 h-4 " + (i < Math.floor(rating) ? 'text-yellow-400' : 'text-gray-300')} fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      ))}
                    </div>
                    <span class="text-sm text-gray-600 font-medium">{rating.toFixed(1)}</span>
                  </div>

                  <div class="border-t border-blue-100 pt-4">
                    <p class="text-sm text-gray-600 mb-4">
                      <strong class="text-gray-900">Services:</strong> {company.data.services.slice(0, 2).join(', ')}
                      {company.data.services.length > 2 && ` +${company.data.services.length - 2} more`}
                    </p>
                    <a href={`/companies/${company.slug}`} class="btn-primary w-full text-center text-sm">
                      View Details
                    </a>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-br from-primary-600 to-secondary-600 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Need Help Choosing?
        </h2>
        <p class="text-xl text-white/90 mb-8">
          Our relocation experts can help you find the perfect company for your specific needs and budget
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-white text-primary-600 px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-all duration-300 shadow-xl">
            Get Expert Advice
          </a>
          <a href="/chat" class="bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold hover:bg-white/20 transition-all duration-300">
            Use AI Assistant
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
