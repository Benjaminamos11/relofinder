---
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/blog/BlogCard.astro';

// Page metadata
const title = "Auris Relocation | Expert Relocation Services Across Switzerland | ReloFinder.ch";
const description = "Auris Relocation offers comprehensive advisory and relocation services for companies and individuals moving to Switzerland. Offices in Zurich, Geneva, Basel, Bern, Lausanne, Zug, Lucerne, Lugano, and Neuchatel.";

// Format date helper function
function formatDate(dateString) {
  const options = { year: 'numeric', month: 'long', day: 'numeric' };
  return new Date(dateString).toLocaleDateString('en-US', options);
}

// Company data
const company = {
  name: 'Auris Relocation',
  logo: 'https://www.aurisrelocation.com/cstyle/6680750/images/logo.svg',
  description: 'Auris Relocation offers comprehensive advisory and relocation services for companies and individuals moving to Switzerland.',
  longDescription: `Auris Relocation offers a comprehensive range of vital advisory services for companies, their employees and individuals planning to settle in Switzerland as well as for personnel transferring abroad. At Auris Relocation, we are experts in listening. Listening is both the origin of our company name, and the very heart of the best professional relationships.

As the largest privately owned and independent relocation company in Switzerland, Auris has a unique and enviable position. Our independence guarantees that the advice we supply is absolutely impartial and in accordance with the objectives of our clients.`,
  services: [
    {
      name: 'Advisory Services',
      description: 'Strategic relocation planning, policy development, and addressing issues when setting up or expanding a company in Switzerland.'
    },
    {
      name: 'Immigration Services',
      description: 'Work and residence permits, family reunion, visa support, permit extensions, and departure formalities.'
    },
    {
      name: 'Cross-Cultural Training',
      description: 'Help newcomers interact successfully with their new teams and host-society through qualified cross-cultural training.'
    },
    {
      name: 'Home Search & Property Services',
      description: 'Personalized home search based on preferences, budget, and needs, including property viewings and lease negotiations.'
    },
    {
      name: 'Global Mobility Management',
      description: 'Comprehensive services for companies and individuals moving internationally, with ongoing support throughout the process.'
    },
    {
      name: 'Destination Services & Move Management',
      description: 'School search, settling-in services, and coordination of the physical move to Switzerland.'
    }
  ],
  regions: ['Zurich', 'Geneva', 'Basel', 'Bern', 'Lausanne', 'Zug', 'Lucerne', 'Lugano', 'Neuchatel'],
  rating: 4.8,
  reviewCount: 124,
  founded: 1998,
  teamSize: '50-100',
  languages: ['English', 'German', 'French', 'Italian', 'Spanish', 'Portuguese'],
  certifications: ['EuRA Global Quality Seal', 'ISO 27001', 'EcoVadis Silver Medal'],
  partnerStatus: 'preferred',
  contactInfo: {
    address: 'Sternenstrasse 12, 8002 Zurich (Head Office)',
    email: 'info@aurisrelocation.com',
    phone: '+41 44 808 60 00'
  },
  stats: [
    {
      label: 'Nationwide Offices',
      value: '9'
    },
    {
      label: 'Client Satisfaction',
      value: '4.9/5'
    },
    {
      label: 'Years of Experience',
      value: '25+'
    }
  ],
  reviews: [
    {
      author: 'Sarah Johnson',
      role: 'Finance Director at Global Tech Corp',
      image: 'https://images.pexels.com/photos/1181686/pexels-photo-1181686.jpeg?auto=compress&cs=tinysrgb&w=100',
      content: 'Auris Relocation made our move to Zurich seamless and stress-free. Their immigration specialists navigated the complex permit process efficiently, and their home search team found us the perfect apartment in our preferred neighborhood. Highly recommended!',
      rating: 5
    },
    {
      author: 'Thomas Weber',
      role: 'Global Mobility Manager at Swiss Pharma Inc.',
      image: 'https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg?auto=compress&cs=tinysrgb&w=100',
      content: "As an HR manager responsible for multiple international transfers, I've found Auris Relocation to be an invaluable partner. Their comprehensive service offering, attention to detail, and proactive communication have consistently exceeded our expectations.",
      rating: 5
    },
    {
      author: 'Maria Rodriguez',
      role: 'Spouse of relocated executive',
      image: 'https://images.pexels.com/photos/774909/pexels-photo-774909.jpeg?auto=compress&cs=tinysrgb&w=100',
      content: 'The cross-cultural training provided by Auris was instrumental in helping our family adjust to life in Switzerland. Their ongoing support throughout our relocation journey made us feel welcome and confident in our new home.',
      rating: 4
    }
  ]
};

// Related blog posts
const relatedPosts = [
  {
    id: 'swiss-visa-guide',
    title: 'Complete Guide to Swiss Visa and Residence Permits',
    excerpt: 'Navigate the complexities of Swiss immigration with our step-by-step guide to various permit types and application processes.',
    image: 'https://images.pexels.com/photos/1201488/pexels-photo-1201488.jpeg?auto=compress&cs=tinysrgb&w=800',
    category: 'Immigration',
    author: 'Maria Schmidt',
    authorImage: 'https://images.pexels.com/photos/1181686/pexels-photo-1181686.jpeg?auto=compress&cs=tinysrgb&w=100',
    date: '2025-04-12',
    readTime: '8 min read'
  },
  {
    id: 'cultural-integration-tips',
    title: '10 Cultural Integration Tips for Expats in Switzerland',
    excerpt: 'Learn how to navigate social customs, workplace etiquette, and everyday life to feel at home in Switzerland faster.',
    image: 'https://images.pexels.com/photos/1543793/pexels-photo-1543793.jpeg?auto=compress&cs=tinysrgb&w=800',
    category: 'Integration',
    author: 'Thomas Weber',
    authorImage: 'https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg?auto=compress&cs=tinysrgb&w=100',
    date: '2025-03-25',
    readTime: '6 min read'
  }
];
---

<Layout title={title} description={description}>
  <!-- Schema.org structured data for SEO -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Auris Relocation",
      "image": "https://www.aurisrelocation.com/cstyle/6680750/images/logo.svg",
      "url": "https://www.aurisrelocation.com/",
      "@id": "https://www.aurisrelocation.com/",
      "telephone": "+41 44 808 60 00",
      "email": "info@aurisrelocation.com",
      "description": "Auris Relocation offers a comprehensive range of vital advisory services for companies, their employees and individuals planning to settle in Switzerland as well as for personnel transferring abroad.",
      "address": [
        {
          "@type": "PostalAddress",
          "streetAddress": "Sternenstrasse 12",
          "addressLocality": "Zurich",
          "postalCode": "8002",
          "addressCountry": "CH"
        }
      ],
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 47.3769,
        "longitude": 8.5417
      },
      "areaServed": {
        "@type": "Country",
        "name": "Switzerland"
      },
      "sameAs": [
        "https://www.linkedin.com/company/auris-relocation-ag"
      ],
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.8",
        "reviewCount": "124"
      },
      "priceRange": "$$$$"
    }
  </script>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-accent-800 to-accent-900 text-white py-16 md:py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('https://res.cloudinary.com/dphbnwjtx/image/upload/v1747075365/a-stylized-hand-drawn-sketch-in-red-and-_0X-QLYauSvagbqHWT_YNQg_mxoIrEg6QS6ES0zn0FS9Qw_hlo3lx.webp'); background-position: center; background-size: cover; mix-blend-mode: multiply;"></div>
    </div>
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 items-center gap-12 relative">
        <div class="w-32 h-32 md:w-40 md:h-40 bg-white rounded-2xl p-4 flex items-center justify-center shadow-xl transform hover:scale-105 transition-transform duration-300">
          <img 
            src={company.logo} 
            alt={`${company.name} logo`} 
            class="w-full h-full object-contain"
          />
        </div>
        <div class="flex flex-col items-start">
          <div class="flex items-center gap-4 mb-4">
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold">{company.name}</h1>
            {company.partnerStatus === 'preferred' && (
              <span class="bg-primary-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                Preferred Partner
              </span>
            )}
          </div>
          <p class="text-lg md:text-xl text-white/90 mb-6">{company.description}</p>
          <div class="flex flex-wrap gap-4">
            <div class="flex items-center">
              <span class="text-yellow-500 font-bold text-xl mr-1">{company.rating}</span>
              <div class="flex text-yellow-400">
                {Array(5).fill(0).map((_, i) => (
                  <svg xmlns="http://www.w3.org/2000/svg" class={`h-5 w-5 ${i < Math.floor(company.rating) ? 'text-yellow-400' : 'text-gray-300'}`} viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <span class="text-white/80 ml-1">({company.reviewCount} reviews)</span>
            </div>
            <div class="flex items-center gap-2">
              {company.certifications.map(cert => (
                <span class="bg-white/10 px-2 py-1 rounded text-sm">{cert}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats -->
  <section class="bg-white py-12 border-b border-gray-200">
    <div class="container">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {company.stats.map(stat => (
          <div class="card p-6 text-center transform hover:-translate-y-1 transition-transform duration-300">
            <p class="text-3xl md:text-4xl font-bold gradient-text mb-2">{stat.value}</p>
            <p class="text-accent-600 font-medium">{stat.label}</p>
          </div>
        ))}
        <div class="card p-6 text-center transform hover:-translate-y-1 transition-transform duration-300">
          <p class="text-3xl md:text-4xl font-bold gradient-text mb-2">{company.founded}</p>
          <p class="text-accent-600 font-medium">Founded</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Company Details -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-8">
          <div class="prose prose-lg mb-12">
            <h2 class="text-2xl font-bold mb-4">About {company.name}</h2>
            <p class="text-accent-600 whitespace-pre-line">{company.longDescription}</p>
          </div>

          <div class="mb-12">
            <h2 class="text-2xl font-bold mb-6 flex items-center">
              <span class="bg-primary-100 text-primary-600 p-2 rounded-lg mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </span>
              Our Services
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {company.services.map(service => (
              <div class="card p-6 hover:shadow-lg transition-shadow duration-300">
                <h3 class="text-xl font-semibold mb-3">{service.name}</h3>
                <p class="text-accent-600">{service.description}</p>
              </div>
            ))}
            </div>
          </div>

          <div class="mb-12">
            <h2 class="text-2xl font-bold mb-6 flex items-center">
              <span class="bg-yellow-100 text-yellow-600 p-2 rounded-lg mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
              </span>
              Client Reviews
            </h2>
            <div class="grid grid-cols-1 gap-6">
            {company.reviews.map(review => (
              <div class="card p-6 hover:shadow-lg transition-shadow duration-300">
                <div class="flex items-start gap-4">
                  <img 
                    src={review.image} 
                    alt={review.author} 
                    class="w-12 h-12 rounded-full object-cover"
                  />
                  <div>
                    <h4 class="font-semibold">{review.author}</h4>
                    <p class="text-sm text-accent-500">{review.role}</p>
                    <div class="flex text-yellow-400 my-2">
                      {Array(5).fill(0).map((_, i) => (
                        <svg xmlns="http://www.w3.org/2000/svg" class={`h-4 w-4 ${i < review.rating ? 'text-yellow-400' : 'text-gray-300'}`} viewBox="0 0 20 20" fill="currentColor">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                    <p class="text-accent-600">{review.content}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>

          <h2 class="text-2xl font-bold mb-6 mt-12">Related Articles</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {relatedPosts.map(post => (
              <BlogCard post={post} formatDate={formatDate} />
            ))}
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-4 relative">
          {company.partnerStatus === 'preferred' ? (
            <div class="card p-6 mb-6 lg:sticky lg:top-24">
              <h3 class="text-xl font-semibold mb-4">Request Information</h3>
              <form class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-accent-700 mb-1">Name*</label>
                  <input 
                    type="text" 
                    required 
                    class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-primary-500"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-accent-700 mb-1">Email*</label>
                  <input 
                    type="email" 
                    required 
                    class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-primary-500"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-accent-700 mb-1">Message*</label>
                  <textarea 
                    required 
                    rows="4"
                    class="w-full px-4 py-2 border border-gray-200 rounded focus:outline-none focus:ring-2 focus:ring-primary-500"
                  ></textarea>
                </div>
                <button type="submit" class="btn-primary w-full">
                  Send Request
                </button>
                <p class="text-xs text-accent-500 text-center">
                  By submitting this form, you agree to our Privacy Policy.
                </p>
              </form>
            </div>
          ) : (
            <div class="card p-6 mb-6 lg:sticky lg:top-24">
              <h3 class="text-xl font-semibold mb-4">Contact Through ReloFinder</h3>
              <p class="text-accent-600 mb-4">
                To ensure the best service and protect your interests, please contact this company through ReloFinder.
              </p>
              <a href="/contact" class="btn-primary w-full text-center">
                Contact Us
              </a>
            </div>
          )}

          <div class="card p-6 mb-6 bg-gradient-to-br from-accent-50 to-white">
            <h3 class="text-xl font-semibold mb-4">Office Locations</h3>
            <div class="space-y-4">
              <div>
                <p class="font-medium mb-1">Zurich (Head Office)</p>
                <p class="text-accent-600">Sternenstrasse 12, 8002 Zurich</p>
              </div>
              <div>
                <p class="font-medium mb-1">Other Locations</p>
                <p class="text-accent-600">Geneva, Basel, Bern, Lausanne, Zug, Lucerne, Lugano, Neuchatel</p>
              </div>
            </div>
          </div>

          <div class="card p-6 mb-6 bg-gradient-to-br from-accent-50 to-white">
            <h3 class="text-xl font-semibold mb-4">Company Information</h3>
            <div class="space-y-4">
              <div>
                <p class="text-sm text-accent-500">Founded</p>
                <p class="font-medium">{company.founded}</p>
              </div>
              <div>
                <p class="text-sm text-accent-500">Team Size</p>
                <p class="font-medium">{company.teamSize}</p>
              </div>
              <div>
                <p class="text-sm text-accent-500">Languages</p>
                <p class="font-medium">{company.languages.join(', ')}</p>
              </div>
              <div>
                <p class="text-sm text-accent-500">Regions Served</p>
                <p class="font-medium">{company.regions.join(', ')}</p>
              </div>
              <div>
                <p class="text-sm text-accent-500">Certifications</p>
                <div class="flex flex-wrap gap-2 mt-1">
                  {company.certifications.map(cert => (
                    <span class="bg-accent-100 text-accent-600 px-2 py-1 rounded text-sm">{cert}</span>
                  ))}
                </div>
              </div>
            </div>
          </div>

          <div class="card p-6 bg-gradient-to-br from-accent-50 to-white">
            <h3 class="text-xl font-semibold mb-4">Contact Information</h3>
            <div class="space-y-4">
              <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-600 mr-2 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <p class="text-accent-600">{company.contactInfo.address}</p>
              </div>
              {company.partnerStatus === 'preferred' && (
                <>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <a href={`mailto:${company.contactInfo.email}`} class="text-accent-600 hover:text-primary-600">
                      {company.contactInfo.email}
                    </a>
                  </div>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <a href={`tel:${company.contactInfo.phone}`} class="text-accent-600 hover:text-primary-600">
                      {company.contactInfo.phone}
                    </a>
                  </div>
                </>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-accent-50">
    <div class="container">
      <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden">
        <div class="grid grid-cols-1 md:grid-cols-2">
          <div class="p-8 md:p-12">
            <h2 class="text-2xl md:text-3xl font-bold mb-4">Need relocation assistance?</h2>
            <p class="text-accent-600 mb-6">
              Let us help you find the perfect relocation partner for your move to Switzerland.
            </p>
            <a href="/contact" class="btn-primary">
              Get Started
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
          <div class="hidden md:block">
            <img 
              src="https://images.pexels.com/photos/3184338/pexels-photo-3184338.jpeg?auto=compress&cs=tinysrgb&w=800" 
              alt="Relocation assistance" 
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout> 