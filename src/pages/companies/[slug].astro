---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import RelocatorHero from '../../components/relocators/RelocatorHero.astro';

export async function getStaticPaths() {
  const companies = await getCollection('companies');
  return companies.map((company) => ({
    params: { slug: company.slug },
    props: { company },
  }));
}

type Props = {
  company: CollectionEntry<'companies'>;
};

const { company } = Astro.props;
const { Content } = await company.render();

// Extract data from frontmatter
const {
  name,
  logo,
  description,
  phone,
  email,
  website,
  rating,
  founded,
  employees,
  languages,
  regions,
  services,
  specializations
} = company.data;

// SEO metadata
const title = `${name} | Swiss Relocation Services | ReloFinder.ch`;
const seoDescription = description || `Professional relocation services in Switzerland by ${name}. Expert assistance for moving to and from Switzerland.`;
const image = logo || '/images/relofinder-og.jpg';
---

<Layout title={title} description={seoDescription} image={image}>
  <!-- Hero Section -->
  <RelocatorHero 
    name={name}
    logo={logo}
    description={description}
    phone={phone}
    email={email}
    website={website}
    rating={rating}
  />

  <!-- Main Content -->
  <main class="bg-gray-50">
    <!-- Company Overview -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="prose prose-lg prose-blue max-w-none">
            <Content />
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Facts -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center mb-12">Company Overview</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Founded -->
            {founded && (
              <div class="bg-white rounded-2xl p-6 shadow-sm text-center">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m-6 0h6m-6 0V7a1 1 0 00-1 1v9a1 1 0 001 1h8a1 1 0 001-1V8a1 1 0 00-1-1h-1"/>
                  </svg>
                </div>
                <h3 class="font-bold text-gray-900 mb-1">Founded</h3>
                <p class="text-gray-600">{founded}</p>
              </div>
            )}

            <!-- Team Size -->
            {employees && (
              <div class="bg-white rounded-2xl p-6 shadow-sm text-center">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                </div>
                <h3 class="font-bold text-gray-900 mb-1">Team Size</h3>
                <p class="text-gray-600">{employees} {employees === "1" ? "expert" : "experts"}</p>
              </div>
            )}

            <!-- Languages -->
            {languages && languages.length > 0 && (
              <div class="bg-white rounded-2xl p-6 shadow-sm text-center">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
                  </svg>
                </div>
                <h3 class="font-bold text-gray-900 mb-1">Languages</h3>
                <p class="text-gray-600">{languages.join(', ')}</p>
              </div>
            )}

            <!-- Rating -->
            {rating && (
              <div class="bg-white rounded-2xl p-6 shadow-sm text-center">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                  <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                </div>
                <h3 class="font-bold text-gray-900 mb-1">Rating</h3>
                <p class="text-gray-600">{rating.score}/5 â˜… ({rating.reviews} reviews)</p>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-8">Ready to Start Your Swiss Journey?</h2>
          <p class="text-xl text-gray-600 mb-8">
            Contact {name} today for a personalized consultation about your relocation needs.
          </p>
          
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            {phone && (
              <a 
                href={`tel:${phone}`}
                class="inline-flex items-center px-8 py-4 bg-blue-700 text-white font-semibold rounded-xl hover:bg-blue-800 transition-all duration-300 shadow-lg hover:shadow-xl"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                Call Now
              </a>
            )}
            
            {email && (
              <a 
                href={`mailto:${email}`}
                class="inline-flex items-center px-8 py-4 bg-white border-2 border-blue-700 text-blue-700 font-semibold rounded-xl hover:bg-blue-50 transition-all duration-300"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                Send Email
              </a>
            )}
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout> 