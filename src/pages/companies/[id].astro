---
import Layout from '../../layouts/Layout.astro';
import SchemaMarkup from '../../components/common/SchemaMarkup.astro';
import { getCollection } from 'astro:content';
import { fetchGoogleReviews, getMockReviews, type FormattedReview, type BusinessReviewData } from '../../utils/google-reviews';

// Generate static paths for all companies
export async function getStaticPaths() {
  const companies = await getCollection('companies');
  return companies.map((company: any) => ({
    params: { id: (company as any).data.id },
    props: { company },
  }));
}

// Get company data from props
const { company } = Astro.props;
const companyData = (company as any).data;

// Get related services and regions for linking
const services = await getCollection('services');
const regions = await getCollection('regions');

// Reviews data
const mockReviews = getMockReviews();
let reviewsData: BusinessReviewData = {
  rating: 4.5,
  reviewCount: 50,
  reviews: mockReviews,
  businessInfo: { address: '', placeId: '' }
};

try {
  const apiKey = import.meta.env.SERPAPI_KEY;
  if (apiKey && companyData.googleMyBusinessUrl) {
    const fetchedReviews = await fetchGoogleReviews(companyData.googleMyBusinessUrl, apiKey);
    if (fetchedReviews) {
      reviewsData = fetchedReviews;
    }
  }
} catch (error) {
  console.log('Error fetching Google reviews:', error);
}

const actualRating = companyData.rating?.score || reviewsData.rating || 4.5;
const actualReviewCount = companyData.rating?.reviews || reviewsData.reviewCount || 50;
const reviewsToDisplay = reviewsData.reviews || [];

// Determine partner status
const isPreferred = companyData.featured || companyData.preferred || false;
const verificationSource = companyData.website || "official company information";
const lastVerified = new Date().toISOString().split('T')[0]; // Today's date for demo

// SEO setup
const title = `${companyData.name} ‚Äì Relocation Services in Switzerland | ReloFinder`;
const description = `Discover ${companyData.name}, a verified relocation partner in Switzerland. Services: housing, immigration, settling-in. Reviews & contact details on ReloFinder.`;

// FAQ data for structured markup
const faqs = [
  {
    question: `Why choose ${companyData.name}?`,
    answer: `${companyData.name} offers ${companyData.specializations?.slice(0,2).join(' and ') || 'comprehensive relocation services'} across Switzerland, with expertise in ${companyData.services?.slice(0,3).join(', ') || 'visa, housing, and settling-in support'}.`
  },
  {
    question: `Is ${companyData.name} right for you?`,
    answer: `${companyData.name} is a good partner if you are relocating to Switzerland for work or family, need support with permits, housing, or schools, and prefer a verified relocation provider.`
  },
  {
    question: `What regions does ${companyData.name} cover?`,
    answer: `${companyData.name} provides services across ${companyData.regions?.length || 'multiple'} Swiss regions, ensuring local expertise for your relocation destination.`
  }
];
---

<Layout
  title={title}
  description={description}
  canonical={`https://relofinder.ch/companies/${companyData.id}`}
  keywords={[
    `${companyData.name.toLowerCase()} switzerland`,
    `${companyData.name.toLowerCase()} relocation services`,
    'swiss relocation expert',
    'verified relocation partner',
    ...companyData.specializations?.map((s: string) => `${s.toLowerCase()} switzerland`) || [],
    ...companyData.regions?.map((r: string) => `relocation ${r.toLowerCase()}`) || []
  ]}
>

  <!-- Structured Data for SEO & LLM -->
  <SchemaMarkup 
    type="company"
    data={{
      "@type": "ProfessionalService",
      "name": companyData.name,
      "description": companyData.description,
      "url": `https://relofinder.ch/companies/${companyData.id}`,
      "address": isPreferred && companyData.address ? {
        "@type": "PostalAddress",
        "streetAddress": companyData.address.street,
        "postalCode": companyData.address.postalCode,
        "addressLocality": companyData.address.city,
        "addressCountry": "CH"
      } : undefined,
      "telephone": isPreferred ? companyData.phone : undefined,
      "email": isPreferred ? companyData.email : undefined,
      "sameAs": isPreferred && companyData.website ? [companyData.website] : undefined,
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": actualRating,
        "reviewCount": actualReviewCount
      },
      "serviceArea": companyData.regions || ["Switzerland"],
      "hasCredential": isPreferred ? "Preferred Partner on ReloFinder" : undefined
    }}
  />

  <!-- FAQ Structured Data -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": faqs[0].question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": faqs[0].answer
          }
        },
        {
          "@type": "Question",
          "name": faqs[1].question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": faqs[1].answer
          }
        },
        {
          "@type": "Question",
          "name": faqs[2].question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": faqs[2].answer
          }
        }
      ]
    }
  </script>

  <!-- Breadcrumb Schema -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://relofinder.ch"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Companies",
          "item": "https://relofinder.ch/companies"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": companyData.name,
          "item": `https://relofinder.ch/companies/${companyData.id}`
        }
      ]
    }
  </script>

  <!-- 1. HERO SECTION -->
  <section class="bg-gradient-to-br from-gray-50 via-white to-blue-50 py-16">
    <div class="container max-w-6xl mx-auto px-4">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <div class="flex items-center space-x-2 text-sm text-gray-500">
          <a href="/" class="hover:text-red-600 transition-colors">Home</a>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"/></svg>
          <a href="/companies" class="hover:text-red-600 transition-colors">Companies</a>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"/></svg>
          <span class="text-gray-900">{companyData.name}</span>
        </div>
      </nav>

      <div class="text-center max-w-4xl mx-auto">
        {isPreferred && (
          <div class="inline-flex items-center gap-2 bg-gradient-to-r from-green-50 to-emerald-50 px-4 py-2 rounded-full border border-green-200 text-green-700 font-medium text-sm mb-6">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            ‚úî Preferred Partner on ReloFinder
          </div>
        )}
        
        <h1 class="text-4xl lg:text-5xl font-bold mb-6 leading-tight text-gray-900">
          {companyData.name} ‚Äì Relocation Services in Switzerland
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          {companyData.tagline || "Professional relocation support for your move to Switzerland"}
        </p>

        <!-- Rating Display -->
        <div class="flex items-center justify-center gap-4 mb-8">
          <div class="flex items-center gap-2">
            <div class="flex text-yellow-500">
              {Array.from({length: 5}, (_, i) => (
                <svg class={`w-5 h-5 ${i < Math.floor(actualRating) ? 'fill-current' : 'fill-gray-300'}`} viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
            <span class="text-2xl font-bold text-gray-900">{actualRating}/5</span>
            <span class="text-gray-600">({actualReviewCount} reviews)</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 2. INTRO SUMMARY -->
  <section class="py-12 bg-white border-b border-gray-100">
    <div class="container max-w-4xl mx-auto px-4">
      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-8 border border-blue-100">
        <p class="text-lg text-gray-700 leading-relaxed mb-4">
          <strong>{companyData.name}</strong> provides relocation support across Switzerland, including services such as housing, immigration, and settling-in assistance. 
          {isPreferred 
            ? `This profile is verified via ${verificationSource}, and as a Preferred Partner includes full contact details and reviews.`
            : `This profile includes verified information and reviews from our platform.`
          }
        </p>
        <div class="flex items-center gap-4 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Verified from {verificationSource}
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a4 4 0 118 0v4m-4 12v-4m0 0V9m0 4h4m-4 0H8"/>
            </svg>
            Last checked: {lastVerified}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 3. COMPANY INFORMATION CARD -->
  <section class="py-16 bg-gray-50">
    <div class="container max-w-4xl mx-auto px-4">
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200">
        <!-- Gradient Header -->
        <div class="bg-gradient-to-r from-red-600 to-red-700 px-8 py-6">
          <h2 class="text-2xl font-bold text-white mb-2">Company Information</h2>
          <p class="text-red-100">
            {isPreferred ? "Complete contact details and verified information" : "Verified company profile"}
          </p>
        </div>

        <!-- Content -->
        <div class="p-8">
          <div class="grid md:grid-cols-2 gap-8">
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h1a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">Company Name</h3>
                  <p class="text-gray-700">{companyData.name}</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">Regions Covered</h3>
                  <p class="text-gray-700">
                    {companyData.regions?.join(', ') || 'Switzerland-wide services'}
                  </p>
                </div>
              </div>
            </div>

            {isPreferred && (
              <div class="space-y-4">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Contact Details</h3>
                
                {companyData.address && (
                  <div class="bg-gray-50 rounded-xl p-4">
                    <div class="flex items-start gap-3">
                      <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                        <span class="text-red-600 text-lg">üìç</span>
                      </div>
                      <div>
                        <p class="font-medium text-gray-900">Address</p>
                        <p class="text-gray-700 text-sm">
                          {companyData.address.street}<br/>
                          {companyData.address.postalCode} {companyData.address.city}<br/>
                          {companyData.address.country || 'Switzerland'}
                        </p>
                      </div>
                    </div>
                  </div>
                )}

                {companyData.phone && (
                  <div class="bg-gray-50 rounded-xl p-4">
                    <a href={`tel:${companyData.phone}`} class="flex items-center gap-3 hover:bg-gray-100 rounded-lg transition-colors">
                      <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                        <span class="text-red-600 text-lg">‚òé</span>
                      </div>
                      <div>
                        <p class="font-medium text-gray-900">Phone</p>
                        <p class="text-gray-700 text-sm">{companyData.phone}</p>
                      </div>
                    </a>
                  </div>
                )}

                {companyData.email && (
                  <div class="bg-gray-50 rounded-xl p-4">
                    <a href={`mailto:${companyData.email}`} class="flex items-center gap-3 hover:bg-gray-100 rounded-lg transition-colors">
                      <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                        <span class="text-red-600 text-lg">‚úâ</span>
                      </div>
                      <div>
                        <p class="font-medium text-gray-900">Email</p>
                        <p class="text-gray-700 text-sm">{companyData.email}</p>
                      </div>
                    </a>
                  </div>
                )}

                {companyData.website && (
                  <div class="bg-gray-50 rounded-xl p-4">
                    <a href={companyData.website} target="_blank" rel="nofollow sponsored" class="flex items-center gap-3 hover:bg-gray-100 rounded-lg transition-colors">
                      <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                        <span class="text-red-600 text-lg">üåê</span>
                      </div>
                      <div>
                        <p class="font-medium text-gray-900">Website</p>
                        <p class="text-gray-700 text-sm">Visit Company Website</p>
                      </div>
                    </a>
                  </div>
                )}
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 4. WHY CHOOSE / IS COMPANY RIGHT FOR YOU -->
  <section class="py-16 bg-white">
    <div class="container max-w-4xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Why Choose -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-2xl p-8 border border-blue-100">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
            <div class="w-10 h-10 bg-blue-600 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            Why choose {companyData.name}?
          </h2>
          
          <div class="space-y-4">
            {companyData.specializations?.slice(0, 3).map((specialization: string) => (
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <p class="text-gray-700">Expertise in {specialization.toLowerCase()}</p>
              </div>
            )) || (
              <div class="space-y-4">
                <div class="flex items-start gap-3">
                  <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <p class="text-gray-700">Professional relocation expertise</p>
                </div>
                <div class="flex items-start gap-3">
                  <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <p class="text-gray-700">Local Swiss market knowledge</p>
                </div>
                <div class="flex items-start gap-3">
                  <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <p class="text-gray-700">Comprehensive service portfolio</p>
                </div>
              </div>
            )}
          </div>
        </div>

        <!-- Is Company Right For You -->
        <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-8 border border-green-100">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
            <div class="w-10 h-10 bg-green-600 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            Is {companyData.name} right for you?
          </h2>
          
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <p class="text-gray-700">You are relocating to Switzerland for work or family</p>
            </div>
            
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <p class="text-gray-700">You need support with permits, housing, or schools</p>
            </div>
            
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <p class="text-gray-700">You prefer a verified relocation provider</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 5. SERVICES OFFERED -->
  <section class="py-16 bg-gray-50">
    <div class="container max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Services Offered</h2>
        <p class="text-lg text-gray-600">Comprehensive relocation support across all areas</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <a href="/services/immigration" class="group bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-all duration-300 border border-gray-200 hover:border-red-200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center group-hover:bg-red-200 transition-colors">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 group-hover:text-red-700 transition-colors">Immigration & Permits</h3>
          </div>
          <p class="text-gray-600 text-sm">Visa applications, work permits, and residency documentation</p>
        </a>

        <a href="/services/housing" class="group bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-all duration-300 border border-gray-200 hover:border-red-200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center group-hover:bg-red-200 transition-colors">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
