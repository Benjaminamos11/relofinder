---

<Layout title={title} description={description}>
  <!-- Enhanced Hero Section -->
  <section class="relative py-16 md:py-24 bg-gradient-to-br from-gray-50 to-white overflow-hidden">
    <!-- Subtle background pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 bg-repeat" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%230ea5e9%22 fill-opacity=%220.1%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="container relative">
      <div class="max-w-6xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center space-x-2 text-sm text-gray-600">
            <li><a href="/" class="hover:text-primary-600 transition-colors">Home</a></li>
            <li><span class="text-gray-400">/</span></li>
            <li><a href="/companies" class="hover:text-primary-600 transition-colors">Companies</a></li>
            <li><span class="text-gray-400">/</span></li>
            <li class="text-gray-900 font-medium">{companyData.name}</li>
          </ol>
        </nav>

        <!-- Main Hero Content -->
        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Left Column: Company Info -->
          <div class="lg:col-span-2">
            <div class="bg-white rounded-3xl shadow-xl p-8 md:p-10">
              <div class="flex items-start space-x-6 mb-6">
                <div class="w-24 h-24 bg-gradient-to-br from-gray-100 to-gray-50 rounded-2xl p-4 shadow-lg flex-shrink-0">
                  <img 
                    src={companyData.logo} 
                    alt={companyData.name + " logo"}
                    class="w-full h-full object-contain"
                  />
                </div>
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <h1 class="text-3xl md:text-4xl font-bold text-gray-900">{companyData.name}</h1>
                    {isPartner && (
                      <span class="bg-gradient-to-r from-yellow-400 to-yellow-500 text-yellow-900 px-3 py-1 rounded-full text-xs font-bold">
                        ‚≠ê Featured Partner
                      </span>
                    )}
                  </div>
                  <p class="text-lg text-gray-600 mb-4">{companyData.description}</p>
                  
                  <!-- Trust Indicators -->
                  <div class="flex flex-wrap gap-4 text-sm">
                    {companyData.verified && (
                      <div class="flex items-center text-green-600">
                        <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        Verified Company
                      </div>
                    )}
                    <div class="flex items-center text-gray-700">
                      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      Est. {companyData.founded}
                    </div>
                    <div class="flex items-center text-gray-700">
                      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                      </svg>
                      {companyData.employees} employees
                    </div>
                  </div>
                </div>
              </div>

              <!-- CTA Buttons -->
              <div class="flex flex-wrap gap-4">
                <button onclick="openModal('consultation-modal')" class="btn-primary">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                  Get Free Consultation
                </button>
                <a href={companyData.website} target="_blank" rel="noopener noreferrer" class="btn-outline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                  Visit Website
                </a>
                <a href={"tel:" + companyData.phone} class="btn-outline">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  Call Now
                </a>
              </div>
            </div>
          </div>

          <!-- Right Column: Quick Stats -->
          <div class="lg:col-span-1 space-y-6">
            <!-- Rating Card -->
            <div class="bg-gradient-to-br from-primary-500 to-secondary-500 rounded-3xl p-6 text-white shadow-xl">
              <h3 class="text-lg font-semibold mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                Customer Rating
              </h3>
              <div class="flex items-end justify-between">
                <div>
                  <div class="text-4xl font-bold">{companyData.rating.score}</div>
                  <div class="text-white/80 text-sm">out of 5</div>
                </div>
                <div class="text-right">
                  <div class="text-2xl font-semibold">{companyData.rating.reviews}</div>
                  <div class="text-white/80 text-sm">reviews</div>
                </div>
              </div>
              {companyData.rating.breakdown && (
                <div class="mt-4 space-y-2">
                  {Object.entries(companyData.rating.breakdown).map(([key, value]) => (
                    <div class="flex items-center justify-between text-sm">
                      <span class="text-white/80 capitalize">{key.replace(/_/g, ' ')}</span>
                      <div class="flex items-center">
                        <div class="w-24 h-2 bg-white/20 rounded-full mr-2">
                          <div class="h-full bg-white rounded-full" style={"width: " + ((value as number) / 5) * 100 + "%"}></div>
                        </div>
                        <span class="text-white/90">{value}</span>
                      </div>
                    </div>
                  ))}
                </div>
              )}
            </div>

            <!-- Languages Card -->
            {companyData.languages && companyData.languages.length > 0 && (
              <div class="bg-white rounded-3xl p-6 shadow-xl">
                <h3 class="text-lg font-semibold mb-4 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
                  </svg>
                  Languages Spoken
                </h3>
                <div class="flex flex-wrap gap-2">
                  {companyData.languages.map((lang: string) => (
                    <span class="bg-gradient-to-r from-primary-50 to-secondary-50 text-gray-700 px-3 py-1 rounded-full text-sm font-medium">
                      {lang}
                    </span>
                  ))}
                </div>
              </div>
            )}

            <!-- Certifications Card -->
            {companyData.certifications && companyData.certifications.length > 0 && (
              <div class="bg-white rounded-3xl p-6 shadow-xl">
                <h3 class="text-lg font-semibold mb-4 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                  Certifications
                </h3>
                <ul class="space-y-2">
                  {companyData.certifications.map((cert: string) => (
                    <li class="flex items-start">
                      <svg class="w-4 h-4 mr-2 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-sm text-gray-700">{cert}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Dynamic Content Sections -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        {/* Parse and render each markdown section */}
        {sections.map((section: string, idx: number) => {
          let title = '';
          let content = '';
          let sectionType = '';
          let icon = null;
          
          try {
            const parsed = parseSection(section);
            title = parsed.title;
            content = parsed.content;
            const found = Object.entries(specialSections).find(([key]) => title.includes(key));
            sectionType = found ? found[1] : '';
            icon = sectionType ? sectionIcons[sectionType] : null;
          } catch (e) {
            console.error('Error parsing section:', e);
            return null;
          }
          
          // Skip empty sections
          if (!content.trim()) return null;

          // Render Company Highlights as special cards
          if (sectionType === 'highlights') {
            const highlights = content.split('\n').filter(line => line.trim().startsWith('-') || line.trim().startsWith('*'));
            return (
              <div class="mb-12">
                <div class="bg-white rounded-3xl shadow-xl p-8 md:p-10">
