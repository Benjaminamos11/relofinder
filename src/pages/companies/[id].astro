                          {service.name}
                        </h4>
                        {service.description && (
                          <p class="text-gray-600 text-sm leading-relaxed">{service.description}</p>
                        )}
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            );
          }

          // Render FAQ section
          if (sectionType === 'faq') {
            // Split by ## for individual FAQ questions
            const faqParts = content.split(/\n## /);
            const faqs = faqParts.filter((q: string) => q.trim()).map((faq: string, idx: number) => {
              // First part might not have ## prefix, others will
              return idx === 0 ? faq : '## ' + faq;
            });
            
            return (
              <div class="mb-12">
                <div class="bg-white rounded-3xl shadow-xl p-8 md:p-10">
                  <h2 class="text-2xl md:text-3xl font-bold mb-8 flex items-center">
