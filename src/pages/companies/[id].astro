---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { marked } from 'marked';

// Generate static paths for all companies
export async function getStaticPaths() {
  const companies = await getCollection('companies');
  return companies.map((company: any) => ({
    params: { id: (company as any).data.id },
    props: { company },
  }));
}

// Get company data from props
const { company } = Astro.props;
const companyData = (company as any).data;

// Render the full markdown content for SEO
const { Content } = await (company as any).render();

// Check if this is a partner company
const isPartner = companyData.id === 'prime-relocation';

// Fetch related services and regions
const allServices = await getCollection('services');
const allRegions = await getCollection('regions');

// Filter services this company offers
const companyServices = allServices.filter((service: any) => 
  companyData.services.includes(service.data.id || service.slug)
);

// Filter regions this company serves
const companyRegions = allRegions.filter((region: any) => 
  companyData.regions.includes(region.data.id || region.slug)
);

// Service images mapping
const serviceImages: Record<string, string> = {
  'home-search': 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_600,h_400,c_fill,f_webp,q_auto:good/v1748008123/a-humorous-slightly-quirky-photograph-of_WL6sfp_DQZuAY5SOUQ6zkg_VPyMSfVwR1uw9Wd0nvlUsA_bytggv.webp',
  'immigration-services': 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_600,h_400,c_fill,f_webp,q_auto:good/v1748008123/a-humorous-slightly-quirky-photograph-of_WL6sfp_DQZuAY5SOUQ6zkg_VPyMSfVwR1uw9Wd0nvlUsA_bytggv.webp',
  'move-management': 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_600,h_400,c_fill,f_webp,q_auto:good/v1748008123/a-humorous-slightly-quirky-photograph-of_WL6sfp_DQZuAY5SOUQ6zkg_VPyMSfVwR1uw9Wd0nvlUsA_bytggv.webp',
  'education': 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_600,h_400,c_fill,f_webp,q_auto:good/v1748008123/a-humorous-slightly-quirky-photograph-of_WL6sfp_DQZuAY5SOUQ6zkg_VPyMSfVwR1uw9Wd0nvlUsA_bytggv.webp',
  'advisory-services': 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_600,h_400,c_fill,f_webp,q_auto:good/v1748008123/a-humorous-slightly-quirky-photograph-of_WL6sfp_DQZuAY5SOUQ6zkg_VPyMSfVwR1uw9Wd0nvlUsA_bytggv.webp',
  'settling-in': 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_600,h_400,c_fill,f_webp,q_auto:good/v1748008123/a-humorous-slightly-quirky-photograph-of_WL6sfp_DQZuAY5SOUQ6zkg_VPyMSfVwR1uw9Wd0nvlUsA_bytggv.webp',
  'departure-repatriation': 'https://res.cloudinary.com/dphbnwjtx/image/upload/w_600,h_400,c_fill,f_webp,q_auto:good/v1748008123/a-humorous-slightly-quirky-photograph-of_WL6sfp_DQZuAY5SOUQ6zkg_VPyMSfVwR1uw9Wd0nvlUsA_bytggv.webp'
};

// Regional images mapping
const regionalImages: Record<string, string> = {
  'zurich': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-whimsical-slightly-quirky-photograph-d_zq8vecXuSUm5G0iW2zVS2A_ahKrzbyPSHujmZTV4weezQ_fefkl9.webp',
  'geneva': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_jygtMk7MRVCGIR4b-pXn1w_u_7qRvYXQmqaQVXTr4FhIQ_exkzuu.webp',
  'basel': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_byvGP0Q4RKyeAN-ygL2jbg_aTPr-BU2TWSrb4xXReYWMw_tw5r7l.webp',
  'bern': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-vibrant-slightly-whimsical-photograph-_j_Bc2kuLQfWixPiozYlkZg_3GfAV6UKRZKiLAd7QOavuA_mkvcga.webp',
  'lausanne': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_s2o30GAgRB2T9AZDpXe4_A_RED4Ygx9Rw2E2XeYdgDzog_jyhysn.webp',
  'zug': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054307/a-whimsical-slightly-quirky-photograph-c_ESZqUcnqSiCNpGzcV89dBw_o-YAUo9-RbC7oy5d4C2v2Q_ehpyba.webp',
  'lucerne': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-whimsical-slightly-quirky-photograph-d_zq8vecXuSUm5G0iW2zVS2A_ahKrzbyPSHujmZTV4weezQ_fefkl9.webp'
};

// Page metadata for SEO
const title = `${companyData.name} | Professional Swiss Relocation Services | ReloFinder.ch`;
const description = `${companyData.description} Expert relocation specialists for moving to Switzerland. ${companyData.rating.score}/5 rating with ${companyData.rating.reviews} reviews. Get your free consultation today.`;
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 bg-gradient-to-br from-gray-50 via-white to-blue-50 overflow-hidden">
    <div class="container relative">
      <div class="grid lg:grid-cols-3 gap-12 items-center">
        <div class="lg:col-span-2 flex items-center">
          <div class="w-20 h-20 rounded-2xl bg-white p-3 shadow-lg mr-6 flex-shrink-0">
                <img 
                  src={companyData.logo} 
                  alt={`${companyData.name} logo`}
                  class="w-full h-full object-contain"
                />
              </div>
          <div>
            <h1 class="text-4xl md:text-5xl font-bold mb-2 gradient-text">{companyData.name}</h1>
            <p class="text-xl text-gray-600 mb-4">{companyData.description}</p>
            <div class="flex flex-wrap gap-4">
              <a href="#contact" class="btn-primary">
                Get Free Consultation
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
              </a>
              <a href={companyData.website} target="_blank" rel="noopener noreferrer" class="btn-secondary">
                Visit Website
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
              </a>
                  </div>
                </div>
                    </div>
        <div class="lg:col-span-1 flex flex-col gap-6">
          <div class="bg-gradient-to-br from-primary-600 to-blue-400 rounded-2xl p-8 shadow-xl text-white mb-4">
            <h3 class="text-2xl font-bold mb-4 flex items-center">
              <svg class="h-7 w-7 mr-2 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m4 4h1v-4h1m-6 4h-1v-4h-1m4 4h1v-4h1" /></svg>
              Key Statistics
            </h3>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <div class="text-sm text-white/80">Founded</div>
                <div class="text-xl font-bold">{companyData.founded}</div>
                  </div>
              <div>
                <div class="text-sm text-white/80">Team Size</div>
                <div class="text-xl font-bold">{companyData.employees}</div>
                  </div>
              <div>
                <div class="text-sm text-white/80">Rating</div>
                <div class="text-xl font-bold flex items-center">{companyData.rating.score}<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-300 ml-1" viewBox="0 0 20 20" fill="currentColor"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg></div>
                </div>
              <div>
                <div class="text-sm text-white/80">Reviews</div>
                <div class="text-xl font-bold">{companyData.rating.reviews}+</div>
                </div>
              </div>
            </div>
          {companyData.languages && companyData.languages.length > 0 && (
            <div class="bg-white rounded-2xl p-6 shadow flex flex-col mb-2">
              <div class="flex items-center mb-2">
                <svg class="h-6 w-6 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" /></svg>
                <span class="font-bold text-lg">Languages</span>
          </div>
              <div class="flex flex-wrap gap-2">
                {companyData.languages.map((lang: string) => (
                  <span class="bg-primary-50 text-primary-700 px-3 py-1 rounded-full text-sm font-medium">{lang}</span>
                ))}
              </div>
            </div>
          )}
          {companyData.certifications && companyData.certifications.length > 0 && (
            <div class="bg-white rounded-2xl p-6 shadow flex flex-col">
              <div class="flex items-center mb-2">
                <svg class="h-6 w-6 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
                <span class="font-bold text-lg">Credentials</span>
          </div>
              <ul class="list-disc ml-6 text-gray-700">
                {companyData.certifications.map((cert: string) => (
                  <li>{cert}</li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Company Overview -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
              <div class="prose prose-lg max-w-none">
          {/* BEGIN: Beautifully structured markdown sections */}
          {(() => {
            const rawMarkdown = (company as any).body;
            const sections = rawMarkdown.split(/\n## /g).map((section: string, idx: number) => idx === 0 ? section : '## ' + section);
            return sections.map((section: string, idx: number) => {
              // Custom rendering for 'Company Highlights'
              if (/^## Company Highlights/m.test(section)) {
                // Extract highlights (lines starting with ** or -)
                const lines = section.split('\n').filter(line => line.trim().startsWith('**') || line.trim().startsWith('-'));
                const highlights = lines.map(line => {
                  // Remove markdown bold and dash
                  return line.replace(/^\*\*|\*\*$/g, '').replace(/^\- /, '').replace(/\*\*$/, '').trim();
                });
                // Render as cards with icons
                return (
                  <div class="bg-white rounded-3xl shadow-lg border border-gray-100 p-8 mb-8">
                    <h2 class="text-2xl font-bold mb-6 flex items-center">
                      <svg class="h-7 w-7 mr-2 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m4 4h1v-4h1m-6 4h-1v-4h-1m4 4h1v-4h1" /></svg>
                      Company Highlights
                    </h2>
                    <div class="grid md:grid-cols-2 gap-6">
                      {highlights.map((highlight: string, i: number) => (
                        <div class="flex items-start bg-gradient-to-r from-primary-50 to-blue-50 rounded-xl p-5 shadow-sm">
                          <svg class="h-6 w-6 text-primary-400 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                          <span class="text-lg text-gray-800">{highlight}</span>
                    </div>
                ))}
              </div>
            </div>
                );
              }
              // Default rendering for other sections
              const html = marked.parse(section);
              return (
                <div class={`bg-white rounded-3xl shadow-lg border border-gray-100 p-8 mb-8`}>
                  <div class="prose prose-lg max-w-none" set:html={html}></div>
                </div>
              );
            });
          })()}
          {/* END: Beautifully structured markdown sections */}
              </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  {companyServices.length > 0 && (
    <section class="py-20 bg-gray-50">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Our <span class="bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">Services</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Comprehensive relocation services tailored to your needs
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {companyServices.map((service: any) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
              <div class="w-16 h-16 bg-primary-50 rounded-xl flex items-center justify-center mb-6">
                <img 
                  src={serviceImages[service.data.id || 'home-search']} 
                      alt={service.data.title}
                  class="w-12 h-12 object-contain"
                    />
                  </div>
              <h3 class="text-xl font-bold mb-4">{service.data.title}</h3>
              <p class="text-gray-600 mb-6">{service.data.description}</p>
              <a href={`/services/${service.data.id || service.slug}`} class="text-primary-600 font-medium hover:text-primary-700 flex items-center">
                Learn More
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              </a>
                </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Coverage Areas -->
  {companyRegions.length > 0 && (
    <section class="py-20 bg-white">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Service <span class="bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">Coverage</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Expert relocation services across Switzerland's key regions
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {companyRegions.map((region: any) => (
            <div class="relative rounded-2xl overflow-hidden group">
              <img 
                src={regionalImages[region.data.id || 'zurich']} 
                alt={`${region.data.name} relocation services`}
                class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent">
                <div class="absolute bottom-0 left-0 right-0 p-6">
                  <h3 class="text-2xl font-bold text-white mb-2">{region.data.name}</h3>
                  <p class="text-white/80">{region.data.description}</p>
                      </div>
                    </div>
                  </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Company Details -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Contact Information -->
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="text-2xl font-bold mb-6">Contact Information</h3>
            <div class="space-y-4">
              <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            <div>
                  <p class="font-medium text-gray-900">Address</p>
                  <p class="text-gray-600">{companyData.address.street}</p>
                  <p class="text-gray-600">{companyData.address.postalCode} {companyData.address.city}</p>
                  <p class="text-gray-600">{companyData.address.canton}</p>
              </div>
            </div>
              <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <div>
                  <p class="font-medium text-gray-900">Phone</p>
                  <a href={`tel:${companyData.phone}`} class="text-primary-600 hover:text-primary-700">{companyData.phone}</a>
              </div>
            </div>
              <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <div>
                  <p class="font-medium text-gray-900">Email</p>
                  <a href={`mailto:${companyData.email}`} class="text-primary-600 hover:text-primary-700">{companyData.email}</a>
              </div>
          </div>
        </div>
      </div>

          <!-- Company Details -->
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h3 class="text-2xl font-bold mb-6">Company Details</h3>
            <div class="space-y-4">
              {companyData.founded && (
                <div class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
                  <div>
                    <p class="font-medium text-gray-900">Founded</p>
                    <p class="text-gray-600">{companyData.founded}</p>
      </div>
    </div>
              )}
              {companyData.employees && (
                <div class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
                  <div>
                    <p class="font-medium text-gray-900">Team Size</p>
                    <p class="text-gray-600">{companyData.employees} employees</p>
            </div>
          </div>
              )}
              {companyData.languages && companyData.languages.length > 0 && (
                <div class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
              </svg>
                  <div>
                    <p class="font-medium text-gray-900">Languages</p>
                    <p class="text-gray-600">{companyData.languages.join(', ')}</p>
            </div>
          </div>
              )}
              {companyData.certifications && companyData.certifications.length > 0 && (
                <div class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mr-3 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
