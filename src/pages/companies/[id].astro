// Page metadata for SEO
const title = companyData.name + " | Professional Swiss Relocation Services | ReloFinder.ch";
const description = companyData.description + " Expert relocation specialists for moving to Switzerland. " + companyData.rating.score + "/5 rating with " + companyData.rating.reviews + " reviews. Get your free consultation today.";

// Parse markdown content into sections
const rawMarkdown = (company as any).body;
// Split by both single # and double ## headers
const sections = rawMarkdown.split(/\n(?=#+ )/g);

// Helper function to parse section content
function parseSection(section: string) {
  const lines = section.split('\n');
  const titleLine = lines[0];
  // Extract title by removing all # symbols and trimming
  const title = titleLine.replace(/^#+\s*/, '').trim();
  const content = lines.slice(1).join('\n').trim();
  return { title, content };
}

// Identify special sections by their titles
const specialSections = {
  'About': 'about',
  'Company Highlights': 'highlights',
  'Key Findings': 'findings',
  'Services Offered': 'services-offered',
  'Coverage/Locations': 'coverage',
  'Client Reviews': 'reviews',
  'Testimonials': 'testimonials',
  'Contact': 'contact',
  'FAQ': 'faq'
};

// Icon mappings for different section types
const sectionIcons: Record<string, string> = {
  'about': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>',
