                      return (
                        <details class="group bg-gray-50 rounded-2xl overflow-hidden">
                          <summary class="cursor-pointer p-6 hover:bg-gray-100 transition-colors duration-200 flex items-center justify-between">
                            <h4 class="font-semibold text-gray-900 pr-4">{question}</h4>
                            <svg class="w-5 h-5 text-gray-500 transform group-open:rotate-180 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
