---
import Layout from '../../layouts/Layout.astro';
import SchemaMarkup from '../../components/common/SchemaMarkup.astro';
import { getCollection } from 'astro:content';
import { fetchGoogleReviews, getMockReviews, type FormattedReview, type BusinessReviewData } from '../../utils/google-reviews';

// Generate static paths for all companies
export async function getStaticPaths() {
  const companies = await getCollection('companies');
  return companies.map((company: any) => ({
    params: { id: (company as any).data.id },
    props: { company },
  }));
}

// Get company data from props
const { company } = Astro.props;
const companyData = (company as any).data;

// Get related services and regions
const services = await getCollection('services');
const regions = await getCollection('regions');

// Reviews data
const mockReviews = getMockReviews();
let reviewsData: BusinessReviewData = {
  rating: 4.5,
  reviewCount: 50,
  reviews: mockReviews,
  businessInfo: { address: '', placeId: '' }
};

try {
  const apiKey = import.meta.env.SERPAPI_KEY;
  if (apiKey && companyData.googleMyBusinessUrl) {
    const fetchedReviews = await fetchGoogleReviews(companyData.googleMyBusinessUrl, apiKey);
    if (fetchedReviews) {
      reviewsData = fetchedReviews;
    }
  }
} catch (error) {
  console.log('Error fetching Google reviews:', error);
}

const actualRating = companyData.rating?.score || reviewsData.rating || 4.5;
const actualReviewCount = companyData.rating?.reviews || reviewsData.reviewCount || 50;
const reviewsToDisplay = reviewsData.reviews || [];

// Determine partner status
const isPreferred = companyData.featured || companyData.preferred || false;

// SEO setup
const title = `${companyData.name} – Relocation Services in Switzerland | ReloFinder`;
const description = `Discover ${companyData.name}, a ${isPreferred ? 'preferred' : 'trusted'} relocation partner in Switzerland. Services: housing, permits, family support. Verified reviews & professional guidance on ReloFinder.`;

// FAQ data for structured markup
const faqs = [
  {
    question: `Why choose ${companyData.name} for Swiss relocation?`,
    answer: `${companyData.name} offers ${companyData.specializations?.slice(0,2).join(' and ') || 'comprehensive relocation services'} across Switzerland, with expertise in ${companyData.services?.slice(0,3).join(', ') || 'visa, housing, and settling-in support'}.`
  },
  {
    question: `What regions does ${companyData.name} cover?`,
    answer: `${companyData.name} provides services across ${companyData.regions?.length || 'multiple'} Swiss regions, ensuring local expertise for your relocation destination.`
  },
  {
    question: `How can I contact ${companyData.name}?`,
    answer: isPreferred 
      ? `You can contact ${companyData.name} directly through their website, phone, or request a consultation through ReloFinder for personalized service.`
      : `Contact ${companyData.name} through ReloFinder's platform for professional relocation assistance and personalized consultation.`
  }
];
---

<Layout
  title={title}
  description={description}
  canonical={`https://relofinder.ch/companies/${companyData.id}`}
  keywords={[
    `${companyData.name.toLowerCase()} switzerland`,
    `${companyData.name.toLowerCase()} relocation services`,
    'swiss relocation expert',
    'switzerland moving services',
    ...companyData.specializations?.map((s: string) => `${s.toLowerCase()} switzerland`) || [],
    ...companyData.regions?.map((r: string) => `relocation ${r.toLowerCase()}`) || []
  ]}
>

  <!-- Structured Data for SEO & LLM -->
  <SchemaMarkup 
    type="company"
    data={{
      "@type": "LocalBusiness",
      "name": companyData.name,
      "description": companyData.description,
      "url": `https://relofinder.ch/companies/${companyData.id}`,
      "address": isPreferred && companyData.address ? {
        "@type": "PostalAddress",
        "streetAddress": companyData.address.street,
        "postalCode": companyData.address.postalCode,
        "addressLocality": companyData.address.city,
        "addressCountry": "CH"
      } : undefined,
      "telephone": isPreferred ? companyData.phone : undefined,
      "email": isPreferred ? companyData.email : undefined,
      "sameAs": isPreferred && companyData.website ? [companyData.website] : undefined,
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": actualRating,
        "reviewCount": actualReviewCount
      },
      "serviceArea": companyData.regions || ["Switzerland"]
    }}
  />

  <!-- FAQ Structured Data -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": faqs[0].question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": faqs[0].answer
          }
        },
        {
          "@type": "Question",
          "name": faqs[1].question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": faqs[1].answer
          }
        },
        {
          "@type": "Question",
          "name": faqs[2].question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": faqs[2].answer
          }
        }
      ]
    }
  </script>

  <!-- 1. HERO SECTION -->
  <section class="bg-gradient-to-br from-gray-50 via-white to-blue-50 py-16">
    <div class="container max-w-6xl mx-auto px-4">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <div class="flex items-center space-x-2 text-sm text-gray-500">
          <a href="/" class="hover:text-primary-600 transition-colors">Home</a>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"/></svg>
          <a href="/companies" class="hover:text-primary-600 transition-colors">Companies</a>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"/></svg>
          <span class="text-gray-900">{companyData.name}</span>
        </div>
      </nav>

      <div class="text-center max-w-4xl mx-auto">
        {isPreferred && (
          <div class="inline-flex items-center gap-2 bg-primary-50 px-4 py-2 rounded-full border border-primary-200 text-primary-700 font-medium text-sm mb-6">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            ✔ Preferred Partner on ReloFinder
          </div>
        )}
        
        <h1 class="text-4xl lg:text-5xl font-bold mb-6 leading-tight">
          {companyData.name} – Relocation Services in Switzerland
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          Supporting expats, families, and businesses with professional relocation solutions across Switzerland.
        </p>

        <!-- Rating Display -->
        <div class="flex items-center justify-center gap-4 mb-8">
          <div class="flex items-center gap-2">
            <div class="flex text-yellow-500">
              {Array.from({length: 5}, (_, i) => (
                <svg class={`w-5 h-5 ${i < Math.floor(actualRating) ? 'fill-current' : 'fill-gray-300'}`} viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
            <span class="text-2xl font-bold text-gray-900">{actualRating}/5</span>
            <span class="text-gray-600">({actualReviewCount} reviews)</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 2. KEY INFORMATION -->
  <section class="py-16 bg-white">
    <div class="container max-w-4xl mx-auto px-4">
      <div class="bg-gray-50 rounded-2xl p-8 border border-gray-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Company Information</h2>
        
        <div class="grid md:grid-cols-2 gap-8">
          <div class="space-y-4">
            <div>
              <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Company Name</h3>
              <p class="text-lg text-gray-900">{companyData.name}</p>
            </div>
            
            <div>
              <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Regions Covered</h3>
              <p class="text-gray-700">
                {companyData.regions?.join(', ') || 'Switzerland-wide services'}
              </p>
            </div>
          </div>

          {isPreferred && (
            <div class="space-y-4">
              {companyData.address && (
                <div>
                  <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-2">Address</h3>
                  <p class="text-gray-700">
                    {companyData.address.street}<br/>
                    {companyData.address.postalCode} {companyData.address.city}<br/>
                    {companyData.address.country || 'Switzerland'}
                  </p>
                </div>
              )}

              <div class="grid grid-cols-1 gap-3">
                {companyData.phone && (
                  <a href={`tel:${companyData.phone}`} class="flex items-center gap-3 p-3 bg-white rounded-lg border border-gray-200 hover:border-primary-300 transition-colors">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    <div>
                      <p class="text-sm text-gray-500">Phone</p>
                      <p class="font-medium text-gray-900">{companyData.phone}</p>
                    </div>
                  </a>
                )}

                {companyData.email && (
                  <a href={`mailto:${companyData.email}`} class="flex items-center gap-3 p-3 bg-white rounded-lg border border-gray-200 hover:border-primary-300 transition-colors">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <div>
                      <p class="text-sm text-gray-500">Email</p>
                      <p class="font-medium text-gray-900">{companyData.email}</p>
                    </div>
                  </a>
                )}

                {companyData.website && (
                  <a href={companyData.website} target="_blank" rel="nofollow sponsored" class="flex items-center gap-3 p-3 bg-white rounded-lg border border-gray-200 hover:border-primary-300 transition-colors">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                    <div>
                      <p class="text-sm text-gray-500">Website</p>
                      <p class="font-medium text-gray-900">Visit Company Website</p>
                    </div>
                  </a>
                )}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- 3. WHY CHOOSE SECTION -->
  <section class="py-16 bg-gray-50">
    <div class="container max-w-4xl mx-auto px-4">
      <div class="space-y-12">
        <div class="text-center">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Why Choose {companyData.name}?
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {companyData.description}
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 border border-gray-200">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">
            {companyData.name} is your partner if…
          </h3>
          
          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <p class="text-gray-700 text-lg">You are relocating to Switzerland for work or family</p>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <p class="text-gray-700 text-lg">You need support with housing, permits, or schools</p>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <p class="text-gray-700 text-lg">You want a trusted Swiss relocation provider</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 4. SERVICES OVERVIEW -->
  <section class="py-16 bg-white">
    <div class="container max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Services Overview</h2>
        <p class="text-lg text-gray-600">Comprehensive relocation support across all areas</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <a href="/services/visa-immigration" class="group bg-gray-50 rounded-xl p-6 hover:bg-primary-50 transition-all duration-300 border border-gray-200 hover:border-primary-200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center group-hover:bg-primary-200 transition-colors">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-700 transition-colors">Immigration & Permits</h3>
          </div>
          <p class="text-gray-600 text-sm">Visa applications, work permits, and residency documentation</p>
        </a>

        <a href="/services/home-search" class="group bg-gray-50 rounded-xl p-6 hover:bg-primary-50 transition-all duration-300 border border-gray-200 hover:border-primary-200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center group-hover:bg-primary-200 transition-colors">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-700 transition-colors">Home Search & Housing</h3>
          </div>
          <p class="text-gray-600 text-sm">Property search, rental assistance, and housing solutions</p>
        </a>

        <a href="/services/education" class="group bg-gray-50 rounded-xl p-6 hover:bg-primary-50 transition-all duration-300 border border-gray-200 hover:border-primary-200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center group-hover:bg-primary-200 transition-colors">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-700 transition-colors">School & Family Support</h3>
          </div>
          <p class="text-gray-600 text-sm">School enrollment, family services, and education guidance</p>
        </a>

        <a href="/services/settling-in" class="group bg-gray-50 rounded-xl p-6 hover:bg-primary-50 transition-all duration-300 border border-gray-200 hover:border-primary-200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center group-hover:bg-primary-200 transition-colors">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-700 transition-colors">Settling-in Services</h3>
          </div>
          <p class="text-gray-600 text-sm">Cultural integration, local registration, and lifestyle support</p>
        </a>

        <a href="/services/banking-finance" class="group bg-gray-50 rounded-xl p-6 hover:bg-primary-50 transition-all duration-300 border border-gray-200 hover:border-primary-200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center group-hover:bg-primary-200 transition-colors">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-700 transition-colors">Banking & Finance</h3>
          </div>
          <p class="text-gray-600 text-sm">Bank account setup, financial planning, and tax guidance</p>
        </a>

        <a href="/services/ongoing-support" class="group bg-gray-50 rounded-xl p-6 hover:bg-primary-50 transition-all duration-300 border border-gray-200 hover:border-primary-200">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center group-hover:bg-primary-200 transition-colors">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-700 transition-colors">Ongoing Support</h3>
          </div>
          <p class="text-gray-600 text-sm">Continued assistance and support throughout your Swiss journey</p>
        </a>
      </div>
    </div>
  </section>

  <!-- 5. REVIEWS SECTION -->
  <section class="py-16 bg-gray-50">
    <div class="container max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Client Reviews</h2>
        <p class="text-lg text-gray-600">Real experiences from verified clients</p>
      </div>

      <div class="grid lg:grid-cols-4 gap-8">
        <!-- Rating Summary -->
        <div class="bg-white rounded-xl p-6 text-center border border-gray-200">
          <div class="text-4xl font-bold text-gray-900 mb-2">{actualRating}</div>
          <div class="flex justify-center text-yellow-500 mb-2">
            {Array.from({length: 5}, (_, i) => (
              <svg class={`w-5 h-5 ${i < Math.floor(actualRating) ? 'fill-current' : 'fill-gray-300'}`} viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          <p class="text-gray-600 text-sm mb-4">{actualReviewCount} reviews</p>
          
          <!-- AI Summary Button -->
          <button 
            id="aiSummaryBtn" 
            data-company-id={companyData.id}
            class="w-full bg-gradient-to-r from-primary-600 to-primary-700 text-white py-2 px-4 rounded-lg font-medium hover:from-primary-700 hover:to-primary-800 transition-all duration-300 text-sm"
          >
            Get AI Summary
          </button>
          
          <!-- AI Summary Results -->
          <div id="aiSummaryResults" class="hidden mt-4"></div>
        </div>

        <!-- Recent Reviews -->
        <div class="lg:col-span-3 space-y-4">
          {reviewsToDisplay.slice(0, isPreferred ? 5 : 2).map((review: FormattedReview) => (
            <div class="bg-white rounded-xl p-6 border border-gray-200">
              <div class="flex items-start gap-4">
