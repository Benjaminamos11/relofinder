          // Render Key Findings with special styling
          if (sectionType === 'findings') {
            const findings: { [key: string]: string[] } = {};
            let currentKey = '';
            
            content.split('\n').forEach(line => {
              if (line.trim().startsWith('**') && line.trim().includes(':')) {
                currentKey = line.trim().replace(/\*\*/g, '').replace(':', '');
                findings[currentKey] = [];
              } else if (line.trim() && currentKey) {
                findings[currentKey].push(line.trim());
              }
            });

            return (
              <div class="mb-12">
                <div class="bg-white rounded-3xl shadow-xl p-8 md:p-10">
                  <h2 class="text-2xl md:text-3xl font-bold mb-8 flex items-center">
