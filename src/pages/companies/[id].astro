---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Generate static paths for all companies
export async function getStaticPaths() {
  const companies = await getCollection('companies');
  return companies.map((company) => ({
    params: { id: company.data.id },
    props: { company },
  }));
}

// Get company data from props
const { company } = Astro.props;
const companyData = company.data;

// Check if this is a partner company
const isPartner = companyData.id === 'prime-relocation';

// Fetch related services and regions
const allServices = await getCollection('services');
const allRegions = await getCollection('regions');

// Filter services this company offers
const companyServices = allServices.filter(service => 
  companyData.services.includes(service.data.id || service.slug)
);

// Filter regions this company serves
const companyRegions = allRegions.filter(region => 
  companyData.regions.includes(region.data.id || region.slug)
);

// Service images mapping (cow pictures)
const serviceImages = {
  'home-search': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-whimsical-slightly-quirky-photograph-d_zq8vecXuSUm5G0iW2zVS2A_ahKrzbyPSHujmZTV4weezQ_fefkl9.webp',
  'immigration-services': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_jygtMk7MRVCGIR4b-pXn1w_u_7qRvYXQmqaQVXTr4FhIQ_exkzuu.webp',
  'move-management': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_byvGP0Q4RKyeAN-ygL2jbg_aTPr-BU2TWSrb4xXReYWMw_tw5r7l.webp',
  'education': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-vibrant-slightly-whimsical-photograph-_j_Bc2kuLQfWixPiozYlkZg_3GfAV6UKRZKiLAd7QOavuA_mkvcga.webp',
  'advisory-services': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_s2o30GAgRB2T9AZDpXe4_A_RED4Ygx9Rw2E2XeYdgDzog_jyhysn.webp',
  'settling-in': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054307/a-whimsical-slightly-quirky-photograph-c_ESZqUcnqSiCNpGzcV89dBw_o-YAUo9-RbC7oy5d4C2v2Q_ehpyba.webp',
  'departure-repatriation': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-whimsical-slightly-quirky-photograph-d_zq8vecXuSUm5G0iW2zVS2A_ahKrzbyPSHujmZTV4weezQ_fefkl9.webp'
};

// Regional images mapping (cow pictures)
const regionalImages = {
  'zurich': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-whimsical-slightly-quirky-photograph-d_zq8vecXuSUm5G0iW2zVS2A_ahKrzbyPSHujmZTV4weezQ_fefkl9.webp',
  'geneva': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_jygtMk7MRVCGIR4b-pXn1w_u_7qRvYXQmqaQVXTr4FhIQ_exkzuu.webp',
  'basel': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_byvGP0Q4RKyeAN-ygL2jbg_aTPr-BU2TWSrb4xXReYWMw_tw5r7l.webp',
  'bern': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-vibrant-slightly-whimsical-photograph-_j_Bc2kuLQfWixPiozYlkZg_3GfAV6UKRZKiLAd7QOavuA_mkvcga.webp',
  'lausanne': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-photograph-of-a-friendly-typical-swiss_s2o30GAgRB2T9AZDpXe4_A_RED4Ygx9Rw2E2XeYdgDzog_jyhysn.webp',
  'zug': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054307/a-whimsical-slightly-quirky-photograph-c_ESZqUcnqSiCNpGzcV89dBw_o-YAUo9-RbC7oy5d4C2v2Q_ehpyba.webp',
  'lucerne': 'https://res.cloudinary.com/dphbnwjtx/image/upload/v1748054305/a-whimsical-slightly-quirky-photograph-d_zq8vecXuSUm5G0iW2zVS2A_ahKrzbyPSHujmZTV4weezQ_fefkl9.webp'
};

// Page metadata
const title = `${companyData.name} | Swiss Relocation Experts | ReloFinder.ch`;
const description = companyData.description;
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative py-24 bg-gradient-to-br from-gray-50 via-white to-blue-50 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0 bg-repeat" style="background-image: url(data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%23e11d48%22%20fill-opacity%3D%220.05%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%224%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E);"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-6xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="flex items-center space-x-2 text-sm text-gray-600 mb-8" aria-label="Breadcrumb">
          <a href="/" class="hover:text-primary-600 transition-colors">Home</a>
          <span>→</span>
          <a href="/companies" class="hover:text-primary-600 transition-colors">Companies</a>
          <span>→</span>
          <span class="text-gray-900">{companyData.name}</span>
        </nav>

        <div class="grid lg:grid-cols-12 gap-12 items-center">
          <!-- Company Info -->
          <div class="lg:col-span-8">
            <div class="flex items-start space-x-6 mb-8">
              <div class="w-24 h-24 lg:w-32 lg:h-32 bg-white rounded-2xl p-4 shadow-lg flex items-center justify-center">
                <img 
                  src={companyData.logo} 
                  alt={`${companyData.name} logo`}
                  class="w-full h-full object-contain"
                />
              </div>
              <div class="flex-1">
                <div class="flex items-center space-x-3 mb-4">
                  <h1 class="text-3xl lg:text-5xl font-bold text-gray-900">{companyData.name}</h1>
                  {isPartner && (
                    <span class="bg-gradient-to-r from-primary-500 to-secondary-500 text-white px-4 py-2 rounded-full text-sm font-bold">
                      ⭐ Recommended Partner
                    </span>
                  )}
                  {companyData.verified && (
                    <span class="bg-emerald-100 text-emerald-700 px-3 py-1 rounded-full text-sm font-medium">
                      ✓ Verified
                    </span>
                  )}
                </div>
                <p class="text-xl text-gray-600 mb-6">{companyData.description}</p>
                
                <!-- Rating and Stats -->
                <div class="flex flex-wrap items-center gap-6 mb-6">
                  <div class="flex items-center">
                    <div class="flex text-yellow-400 mr-2">
                      {[...Array(5)].map((_, i) => (
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      ))}
                    </div>
                    <span class="text-2xl font-bold text-gray-900">{companyData.rating.score}</span>
                    <span class="text-gray-600 ml-2">({companyData.rating.reviews} reviews)</span>
                  </div>
                  <div class="text-gray-600">
                    <span class="font-semibold">Founded:</span> {companyData.founded}
                  </div>
                  <div class="text-gray-600">
                    <span class="font-semibold">Team:</span> {companyData.employees}
                  </div>
                </div>

                <!-- Quick Contact Buttons -->
                <div class="flex flex-wrap gap-3">
                  <button onclick="scrollToForm('contact-form')" class="group relative inline-flex items-center justify-center px-8 py-4 font-semibold text-white bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
                    Get Free Quote
                    <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                    </svg>
                  </button>
                  <button onclick="scrollToForm('corporate-form')" class="inline-flex items-center justify-center px-8 py-4 font-semibold text-primary-600 bg-white border-2 border-primary-200 rounded-xl hover:bg-primary-50 transition-all duration-300">
                    Corporate Rates
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Trust Indicators -->
          <div class="lg:col-span-4">
            <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-6 border border-gray-200">
              <h3 class="text-lg font-bold mb-4">Trust & Quality</h3>
              <div class="space-y-4">
                <div class="flex items-center justify-between">
                  <span class="text-gray-600">Communication</span>
                  <span class="font-bold text-primary-600">{companyData.rating.breakdown.communication}/5</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-600">Professionalism</span>
                  <span class="font-bold text-primary-600">{companyData.rating.breakdown.professionalism}/5</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-600">Value for Money</span>
                  <span class="font-bold text-primary-600">{companyData.rating.breakdown.value}/5</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-600">Timeliness</span>
                  <span class="font-bold text-primary-600">{companyData.rating.breakdown.timeliness}/5</span>
                </div>
              </div>
              
              {companyData.certifications && companyData.certifications.length > 0 && (
                <div class="mt-6 pt-6 border-t border-gray-200">
                  <h4 class="font-semibold mb-3">Certifications</h4>
                  <div class="flex flex-wrap gap-2">
                    {companyData.certifications.map((cert) => (
                      <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
                        {cert}
                      </span>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Company Overview -->
  <section class="py-32 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold mb-6">
          About <span class="bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">{companyData.name}</span>
        </h2>
        <div class="prose prose-xl max-w-none text-gray-600">
          <p>{companyData.longDescription || companyData.description}</p>
        </div>
      </div>

      <!-- Key Stats -->
      <div class="grid md:grid-cols-4 gap-6">
        <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl p-6 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="font-bold text-2xl text-gray-900 mb-2">{companyData.employees}</h3>
          <p class="text-gray-600">Team Members</p>
        </div>
        <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl p-6 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="font-bold text-2xl text-gray-900 mb-2">{companyData.founded}</h3>
          <p class="text-gray-600">Founded</p>
        </div>
        <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl p-6 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          </div>
          <h3 class="font-bold text-2xl text-gray-900 mb-2">{companyData.rating.score}/5</h3>
          <p class="text-gray-600">Client Rating</p>
        </div>
        <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl p-6 text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-bold text-2xl text-gray-900 mb-2">{companyData.rating.reviews}</h3>
          <p class="text-gray-600">Happy Clients</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Offered -->
  {companyServices.length > 0 && (
    <section class="py-32 bg-gradient-to-br from-primary-50 to-secondary-50">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold mb-6">
            Our <span class="bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">Services</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Professional relocation services tailored to your specific needs, ensuring a smooth transition to Switzerland.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {companyServices.map((service) => {
            const serviceKey = service.data.id || service.slug;
            const serviceImage = serviceImages[serviceKey] || serviceImages['home-search'];
            
            return (
              <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
                <div class="h-48 relative overflow-hidden">
                  <img 
                    src={serviceImage}
                    alt={service.data.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold mb-3 text-gray-900">{service.data.title}</h3>
                  <p class="text-gray-600 mb-4">{service.data.description}</p>
                  <a href={`/services/${serviceKey}`} class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700">
                    Learn More
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </a>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- Coverage Areas -->
  {companyRegions.length > 0 && (
    <section class="py-32 bg-white">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold mb-6">
            Coverage <span class="bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">Areas</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            We provide expert relocation services across Switzerland's most sought-after regions for international professionals.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {companyRegions.map((region) => {
            const regionKey = region.data.id || region.slug;
            const regionImage = regionalImages[regionKey] || regionalImages['zurich'];
            
            return (
              <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
                <div class="h-48 relative overflow-hidden">
                  <img 
                    src={regionImage}
                    alt={region.data.name}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                  <div class="absolute bottom-4 left-4 text-white">
                    <h3 class="text-xl font-bold">{region.data.name}</h3>
                    {region.data.canton && (
                      <p class="text-white/90">{region.data.canton}</p>
                    )}
                  </div>
                </div>
                <div class="p-6">
                  <p class="text-gray-600 mb-4">{region.data.description}</p>
                  <a href={`/regions/${regionKey}`} class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700">
                    Explore Region
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </a>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  </section>
  )}

  <!-- Reviews & Testimonials -->
  <section class="py-32 bg-gradient-to-br from-gray-50 via-white to-blue-50">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold mb-6">
          Client <span class="bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">Reviews</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          See what our clients say about their relocation experience with {companyData.name}.
        </p>
      </div>
      
      {companyData.testimonials && companyData.testimonials.length > 0 && (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {companyData.testimonials.map((testimonial) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
              <div class="flex text-yellow-400 mb-4">
                {[...Array(testimonial.rating)].map(() => (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
              </div>
              <p class="text-gray-600 mb-6 italic">"{testimonial.text}"</p>
              <div class="flex items-center">
                <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-full flex items-center justify-center text-white font-bold">
                  {testimonial.name.charAt(0)}
                </div>
                <div class="ml-4">
                  <p class="font-bold text-gray-900">{testimonial.name}</p>
                  <p class="text-gray-600 text-sm">{testimonial.role}</p>
                  {testimonial.company && (
                    <p class="text-gray-500 text-sm">{testimonial.company}</p>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      )}

      <!-- Google Reviews Placeholder -->
      <div class="bg-white rounded-2xl p-8 shadow-lg text-center">
        <h3 class="text-2xl font-bold mb-4">Google Reviews Integration</h3>
        <p class="text-gray-600 mb-6">Real-time Google reviews will be displayed here via SERPAPI integration</p>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="p-4 bg-gray-50 rounded-xl">
            <div class="text-2xl font-bold text-primary-600 mb-2">{companyData.rating.score}/5</div>
            <div class="text-sm text-gray-600">Average Rating</div>
          </div>
          <div class="p-4 bg-gray-50 rounded-xl">
            <div class="text-2xl font-bold text-primary-600 mb-2">{companyData.rating.reviews}</div>
            <div class="text-sm text-gray-600">Total Reviews</div>
          </div>
          <div class="p-4 bg-gray-50 rounded-xl">
            <div class="text-2xl font-bold text-primary-600 mb-2">97%</div>
            <div class="text-sm text-gray-600">Recommend</div>
