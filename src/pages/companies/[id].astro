<script>
  // AI Summary Function
  document.addEventListener('DOMContentLoaded', function() {
    const aiBtn = document.getElementById('aiSummaryBtn');
    if (aiBtn) {
      aiBtn.addEventListener('click', generateAISummary);
    }
  });

  async function generateAISummary() {
    const btn = document.getElementById('aiSummaryBtn') as HTMLButtonElement;
    const results = document.getElementById('aiSummaryResults');
    if (!btn || !results) return;
    
    const companyId = btn.dataset.companyId;
    
    // Update button state
    btn.innerHTML = 'Analyzing...';
    btn.disabled = true;

    try {
      // Call the AI analysis endpoint
      const response = await fetch(`/api/ai-analysis/${companyId}`);
      const analysis = await response.json();
      
      // Display results
      results.innerHTML = `
        <div class="bg-gray-50 rounded-lg p-4 text-left">
          <h4 class="font-bold text-gray-900 text-sm mb-3">AI Analysis</h4>
          <div class="space-y-3">
            <div>
              <h5 class="font-semibold text-green-700 text-xs mb-1">Strengths</h5>
              <ul class="text-xs text-gray-700 space-y-1">
                ${analysis.strengths?.slice(0,2).map((s: string) => `<li>• ${s}</li>`).join('') || '<li>• Professional service</li><li>• Swiss expertise</li>'}
              </ul>
            </div>
            <div>
              <h5 class="font-semibold text-blue-700 text-xs mb-1">Recommendation</h5>
              <p class="text-xs text-gray-700">${analysis.recommendation?.substring(0, 120) + '...' || 'Reliable relocation services with Swiss market expertise.'}</p>
            </div>
          </div>
        </div>
      `;
      results.classList.remove('hidden');
      
      // Reset button
      btn.innerHTML = 'Refresh Analysis';
      
    } catch (error) {
      results.innerHTML = `
        <div class="bg-red-50 rounded-lg p-3">
          <p class="text-red-700 text-xs">Analysis unavailable</p>
        </div>
      `;
      results.classList.remove('hidden');
      btn.innerHTML = 'Try Again';
    }
    
    btn.disabled = false;
  }

  // Make function globally available
  (window as any).generateAISummary = generateAISummary;
</script>