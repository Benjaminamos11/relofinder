                <div class="flex items-start gap-3">
                  <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center flex-shrink-0 mt-1 shadow-sm border border-gray-200">
                    <span class="text-gray-600 text-lg">‚úâ</span>
              </div>
              <div>
                    <h4 class="font-semibold text-gray-900 mb-1">Email</h4>
                    <a href="mailto:hello@relofinder.ch" class="text-red-600 hover:text-red-700 font-medium">
                      hello@relofinder.ch
                    </a>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Business Hours -->
            <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-6 shadow-sm">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center shadow-sm border border-gray-200">
                  <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                </div>
                <h4 class="font-semibold text-gray-900">Business Hours</h4>
              </div>
              <div class="space-y-2 text-sm text-gray-700">
                <div class="flex justify-between">
                  <span>Monday - Friday:</span>
                  <span class="font-medium">9:00 AM - 6:00 PM CET</span>
