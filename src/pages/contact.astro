---
import Layout from '../layouts/Layout.astro';
import { Mail, Phone, MapPin, Clock, MessageSquare, ArrowRight, CheckCircle2 } from 'lucide-react';

const title = 'Contact Us | ReloFinder.ch';
const description = 'Get in touch with ReloFinder for personalized assistance with your relocation to Switzerland. We respond within 24 hours.';
const canonical = 'https://relofinder.ch/contact';

const inputClasses = "w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#FF6F61]/20 focus:border-[#FF6F61] transition-all duration-200 placeholder:text-slate-400 text-slate-900";
const labelClasses = "block text-xs font-bold uppercase tracking-wider text-slate-500 mb-2";

---

<Layout title={title} description={description} canonical={canonical}>
  
  <!-- Hero Section -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-24 bg-white">
    <div class="container mx-auto px-4 text-center max-w-4xl">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-100 text-slate-600 text-[11px] font-bold uppercase tracking-widest mb-6">
        <MessageSquare class="w-3 h-3 text-[#FF6F61]" />
        We're here to help
      </div>
      <h1 class="text-5xl md:text-7xl font-bold tracking-tight text-slate-900 mb-6 font-serif">
        Let's Start the <br/>
        <span class="text-[#FF6F61] italic">Conversation.</span>
      </h1>
      <p class="text-xl text-slate-500 font-normal leading-relaxed max-w-2xl mx-auto">
        Whether you're planning a move or just have a few questions, our team is ready to provide the answers you need.
      </p>
    </div>
  </section>

  <!-- Main Content Split -->
  <section class="pb-24 bg-white">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-24">
        
        <!-- Left: Contact Details -->
        <div class="space-y-12">
            
            <div class="space-y-8">
                <h2 class="text-2xl font-bold text-slate-900">Direct Contact</h2>
                
                <!-- Email -->
                <div class="flex items-start gap-4 p-6 bg-slate-50 rounded-2xl border border-slate-100 transition-colors hover:border-slate-200">
                    <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center border border-slate-100 shrink-0 text-[#FF6F61]">
                        <Mail class="w-5 h-5" />
                    </div>
                    <div>
                        <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wide mb-1">Email Us</h3>
                        <p class="text-sm text-slate-500 mb-2">For general inquiries and support</p>
                        <a href="mailto:hello@relofinder.ch" class="text-lg font-medium text-slate-900 hover:text-[#FF6F61] transition-colors">
                            hello@relofinder.ch
                        </a>
                    </div>
                </div>

                <!-- Phone -->
                <div class="flex items-start gap-4 p-6 bg-slate-50 rounded-2xl border border-slate-100 transition-colors hover:border-slate-200">
                    <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center border border-slate-100 shrink-0 text-[#FF6F61]">
                        <Phone class="w-5 h-5" />
                    </div>
                    <div>
                        <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wide mb-1">Call Us</h3>
                        <p class="text-sm text-slate-500 mb-2">Mon-Fri from 9am to 6pm CET</p>
                        <a href="tel:+41763648888" class="text-lg font-medium text-slate-900 hover:text-[#FF6F61] transition-colors">
                            +41 76 364 88 88
                        </a>
                    </div>
                </div>

                <!-- Office -->
                <div class="flex items-start gap-4 p-6 bg-slate-50 rounded-2xl border border-slate-100 transition-colors hover:border-slate-200">
                    <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center border border-slate-100 shrink-0 text-[#FF6F61]">
                        <MapPin class="w-5 h-5" />
                    </div>
                    <div>
                        <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wide mb-1">Visit Us</h3>
                        <p class="text-slate-500 leading-relaxed max-w-xs">
                            Lang + Partner<br/>
                            Chileg√§ssli 12a<br/>
                            8904 Aesch ZH<br/>
                            Switzerland
                        </p>
                    </div>
                </div>
            </div>

            <!-- FAQ Teaser -->
            <div class="border-t border-slate-100 pt-12">
                <h3 class="text-lg font-bold text-slate-900 mb-4">Common Questions</h3>
                <div class="space-y-4">
                    <details class="group">
                        <summary class="flex items-center justify-between cursor-pointer list-none text-slate-600 hover:text-[#FF6F61] font-medium transition-colors">
                            <span>How does the service work?</span>
                            <span class="transition group-open:rotate-180">
                                <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
                            </span>
                        </summary>
                        <p class="text-slate-500 mt-3 text-sm leading-relaxed group-open:animate-fadeIn">
                            We act as a neutral platform connecting you with vetted relocation agencies. You submit a request, receive quotes, and choose the best partner.
                        </p>
                    </details>
                    <details class="group">
                        <summary class="flex items-center justify-between cursor-pointer list-none text-slate-600 hover:text-[#FF6F61] font-medium transition-colors">
                            <span>Is it free for expats?</span>
                            <span class="transition group-open:rotate-180">
                                <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
                            </span>
                        </summary>
                        <p class="text-slate-500 mt-3 text-sm leading-relaxed group-open:animate-fadeIn">
                            Yes, our matching service is completely free for individuals. You only pay the agency you choose to hire.
                        </p>
                    </details>
                </div>
            </div>

        </div>

        <!-- Right: Contact Form -->
        <div class="bg-white rounded-[2rem] p-8 md:p-10 shadow-2xl shadow-slate-200/50 border border-slate-100 relative overflow-hidden">
             <!-- Decorative Element -->
             <div class="absolute top-0 right-0 w-32 h-32 bg-[#FF6F61]/5 rounded-bl-[4rem] -z-0"></div>

            <div class="relative z-10">
                <div id="contact-form-container">
                    <h2 class="text-2xl font-bold text-slate-900 mb-2">Send a Message</h2>
                    <p class="text-slate-500 mb-8 text-sm">Fill out the form below and we'll get back to you shortly.</p>

                    <form id="contact-form" class="space-y-6">
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label for="firstName" class={labelClasses}>First Name</label>
                                <input type="text" id="firstName" name="firstName" required class={inputClasses} placeholder="Jane" />
                            </div>
                            <div>
                                <label for="lastName" class={labelClasses}>Last Name</label>
                                <input type="text" id="lastName" name="lastName" required class={inputClasses} placeholder="Doe" />
                            </div>
                        </div>

                        <div>
                            <label for="email" class={labelClasses}>Email Address</label>
                            <input type="email" id="email" name="email" required class={inputClasses} placeholder="jane@example.com" />
                        </div>

                        <div>
                            <label for="message" class={labelClasses}>Message</label>
                            <textarea id="message" name="message" rows="4" required class={inputClasses} placeholder="How can we help you?"></textarea>
                        </div>

                        <div class="flex items-start gap-3 pt-2">
                            <div class="flex items-center h-5 mt-1">
                                <input id="privacy" name="privacy" type="checkbox" required class="h-4 w-4 text-[#FF6F61] focus:ring-[#FF6F61] border-slate-300 rounded" />
                            </div>
                            <label for="privacy" class="text-xs text-slate-500">
                                I agree to the <a href="/privacy" class="text-slate-900 underline hover:text-[#FF6F61]">Privacy Policy</a>.
                            </label>
                        </div>

                        <div id="form-error" class="hidden p-3 bg-red-50 text-red-600 text-xs rounded-lg border border-red-100"></div>

                        <button type="submit" id="submit-btn" class="w-full bg-[#FF6F61] text-white py-4 px-6 rounded-xl font-bold text-sm uppercase tracking-widest hover:bg-[#ff5a4d] transition-all duration-300 shadow-lg shadow-red-900/10 hover:shadow-red-900/20 flex items-center justify-center gap-2 group">
                            <span id="btn-text">Send Message</span>
                            <ArrowRight id="btn-icon" class="w-4 h-4 transition-transform group-hover:translate-x-1" />
                        </button>
                    </form>
                </div>

                <!-- Success State -->
                <div id="contact-success" class="hidden text-center py-12 animate-fadeIn">
                    <div class="w-20 h-20 bg-green-50 rounded-full flex items-center justify-center mx-auto mb-6 text-green-500">
                        <CheckCircle2 class="w-10 h-10" />
                    </div>
                    <h2 class="text-3xl font-bold text-slate-900 mb-4">Message Sent!</h2>
                    <p class="text-slate-600 mb-8 max-w-sm mx-auto">
                        Thank you for reaching out. Our team has received your inquiry and will get back to you within 24 hours.
                    </p>
                    <button onclick="window.location.reload()" class="text-[#FF6F61] font-bold hover:underline">Send another message</button>
                </div>
            </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Simple CTA Banner -->
  <section class="py-20 bg-slate-50 border-t border-slate-200">
      <div class="container mx-auto px-4 text-center">
          <h2 class="text-3xl font-bold text-slate-900 mb-6">Need a custom plan?</h2>
          <p class="text-slate-500 max-w-2xl mx-auto mb-10">
              For complex moves or corporate inquiries, our relocation concierges can build a tailored roadmap for you.
          </p>
           <button onclick={`universalOpenModal({page: "contact", topic: "consultation"})`} class="bg-white text-slate-900 border border-slate-200 py-4 px-8 rounded-full font-bold text-sm uppercase tracking-widest hover:border-[#FF6F61] hover:text-[#FF6F61] transition-all shadow-sm hover:shadow-md inline-flex items-center gap-2">
              Book Free Consultation
           </button>
      </div>
  </section>

</Layout>

<script is:inline>
    const form = document.getElementById('contact-form');
    const container = document.getElementById('contact-form-container');
    const success = document.getElementById('contact-success');
    const errorEl = document.getElementById('form-error');
    const submitBtn = document.getElementById('submit-btn');
    const btnText = document.getElementById('btn-text');

    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // UI State
            errorEl.classList.add('hidden');
            submitBtn.disabled = true;
            btnText.innerText = 'Sending...';

            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            data.source_page = 'contact_page';

            try {
                const res = await fetch('/api/leads/submit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await res.json();

                if (!res.ok) throw new Error(result.error || 'Failed to send message');

                // Success
                container.classList.add('hidden');
                success.classList.remove('hidden');
                success.scrollIntoView({ behavior: 'smooth' });

            } catch (err) {
                console.error(err);
                errorEl.innerText = err.message;
                errorEl.classList.remove('hidden');
                submitBtn.disabled = false;
                btnText.innerText = 'Send Message';
            }
        });
    }
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,700;1,700&display=swap');
  
  .font-serif {
    font-family: 'Playfair Display', serif;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fadeIn {
    animation: fadeIn 0.5s ease-out forwards;
  }
</style>
