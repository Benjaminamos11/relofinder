---
import Layout from '../layouts/Layout.astro';
import { Search, ArrowRight, MapPin, Briefcase, Globe, Info, MessageSquare } from 'lucide-react';

const title = 'Page Not Found | ReloFinder.ch';
const description = 'The page you are looking for might have been moved or doesn\'t exist. Explore our directory and guides for your Swiss relocation.';
---

<Layout title={title} description={description}>
  <main class="bg-white min-h-screen flex flex-col pt-32 pb-20 overflow-hidden">
    
    <!-- Hero / Error Code -->
    <section class="container mx-auto px-6 relative z-10 flex-grow flex flex-col justify-center">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        
        {/* Left Side: Editorial Typography */}
        <div class="max-w-2xl">
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-[#FF6F61]/5 text-[#FF6F61] text-[10px] font-bold uppercase tracking-[0.2em] mb-8">
            Error 404 â€” Path Missing
          </div>
          
          <h1 class="text-7xl md:text-9xl font-serif font-bold text-gray-900 leading-[0.8] tracking-tighter mb-10">
            Lost in <br/>
            <span class="italic text-[#FF6F61]">Switzerland?</span>
          </h1>
          
          <p class="text-2xl text-gray-500 font-light leading-relaxed mb-12 max-w-lg">
            The page you're searching for has moved or ascended into the Alps. Let's get you back on track to your relocation goals.
          </p>

          <div class="flex flex-wrap gap-4">
             <a href="/" class="bg-gray-900 text-white px-8 py-4 rounded-full font-bold hover:bg-slate-800 transition-all flex items-center gap-3 group">
                Return Home <ArrowRight className="w-5 h-5 transition-transform group-hover:translate-x-1" />
             </a>
             <a href="/contact" class="bg-white border border-gray-200 text-gray-900 px-8 py-4 rounded-full font-bold hover:bg-gray-50 transition-all flex items-center gap-2">
                <MessageSquare className="w-4 h-4" /> Support
             </a>
          </div>
        </div>

        {/* Right Side: Visual Link Grid (Bento Style) */}
        <div class="grid grid-cols-2 gap-4">
            <a href="/companies" class="group bg-gray-50 p-8 rounded-[2rem] border border-gray-100 hover:border-[#FF6F61] transition-all">
                <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center mb-6 shadow-sm text-[#FF6F61] group-hover:bg-[#FF6F61] group-hover:text-white transition-colors">
                    <Briefcase className="w-6 h-6" />
                </div>
                <h3 class="font-bold text-gray-900 group-hover:text-[#FF6F61] transition-colors">Directory</h3>
                <p class="text-xs text-gray-400 mt-2">Browse partners</p>
            </a>

            <a href="/blog" class="group bg-gray-50 p-8 rounded-[2rem] border border-gray-100 hover:border-[#FF6F61] transition-all">
                <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center mb-6 shadow-sm text-[#FF6F61] group-hover:bg-[#FF6F61] group-hover:text-white transition-colors">
                    <Info className="w-6 h-6" />
                </div>
                <h3 class="font-bold text-gray-900 group-hover:text-[#FF6F61] transition-colors">Journal</h3>
                <p class="text-xs text-gray-400 mt-2">Expert insights</p>
            </a>

            <a href="/regions" class="group bg-gray-50 p-8 rounded-[2rem] border border-gray-100 hover:border-[#FF6F61] transition-all">
                <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center mb-6 shadow-sm text-[#FF6F61] group-hover:bg-[#FF6F61] group-hover:text-white transition-colors">
                    <Globe className="w-6 h-6" />
                </div>
                <h3 class="font-bold text-gray-900 group-hover:text-[#FF6F61] transition-colors">Regions</h3>
                <p class="text-xs text-gray-400 mt-2">Explore cantons</p>
            </a>

            <a href="/swiss-relocation-guide" class="group bg-gray-50 p-8 rounded-[2rem] border border-gray-100 hover:border-[#FF6F61] transition-all">
                <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center mb-6 shadow-sm text-[#FF6F61] group-hover:bg-[#FF6F61] group-hover:text-white transition-colors">
                    <Search className="w-6 h-6" />
                </div>
                <h3 class="font-bold text-gray-900 group-hover:text-[#FF6F61] transition-colors">Relo Guide</h3>
                <p class="text-xs text-gray-400 mt-2">Step-by-step</p>
            </a>
        </div>
      </div>
    </section>

    {/* Background Decorative Element */}
    <div class="absolute top-0 right-0 w-[50%] h-full opacity-[0.03] pointer-events-none">
        <svg viewBox="0 0 100 100" class="w-full h-full fill-current text-gray-900">
            <path d="M10 10 L90 10 L50 90 Z" />
        </svg>
    </div>
  </main>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,700;1,700&display=swap');
  
  .font-serif {
    font-family: 'Playfair Display', serif;
  }
</style>
