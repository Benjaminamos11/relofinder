  MapPin, 
  Building2, 
  Star, 
  ArrowRight, 
  Home, 
  ChevronDown,
  Briefcase,
  FileText,
  Download,
  Feather,
  PenTool
} from 'lucide-react';
import '../styles/global.css';
import '../styles/alpine-clarity.css';

// Mock Data for Agency Cards
