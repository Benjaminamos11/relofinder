---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compare Best Relocation Agencies Switzerland | ReloFinder</title>
    <meta name="description" content="Find and compare verified Swiss relocation agencies. Get free quotes, read analyst summaries, and download our 2025 Cost Benchmark Guide.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
    <style>
        /* Swiss Passport Style Canton Cards */
        .canton-card-bg {
            font-family: 'Inter', sans-serif;
            font-weight: 800;
            color: #F1F5F9; /* slate-100 */
            opacity: 0.4;
            line-height: 1;
        }
    </style>
</head>
<body class="font-sans text-slate-600 bg-[#F9FAFB] antialiased">

    <!-- 1. Split Header -->
    <nav class="bg-white border-b border-slate-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-20 flex items-center justify-between">
            <!-- Logo -->
            <div class="flex items-center">
                <img src="/images/relofinder-logo-real.png" alt="ReloFinder" class="h-8 w-auto" />
            </div>

            <!-- Desktop Nav Links -->
            <div class="hidden md:flex items-center gap-8 text-sm font-medium text-slate-600">
                <a href="/directory" class="hover:text-slate-900 transition-colors">Directory</a>
                <a href="/cost-guide" class="hover:text-slate-900 transition-colors">Cost Guide</a>
                <a href="/login" class="hover:text-slate-900 transition-colors">Login</a>
            </div>

            <!-- Right Side Actions -->
            <div class="flex items-center gap-4">
                <a href="#" class="hidden md:block text-sm font-medium text-slate-600 hover:text-[#FF6F61] transition-colors">
                    For Individuals
                </a>
                <a href="/corporate-inquiry" class="bg-slate-800 text-white text-sm font-medium px-5 py-2.5 rounded-lg hover:bg-slate-700 transition-colors flex items-center gap-2 shadow-md">
                    <Building2 className="w-4 h-4" />
                    <span>For Corporate HR</span>
                </a>
            </div>
        </div>
    </nav>

    <!-- 2. Premium Hero with Landscape Texture -->
    <section class="relative py-20 lg:py-32 overflow-hidden">
        
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 z-0">
            <img 
                src="https://images.unsplash.com/photo-1530122037265-a5f1f91d3b99?q=80&w=2070&auto=format&fit=crop" 
                alt="Swiss Landscape" 
                class="w-full h-full object-cover"
            />
            <!-- Gradient Overlay: 85% white top -> 100% white bottom -->
            <div class="absolute inset-0 bg-gradient-to-b from-white/85 via-white/95 to-[#F9FAFB]"></div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
            <div class="max-w-4xl mx-auto mb-12">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight text-slate-800 mb-6 leading-[1.1]">
                    Compare the Best Relocation Agencies in <span class="text-[#FF6F61]">Switzerland</span>.
                </h1>
                <p class="text-lg md:text-xl text-slate-500 font-medium">
                    Verified partners. Analyst summaries. Anonymous quotes.
                </p>
            </div>

            <!-- Conversion Box -->
            <div class="max-w-3xl mx-auto relative z-10">
                <div class="bg-white rounded-2xl shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">
                    
                    <!-- Tabs -->
                    <div class="flex border-b border-slate-100" id="hero-tabs">
                        <button class="flex-1 py-4 text-center font-semibold text-sm bg-white text-slate-800 border-b-2 border-[#FF6F61]" data-target="private" data-action="/directory">
                            Private Move
                        </button>
                        <button class="flex-1 py-4 text-center font-semibold text-sm bg-slate-50 text-slate-500 border-b-2 border-transparent hover:text-slate-700 hover:bg-slate-100 transition-all" data-target="corporate" data-action="/corporate-inquiry">
                            Corporate Inquiry
                        </button>
                    </div>

                    <!-- Form Content -->
                    <div class="p-6 md:p-10">
                        <div class="grid md:grid-cols-12 gap-5 mb-8">
                            <div class="md:col-span-4">
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-widest mb-2.5 text-left">Moving From</label>
                                <div class="relative">
                                    <MapPin className="absolute left-3.5 top-3.5 w-5 h-5 text-slate-400" />
                                    <input type="text" placeholder="City or Country" class="w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-200 rounded-lg text-slate-800 placeholder:text-slate-400 focus:ring-2 focus:ring-[#FF6F61]/20 focus:border-[#FF6F61] outline-none transition-all font-medium" />
                                </div>
                            </div>
                            
                            <div class="md:col-span-4">
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-widest mb-2.5 text-left">Moving To</label>
                                <div class="relative">
                                    <Home className="absolute left-3.5 top-3.5 w-5 h-5 text-slate-400" />
                                    <select class="w-full pl-11 pr-8 py-3.5 bg-slate-50 border border-slate-200 rounded-lg text-slate-800 focus:ring-2 focus:ring-[#FF6F61]/20 focus:border-[#FF6F61] outline-none appearance-none cursor-pointer transition-all font-medium">
                                        <option value="" disabled selected>Select Canton</option>
                                        {cantons.map(c => <option value={c.slug}>{c.name}</option>)}
                                    </select>
                                    <ChevronDown className="absolute right-3.5 top-4 w-5 h-5 text-slate-400 pointer-events-none" />
                                </div>
                            </div>

                            <div class="md:col-span-4">
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-widest mb-2.5 text-left">Service Needed</label>
                                <div class="relative">
                                    <FileText className="absolute left-3.5 top-3.5 w-5 h-5 text-slate-400" />
                                    <select class="w-full pl-11 pr-8 py-3.5 bg-slate-50 border border-slate-200 rounded-lg text-slate-800 focus:ring-2 focus:ring-[#FF6F61]/20 focus:border-[#FF6F61] outline-none appearance-none cursor-pointer transition-all font-medium">
                                        {services.map(s => <option value={s.slug}>{s.name}</option>)}
                                        <option>Full Package</option>
                                    </select>
                                    <ChevronDown className="absolute right-3.5 top-4 w-5 h-5 text-slate-400 pointer-events-none" />
                                </div>
                            </div>
                        </div>

                        <a href="/directory" id="hero-cta" class="block w-full py-4 bg-[#FF6F61] hover:bg-[#f65d4e] text-white font-bold rounded-lg shadow-lg shadow-[#FF6F61]/20 transition-all transform hover:-translate-y-0.5 text-lg">
                            Compare Rates & Availability
                        </a>
                        
                        <div class="mt-6 flex items-center justify-center gap-6 border-t border-slate-50 pt-6">
                            <p class="text-xs text-slate-400 font-medium flex items-center gap-1.5">
                                <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
                                5,000+ Requests this year
                            </p>
                            <p class="text-xs text-slate-400 font-medium flex items-center gap-1.5">
                                <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
                                100% Free Service
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 3. "Editorial" Agency Cards -->
    <section class="py-24 bg-white border-y border-slate-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-end mb-16">
                <div>
                    <h2 class="text-3xl md:text-4xl font-bold text-slate-800 mb-3">Top Rated Agencies</h2>
                    <p class="text-slate-500 text-lg">Selected based on verification status and independent analysis.</p>
                </div>
                <a href="/directory" class="hidden md:flex items-center gap-2 text-[#FF6F61] font-semibold hover:text-[#e05548] transition-colors border-b-2 border-[#FF6F61]/20 pb-1 hover:border-[#FF6F61]">
                    View All Agencies <ArrowRight className="w-4 h-4" />
                </a>
            </div>

            <div class="grid md:grid-cols-3 gap-10">
                {topAgencies.map((agency) => (
                    <div class="bg-white rounded-xl border border-slate-200 p-0 transition-all duration-500 hover:shadow-2xl hover:shadow-slate-200/50 hover:-translate-y-1 group h-full flex flex-col">
                        
                        <!-- Card Header -->
                        <div class="p-8 pb-4">
                            <div class="flex items-center justify-between mb-6">
                                <div class="w-14 h-14 bg-white rounded-lg border border-slate-100 p-2 flex items-center justify-center shadow-sm">
                                    <img src="/images/relofinder-logo-real.png" class="w-full h-full object-contain grayscale opacity-70 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300" alt="Agency Logo" />
                                </div>
                                <div class="flex flex-col items-end">
                                     <div class="flex text-yellow-400 mb-1">
                                        <Star className="w-4 h-4 fill-current" />
                                        <Star className="w-4 h-4 fill-current" />
                                        <Star className="w-4 h-4 fill-current" />
                                        <Star className="w-4 h-4 fill-current" />
                                        <Star className="w-4 h-4 fill-current" />
                                    </div>
                                    <span class="text-xs font-semibold text-slate-400">{agency.count} Verified Reviews</span>
                                </div>
                            </div>
                            <h3 class="font-bold text-slate-800 text-xl mb-2">{agency.name}</h3>
                        </div>

                        <!-- Analyst Note - Editorial Style -->
                        <div class="bg-stone-50 border-y border-slate-100 px-8 py-6 flex-grow">
                            <div class="flex items-center gap-2 mb-3">
                                <Feather className="w-3 h-3 text-slate-400" />
                                <span class="text-xs font-bold text-slate-400 uppercase tracking-widest">Analyst Summary</span>
                            </div>
                            <p class="text-slate-700 leading-relaxed font-serif italic text-lg">
                                "{agency.analystNote}"
                            </p>
                        </div>

                        <!-- Footer Actions -->
                        <div class="p-8 pt-6 mt-auto">
                            <div class="flex flex-wrap gap-2 mb-6">
                                {agency.tags.map(tag => (
                                    <span class="px-3 py-1 bg-white text-slate-600 text-xs font-medium rounded-full border border-slate-200">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                            <a href="#" class="flex items-center justify-center w-full py-3 rounded-lg border border-slate-200 text-slate-700 font-semibold text-sm hover:bg-slate-800 hover:text-white hover:border-slate-800 transition-all duration-300">
                                View Profile
                            </a>
                        </div>
                    </div>
                ))}
            </div>
            
            <div class="mt-12 text-center md:hidden">
                <a href="/directory" class="text-[#FF6F61] font-semibold">View All Agencies &rarr;</a>
            </div>
        </div>
    </section>

    <!-- 4. Swiss Passport Regions Grid -->
    <section class="py-24 bg-[#F9FAFB]">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-bold text-slate-800 mb-10">Find Experts by Canton</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                {cantons.map(canton => (
                    <a href={`/canton/${canton.slug}`} class="relative h-32 flex flex-col justify-between p-6 bg-white border border-slate-200 rounded-xl hover:border-[#FF6F61] hover:shadow-md transition-all group overflow-hidden">
                        
                        <!-- Content -->
                        <div class="relative z-10">
                            <MapPin className="w-5 h-5 text-slate-300 mb-3 group-hover:text-[#FF6F61] transition-colors" />
                            <span class="text-lg font-bold text-slate-700 group-hover:text-slate-900">{canton.name}</span>
                        </div>

                        <!-- Big Design Element -->
                        <span class="absolute -bottom-4 -right-2 text-8xl font-black text-slate-100 opacity-50 select-none pointer-events-none group-hover:text-slate-200/70 transition-colors canton-card-bg tracking-tighter">
                            {canton.code}
                        </span>
                    </a>
                ))}
            </div>
        </div>
    </section>

    <!-- 5. Lead Magnet -->
    <section class="bg-slate-800 py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="bg-slate-700/30 rounded-2xl p-8 md:p-16 flex flex-col lg:flex-row items-center justify-between gap-12 border border-slate-600/50 backdrop-blur-sm">
                <div class="text-left lg:max-w-2xl">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Don't overpay for your move.</h2>
                    <p class="text-slate-300 text-lg leading-relaxed">
                        Relocation costs vary wildly. Download our verified <span class="text-white font-semibold">2025 Swiss Relocation Cost Benchmark PDF</span> to see average market rates for housing search, visa assistance, and moving logistics.
                    </p>
                </div>
                <div class="w-full lg:w-auto bg-white/5 p-6 rounded-xl border border-white/10">
                    <form class="flex flex-col gap-4">
                        <div>
                            <label class="block text-xs font-bold text-slate-400 uppercase mb-2">Work Email</label>
                            <input type="email" placeholder="name@company.com" class="w-full px-4 py-3 bg-slate-800 border border-slate-600 rounded-lg text-white placeholder:text-slate-500 focus:ring-2 focus:ring-[#FF6F61] outline-none min-w-[300px]" />
                        </div>
                        <button class="w-full px-6 py-3.5 bg-[#FF6F61] hover:bg-[#f65d4e] text-white font-bold rounded-lg flex items-center justify-center gap-2 transition-colors shadow-lg shadow-[#FF6F61]/20">
                            <Download className="w-4 h-4" /> Download Benchmark
                        </button>
                    </form>
                    <p class="text-xs text-slate-500 mt-4 text-center">Instant access. No spam. Unsubscribe anytime.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- 6. LLM FAQ Section -->
    <section class="py-24 bg-white">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-bold text-slate-800 mb-10 text-center">Common Questions about Moving to Switzerland</h2>
            <div class="space-y-4">
                {faqs.map((faq, i) => (
                    <details class="group bg-[#F9FAFB] border border-slate-200 rounded-lg overflow-hidden">
                        <summary class="flex justify-between items-center p-5 cursor-pointer font-semibold text-slate-800 hover:bg-slate-100 transition-colors select-none text-lg">
                            {faq.q}
                            <ChevronDown className="w-5 h-5 text-slate-400 group-open:rotate-180 transition-transform" />
                        </summary>
                        <div class="px-5 pb-6 pt-2 text-slate-600 leading-relaxed border-t border-slate-100">
                            {faq.a}
                        </div>
                    </details>
                ))}
            </div>
        </div>
    </section>

    <!-- 7. Fat Footer -->
    <footer class="bg-[#1E293B] border-t border-slate-700 pt-16 pb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
                
                <!-- Brand Column -->
                <div class="space-y-6">
                    <div class="flex items-center">
                        <span class="text-2xl font-bold text-white tracking-tight">ReloFinder<span class="text-[#FF6F61]">.ch</span></span>
                    </div>
                    <p class="text-slate-400 text-sm leading-relaxed">
                        The #1 Swiss Relocation Marketplace. Connecting expats and companies with verified local experts.
                    </p>
                    <div class="flex gap-4">
                        <a href="#" class="w-8 h-8 bg-slate-700 rounded-full flex items-center justify-center text-slate-300 hover:bg-white hover:text-slate-900 transition-all">
                            <!-- Twitter Icon -->
                            <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
                        </a>
                        <a href="#" class="w-8 h-8 bg-slate-700 rounded-full flex items-center justify-center text-slate-300 hover:bg-white hover:text-slate-900 transition-all">
                            <!-- LinkedIn Icon -->
                            <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                        </a>
                    </div>
                </div>

                <!-- Top Cantons -->
                <div>
                    <h4 class="text-white font-bold mb-6">Top Cantons</h4>
                    <ul class="space-y-3 text-sm text-slate-400">
                        {cantons.slice(0, 5).map(c => (
                            <li><a href={`/canton/${c.slug}`} class="hover:text-[#FF6F61] transition-colors">{c.name}</a></li>
                        ))}
                    </ul>
                </div>

                <!-- Services -->
                <div>
                    <h4 class="text-white font-bold mb-6">Popular Services</h4>
                    <ul class="space-y-3 text-sm text-slate-400">
                        {services.map(s => (
                            <li><a href={`/services/${s.slug}`} class="hover:text-[#FF6F61] transition-colors">{s.name}</a></li>
                        ))}
                    </ul>
                </div>

                <!-- Corporate -->
                <div>
                    <h4 class="text-white font-bold mb-6">For Business</h4>
                    <ul class="space-y-3 text-sm text-slate-400">
                        <li><a href="/corporate-inquiry" class="hover:text-[#FF6F61] transition-colors">Corporate Solutions</a></li>
                        <li><a href="/login" class="hover:text-slate-400 hover:underline transition-colors">Agency Login</a></li>
                        <li><a href="/market-data" class="hover:text-slate-400 hover:underline transition-colors">Get 2025 Rate Cards</a></li>
                    </ul>
                </div>
            </div>

            <!-- Bottom Bar -->
            <div class="border-t border-slate-700 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-slate-500">
                <p>&copy; 2025 ReloFinder Switzerland AG</p>
                <div class="flex gap-6">
                    <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a>
                    <a href="/terms" class="hover:text-white transition-colors">Terms of Service</a>
                    <a href="/imprint" class="hover:text-white transition-colors">Impressum</a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Tab Logic that changes Button URL
        const tabs = document.querySelectorAll('#hero-tabs button');
        const ctaButton = document.getElementById('hero-cta') as HTMLAnchorElement;
        
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                // Deactivate all
                tabs.forEach(t => {
                    t.classList.remove('bg-white', 'text-slate-800', 'border-b-2', 'border-[#FF6F61]');
                    t.classList.add('bg-slate-50', 'text-slate-500', 'border-transparent');
                });

                // Activate clicked
                tab.classList.remove('bg-slate-50', 'text-slate-500', 'border-transparent');
                tab.classList.add('bg-white', 'text-slate-800', 'border-b-2', 'border-[#FF6F61]');

                // Update Button URL
                const action = tab.getAttribute('data-action');
                if (action && ctaButton) {
                    ctaButton.href = action;
                }
            });
        });
    </script>

</body>
</html>
