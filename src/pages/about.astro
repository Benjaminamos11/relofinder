---
import Layout from '../layouts/Layout.astro';
import CloudinaryImage from '../components/common/CloudinaryImage.astro';
import { Linkedin, Mail, ArrowUpRight, CheckCircle2, Building2, Users } from 'lucide-react';

const title = 'About ReloFinder | The Swiss Relocation Ecosystem';
const description = 'Founded by Benjamin Amos Wagner, ReloFinder brings transparency to the Swiss relocation market. We help expats and corporates compare rates and find the right partners.';
const canonical = 'https://relofinder.ch/about';

const team = [
  {
    name: 'Benjamin Amos Wagner',
    role: 'Founder & CEO',
    bio: 'Building the Swiss Relocation Ecosystem. Focused on transparency and simplifying the move to Switzerland.',
    image: 'https://res.cloudinary.com/dphbnwjtx/image/upload/c_fill,g_center,h_780,w_650,y_20,e_improve,e_sharpen,r_20/v1747850395/DSC_7067_l2xm3b.webp',
    position: 'object-center',
    email: 'bw@relofinder.ch',
    linkedin: 'https://www.linkedin.com/in/benjamin-wagner-relofinder/'
  },
  {
    name: 'Ralf Degenhardt',
    role: 'Corporate Relations',
    bio: 'Connecting multinational corporations with tailored relocation solutions and optimized rate structures.',
    initials: 'RD',
    image: '/team/ralf.jpg',
    position: 'object-top'
  },
  {
    name: 'Karina Ilina',
    role: 'Design & Operations',
    bio: 'Ensuring a seamless digital experience and managing backoffice excellence for our partners.',
    image: '/team/karina.png',
    position: 'object-top',
    email: 'karina@relofinder.ch',
    linkedin: 'https://www.linkedin.com/in/karina-ilina-77404936b/'
  }
];

const ecosystem = [
  {
    name: 'Expat Savvy',
    url: 'https://expat-savvy.ch',
    desc: 'The comprehensive guide for expats living in Switzerland.'
  },
  {
    name: 'Offlist',
    url: 'https://offlist.ch',
    desc: 'Exclusive off-market real estate listings for new arrivals.'
  },
  {
    name: 'Expat Services',
    url: 'https://expat-services.ch',
    desc: 'Premium service directory for verified providers.'
  },
  {
    name: 'SIP',
    url: 'https://sip.ch',
    desc: 'Strategic Insurance Partner for medical and liability coverage.'
  }
];
---

<Layout title={title} description={description} canonical={canonical}>
  
  <main class="bg-white">
    
    <!-- Hero / Founder Section -->
    <section class="relative pt-24 pb-20 lg:pt-32 lg:pb-32 overflow-hidden">
      <div class="container mx-auto px-6 lg:px-8 max-w-7xl">
        <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">
          
          <div class="order-2 lg:order-1">
            <span class="inline-block py-1 px-3 rounded-full bg-orange-100 text-[#FF6F61] text-xs font-bold uppercase tracking-widest mb-6 border border-orange-200">
              The Vision
            </span>
            <h1 class="text-5xl lg:text-7xl font-serif text-gray-900 font-bold leading-tight mb-8">
              Building the Swiss <br/>
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#FF6F61] to-[#ff8f70]">Relocation Ecosystem</span>
            </h1>
            <div class="prose prose-lg text-gray-600 leading-relaxed mb-10">
              <p>
                Moving to Switzerland is more than just logistics; it's a life-changing event. 
                I built <strong>ReloFinder</strong> to introduce radical transparency to a market that has traditionally been fragmented and opaque.
              </p>
              <p>
                For <strong>individuals</strong>, we are the trusted compass—helping you compare agencies, understand fair pricing, and find the right experts. 
                For <strong>corporates</strong>, we are the efficiency engine—providing data-driven insights to optimize relocation rates and ensure your top talent lands softly.
              </p>
            </div>
            
            <div class="bg-gray-50 rounded-2xl p-8 border border-gray-100 animate-fade-in-up delay-300">
               <div class="mb-8">
                  <a href="mailto:hello@relofinder.ch" class="inline-flex items-center text-lg font-bold text-gray-900 border-b-2 border-gray-900 hover:text-[#FF6F61] hover:border-[#FF6F61] transition-colors pb-1">
                     <Mail className="w-5 h-5 mr-3" />
                     hello@relofinder.ch
                  </a>
               </div>

               <div class="pt-6 border-t border-gray-200/60">
                   <p class="text-xs font-bold tracking-widest text-[#FF6F61] uppercase mb-3">Swiss Headquarters</p>
                   <p class="text-xl md:text-2xl font-serif font-bold text-gray-900 mb-8 leading-snug">
                       Chilegässli 12a, <br />8904 Aesch ZH
                   </p>

                   <div class="text-[10px] uppercase tracking-wide text-gray-400">
                       <p class="font-bold text-gray-500 mb-1">Legal Entity</p>
                       Lang + Partner | Finanzdienstleistungen GmbH &bull; Chilegässli 12a &bull; 8904 Aesch ZH
                   </div>
               </div>
            </div>
          </div>

          <div class="order-1 lg:order-2 relative">
             <div class="relative aspect-[4/5] rounded-3xl overflow-hidden shadow-2xl bg-gray-100 group">
                <CloudinaryImage
                    src="/images/about-hero.png"
                    alt="Expats arriving in Switzerland"
                    width={800}
                    height={1000}
                    class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700 ease-in-out"
                />
                <div class="absolute bottom-0 left-0 w-full p-8 bg-gradient-to-t from-black/80 to-transparent">
                    <p class="text-white font-serif text-2xl mb-1">New Beginnings</p>
                    <p class="text-white/80 uppercase tracking-widest text-xs font-bold">Your Swiss Journey</p>
                </div>
             </div>
             
             <!-- Decorative elements -->
             <div class="absolute -z-10 top-12 -right-12 w-full h-full border-2 border-[#FF6F61]/20 rounded-3xl"></div>
          </div>

        </div>
      </div>
    </section>

    <!-- Mission / Transparency Section -->
    <section class="py-24 bg-gray-50 border-y border-gray-100">
       <div class="container mx-auto px-6 lg:px-8 max-w-7xl">
          <div class="text-center max-w-3xl mx-auto mb-20">
             <h2 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-6">Comparison is Power</h2>
             <p class="text-xl text-gray-500 leading-relaxed">
               We believe that whether you are moving one person or one hundred, you deserve to know you are getting the fair market rate.
             </p>
          </div>

          <div class="grid md:grid-cols-2 gap-12">
             
             <!-- For Individuals -->
             <div class="bg-white p-10 rounded-2xl shadow-sm border border-gray-100 hover:shadow-xl transition-shadow duration-300 group">
                <div class="w-16 h-16 bg-orange-50 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform">
                   <Users className="w-8 h-8 text-[#FF6F61]" />
                </div>
                <h3 class="text-3xl font-serif font-bold text-gray-900 mb-4">For Expats</h3>
                <ul class="space-y-4 text-gray-600 mb-8">
                   <li class="flex items-start gap-3">
                      <CheckCircle2 className="w-5 h-5 text-[#FF6F61] shrink-0 mt-0.5" />
                      <span><strong>Compare Real Rates:</strong> See what verified agencies actually charge.</span>
                   </li>
                   <li class="flex items-start gap-3">
                      <CheckCircle2 className="w-5 h-5 text-[#FF6F61] shrink-0 mt-0.5" />
                      <span><strong>Verified Reviews:</strong> Honest feedback from people who have made the move.</span>
                   </li>
                   <li class="flex items-start gap-3">
                      <CheckCircle2 className="w-5 h-5 text-[#FF6F61] shrink-0 mt-0.5" />
                      <span><strong>Zero Cost:</strong> Our platform is 100% free for individuals.</span>
                   </li>
                </ul>
                <a href="/search/results" class="text-[#FF6F61] font-bold uppercase tracking-wider text-sm hover:text-black transition-colors flex items-center gap-2">
                   Find an Agency <ArrowUpRight className="w-4 h-4" />
                </a>
             </div>

             <!-- For Corporates -->
             <div class="bg-white p-10 rounded-2xl shadow-sm border border-gray-100 hover:shadow-xl transition-shadow duration-300 group">
                <div class="w-16 h-16 bg-gray-50 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform">
                   <Building2 className="w-8 h-8 text-gray-900" />
                </div>
                <h3 class="text-3xl font-serif font-bold text-gray-900 mb-4">For Corporates</h3>
                <ul class="space-y-4 text-gray-600 mb-8">
                   <li class="flex items-start gap-3">
                      <CheckCircle2 className="w-5 h-5 text-gray-900 shrink-0 mt-0.5" />
                      <span><strong>Rate Optimization:</strong> Benchmarking data to negotiate better contracts.</span>
                   </li>
                   <li class="flex items-start gap-3">
                      <CheckCircle2 className="w-5 h-5 text-gray-900 shrink-0 mt-0.5" />
                      <span><strong>Quality Control:</strong> Ensure your staff gets the best landing experience.</span>
                   </li>
                   <li class="flex items-start gap-3">
                      <CheckCircle2 className="w-5 h-5 text-gray-900 shrink-0 mt-0.5" />
                      <span><strong>Single Dashboard:</strong> Manage multiple providers in one ecosystem.</span>
                   </li>
                </ul>
                <a href="/corporate" class="text-gray-900 font-bold uppercase tracking-wider text-sm hover:text-[#FF6F61] transition-colors flex items-center gap-2">
                   Corporate Solutions <ArrowUpRight className="w-4 h-4" />
                </a>
             </div>

          </div>
       </div>
    </section>

    <!-- The Team -->
    <section class="py-24 bg-white">
       <div class="container mx-auto px-6 lg:px-8 max-w-7xl">
          <h2 class="text-3xl font-serif font-bold text-gray-900 mb-16 text-center">Meet the Core Team</h2>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 justify-center">
             {team.map((member) => (
                <div class="bg-white group">
                   <div class="aspect-square bg-gray-100 rounded-2xl overflow-hidden mb-6 relative">
                      {member.image ? (
                        <CloudinaryImage src={member.image} alt={member.name} width={400} height={400} class={`w-full h-full object-cover ${member.position} filter grayscale group-hover:grayscale-0 transition-all duration-500`} />
                      ) : (
                        <div class="w-full h-full flex items-center justify-center bg-gray-50 text-gray-300 font-serif text-4xl border border-gray-100">
                           {member.initials}
                        </div>
                      )}
                   </div>
                   <h3 class="text-xl font-bold text-gray-900 mb-1">{member.name}</h3>
                   <p class="text-sm text-[#FF6F61] font-bold uppercase tracking-widest mb-3">{member.role}</p>
                   <p class="text-gray-500 text-sm leading-relaxed">{member.bio}</p>
                   <div class="mt-4 flex gap-3">
                       {member.email && (
                         <a href={`mailto:${member.email}`} class="text-gray-400 hover:text-[#FF6F61] transition-colors" aria-label={`Email ${member.name}`}>
                             <Mail className="w-5 h-5" />
                         </a>
                       )}
                       {member.linkedin && (
                         <a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-[#FF6F61] transition-colors" aria-label={`LinkedIn ${member.name}`}>
                             <Linkedin className="w-5 h-5" />
                         </a>
                       )}
                   </div>
                </div>
             ))}
          </div>
       </div>
    </section>

    <!-- Ecosystem -->
    <section class="py-24 bg-gray-900 text-white">
       <div class="container mx-auto px-6 lg:px-8 max-w-7xl">
          <div class="flex flex-col md:flex-row items-end justify-between mb-16 gap-8">
             <div>
                <span class="text-[#FF6F61] font-bold uppercase tracking-widest text-sm mb-4 block">The Network</span>
                <h2 class="text-4xl md:text-5xl font-serif font-bold">The Relocation Ecosystem</h2>
             </div>
             <p class="max-w-md text-gray-400 leading-relaxed">
                ReloFinder is part of a larger family of specialized services designed to cover every aspect of the expat journey in Switzerland.
             </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
             {ecosystem.map((partner) => (
                <a href={partner.url} target="_blank" rel="noopener noreferrer" class="group relative bg-gray-800/50 rounded-2xl p-8 border border-gray-700 hover:border-[#FF6F61]/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl hover:shadow-[#FF6F61]/10">
                   <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-[#FF6F61] to-[#ff8f70] rounded-t-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                   <h3 class="text-2xl font-bold font-serif mb-4 flex items-center gap-2 text-white group-hover:text-[#FF6F61] transition-colors">
                      {partner.name}
                      <ArrowUpRight className="w-4 h-4 text-gray-500 group-hover:text-[#FF6F61] transition-colors" />
                   </h3>
                   <p class="text-sm text-gray-400 leading-relaxed group-hover:text-gray-300 transition-colors">
                      {partner.desc}
                   </p>
                </a>
             ))}
          </div>
       </div>
    </section>

  </main>
</Layout>