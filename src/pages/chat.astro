  }
  
  .chat-input {
    @apply w-full px-4 py-3 rounded-xl border border-accent-200
           bg-white focus:ring-2 focus:ring-primary-500 
           focus:outline-none mb-3 transition-all duration-200
           placeholder-accent-400;
  }
