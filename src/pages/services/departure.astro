const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Swiss Departure & Repatriation Services",
  "description": "Professional departure support including lease termination, end-of-tenancy handover, deregistration, and deposit recovery for expats leaving Switzerland",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Switzerland"
  },
  "serviceType": "Departure & Repatriation Services"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much notice must I give to terminate my lease in Switzerland?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Standard notice period is 3 months to official termination dates (quarterly: March 31, June 30, September 30, December 31). Notice must be given by registered mail (Einschreiben) using official termination forms. Some leases allow shorter notice (1-2 months) but this is rare. Early termination requires landlord approval or finding replacement tenant."
      }
    },
    {
      "@type": "Question",
      "name": "Is professional cleaning required when moving out?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most Swiss leases require the apartment returned in original condition meaning professional deep cleaning. This includes: kitchen appliances (oven, fridge), bathrooms, windows, floors, walls if damaged. Many landlords require certified cleaning company receipts. Cost typically CHF 300-800 depending on apartment size. DIY cleaning often rejected by landlords."
      }
    },
    {
      "@type": "Question",
      "name": "How long does it take to get my rental deposit back?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Landlords can legally withhold deposits up to 12 months while final bills are settled (utilities, Serafe, repairs). Typical timeline: 3-6 months if no issues. Deposits held in blocked account with interest accrued. Deductions allowed for damages, unpaid bills, or incomplete cleaning. Disputes can be filed with cantonal rental commission."
      }
    },
    {
      "@type": "Question",
      "name": "What steps are needed to deregister before leaving Switzerland?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Visit local municipality (Gemeinde) to officially deregister (Abmeldung). Bring: passport/ID, proof of departure (flight ticket, new address abroad), rental termination confirmation. Deregister within 14 days of departure to avoid fines. Municipality issues deregistration confirmation needed for final tax settlement and forwarding address for mail."
      }
    },
    {
      "@type": "Question",
      "name": "Can I end my lease early if I find a new tenant?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, if landlord approves replacement tenant (Nachmieter). You remain responsible until replacement approved and moves in. New tenant must have similar profile (employment, references, financial capacity). Landlord cannot unreasonably refuse suitable replacement. Finding replacement tenant yourself often faster than waiting for landlord to fill vacancy."
      }
    },
    {
      "@type": "Question",
      "name": "What happens if I don't deregister before departure?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Failure to deregister causes problems: continued health insurance premiums, tax complications, mail forwarding issues, fines from municipality (CHF 100-200). You remain officially registered in Switzerland creating administrative complications. Deregister even if leaving temporarily. Can be done in person or sometimes via mail/email depending on municipality."
      }
    }
  ]
};
---

<Layout title={title} description={description}>
  <SchemaMarkup schema={breadcrumbSchema} />
  <SchemaMarkup schema={serviceSchema} />
  <SchemaMarkup schema={faqSchema} />

  <ServiceHero
    title="Departure & Repatriation Services"
