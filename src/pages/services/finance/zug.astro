---
import Layout from '../../../layouts/Layout.astro';
import SchemaMarkup from '../../../components/common/SchemaMarkup.astro';
import PlatformDisclaimer from '../../../components/common/PlatformDisclaimer.astro';
import ServiceHero from '../../../components/services/ServiceHero.astro';

const title = "Finance in Zug | Banking, Crypto & Tax Advantages | ReloFinder";
const description = "Compare finance providers in Zug. Banking, neobanks, and crypto-friendly services in Switzerland's Crypto Valley. Tax benefits for expats. Insurance via Expat-Savvy.ch.";
const canonicalURL = "https://relofinder.ch/services/finance/zug";
const keywords = ['finance zug', 'banking zug', 'crypto banking zug', 'zug crypto valley', 'expat banking zug', 'tax advantages zug', 'insurance zug', 'wealth management zug'];

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://relofinder.ch/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Finance",
      "item": "https://relofinder.ch/services/finance"
    },
    {
      "@type": "ListItem",
      "position": 4,
      "name": "Zug",
      "item": "https://relofinder.ch/services/finance/zug"
    }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Finance Services in Zug",
  "description": "Compare banking and finance providers for expats in Zug, Switzerland including neobanks, traditional banks, and crypto-friendly services in Crypto Valley",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "City",
    "name": "Zug",
    "containedIn": {
      "@type": "Country",
      "name": "Switzerland"
    }
  },
  "serviceType": "Banking & Finance Services"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Why is Zug called Crypto Valley?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Zug hosts 1,000+ blockchain companies including Ethereum Foundation, Cardano, Tezos, and Bitcoin Suisse. The canton's low taxes, crypto-friendly regulations, and Crypto Valley Association created the world's leading blockchain ecosystem. Banks increasingly offer crypto custody and fintech services."
      }
    },
    {
      "@type": "Question",
      "name": "What are the tax advantages of living in Zug?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Zug has Switzerland's lowest cantonal tax rates: ~15-22% combined income tax (federal + cantonal + municipal) vs 25-35% in Zurich or Geneva. Wealth tax is 0.1-0.3%. Corporate tax ~12% attracts entrepreneurs and holding companies. Ideal for high earners and business founders."
      }
    },
    {
      "@type": "Question",
      "name": "Which banks are most expat-friendly in Zug?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most expat-friendly: Neobanks (Yapeal, Neon) for fast setup in 1-3 days; Revolut for multi-currency and crypto. Traditional: Zuger Kantonalbank for local presence; UBS for corporate expats and crypto custody pilots. All require Swiss residence permit and address proof."
      }
    },
    {
      "@type": "Question",
      "name": "Can expats open accounts with Zuger Kantonalbank?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, Zuger Kantonalbank (ZKB) serves expats with Swiss permits. Requires: passport, B/L/C permit, Zug address proof, employment contract. Account opens in 1-2 weeks. Offers mortgages, savings, investment accounts. Conservative approach; less crypto-friendly than neobanks but strong local presence."
      }
    },
    {
      "@type": "Question",
      "name": "Are neobanks like Yapeal and Neon available in Zug?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, Yapeal and Neon work throughout Switzerland including Zug. Provide Swiss IBAN (CH), English interfaces, 1-3 day onboarding, no minimum balance. Revolut also popular for multi-currency (30+ currencies), crypto payments, and real-time FX. Hybrid approach common: Swiss neobank for salary + Revolut for international."
      }
    },
    {
      "@type": "Question",
      "name": "Can I manage crypto with Swiss banks in Zug?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, Zug has crypto-friendly banking. Bitcoin Suisse offers custody and trading; UBS runs crypto custody pilots; smaller banks partner with blockchain firms. Most traditional banks remain conservative. Revolut provides crypto trading (BTC, ETH, 80+ coins). Zug-based Crypto Finance AG offers institutional crypto banking."
      }
    }
  ]
};

const siblingCities = [
  { name: 'Zurich', slug: 'zurich' },
  { name: 'Geneva', slug: 'geneva' }
];
---

<Layout 
  title={title} 
  description={description}
  canonical={canonicalURL}
  keywords={keywords}
  schema={{
    "@context": "https://schema.org",
    "@graph": [breadcrumbSchema, serviceSchema, faqSchema]
  }}
>

  <ServiceHero
    title="Finance in Zug"
    subtitle="Banking & Crypto Valley for Expats"
    description="Zug is Switzerland's 'Crypto Valley' and one of the most tax-friendly cantons. From neobanks to private wealth management, Zug attracts expats, entrepreneurs, and fintech professionals. ReloFinder helps you compare relocation providers and banking partners in Zug. We don't deliver the services ourselves — we connect you to trusted partners."
    icon="bank"
    badge="Finance in Zug"
  />

  <!-- Platform Disclaimer -->
  <section class="py-8 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <PlatformDisclaimer compact={true} />
      </div>
    </div>
  </section>

  <!-- Primary CTA after Hero -->
  <section class="py-12 bg-gradient-to-br from-gray-50 via-white to-primary-50">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Need Help Setting Up Your Zug Finances?
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          Get expert support for banking, crypto services, and tax optimization
        </p>
        <button
          onclick="universalOpenModal({page: 'finance_zug', service: 'finance'})"
          class="inline-flex items-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          Get a Free Consultation with our Preferred Partner
        </button>
        <p class="text-sm text-gray-500 mt-3">
          Our relocation partners with us and gives free consultations to users
        </p>
      </div>
    </div>
  </section>

  <!-- InfoCard Grid: Why Finance in Zug Matters -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Why It Matters
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Why Finance in Zug <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Matters for Expats</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Card 1: Crypto Valley -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Crypto Valley & Fintech Hub</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Zug hosts 1,000+ blockchain companies including Ethereum Foundation, Cardano, Bitcoin Suisse. World's leading crypto ecosystem with progressive regulations.
            </p>
            <a href="#deep-dive-accordion" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Explore Crypto Valley
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 2: Low Taxes -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Low Cantonal Taxes</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Zug has Switzerland's lowest income tax rates (15-22% combined) and minimal wealth tax (0.1-0.3%). Corporate tax ~12% attracts entrepreneurs and holding companies.
            </p>
            <a href="#deep-dive-accordion" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Tax advantages
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 3: Expat Banking -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Expat Banking Challenges</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Traditional banks require permits, address proof, and Gemeinde registration. Neobanks simplify onboarding (1-3 days). Relocation agencies navigate the process.
            </p>
            <a href="#docs-checklist" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              See requirements
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 4: Neobanks -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Neobank Options</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Yapeal, Neon, and Revolut offer fast onboarding (1-3 days), English interfaces, and crypto-friendly features — ideal for fintech professionals and startup founders.
            </p>
            <a href="#comparison-table" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Compare options
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 5: Private Banking -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Private Banking & HNWI Services</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              UBS and private banks serve HNWI in Zug. Low taxes attract wealthy entrepreneurs. Portfolio management, holding company structures, and tax-efficient investing available.
            </p>
            <a href="#deep-dive-accordion" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Private banking details
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 6: Insurance -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Insurance & Compliance</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Health insurance mandatory within 3 months (CHF 300-500/month). Expert guidance via <a href="https://expat-savvy.ch" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700 font-semibold underline">Expat-Savvy.ch</a>.
            </p>
            <a href="https://expat-savvy.ch" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Get insurance help
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Table: Neobanks vs Traditional Banks -->
  <section id="comparison-table" class="py-20 bg-gradient-to-br from-gray-50 via-white to-primary-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Compare Options
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Neobanks vs <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Traditional Banks</span>
          </h2>
        </div>

        <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-200">
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead>
                <tr class="bg-gray-50 border-b border-gray-200">
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Provider</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Swiss IBAN</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Onboarding</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Crypto/Fintech</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Min. Balance</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Best For</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Yapeal</td>
                  <td class="px-4 py-3 text-gray-700">✅ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 days</td>
                  <td class="px-4 py-3 text-gray-700">✅ Yes</td>
                  <td class="px-4 py-3 text-gray-700">None</td>
                  <td class="px-4 py-3 text-gray-700">Expats, startups</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Neon</td>
                  <td class="px-4 py-3 text-gray-700">✅ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 days</td>
                  <td class="px-4 py-3 text-gray-700">Limited</td>
                  <td class="px-4 py-3 text-gray-700">None</td>
                  <td class="px-4 py-3 text-gray-700">Everyday banking</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Revolut</td>
                  <td class="px-4 py-3 text-gray-700">⚠️ Partial</td>
                  <td class="px-4 py-3 text-gray-700">Instant</td>
                  <td class="px-4 py-3 text-gray-700">✅ Yes (FX/crypto)</td>
                  <td class="px-4 py-3 text-gray-700">None</td>
                  <td class="px-4 py-3 text-gray-700">Multi-currency + intl.</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Zuger Kantonalbank</td>
                  <td class="px-4 py-3 text-gray-700">✅ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-2 weeks</td>
                  <td class="px-4 py-3 text-gray-700">Conservative</td>
                  <td class="px-4 py-3 text-gray-700">Low</td>
                  <td class="px-4 py-3 text-gray-700">Local residents/business</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">UBS</td>
                  <td class="px-4 py-3 text-gray-700">✅ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 weeks</td>
                  <td class="px-4 py-3 text-gray-700">✅ Crypto custody pilots</td>
                  <td class="px-4 py-3 text-gray-700">High</td>
                  <td class="px-4 py-3 text-gray-700">Corporate expats, HNWI</td>
                </tr>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Credit Suisse</td>
                  <td class="px-4 py-3 text-gray-700">✅ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 weeks</td>
                  <td class="px-4 py-3 text-gray-700">Limited</td>
                  <td class="px-4 py-3 text-gray-700">High</td>
                  <td class="px-4 py-3 text-gray-700">Private banking</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="mt-6 p-6 bg-white rounded-xl border border-gray-200">
          <p class="text-gray-700 leading-relaxed">
            <strong>Recommended strategy:</strong> Zug expats often combine a neobank (Yapeal/Neon) for speed and salary with a traditional bank (Zuger Kantonalbank/UBS) for mortgages, investments, or business accounts as needs grow.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Documents Checklist -->
  <section id="docs-checklist" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Preparation
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Documents <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Checklist</span>
          </h2>
        </div>

        <div class="bg-gradient-to-br from-gray-50 to-white p-8 rounded-2xl border-2 border-gray-200">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Essential for All Banks
              </h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <span class="inline-block w-5 h-5 border-2 border-gray-300 rounded mr-3 mt-0.5 flex-shrink-0"></span>
                  <span class="text-gray-700">Valid passport (6+ months validity)</span>
                </li>
                <li class="flex items-start">
                  <span class="inline-block w-5 h-5 border-2 border-gray-300 rounded mr-3 mt-0.5 flex-shrink-0"></span>
                  <span class="text-gray-700">Swiss residence/work permit (B, L, C, or legitimation card)</span>
                </li>
                <li class="flex items-start">
                  <span class="inline-block w-5 h-5 border-2 border-gray-300 rounded mr-3 mt-0.5 flex-shrink-0"></span>
                  <span class="text-gray-700">Proof of Zug address (rental contract or Gemeinde registration)</span>
                </li>
              </ul>
