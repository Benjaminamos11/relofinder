---
import Layout from '../../../layouts/Layout.astro';
import SchemaMarkup from '../../../components/common/SchemaMarkup.astro';
import PlatformDisclaimer from '../../../components/common/PlatformDisclaimer.astro';
import ServiceHero from '../../../components/services/ServiceHero.astro';

const title = "Finance in Geneva | Expat Banking & Wealth Services | ReloFinder";
const description = "Compare finance providers in Geneva. Private banking, wealth managers, neobanks (Yapeal, Neon, Revolut). Insurance via Expat-Savvy.ch.";
const canonicalURL = "https://relofinder.ch/services/finance/geneva";

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://relofinder.ch/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Finance",
      "item": "https://relofinder.ch/services/finance"
    },
    {
      "@type": "ListItem",
      "position": 4,
      "name": "Geneva",
      "item": "https://relofinder.ch/services/finance/geneva"
    }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Finance Services in Geneva",
  "description": "Compare banking and finance providers for expats in Geneva, Switzerland including private banks, wealth managers, and neobanks",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "City",
    "name": "Geneva",
    "containedIn": {
      "@type": "Country",
      "name": "Switzerland"
    }
  },
  "serviceType": "Banking & Finance Services"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Which banks in Geneva are expat-friendly?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most expat-friendly: Neobanks (Yapeal, Neon) for fast setup; Revolut for multi-currency. Traditional: UBS and Credit Suisse offer English-speaking private banking; Pictet and Lombard Odier specialize in wealth management for HNWI and international families."
      }
    },
    {
      "@type": "Question",
      "name": "How do I open a bank account as an expat in Geneva?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Neobanks: Download app, upload documents (passport, permit, address), activate in 1-3 days. Traditional banks: Book appointment at Geneva branch, bring employment contract and documents, account opens in 1-3 weeks. Private banking requires introductions and significant assets (CHF 1M+)."
      }
    },
    {
      "@type": "Question",
      "name": "What private banks operate in Geneva?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Major private banks: Pictet (independent Swiss bank, family offices), Lombard Odier (wealth management since 1796), UBS (global wealth management), Credit Suisse (private banking), Julius Baer, Edmond de Rothschild. All require CHF 1M+ investable assets and provide discretionary portfolio management."
      }
    },
    {
      "@type": "Question",
      "name": "Can I live in France and bank in Geneva?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, cross-border workers (frontaliers) often live in France (Annemasse, Saint-Julien, Ferney-Voltaire) and bank in Geneva. Geneva banks serve French residents working in Switzerland. Tax implications: report to both Swiss and French authorities depending on bilateral agreements."
      }
    },
    {
      "@type": "Question",
      "name": "What documents are required for Geneva banking?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Essential: Passport (6+ months), Swiss permit (B/L/C), proof of Geneva address. Traditional banks: employment contract, salary slips, employer reference. Private banking: tax returns, wealth statements, references. Documents often required in French; translations may be needed."
      }
    },
    {
      "@type": "Question",
      "name": "Are neobanks like Yapeal and Neon available in Geneva?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, Yapeal and Neon work throughout Switzerland including Geneva. Provide Swiss IBAN (CH), English interfaces, fast onboarding (1-3 days), no minimum balance. Revolut also widely used for multi-currency and FX. Many Geneva expats use hybrid: Swiss neobank for salary + Revolut for international."
      }
    }
  ]
};

const siblingCities = [
  { name: 'Zurich', slug: 'zurich' },
  { name: 'Zug', slug: 'zug' }
];
---

<Layout title={title} description={description}>
  <SchemaMarkup type="service" data={breadcrumbSchema} />
  <SchemaMarkup type="service" data={serviceSchema} />
  <SchemaMarkup type="service" data={faqSchema} />

  <ServiceHero
    title="Finance in Geneva"
    subtitle="Banking & Wealth Services for Expats"
    description="Geneva is the global private banking capital with Pictet, Lombard Odier, UBS, and Credit Suisse. ReloFinder helps you compare traditional banks, wealth managers, and neobanks (Yapeal, Neon, Revolut). We connect you to trusted partners ‚Äî we don't provide banking services ourselves."
    icon="bank"
    badge="Finance in Geneva"
  />

  <!-- Platform Disclaimer -->
  <section class="py-8 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <PlatformDisclaimer compact={true} />
      </div>
    </div>
  </section>

  <!-- Primary CTA after Hero -->
  <section class="py-12 bg-gradient-to-br from-gray-50 via-white to-primary-50">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Need Help Setting Up Your Geneva Finances?
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          Get expert support for private banking, wealth management, and tax planning
        </p>
        <button
          onclick="universalOpenModal({page: 'finance_geneva', service: 'finance'})"
          class="inline-flex items-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          Get a Free Consultation with our Preferred Partner
        </button>
        <p class="text-sm text-gray-500 mt-3">
          Our relocation partners with us and gives free consultations to users
        </p>
      </div>
    </div>
  </section>

  <!-- InfoCard Grid: Why Finance in Geneva Matters -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Why It Matters
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Why Finance in Geneva <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Matters for Expats</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Card 1: Private Banking Hub -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Private Banking & Wealth Hub</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Geneva is the global private banking capital. Rue du Rh√¥ne and Quai des Bergues host Pictet, Lombard Odier, UBS, and Credit Suisse serving HNWI worldwide.
            </p>
            <a href="#deep-dive-accordion" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Explore private banks
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 2: Expat Banking Challenges -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Expat Banking Challenges</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              French-language documentation, high demand from UN/NGO staff, and traditional banks requiring employment contracts create barriers for new arrivals.
            </p>
            <a href="#docs-checklist" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              See requirements
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 3: Commodity Trading -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Commodity Trading & Finance</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Geneva hosts major commodity traders (Trafigura, Vitol, Gunvor, Mercuria). Corporate banking services cater to finance professionals and traders.
            </p>
            <a href="#deep-dive-accordion" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Learn more
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 4: Neobanks -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Neobanks for Expats</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Yapeal, Neon, and Revolut provide fast onboarding (1-3 days), English interfaces, and no minimum balances ‚Äî ideal for new Geneva arrivals.
            </p>
            <a href="#comparison-table" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Compare options
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 5: Cross-Border -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Cross-Border Finance</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              90,000+ frontaliers live in France (Annemasse, Saint-Julien, Ferney) and work in Geneva. Geneva banks serve cross-border clients with tax guidance.
            </p>
            <a href="#deep-dive-accordion" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Cross-border details
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 6: Insurance & Tax -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Insurance & Tax Planning</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Health insurance mandatory within 3 months (CHF 300-500/month). Geneva canton tax planning essential. Expert help: <a href="https://expat-savvy.ch" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700 font-semibold underline">Expat-Savvy.ch</a>.
            </p>
            <a href="https://expat-savvy.ch" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Get insurance help
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Table: Neobanks vs Traditional Banks -->
  <section id="comparison-table" class="py-20 bg-gradient-to-br from-gray-50 via-white to-primary-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Compare Options
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Neobanks vs <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Traditional Banks</span>
          </h2>
        </div>

        <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-200">
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead>
                <tr class="bg-gray-50 border-b border-gray-200">
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Provider</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Swiss IBAN</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Onboarding</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Multi-Currency</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Min. Balance</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Best For</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Yapeal</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 days</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes</td>
                  <td class="px-4 py-3 text-gray-700">None</td>
                  <td class="px-4 py-3 text-gray-700">Salary & daily banking</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Neon</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 days</td>
                  <td class="px-4 py-3 text-gray-700">Limited</td>
                  <td class="px-4 py-3 text-gray-700">None</td>
                  <td class="px-4 py-3 text-gray-700">Students & young professionals</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Revolut</td>
                  <td class="px-4 py-3 text-gray-700">‚ö†Ô∏è Partial</td>
                  <td class="px-4 py-3 text-gray-700">Instant</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Excellent (30+)</td>
                  <td class="px-4 py-3 text-gray-700">None</td>
                  <td class="px-4 py-3 text-gray-700">FX & intl. transfers</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">UBS</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 weeks</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes</td>
                  <td class="px-4 py-3 text-gray-700">High (varies)</td>
                  <td class="px-4 py-3 text-gray-700">Private banking / HNWI</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Credit Suisse</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 weeks</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes</td>
                  <td class="px-4 py-3 text-gray-700">High (varies)</td>
                  <td class="px-4 py-3 text-gray-700">Private banking / investments</td>
                </tr>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Pictet</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">2-3 weeks</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes</td>
                  <td class="px-4 py-3 text-gray-700">CHF 1M+ typical</td>
                  <td class="px-4 py-3 text-gray-700">Wealth mgmt / family offices</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="mt-6 p-6 bg-white rounded-xl border border-gray-200">
          <p class="text-gray-700 leading-relaxed">
            <strong>Recommended strategy:</strong> Expats often combine a Swiss neobank (Yapeal/Neon) for daily needs and salary with Revolut for FX, then add a traditional bank (UBS/CS/Pictet) for mortgages, investments, or wealth management as assets grow.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Documents Checklist -->
  <section id="docs-checklist" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Preparation
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Documents <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Checklist</span>
          </h2>
        </div>

        <div class="bg-gradient-to-br from-gray-50 to-white p-8 rounded-2xl border-2 border-gray-200">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Essential for All Banks
              </h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <span class="inline-block w-5 h-5 border-2 border-gray-300 rounded mr-3 mt-0.5 flex-shrink-0"></span>
                  <span class="text-gray-700">Valid passport (6+ months validity)</span>
                </li>
                <li class="flex items-start">
                  <span class="inline-block w-5 h-5 border-2 border-gray-300 rounded mr-3 mt-0.5 flex-shrink-0"></span>
                  <span class="text-gray-700">Swiss residence/work permit (B, L, C, or legitimation card)</span>
                </li>
                <li class="flex items-start">
                  <span class="inline-block w-5 h-5 border-2 border-gray-300 rounded mr-3 mt-0.5 flex-shrink-0"></span>
                  <span class="text-gray-700">Proof of Geneva address (rental contract or commune registration)</span>
                </li>
              </ul>
            </div>

            <div>
              <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Additional (Traditional/Private Banks)
              </h3>
