---
import Layout from '../../../layouts/Layout.astro';
import SchemaMarkup from '../../../components/common/SchemaMarkup.astro';
import PlatformDisclaimer from '../../../components/common/PlatformDisclaimer.astro';
import ServiceHero from '../../../components/services/ServiceHero.astro';

const title = "Finance in Zurich | Expat Banking & Wealth Services | ReloFinder";
const description = "Compare finance providers in Zurich. ReloFinder helps you evaluate expat-friendly banks like Yapeal, Neon, Revolut, UBS, and Credit Suisse. Insurance via Expat-Savvy.ch.";
const canonicalURL = "https://relofinder.ch/services/finance/zurich";

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://relofinder.ch/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Finance",
      "item": "https://relofinder.ch/services/finance"
    },
    {
      "@type": "ListItem",
      "position": 4,
      "name": "Zurich",
      "item": "https://relofinder.ch/services/finance/zurich"
    }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Finance Services in Zurich",
  "description": "Compare banking and finance providers for expats in Zurich, Switzerland including traditional banks (UBS, Credit Suisse, Raiffeisen) and neobanks (Yapeal, Neon, Revolut)",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "City",
    "name": "Zurich",
    "containedIn": {
      "@type": "Country",
      "name": "Switzerland"
    }
  },
  "serviceType": "Banking & Finance Services"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Which banks in Zurich are most expat-friendly?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most expat-friendly: Neobanks (Yapeal, Neon) for English apps and fast setup; Revolut for multi-currency. Traditional banks: UBS and Credit Suisse offer English support for premium/private banking; Raiffeisen provides local presence with competitive rates."
      }
    },
    {
      "@type": "Question",
      "name": "How do I open a bank account as an expat in Zurich?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Neobanks (Yapeal, Neon): Download app, upload documents (passport, permit, address proof), activate in 1-3 days. Traditional banks: Book branch appointment, bring employment contract and documents, account opens in 1-3 weeks. Most employers require Swiss IBAN (CH prefix)."
      }
    },
    {
      "@type": "Question",
      "name": "What neobanks can expats use in Switzerland?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yapeal (Swiss FINMA-licensed, CH IBAN, multi-currency), Neon (Swiss digital bank, free account, cashback), Revolut (multi-currency champion, 30+ currencies, real-time FX, crypto support). All require Swiss residence permit."
      }
    },
    {
      "@type": "Question",
      "name": "Is Revolut accepted in Switzerland for daily use?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, widely accepted for purchases and ATMs. However, Revolut provides Lithuanian IBAN (LT prefix) which most Swiss employers won't accept for salary. Solution: Use Swiss neobank (Yapeal/Neon) for salary, Revolut for spending and currency exchange."
      }
    },
    {
      "@type": "Question",
      "name": "What documents are required to open an account in Zurich?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Mandatory: Valid passport (6+ months), Swiss residence permit (B/L/C), proof of Zurich address. Traditional banks also require employment contract and salary slips. Neobanks need only passport, permit, and address proof for basic accounts."
      }
    },
    {
      "@type": "Question",
      "name": "Where can I get help with insurance and tax planning in Zurich?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Health insurance (mandatory): Expat-Savvy.ch provides specialized consulting, comparing providers (Helsana, CSS, Swica). Premiums CHF 300-500/month. Tax planning: Relocation agencies coordinate with Zurich tax advisors for progressive cantonal rates (25-35% combined) and wealth tax optimization."
      }
    }
  ]
};

const siblingCities = [
  { name: 'Geneva', slug: 'geneva' },
  { name: 'Zug', slug: 'zug' }
];
---

<Layout title={title} description={description}>
  <SchemaMarkup type="service" data={breadcrumbSchema} />
  <SchemaMarkup type="service" data={serviceSchema} />
  <SchemaMarkup type="service" data={faqSchema} />

  <ServiceHero
    title="Finance in Zurich"
    subtitle="Banking & Wealth Services for Expats"
    description="Zurich is Switzerland's financial capital with UBS, Credit Suisse, and innovative neobanks (Yapeal, Neon, Revolut). ReloFinder helps you compare providers and open accounts efficiently. We connect you to trusted partners ‚Äî we don't provide banking services ourselves."
    icon="bank"
    badge="Finance in Zurich"
  />

  <!-- Platform Disclaimer -->
  <section class="py-8 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <PlatformDisclaimer compact={true} />
      </div>
    </div>
  </section>

  <!-- Primary CTA after Hero -->
  <section class="py-12 bg-gradient-to-br from-gray-50 via-white to-primary-50">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Need Help Setting Up Your Zurich Finances?
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          Get expert support for banking, wealth management, and tax planning
        </p>
        <button
          onclick="universalOpenModal({page: 'finance_zurich', service: 'finance'})"
          class="inline-flex items-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl hover:from-primary-700 hover:to-primary-800 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          Get a Free Consultation with our Preferred Partner
        </button>
        <p class="text-sm text-gray-500 mt-3">
          Our relocation partners with us and gives free consultations to users
        </p>
      </div>
    </div>
  </section>

  <!-- InfoCard Grid: Why Finance in Zurich Matters -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Why It Matters
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Why Finance in Zurich <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Matters for Expats</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Card 1: Global Banking Hub -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Global Banking Hub</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Paradeplatz houses UBS & Credit Suisse headquarters. Access world-class private banking, wealth management, and comprehensive financial services.
            </p>
            <a href="#deep-dive-accordion" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Learn more
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 2: Neobank Options -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Neobank Options</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Yapeal, Neon, and Revolut offer English-friendly digital banking with fast onboarding (1-3 days), no minimum balance, and multi-currency support.
            </p>
            <a href="#comparison-table" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Compare neobanks
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 3: Private Banking -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Private Banking & Wealth</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              CHF 1+ million: Access UBS Wealth Management, Credit Suisse Private Banking, Julius Baer. Portfolio management, estate planning, alternative investments.
            </p>
            <a href="#deep-dive-accordion" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Explore wealth services
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 4: Tax System -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Progressive Tax System</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Canton Zurich: 25-35% combined income tax. Wealth tax 0.1-0.5%. Pillar 3a retirement savings (CHF 7,056/year) tax-deductible. Professional planning essential.
            </p>
            <a href="#deep-dive-accordion" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Tax details
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 5: Documentation -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Documentation Requirements</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Passport, Swiss permit (B/L/C), Zurich address proof, employment contract. Traditional banks require more docs; neobanks streamline the process.
            </p>
            <a href="#docs-checklist" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              See checklist
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Card 6: Insurance -->
          <div class="bg-gradient-to-br from-gray-50 to-white p-6 rounded-xl border-2 border-gray-200 hover:border-primary-300 transition-all duration-300">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Insurance & Compliance</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-3">
              Health insurance mandatory within 3 months (CHF 300-500/month). Expert guidance via <a href="https://expat-savvy.ch" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700 font-semibold underline">Expat-Savvy.ch</a>.
            </p>
            <a href="https://expat-savvy.ch" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700 text-sm font-semibold inline-flex items-center">
              Get insurance help
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Table: Neobanks vs Traditional Banks -->
  <section id="comparison-table" class="py-20 bg-gradient-to-br from-gray-50 via-white to-primary-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Compare Options
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Neobanks vs <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Traditional Banks</span>
          </h2>
        </div>

        <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-200">
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead>
                <tr class="bg-gray-50 border-b border-gray-200">
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Provider</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Swiss IBAN</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Onboarding</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Multi-Currency</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Min. Balance</th>
                  <th class="px-4 py-3 text-left font-bold text-gray-900">Typical Use</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Yapeal</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 days</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes</td>
                  <td class="px-4 py-3 text-gray-700">None</td>
                  <td class="px-4 py-3 text-gray-700">Salary + daily banking</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Neon</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 days</td>
                  <td class="px-4 py-3 text-gray-700">Limited</td>
                  <td class="px-4 py-3 text-gray-700">None</td>
                  <td class="px-4 py-3 text-gray-700">Basic account + bills</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Revolut</td>
                  <td class="px-4 py-3 text-gray-700">‚ö†Ô∏è LT IBAN</td>
                  <td class="px-4 py-3 text-gray-700">Instant (app)</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Excellent (30+)</td>
                  <td class="px-4 py-3 text-gray-700">None</td>
                  <td class="px-4 py-3 text-gray-700">FX + intl. transfers</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">UBS</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 weeks</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes</td>
                  <td class="px-4 py-3 text-gray-700">Varies</td>
                  <td class="px-4 py-3 text-gray-700">Full-service (loans, investing)</td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Credit Suisse</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-3 weeks</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes</td>
                  <td class="px-4 py-3 text-gray-700">Varies</td>
                  <td class="px-4 py-3 text-gray-700">Full-service, private banking</td>
                </tr>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 font-semibold text-gray-900">Raiffeisen</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes (CH)</td>
                  <td class="px-4 py-3 text-gray-700">1-2 weeks</td>
                  <td class="px-4 py-3 text-gray-700">‚úÖ Yes</td>
                  <td class="px-4 py-3 text-gray-700">Low</td>
                  <td class="px-4 py-3 text-gray-700">Mortgages, local presence</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="mt-6 p-6 bg-white rounded-xl border border-gray-200">
          <p class="text-gray-700 leading-relaxed">
            <strong>Recommended hybrid approach:</strong> Use Swiss neobank (Yapeal/Neon) for salary & bills with CH IBAN + Revolut for FX and international transfers. Add UBS/Credit Suisse/Raiffeisen later for mortgages, investments, or wealth management.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Documents Checklist -->
  <section id="docs-checklist" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-semibold mb-4">
            Preparation
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Documents <span class="bg-gradient-to-r from-primary-600 to-primary-700 bg-clip-text text-transparent">Checklist</span>
          </h2>
        </div>

        <div class="bg-gradient-to-br from-gray-50 to-white p-8 rounded-2xl border-2 border-gray-200">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Essential for All Banks
              </h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <span class="inline-block w-5 h-5 border-2 border-gray-300 rounded mr-3 mt-0.5 flex-shrink-0"></span>
                  <span class="text-gray-700">Valid passport (6+ months validity)</span>
                </li>
                <li class="flex items-start">
                  <span class="inline-block w-5 h-5 border-2 border-gray-300 rounded mr-3 mt-0.5 flex-shrink-0"></span>
                  <span class="text-gray-700">Swiss residence permit (B, L, C, or legitimation card)</span>
                </li>
                <li class="flex items-start">
                  <span class="inline-block w-5 h-5 border-2 border-gray-300 rounded mr-3 mt-0.5 flex-shrink-0"></span>
                  <span class="text-gray-700">Proof of Zurich address (rental contract or Kreisb√ºro confirmation)</span>
                </li>
              </ul>
            </div>

            <div>
