};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://relofinder.ch/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Housing Search",
      "item": "https://relofinder.ch/services/housing-search"
    }
  ]
};

const definedTermSchema = {
  "@context": "https://schema.org",
  "@type": "DefinedTermSet",
  "name": "Swiss Real Estate Terminology",
  "hasDefinedTerm": [
    {
      "@type": "DefinedTerm",
      "termCode": "Nachmieter",
      "name": "Nachmieter",
      "description": "A replacement tenant proposed by a departing tenant to release themselves from a lease early. Essential for finding apartments in Switzerland outside of standard termination dates."
    },
    {
      "@type": "DefinedTerm",
      "termCode": "Betreibungsauskunft",
      "name": "Extract from the Debt Collection Register",
      "description": "A mandatory document for all swiss rental applications proving the applicant has no outstanding debts or prosecutions. Critical for 'Expat Disadvantage' screening."
    }
  ]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
};

const structuredData = [serviceSchema, breadcrumbSchema, definedTermSchema, faqSchema];
