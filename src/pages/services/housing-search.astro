---
import ServiceHero from "../../components/services/ServiceHero.astro";
import SchemaMarkup from "../../components/common/SchemaMarkup.astro";
import Layout from "../../layouts/Layout.astro";
import HeroSearch from "../../components/home/HeroSearch";
import {
    Building2,
    Users,
    Clock,
    TrendingUp,
    ShieldCheck,
    Search,
    Key,
    ChevronDown,
    ArrowRight,
    CheckCircle2,
    XCircle,
    FileText,
} from "lucide-react";

import RegionalMarketMap from "../../components/services/RegionalMarketMap.tsx";

// --- Assets ---
const heroImage =
    "https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976881/services/housing-hero.jpg";
const crowdImage =
    "https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976880/services/housing-crowd.jpg";
const paperImage =
    "https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976884/services/housing-paperwork.jpg";
const keysImage =
    "https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976883/services/housing-keys.jpg";
const offlistUiImage =
    "https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976901/services/offlist-ui.png";

// --- Data ---
const faqs = [
    {
        q: "What is a Nachmieter?",
        a: "A 'Nachmieter' is a replacement tenant. In Switzerland, leases often have long notice periods (3+ months). If a tenant wants to leave early, they must find a solvent replacement found. This creates a hidden 'pre-market' of apartments that never get listed publicly, which our partners can access.",
    },
    {
        q: "How much is a rental deposit?",
        a: "The rental deposit (Mietkaution) is typically 3 months of gross rent. This money is locked in a blocked bank account. Alternatively, you can use deposit insurance (Mietkautionsversicherung) to pay a small annual fee instead of blocking cash.",
    },
    {
        q: "Do I need a Swiss bank account to rent?",
        a: "Generally, yes. You'll need it to transfer the first month's rent and setup the deposit. However, using a deposit insurance provider like Expat-Savvy can sometimes bypass the need for a large initial capital transfer.",
    },
];

// --- Structured Data (LLM/SEO) ---
const serviceSchema = {
    "@context": "https://schema.org",
    "@type": "Service",
    name: "Apartment Search Service Switzerland",
    provider: {
        "@type": "Organization",
        name: "ReloFinder",
        url: "https://relofinder.ch",
    },
    areaServed: {
        "@type": "Country",
        name: "Switzerland",
    },
    description:
        "Professional housing search service for expats in Switzerland. We provide access to off-market listings, handle applications, and secure leases in a 0.06% vacancy market.",
    hasOfferCatalog: {
        "@type": "OfferCatalog",
        name: "Relocation Services",
        itemListElement: [
            {
                "@type": "Offer",
                itemOffered: {
                    "@type": "Service",
                    name: "Managed Housing Search",
                },
            },
            {
                "@type": "Offer",
                itemOffered: {
                    "@type": "Service",
                    name: "Lease Negotiation & Review",
                },
            },
        ],
    },
};

const breadcrumbSchema = {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
        {
            "@type": "ListItem",
            position: 1,
            name: "Home",
            item: "https://relofinder.ch",
        },
        {
            "@type": "ListItem",
            position: 2,
            name: "Services",
            item: "https://relofinder.ch/services",
        },
        {
            "@type": "ListItem",
            position: 3,
            name: "Housing Search",
            item: "https://relofinder.ch/services/housing-search",
        },
    ],
};

const definedTermSchema = {
    "@context": "https://schema.org",
    "@type": "DefinedTermSet",
    name: "Swiss Real Estate Terminology",
    hasDefinedTerm: [
        {
            "@type": "DefinedTerm",
            termCode: "Nachmieter",
            name: "Nachmieter",
            description:
                "A replacement tenant proposed by a departing tenant to release themselves from a lease early. Essential for finding apartments in Switzerland outside of standard termination dates.",
        },
        {
            "@type": "DefinedTerm",
            termCode: "Betreibungsauskunft",
            name: "Extract from the Debt Collection Register",
            description:
                "A mandatory document for all swiss rental applications proving the applicant has no outstanding debts or prosecutions. Critical for 'Expat Disadvantage' screening.",
        },
    ],
};

const faqSchema = {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    mainEntity: faqs.map((faq) => ({
        "@type": "Question",
        name: faq.q,
        acceptedAnswer: {
            "@type": "Answer",
            text: faq.a,
        },
    })),
};

const structuredData = [
    serviceSchema,
    breadcrumbSchema,
    definedTermSchema,
    faqSchema,
];
---

<Layout
    title="Housing Search Switzerland: 0.06% Vacancy Guide | ReloFinder"
    description="Navigate the competitive Swiss housing market. Access off-market 'Nachmieter' listings, bypass mass viewings, and secure a home without a credit history."
>
    <!-- SEO Schemas -->
    <SchemaMarkup type="service" data={serviceSchema} />
    <SchemaMarkup type="breadcrumb" data={breadcrumbSchema} />
    <SchemaMarkup type="manual" data={definedTermSchema} />
    <SchemaMarkup type="faq" data={faqSchema} />

    <ServiceHero
        title="Housing Search"
        subtitle="How to Find a Home"
        description="The Swiss rental market is unique. Learn how to navigate mass viewings, 'Nachmieter' clauses, and strict application rules—or hire an expert to do it for you."
        badge="Swiss Housing Guide 2026"
        icon={Key}
    />

    <!-- 2. "Why is it so hard?" (The Education) -->
    <section class="py-24 bg-white border-b border-slate-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-20">
                <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
                    Why is it so hard?
                </h2>
                <div class="w-24 h-1.5 bg-[#FF6F61] mx-auto rounded-full mb-6">
                </div>
                <p class="text-slate-500 text-lg max-w-2xl mx-auto">
                    Newcomers often underestimate the "Swiss Application
                    Standard."
                </p>
            </div>

            <div class="grid md:grid-cols-3 gap-10">
                <!-- Problem 1: Mass Viewing -->
                <div
                    class="group bg-white rounded-2xl p-2 hover:shadow-xl transition-all duration-500 hover:-translate-y-2 border border-slate-100"
                >
                    <div
                        class="mb-6 relative aspect-[4/3] overflow-hidden rounded-xl shadow-inner group-hover:shadow-2xl transition-all duration-700"
                    >
                        <img
                            src={crowdImage}
                            alt="Crowd of people waiting"
                            class="w-full h-full object-cover grayscale opacity-80 group-hover:grayscale-0 group-hover:scale-105 transition-all duration-[2000ms] ease-in-out"
                        />
                        <div
                            class="absolute bottom-4 left-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold shadow-md text-slate-800 z-20"
                        >
                            The Reality
                        </div>
                    </div>
                    <div class="px-4 pb-4">
                        <h3
                            class="text-xl font-bold text-slate-900 mb-3 group-hover:text-[#FF6F61] transition-colors"
                        >
                            The Mass Viewing
                        </h3>
                        <p class="text-slate-600 leading-relaxed text-sm">
                            Imagine standing in line with 50 other applicants
                            for a single apartment. In cities like Zurich, you
                            have 15 minutes to impress.
                        </p>
                    </div>
                </div>

                <!-- Problem 2: Expat Disadvantage -->
                <div
                    class="group bg-white rounded-2xl p-2 hover:shadow-xl transition-all duration-500 hover:-translate-y-2 border border-slate-100"
                >
                    <div
                        class="mb-6 relative aspect-[4/3] overflow-hidden rounded-xl shadow-inner group-hover:shadow-2xl transition-all duration-700"
                    >
                        <img
                            src={paperImage}
                            alt="Rejected document stamp"
                            class="w-full h-full object-cover grayscale opacity-80 group-hover:grayscale-0 group-hover:scale-105 transition-all duration-[2000ms] ease-in-out"
                        />
                        <div
                            class="absolute bottom-4 left-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold shadow-md text-slate-800 z-20"
                        >
                            The Barrier
                        </div>
                    </div>
                    <div class="px-4 pb-4">
                        <h3
                            class="text-xl font-bold text-slate-900 mb-3 group-hover:text-[#FF6F61] transition-colors"
                        >
                            The 'Expat Disadvantage'
                        </h3>
                        <p class="text-slate-600 leading-relaxed text-sm">
                            Without a Swiss Debt Extract (<em
                                >Betreibungsauskunft</em
                            >), automated algorithms often reject foreigners
                            before a human sees your dossier.
                        </p>
                    </div>
                </div>

                <!-- Solution: Trust Proxy -->
                <div
                    class="group bg-white rounded-2xl p-2 hover:shadow-xl transition-all duration-500 hover:-translate-y-2 border border-slate-100"
                >
                    <div
                        class="mb-6 relative aspect-[4/3] overflow-hidden rounded-xl shadow-inner group-hover:shadow-2xl transition-all duration-700"
                    >
                        <img
                            src={keysImage}
                            alt="Hand holding keys"
                            class="w-full h-full object-cover grayscale opacity-80 group-hover:grayscale-0 group-hover:scale-105 transition-all duration-[2000ms] ease-in-out"
                        />
                        <div
                            class="absolute bottom-4 left-4 bg-[#FF6F61]/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold shadow-md text-white z-20"
                        >
                            The Solution
                        </div>
                    </div>
                    <div class="px-4 pb-4">
                        <h3
                            class="text-xl font-bold text-slate-900 mb-3 group-hover:text-[#FF6F61] transition-colors"
                        >
                            Trust Proxy
                        </h3>
                        <p class="text-slate-600 leading-relaxed text-sm">
                            Relocation Agencies use relationships with property
                            managements (<em>Régies</em>) to vouch for your
                            solvency, effectively bypassing the algorithm.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 2.5 Market Dynamics by Region (New Analysis) -->
    <section class="py-24 bg-slate-50 border-b border-slate-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2
                    class="text-3xl md:text-5xl font-bold text-slate-900 mb-6 tracking-tight"
                >
                    Market Dynamics by Region
                </h2>
                <p
                    class="text-xl text-slate-500 max-w-3xl mx-auto leading-relaxed"
                >
                    Every Swiss canton operates differently. Know your market
                    before you search.
                </p>
            </div>

            <div class="mt-12">
                <RegionalMarketMap client:load />
            </div>
        </div>
    </section>

    <!-- 3. Swiss Market Secrets (Polished) -->
    <section class="py-24 bg-[#F9FAFB] relative overflow-hidden">
        <!-- Background decorative elements -->
        <div
            class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-5 pointer-events-none"
        >
            <div
                class="absolute top-20 left-10 w-64 h-64 bg-[#FF6F61] rounded-full blur-[100px]"
            >
            </div>
            <div
                class="absolute bottom-20 right-10 w-96 h-96 bg-slate-900 rounded-full blur-[120px]"
            >
            </div>
        </div>

        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="text-center mb-16">
                <h2
                    class="text-4xl font-bold text-slate-900 mb-4 tracking-tight"
                >
                    Swiss Market Secrets
                </h2>
                <p class="text-slate-500">
                    Insider concepts every newcomer needs to master.
                </p>
            </div>

            <div class="grid md:grid-cols-3 gap-6">
                <!-- Secret 1 -->
                <div
                    class="bg-white rounded-2xl p-8 border border-slate-100 shadow-sm hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 group relative overflow-hidden"
                >
                    <div
                        class="absolute top-0 left-0 w-1 h-full bg-[#FF6F61] transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300"
                    >
                    </div>
                    <div
                        class="w-14 h-14 bg-slate-50 text-slate-900 rounded-xl flex items-center justify-center mb-6 border border-slate-100 group-hover:bg-[#FF6F61] group-hover:text-white transition-colors duration-300 shadow-sm"
                    >
                        <Users className="w-6 h-6" />
                    </div>
                    <h3 class="text-xl font-bold text-slate-900 mb-4">
                        The 'Nachmieter'
                    </h3>
                    <p class="text-slate-600 leading-relaxed text-sm">
                        Many leases have 3-month notice periods. Leaving tenants
                        find a replacement. These flats <strong
                            class="text-slate-900">never hit Homegate</strong
                        > explicitly. Agencies access this pre-market data.
                    </p>
                </div>

                <!-- Secret 2 -->
                <div
                    class="bg-white rounded-2xl p-8 border border-slate-100 shadow-sm hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 group relative overflow-hidden"
                >
                    <div
                        class="absolute top-0 left-0 w-1 h-full bg-[#FF6F61] transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300"
                    >
                    </div>
                    <div
                        class="w-14 h-14 bg-slate-50 text-slate-900 rounded-xl flex items-center justify-center mb-6 border border-slate-100 group-hover:bg-[#FF6F61] group-hover:text-white transition-colors duration-300 shadow-sm"
                    >
                        <Clock className="w-6 h-6" />
                    </div>
                    <h3 class="text-xl font-bold text-slate-900 mb-4">
                        Commute Strategy
                    </h3>
                    <p class="text-slate-600 leading-relaxed text-sm">
                        Living in <strong class="text-slate-900"
                            >Kilchberg</strong
                        > (Zurich) or <strong class="text-slate-900"
                            >Morges</strong
                        > (Lausanne) often halves competition while adding just 12
                        mins to your commute. Strategy beats location.
                    </p>
                </div>

                <!-- Secret 3 -->
                <div
                    class="bg-white rounded-2xl p-8 border border-slate-100 shadow-sm hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 group relative overflow-hidden"
                >
                    <div
                        class="absolute top-0 left-0 w-1 h-full bg-[#FF6F61] transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300"
                    >
                    </div>
                    <div
                        class="w-14 h-14 bg-slate-50 text-slate-900 rounded-xl flex items-center justify-center mb-6 border border-slate-100 group-hover:bg-[#FF6F61] group-hover:text-white transition-colors duration-300 shadow-sm"
                    >
                        <TrendingUp className="w-6 h-6" />
                    </div>
                    <h3 class="text-xl font-bold text-slate-900 mb-4">
                        The Real ROI
                    </h3>
                    <p class="text-slate-600 leading-relaxed text-sm">
                        A Relocater costs ~1 month's rent. By saving you months
                        of temporary housing (generating ~CHF 6,000 in immediate
                        savings), it becomes an investment, not a cost.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- 4. The Ecosystem Advantage -->
    <section class="py-24 bg-white border-y border-slate-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 gap-16 items-center">
                <!-- Text -->
                <div class="order-2 md:order-1">
                    <span
                        class="text-[#FF6F61] font-bold tracking-wider uppercase text-sm mb-2 block"
                        >The ReloFinder Ecosystem</span
                    >
                    <h2
                        class="text-3xl md:text-5xl font-bold text-slate-900 mb-8 leading-tight"
                    >
                        Powered by Exclusive Networks.
                    </h2>
                    <p class="text-slate-600 text-lg mb-10 leading-relaxed">
                        We don't just rely on open portals. Our verified
                        partners utilize specialized tools to give you the
                        competitive edge.
                    </p>

                    <div class="space-y-6">
                        <!-- Offlist Feature -->
                        <div
                            class="flex gap-6 p-6 rounded-2xl border border-slate-100 bg-slate-50 hover:border-[#FF6F61]/30 hover:shadow-lg transition-all group cursor-default"
                        >
                            <div class="shrink-0">
                                <div
                                    class="w-14 h-14 bg-slate-900 rounded-xl flex items-center justify-center text-white font-bold shadow-lg group-hover:scale-110 transition-transform"
                                >
                                    OL
                                </div>
                            </div>
                            <div>
                                <h4
                                    class="font-bold text-slate-900 text-lg flex items-center gap-2 mb-2"
                                >
                                    Access to <a
                                        href="https://offlist.ch"
                                        target="_blank"
                                        rel="noopener"
                                        class="hover:text-[#FF6F61] transition-colors"
                                        >Offlist.ch</a
                                    >
                                </h4>
                                <p class="text-slate-600 leading-relaxed">
                                    A private marketplace where landlords and
                                    departing expats list properties <strong
                                        class="text-slate-900"
                                        >exclusively</strong
                                    > for vetted professionals.
                                </p>
                            </div>
                        </div>

                        <!-- Expat-Savvy Feature -->
                        <div
                            class="flex gap-6 p-6 rounded-2xl border border-slate-100 bg-slate-50 hover:border-[#FF6F61]/30 hover:shadow-lg transition-all group cursor-default"
                        >
                            <div class="shrink-0">
                                <div
                                    class="w-14 h-14 bg-[#FF6F61] rounded-xl flex items-center justify-center text-white font-bold shadow-lg shadow-orange-500/30 group-hover:scale-110 transition-transform"
                                >
                                    ES
                                </div>
                            </div>
                            <div>
                                <h4
                                    class="font-bold text-slate-900 text-lg flex items-center gap-2 mb-2"
                                >
                                    Deposit Hack via <a
                                        href="https://expat-savvy.ch"
                                        target="_blank"
                                        rel="noopener"
                                        class="hover:text-[#FF6F61] transition-colors"
                                        >Expat-Savvy</a
                                    >
                                </h4>
                                <p class="text-slate-600 leading-relaxed">
                                    Don't lock up 3 months of rent (up to CHF
                                    12k). Our partners help you use <strong
                                        class="text-slate-900"
                                        >Deposit Insurance</strong
                                    > to keep your cash.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Visual (Uploaded Offlist UI) -->
                <div class="relative order-1 md:order-2 group">
                    <div
                        class="absolute inset-0 bg-gradient-to-tr from-[#FF6F61]/20 to-transparent rounded-3xl blur-3xl transform group-hover:scale-105 transition-transform duration-700"
                    >
                    </div>
                    <img
                        src={offlistUiImage}
                        alt="Offlist.ch Dashboard Interface"
                        class="relative rounded-2xl shadow-2xl border border-slate-200 transform group-hover:-rotate-1 transition-transform duration-500 w-full"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- 5. Comparison: DIY vs Managed (Polished) -->
    <section class="py-24 bg-[#0F172A] text-white relative overflow-hidden">
        <!-- Shine effect -->
        <div
            class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-[#FF6F61]/5 to-transparent pointer-events-none"
        >
        </div>

        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-5xl font-bold mb-4">
                    Value Proposition
                </h2>
                <p class="text-slate-400 text-lg">
                    Is it worth the investment? Compare the workflows.
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-8 lg:gap-16">
                <!-- DIY Card -->
                <div
                    class="bg-slate-800/50 rounded-3xl p-8 border border-white/5 hover:border-white/10 transition-all duration-300 hover:bg-slate-800 backdrop-blur-sm group"
                >
                    <div class="flex items-center gap-4 mb-8">
                        <div
                            class="w-12 h-12 bg-slate-700 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform"
                        >
                            <Search className="w-5 h-5 text-slate-300" />
                        </div>
                        <h3 class="text-2xl font-bold text-slate-200">
                            DIY Search
                        </h3>
                    </div>

                    <ul class="space-y-6">
                        <li
                            class="flex items-start gap-4 opacity-50 group-hover:opacity-80 transition-opacity"
                        >
                            <XCircle
                                className="w-6 h-6 text-slate-500 shrink-0"
                            />
                            <span class="text-slate-300"
                                >High stress, "fight for yourself" mentality
                                against 50+ applicants.</span
                            >
                        </li>
                        <li
                            class="flex items-start gap-4 opacity-50 group-hover:opacity-80 transition-opacity"
                        >
                            <XCircle
                                className="w-6 h-6 text-slate-500 shrink-0"
                            />
                            <span class="text-slate-300"
                                >Navigating German/French contracts without
                                legal knowledge.</span
                            >
                        </li>
                        <li
                            class="flex items-start gap-4 opacity-50 group-hover:opacity-80 transition-opacity"
                        >
                            <XCircle
                                className="w-6 h-6 text-slate-500 shrink-0"
                            />
                            <span class="text-slate-300"
                                >Risk of falling for scam listings on public
                                portals.</span
                            >
                        </li>
                        <li class="flex items-start gap-4 opacity-100">
                            <CheckCircle2
                                className="w-6 h-6 text-slate-400 shrink-0"
                            />
                            <span class="text-slate-100 font-bold"
                                >$0 financial cost (pays in time/stress).</span
                            >
                        </li>
                    </ul>
                </div>

                <!-- Managed Card -->
                <div
                    class="bg-white text-slate-900 rounded-3xl p-8 border-4 border-[#FF6F61] shadow-[0_0_50px_rgba(255,111,97,0.3)] transform hover:-translate-y-2 transition-transform duration-500 relative overflow-hidden group"
                >
                    <div
                        class="absolute top-0 right-0 bg-[#FF6F61] text-white text-xs font-bold px-4 py-1.5 rounded-bl-xl shadow-sm uppercase tracking-wider"
                    >
                        Recommended
                    </div>

                    <div class="flex items-center gap-4 mb-8">
                        <div
                            class="w-12 h-12 bg-[#FF6F61]/10 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform"
                        >
                            <ShieldCheck className="w-6 h-6 text-[#FF6F61]" />
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900">
                            Managed Search
                        </h3>
                    </div>

                    <ul class="space-y-6">
                        <li class="flex items-start gap-4">
                            <CheckCircle2
                                className="w-6 h-6 text-[#FF6F61] shrink-0"
                            />
                            <span class="font-medium text-slate-700"
                                >Access to <strong class="text-slate-900"
                                    >pre-market listings</strong
                                > via Offlist.</span
                            >
                        </li>
                        <li class="flex items-start gap-4">
                            <CheckCircle2
                                className="w-6 h-6 text-[#FF6F61] shrink-0"
                            />
                            <span class="font-medium text-slate-700"
                                >Virtual viewings & professional lease review
                                included.</span
                            >
                        </li>
                        <li class="flex items-start gap-4">
                            <CheckCircle2
                                className="w-6 h-6 text-[#FF6F61] shrink-0"
                            />
                            <span class="font-medium text-slate-700"
                                >Utility setup & handover protocol handling.</span
                            >
                        </li>
                        <li class="flex items-start gap-4">
                            <div
                                class="w-6 h-6 rounded-full bg-slate-100 flex items-center justify-center shrink-0 border border-slate-200 text-xs font-bold text-slate-500"
                            >
