    title="Strategic Advisory Process"
    steps={processSteps}
  />

  <ServiceFeatures
    title="Comprehensive Advisory Solutions"
    features={features}
  />

  <ServiceLocations
    title="Advisory Services Across Switzerland"
    locations={locations}
  />

  <ServiceCompanies
    title="Trusted Advisory Specialists"
    companies={companies}
  />

  <ServiceBlog
    title="Strategic Planning Resources"
    posts={relatedBlogs}
  />

