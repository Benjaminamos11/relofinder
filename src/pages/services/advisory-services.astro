  />

  <SchemaMarkup
    type="service"
    data={{
      name: "Advisory Services",
      description: "Strategic relocation consulting and expert guidance for complex Swiss relocations",
      category: "Relocation Advisory & Consulting"
    }}
  />

  <ServiceHero
    title="Advisory Services"
    subtitle="Strategic Relocation Consulting"
    description="Expert strategic guidance for complex Swiss relocations. Our advisory consultants provide comprehensive planning, risk assessment, and personalized strategies for successful moves."
