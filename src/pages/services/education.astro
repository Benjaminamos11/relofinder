    location: 'Zug',
    href: '/locations/zug',
    description: 'Business education focus, international corporate programs, and English-medium schools.',
    specialties: ['Business Education', 'Corporate Programs', 'English-Medium Schools']
  }
];

// Education service areas
const educationAreas = [
  {
    area: 'School Placement',
    href: '/services/education#placement',
    description: 'Comprehensive school search and placement services for international families.',
    components: ['School Research', 'Application Support', 'Interview Preparation', 'Enrollment Assistance']
  },
  {
    area: 'Educational Assessment',
    href: '/services/education#assessment',
    description: 'Academic evaluation and educational pathway planning for student success.',
