---
import Layout from '../../layouts/Layout.astro';
import SchemaMarkup from '../../components/common/SchemaMarkup.astro';
import ServiceHero from '../../components/services/ServiceHero.astro';
import ServiceRelated from '../../components/services/ServiceRelated.astro';
import ServiceBlog from '../../components/services/ServiceBlog.astro';

interface BlogPost {
  title: string;
  slug: string;
  excerpt: string;
  category: string;
  readTime: string;
}

interface ServiceCompany {
  name: string;
  description: string;
  rating: number;
  reviews: number;
  featured?: boolean;
}

interface RelatedService {
  title: string;
  description: string;
  link: string;
}

const relatedBlogs: BlogPost[] = [
  {
    title: "Swiss Education System Guide 2025",
    slug: "swiss-education-system-guide",
    excerpt: "Complete overview of Switzerland's education system including public schools, international schools, universities, and academic pathways for expat families.",
    category: "Education",
    readTime: "15 min read"
  },
  {
    title: "International Schools in Switzerland",
    slug: "international-schools-switzerland",
    excerpt: "Comprehensive guide to international schools across Switzerland including admission requirements, costs, curricula, and application timelines.",
    category: "School Search",
    readTime: "18 min read"
  },
  {
    title: "Swiss University Admission Guide",
    slug: "swiss-university-admission",
    excerpt: "Everything you need to know about applying to Swiss universities including language requirements, recognized diplomas, and admission procedures.",
    category: "Higher Education",
    readTime: "12 min read"
  },
  {
    title: "Language Learning for Expat Children",
    slug: "language-learning-switzerland",
    excerpt: "Strategies for helping your children adapt to Swiss schools and learn German, French, or Italian while maintaining their native language.",
    category: "Integration",
    readTime: "10 min read"
  }
];

const companies: ServiceCompany[] = [
  {
    name: "Prime Relocation",
    description: "Official ReloFinder partner providing expert school placement, education advisory, and family integration support across Switzerland",
    rating: 4.8,
    reviews: 53,
    featured: true
  },
  {
    name: "Auris Relocation",
    description: "Comprehensive education advisory services helping expat families navigate Swiss school systems",
    rating: 4.8,
    reviews: 98
  },
  {
    name: "Lodge Relocation",
    description: "Expert school search and placement services with 25+ years experience in Swiss education",
    rating: 4.8,
    reviews: 134
  }
];

const relatedServices: RelatedService[] = [
  {
    title: "Housing Services",
    description: "Find family-friendly housing in top school districts across Switzerland",
    link: "/services/housing"
  },
  {
    title: "Visa & Immigration",
    description: "Secure residence permits needed for school enrollment in Switzerland",
    link: "/services/immigration"
  },
  {
    title: "Advisory Services",
    description: "Comprehensive family relocation planning and strategic guidance",
    link: "/services/advisory"
  },
  {
    title: "Settling-In Services",
    description: "Complete family integration support including school transition assistance",
    link: "/services/settling-in"
  }
