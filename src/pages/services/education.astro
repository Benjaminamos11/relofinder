// Sample companies offering education services
const companies = [
  {
    id: 'swiss-education-advisors',
    name: 'Swiss Education Advisors',
    logo: 'https://images.pexels.com/photos/256455/pexels-photo-256455.jpeg?auto=compress&cs=tinysrgb&w=200',
    description: 'Specialized educational consultancy helping expatriate families find the right schools and programs in Switzerland.',
    services: ['School Placement', 'Education Planning', 'University Admissions'],
    regions: ['ZÃ¼rich', 'Geneva', 'Basel'],
    rating: 4.8,
    reviewCount: 156
  },
  {
    id: 'international-learning',
    name: 'International Learning Partners',
    logo: 'https://images.pexels.com/photos/301926/pexels-photo-301926.jpeg?auto=compress&cs=tinysrgb&w=200',
    description: 'Educational support services for international families, providing tutoring, language programs, and school transitions.',
    services: ['Tutoring', 'Language Programs', 'Academic Support'],
    regions: ['Nationwide'],
    rating: 4.7,
    reviewCount: 124
  }
];

// Process steps
const steps = [
  {
    title: 'Initial Assessment',
    description: 'Discuss your children\'s educational background, needs, and preferences with our education experts.',
    icon: 'chat'
  },
  {
    title: 'School Research',
    description: 'We research and identify schools matching your requirements and educational philosophy.',
    icon: 'search'
  },
  {
    title: 'School Visits',
    description: 'Arrange and accompany you on visits to selected schools, providing insights and guidance.',
    icon: 'eye'
  },
  {
    title: 'Application Support',
    description: 'Assistance with school applications, including documentation and preparation for interviews.',
    icon: 'document'
  },
  {
    title: 'Enrollment Process',
    description: 'Guide you through the enrollment process, including registration and required documentation.',
    icon: 'check'
  },
  {
    title: 'Transition Support',
    description: 'Ongoing support to ensure a smooth transition into the new educational environment.',
    icon: 'user'
  }
];

// Key benefits
const benefits = [
  {
    title: 'School Selection',
    description: 'Expert guidance on finding the right school for your child\'s needs'
  },
  {
    title: 'Curriculum Knowledge',
    description: 'Deep understanding of Swiss and international education systems'
  },
  {
    title: 'Language Support',
    description: 'Resources for language acquisition and integration'
  },
  {
    title: 'Long-term Planning',
    description: 'Strategic educational planning for your child\'s future'
