---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const services = await getCollection('services');

// Sort services by featured first, then alphabetically
const sortedServices = services.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.title.localeCompare(b.data.title);
});

const featuredServices = services.filter(service => service.data.featured);
// Remove featured services from the all services list to avoid duplication
const nonFeaturedServices = services.filter(service => !service.data.featured);

// Page metadata
const title = 'Relocation Services in Switzerland | ReloFinder.ch';
const description = 'Explore specialized relocation services for expats moving to Switzerland, from housing and legal assistance to education and healthcare support.';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-primary-50 via-white to-secondary-50 overflow-hidden">
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0 bg-repeat" style="background-image: url(data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%23e11d48%22%20fill-opacity%3D%220.05%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%224%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E);"></div>
    </div>

    <div class="container relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="flex items-center justify-center space-x-2 text-sm text-gray-600 mb-8">
          <a href="/" class="hover:text-primary-600 transition-colors">Home</a>
          <span>â†’</span>
          <span class="text-gray-900">Services</span>
        </nav>

        <!-- Badge -->
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-secondary-100 text-secondary-700 font-medium text-sm mb-8">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          Complete Service Directory
        </div>

        <!-- Title & Description -->
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Swiss Relocation <span class="gradient-text">Services</span>
        </h1>
        <p class="text-xl text-gray-600 leading-relaxed mb-8">
          From housing and immigration to banking and education, find expert professionals for every aspect of your Swiss relocation journey.
        </p>

        <!-- CTA -->
        <button onclick="openModal('individual-lead-modal')" class="btn-primary px-8 py-4">
          Get Personalized Recommendations
        </button>
      </div>
    </div>
  </section>

  <!-- Featured Services -->
  {featuredServices.length > 0 && (
    <section class="py-20 bg-white">
    <div class="container">
        <div class="text-center mb-16">
          <span class="inline-block px-4 py-2 rounded-full bg-primary-100 text-primary-700 font-medium text-sm mb-4">
            Most Popular
          </span>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Essential <span class="gradient-text">Services</span>
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            The core services that most expatriates need when relocating to Switzerland.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {featuredServices.map((service, index) => (
            <div class="group relative bg-gradient-to-br from-white to-gray-50 rounded-3xl p-8 shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
              <!-- Service Icon -->
              <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                {(service.data.icon === 'home' || service.data.icon === 'lightbulb') && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                  </svg>
                )}
                {service.data.icon === 'document' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                )}
                {service.data.icon === 'credit-card' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                  </svg>
                )}
                {service.data.icon === 'academic-cap' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M12 14l9-5-9-5-9 5 9 5z"/>
                    <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
                  </svg>
                )}
                {!service.data.icon && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                )}
              </div>

              <!-- Service Content -->
              <div class="space-y-4 mb-6">
                <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors duration-300">
                  {service.data.title}
                </h3>
                <p class="text-gray-600 leading-relaxed text-sm">
                  {service.data.description}
                </p>
              </div>

              <!-- Stats -->
              <div class="grid grid-cols-2 gap-4 mb-6 text-center">
                <div>
                  <div class="text-lg font-bold text-primary-600">{service.data.stats?.providers || 'Multiple'}</div>
                  <div class="text-xs text-gray-500">Providers</div>
              </div>
              <div>
                  <div class="text-lg font-bold text-primary-600">{service.data.stats?.satisfaction || 'Rated'}</div>
                  <div class="text-xs text-gray-500">Service</div>
                </div>
              </div>

              <!-- CTA -->
              <a href={`/services/${service.data.id || service.slug}`} class="block w-full text-center py-3 bg-gradient-to-r from-primary-600 to-primary-700 text-white font-medium rounded-xl hover:shadow-lg transition-all duration-300 group-hover:scale-105">
                Learn More
              </a>

              <!-- Hover Glow Effect -->
              <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-primary-400 to-secondary-400 opacity-0 group-hover:opacity-10 transition-opacity duration-300 pointer-events-none"></div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Services Grid -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          {featuredServices.length > 0 ? 'Additional ' : 'All '}
          <span class="gradient-text">Services</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {featuredServices.length > 0 
            ? 'Explore more specialized relocation services for your Swiss move.'
            : 'Browse our comprehensive collection of Swiss relocation services from trusted professionals.'}
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {(featuredServices.length > 0 ? nonFeaturedServices : sortedServices).map((service) => (
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 group hover:-translate-y-1">
            <!-- Header -->
            <div class="flex items-start space-x-4 mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                {(service.data.icon === 'home' || service.data.icon === 'lightbulb') && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                  </svg>
                )}
                {service.data.icon === 'document' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                )}
                {service.data.icon === 'credit-card' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                  </svg>
                )}
                {service.data.icon === 'academic-cap' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M12 14l9-5-9-5-9 5 9 5z"/>
                    <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"/>
                  </svg>
                )}
                {!service.data.icon && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                )}
              </div>
              
              <div class="flex-1">
                <div class="flex items-center justify-between mb-2">
                  <h3 class="text-lg font-bold text-gray-900 group-hover:text-primary-600 transition-colors duration-300">
                    {service.data.title}
                  </h3>
                  {service.data.featured && (
                    <span class="text-xs font-medium bg-primary-100 text-primary-700 px-2 py-1 rounded-full">
                      Popular
                    </span>
                  )}
                </div>
                <p class="text-gray-600 text-sm leading-relaxed">
                  {service.data.description}
                </p>
              </div>
            </div>

            <!-- Key Features -->
            {service.data.features && service.data.features.length > 0 && (
              <div class="mb-4">
                <div class="grid grid-cols-2 gap-2">
                  {service.data.features.slice(0, 4).map((feature) => (
                    <div class="flex items-center space-x-2">
                      <div class="w-1.5 h-1.5 bg-primary-500 rounded-full"></div>
                      <span class="text-sm text-gray-600">{feature}</span>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Stats & Pricing -->
            <div class="flex items-center justify-between mb-4 py-3 px-4 bg-gray-50 rounded-xl">
              <div class="text-center">
                <div class="text-sm font-bold text-primary-600">{service.data.stats?.avgTime || 'Varies'}</div>
                <div class="text-xs text-gray-500">Duration</div>
              </div>
              <div class="text-center">
                <div class="text-sm font-bold text-primary-600">{service.data.stats?.satisfaction || 'Professional'}</div>
                <div class="text-xs text-gray-500">Service</div>
              </div>
              <div class="text-center">
                <div class="text-sm font-bold text-primary-600">
                  {service.data.pricing?.starting ? `CHF ${service.data.pricing.starting}+` : 'Contact'}
                </div>
                <div class="text-xs text-gray-500">Price</div>
              </div>
            </div>

            <!-- CTA -->
            <div class="flex space-x-2">
              <a href={`/services/${service.data.id || service.slug}`} class="flex-1 text-center py-3 bg-gradient-to-r from-primary-600 to-primary-700 text-white font-medium rounded-xl hover:shadow-lg transition-all duration-300 group-hover:scale-105">
                Learn More
              </a>
              <button onclick="openModal('individual-lead-modal')" class="px-4 py-3 border-2 border-primary-200 text-primary-600 rounded-xl hover:bg-primary-50 transition-all duration-300">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Service Categories -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Services by <span class="gradient-text">Category</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Find services organized by the type of assistance you need for your Swiss relocation.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {['housing', 'immigration', 'finance', 'education', 'lifestyle', 'business'].map((category) => {
          const categoryServices = services.filter(service => service.data.category === category);
          if (categoryServices.length === 0) return null;

          const categoryInfo = {
            housing: { name: 'Housing & Real Estate', icon: 'home', color: 'blue' },
            immigration: { name: 'Visa & Immigration', icon: 'document', color: 'green' },
            finance: { name: 'Banking & Finance', icon: 'credit-card', color: 'purple' },
            education: { name: 'Education & Schools', icon: 'academic-cap', color: 'amber' },
            lifestyle: { name: 'Lifestyle & Integration', icon: 'star', color: 'pink' },
            business: { name: 'Business Services', icon: 'briefcase', color: 'teal' }
          }[category];
              
          return (
            <div class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg transition-all duration-300">
              <div class="flex items-center space-x-3 mb-4">
                <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2 2z"/>
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900">{categoryInfo?.name}</h3>
              </div>
              
              <p class="text-gray-600 text-sm mb-4">
                {categoryServices.length} service{categoryServices.length !== 1 ? 's' : ''} available
              </p>
              
              <div class="space-y-2 mb-4">
                {categoryServices.slice(0, 3).map(service => (
                  <div class="text-sm text-gray-700">â€¢ {service.data.title}</div>
                ))}
                {categoryServices.length > 3 && (
                  <div class="text-sm text-primary-600">+ {categoryServices.length - 3} more</div>
                )}
              </div>
              
              <a href={`/services?category=${category}`} class="inline-flex items-center text-primary-600 font-medium text-sm hover:text-primary-700 transition-colors duration-200">
                Browse Category
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          );
        })}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-primary-600 to-secondary-600 text-white">
    <div class="container">
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Not Sure Which Services You Need?
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Get personalized recommendations based on your specific relocation situation and timeline.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <button onclick="openModal('individual-lead-modal')" class="btn-white px-8 py-4">
            Get Custom Recommendations
          </button>
          <a href="/chat" class="btn-outline-white px-8 py-4">
            Ask Our AI Assistant
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-3xl font-bold mb-2">{services.length}+</div>
            <div class="text-sm opacity-75">Service Types</div>
          </div>
          <div>
            <div class="text-3xl font-bold mb-2">Professional</div>
            <div class="text-sm opacity-75">Expert Guidance</div>
          </div>
          <div>
            <div class="text-3xl font-bold mb-2">Trusted</div>
            <div class="text-sm opacity-75">Service Providers</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>