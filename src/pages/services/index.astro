---
import Layout from '../../layouts/Layout.astro';
import { ArrowRight, CheckCircle2 } from 'lucide-react';

// Import Assets (Selective Color Series)
const visaImage = '/images/services/visa-card.png';
const housingImage = '/images/services/housing-card.png';
const movingImage = '/images/services/moving-card.png';

// New Generated Assets
const educationImage = '/images/services/education-card.png';
const advisoryImage = '/images/services/advisory-card.png';
const insuranceImage = '/images/services/insurance-card.png';

const services = [
  {
    title: "Visa & Immigration",
    description: "Streamlined work permits and residency applications for non-EU/EFTA citizens.",
    link: "/services/visa-immigration",
    image: visaImage,
    tag: "Priority Service"
  },
  {
    title: "Housing Search",
    description: "Access off-market listings and secure lease contracts in competitive hubs like Zurich & Geneva.",
    link: "/services/housing",
    image: housingImage,
    tag: "High Demand"
  },
  {
    title: "Moving & Logistics",
    description: "End-to-end relocation management, from packing in origin to unboxing in Switzerland.",
    link: "/services/moving-logistics",
    image: movingImage,
    tag: "Door-to-Door"
  },
  {
    title: "Education & Schooling",
    description: "School search consultants to find the best international or local schools for your children.",
    link: "/services/education",
    image: educationImage,
    tag: "Family Support"
  },
  {
    title: "Advisory & Consulting",
    description: "Strategic tax, legal, and compliance advice for complex relocation scenarios.",
    link: "/services/advisory",
    image: advisoryImage,
    tag: "Expert Access"
  },
  {
    title: "Insurance & Safety",
    description: "Comprehensive coverage packages ensuring you are protected from day one.",
    link: "/services/insurance",
    image: insuranceImage,
    tag: "Risk Mgmt"
  }
];

const title = "Relocation Services Switzerland | Comprehensive Global Mobility Suite";
const description = "Explore our full range of Swiss relocation services: Visa, Housing, Schools, Moving, and Tax Advisory. The Operating System for Global Mobility.";
const canonical = "https://relofinder.ch/services";
---

<Layout title={title} description={description} canonical={canonical}>
  
  <!-- Hero Section -->
  <section class="relative pt-24 pb-20 md:pt-32 md:pb-24 bg-slate-50 border-b border-slate-100 overflow-hidden">
    <!-- Subtle Background Grid -->
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#e2e8f0_1px,transparent_1px),linear-gradient(to_bottom,#e2e8f0_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] opacity-40"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-200/50 border border-slate-200 text-slate-600 text-[11px] font-bold uppercase tracking-widest mb-6 animate-fade-in">
          <span class="w-2 h-2 rounded-full bg-[#FF6F61] animate-pulse"></span>
          Comprehensive Mobility Suite
        </div>
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight text-slate-900 mb-6 leading-tight">
          Everything you need to <br/>
          <span class="text-[#FF6F61]">move with precision.</span>
        </h1>
        <p class="text-xl text-slate-500 font-normal leading-relaxed max-w-2xl mx-auto">
          Orchestrate your entire Swiss relocation from a single operating system. Select a service to begin.
        </p>
      </div>
    </div>
  </section>

  <!-- Service Grid -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        
        {services.map((service, index) => (
          <a href={service.link} class="group relative block h-[480px] rounded-2xl overflow-hidden bg-slate-900 shadow-sm hover:shadow-2xl transition-all duration-500 hover:-translate-y-1">
            <!-- Background Image with Selective Color Logic -->
            <div class="absolute inset-0 w-full h-full">
               <img 
                  src={service.image} 
                  alt={service.title} 
                  class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-[2000ms] ease-in-out scale-100 group-hover:scale-105"
               />
               <!-- Dark Gradient Overlay -->
               <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/40 to-transparent opacity-80 group-hover:opacity-70 transition-opacity duration-1000"></div>
            </div>

            <!-- Content -->
            <div class="absolute inset-0 p-8 flex flex-col justify-end">
               <!-- Top Tag -->
               <div class="absolute top-8 right-8">
                  <div class="bg-white/10 backdrop-blur-md border border-white/20 text-white text-[10px] font-bold uppercase tracking-widest px-3 py-1 rounded-full opacity-0 translate-y-2 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 delay-100">
                    {service.tag}
                  </div>
               </div>

               <!-- Text Content -->
               <div class="transform group-hover:-translate-y-2 transition-transform duration-500">
                  <div class="w-12 h-1 bg-[#FF6F61] mb-6 w-0 group-hover:w-12 transition-all duration-700 ease-out"></div>
                  
                  <h3 class="text-3xl font-bold text-white mb-3 tracking-tight">
                    {service.title}
                  </h3>
                  
                  <p class="text-slate-300 text-base leading-relaxed mb-6 opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 delay-75 max-w-xs">
                    {service.description}
                  </p>
                  
                  <div class="flex items-center gap-2 text-white font-semibold text-sm opacity-60 group-hover:opacity-100 transition-opacity duration-300">
                    Explore Service <ArrowRight className="w-4 h-4 text-[#FF6F61]" />
                  </div>
               </div>
            </div>
          </a>
        ))}

      </div>
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="py-24 bg-slate-50 border-t border-slate-200">
      <div class="container mx-auto px-4 text-center">
          <h2 class="text-3xl font-bold text-slate-900 mb-6">Need a custom package?</h2>
          <p class="text-slate-500 mb-8 max-w-2xl mx-auto">
              We can bundle multiple services into a single monthly simplified invoice for corporate clients.
          </p>
          <a href="/corporate" class="inline-flex items-center justify-center bg-slate-900 text-white px-8 py-4 rounded-lg font-semibold hover:bg-slate-800 transition-colors shadow-lg hover:shadow-xl">
             View Corporate Solutions
          </a>
      </div>
  </section>

</Layout>
