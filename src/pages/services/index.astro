---
import Layout from '../../layouts/Layout.astro';
import SectionHeading from '../../components/common/SectionHeading.astro';

const title = "Swiss Relocation Services | Compare Agencies | ReloFinder";
const description = "Compare professional relocation services in Switzerland. Find trusted agencies for housing, immigration, banking, schools, and complete move support.";

// Lucide icon SVG paths
const iconPaths: Record<string, string> = {
  'home': 'M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z M9 22V12h6v10',
  'passport': 'M2 6a2 2 0 012-2h16a2 2 0 012 2v12a2 2 0 01-2 2H4a2 2 0 01-2-2V6z M9 12h6 M9 16h6 M12 9a1 1 0 100-2 1 1 0 000 2z',
  'graduation-cap': 'M22 10v6M2 10l10-5 10 5-10 5z M6 12v5c3 3 9 3 12 0v-5',
  'banknote': 'M2 8h20v8H2z M6 12h.01 M18 12h.01 M10 12a2 2 0 104 0 2 2 0 00-4 0z',
  'lightbulb': 'M9 18h6 M10 22h4 M15 8a5 5 0 10-6 4.9V17h6v-4.1A5 5 0 0015 8z',
  'check-circle': 'M22 11.08V12a10 10 0 11-5.93-9.14 M22 4L12 14.01l-3-3',
  'package': 'M16.5 9.4l-9-5.19M21 16V8a2 2 0 00-1-1.73l-7-4a2 2 0 00-2 0l-7 4A2 2 0 003 8v8a2 2 0 001 1.73l7 4a2 2 0 002 0l7-4A2 2 0 0021 16z M3.27 6.96L12 12.01l8.73-5.05M12 22.08V12',
  'log-out': 'M9 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4M16 17l5-5-5-5M21 12H9',
  'building-2': 'M3 21h18M5 21V7l8-4v18M19 21V11l-6-4M9 9v.01M9 12v.01M9 15v.01M9 18v.01',
  'shield': 'M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z'
};

const coreServices = [
  {
    title: 'Housing Services',
    slug: 'housing',
    description: 'Find apartments and navigate Swiss rental requirements with expert agency support.',
    icon: 'home',
    popular: true
  },
  {
    title: 'Immigration Services',
    slug: 'immigration',
    description: 'Work permits, visa applications, and residence permits handled by specialists.',
    icon: 'passport',
    popular: true
  },
  {
    title: 'Education Services',
    slug: 'education',
    description: 'International school search and enrollment support for expat families.',
    icon: 'graduation-cap',
    popular: false
  },
  {
    title: 'Finance Services',
    slug: 'finance',
    description: 'Swiss banking, wealth management, and tax planning coordination.',
    icon: 'banknote',
    popular: true
  },
  {
    title: 'Advisory Services',
    slug: 'advisory',
    description: 'Strategic relocation planning for HNWI and executives.',
    icon: 'lightbulb',
    popular: false
  },
  {
    title: 'Moving & Logistics',
    slug: 'moving-logistics',
    description: 'International shipping, customs clearance, and complete moving coordination.',
    icon: 'package',
    popular: false
  },
  {
    title: 'Insurance Services',
    slug: 'insurance',
    description: 'Swiss health insurance setup and changes. Expert guidance for mandatory coverage.',
    icon: 'shield',
    popular: true
  }
];

const supportingServices = [
  {
    title: 'Settling-In Services',
    slug: 'settling-in',
    description: 'Municipality registration, health insurance, utilities setup.',
    icon: 'check-circle'
  },
  {
    title: 'Departure Services',
    slug: 'departure',
    description: 'Lease termination, deregistration, smooth exit from Switzerland.',
    icon: 'log-out'
  },
  {
    title: 'Corporate Relocation',
    slug: 'corporate-relocation',
    description: 'HR programs and comprehensive corporate transfer support.',
    icon: 'building-2'
  }
];
---

<Layout title={title} description={description}>
  
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center overflow-hidden bg-gray-50">
    <div class="container relative z-10 mx-auto px-6 lg:px-8 py-20">
      <div class="max-w-4xl mx-auto text-center">
        
        <!-- Headline -->
        <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Swiss Relocation <span class="bg-gradient-to-r from-[#B61919] to-[#DF3030] bg-clip-text text-transparent">Services</span>
        </h1>
        
        <p class="text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto mb-8">
          From housing and visas to banking and schools — find trusted relocation agencies for every aspect of your move to Switzerland.
        </p>

        <!-- Stats -->
        <div class="flex flex-wrap justify-center gap-8 mb-12">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#B61919]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-gray-700">10 Service Categories</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#B61919]" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
            </svg>
            <span class="text-sm font-medium text-gray-700">50+ Verified Agencies</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#B61919]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-gray-700">100% Free Quotes</span>
          </div>
        </div>

        <!-- CTA -->
        <button
          onclick="universalOpenModal({page: 'services'})"
          class="inline-flex items-center justify-center px-8 py-4 text-white font-semibold rounded-xl transition-all duration-200 hover:shadow-lg bg-gradient-to-r from-[#B61919] to-[#DF3030] hover:scale-[1.02]"
        >
          Get Free Quotes from Agencies
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </button>
      </div>
    </div>
  </section>

  <!-- Core Services Grid -->
  <section class="relative overflow-hidden bg-white" style="padding: var(--section-padding) 0;">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      
      <SectionHeading 
        title="Core Relocation Services"
        subtitle="Essential services for every Swiss move — housing, immigration, banking, and more"
        align="left"
      />

      <!-- Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {coreServices.map((service) => (
          <div class="group relative bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 overflow-hidden border border-gray-100">
            
            {service.popular && (
              <div class="absolute top-4 right-4 z-10">
                <span class="inline-block px-3 py-1 bg-gradient-to-r from-[#B61919] to-[#DF3030] text-white text-xs font-bold rounded-full">
                  Popular
                </span>
              </div>
            )}

            <!-- Content -->
            <div class="p-6">
              <!-- Icon -->
              <div class="w-12 h-12 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-xl flex items-center justify-center mb-4 shadow-md">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                  <path d={iconPaths[service.icon]} />
                </svg>
              </div>

              <!-- Title & Description -->
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-[#B61919] transition-colors">
                {service.title}
              </h3>
              <p class="text-gray-600 text-sm leading-relaxed mb-6">
                {service.description}
              </p>

              <!-- Actions -->
              <div class="flex flex-col gap-3">
                <a
                  href={`/services/${service.slug}`}
                  class="inline-flex items-center justify-center px-4 py-3 bg-gradient-to-r from-[#B61919] to-[#DF3030] text-white rounded-xl font-semibold hover:shadow-md transition-all duration-200"
                >
                  Learn More
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
                <a
                  href={`/companies?service=${service.slug}`}
                  class="inline-flex items-center justify-center px-4 py-3 bg-white text-gray-700 border-2 border-gray-200 rounded-xl font-semibold hover:border-gray-300 hover:bg-gray-50 transition-all duration-200"
                >
                  Browse Agencies
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </a>
              </div>
            </div>

            <!-- Red accent line on hover -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-[#B61919] to-[#DF3030] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Supporting Services -->
  <section class="relative overflow-hidden bg-gray-50" style="padding: var(--section-padding) 0;">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      
      <SectionHeading 
        title="Additional Services"
        subtitle="Complete your relocation with specialized support for settling-in, departure, and corporate moves"
        align="left"
      />

      <!-- Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {supportingServices.map((service) => (
          <div class="group relative bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 overflow-hidden border border-gray-100">
            
            <!-- Content -->
            <div class="p-6">
              <!-- Icon -->
              <div class="w-12 h-12 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-xl flex items-center justify-center mb-4 shadow-md">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                  <path d={iconPaths[service.icon]} />
                </svg>
              </div>

              <!-- Title & Description -->
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-[#B61919] transition-colors">
                {service.title}
              </h3>
              <p class="text-gray-600 text-sm leading-relaxed mb-6">
                {service.description}
              </p>

              <!-- Actions -->
              <div class="flex flex-col gap-3">
                <a
                  href={`/services/${service.slug}`}
                  class="inline-flex items-center justify-center px-4 py-3 bg-gradient-to-r from-[#B61919] to-[#DF3030] text-white rounded-xl font-semibold hover:shadow-md transition-all duration-200"
                >
                  Learn More
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
                <a
                  href={`/companies?service=${service.slug}`}
                  class="inline-flex items-center justify-center px-4 py-3 bg-white text-gray-700 border-2 border-gray-200 rounded-xl font-semibold hover:border-gray-300 hover:bg-gray-50 transition-all duration-200"
                >
                  Browse Agencies
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </a>
              </div>
            </div>

            <!-- Red accent line on hover -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-[#B61919] to-[#DF3030] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="relative overflow-hidden bg-white" style="padding: var(--section-padding) 0;">
    <div class="max-w-5xl mx-auto px-6 lg:px-8">
      
      <SectionHeading 
        title="How It Works"
        subtitle="Find and compare professional relocation agencies in three simple steps"
        align="center"
      />

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg">
            <span class="text-2xl font-bold text-white">1</span>
          </div>
          <h3 class="text-xl font-bold mb-3 text-gray-900">Tell Us Your Needs</h3>
          <p class="text-gray-600 leading-relaxed">
            Share details about your move — destination, services needed, timeline, and preferences.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg">
            <span class="text-2xl font-bold text-white">2</span>
          </div>
          <h3 class="text-xl font-bold mb-3 text-gray-900">Compare Agencies</h3>
          <p class="text-gray-600 leading-relaxed">
            Receive 3-5 personalized quotes from verified Swiss relocation agencies within 24-48 hours.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-[#B61919] to-[#DF3030] rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg">
            <span class="text-2xl font-bold text-white">3</span>
          </div>
          <h3 class="text-xl font-bold mb-3 text-gray-900">Choose & Move</h3>
          <p class="text-gray-600 leading-relaxed">
            Select the best agency for your needs and start your Swiss relocation with confidence.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative overflow-hidden" style="padding: var(--section-padding) 0; background: linear-gradient(135deg, #B61919 0%, #DF3030 100%);">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center text-white">
      <h2 class="text-4xl font-bold mb-6">
        Ready to Start Your Swiss Move?
      </h2>
      <p class="text-xl mb-8 opacity-90">
        Get free quotes from verified agencies. Compare services, prices, and reviews — all in one place.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <button
          onclick="universalOpenModal({page: 'services_cta'})"
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-[#B61919] font-semibold rounded-xl hover:bg-gray-100 transition-all duration-200"
        >
          Get Free Quotes
        </button>
        <a
          href="/companies"
          class="inline-flex items-center justify-center px-8 py-4 font-semibold bg-white/10 backdrop-blur-sm border-2 border-white/30 rounded-xl hover:bg-white/20 transition-all duration-200"
        >
          Browse All Agencies
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="flex flex-wrap justify-center gap-8 mt-12 pt-12 border-t border-white/20">
        <div>
          <div class="text-3xl font-bold mb-1">50+</div>
          <div class="text-sm opacity-75">Verified Agencies</div>
        </div>
        <div>
          <div class="text-3xl font-bold mb-1">1,000+</div>
          <div class="text-sm opacity-75">Successful Moves</div>
        </div>
        <div>
          <div class="text-3xl font-bold mb-1">98%</div>
          <div class="text-sm opacity-75">Satisfaction Rate</div>
        </div>
        <div>
          <div class="text-3xl font-bold mb-1">100%</div>
          <div class="text-sm opacity-75">Free to Use</div>
        </div>
      </div>
    </div>
  </section>

</Layout>
