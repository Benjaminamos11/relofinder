---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/services/ServiceCard.astro';
import RegionsBanner from '../../components/home/RegionsBanner.astro';

// Service categories with varied sizes for bento grid layout
const services = [
  {
    id: 'housing',
    title: 'Housing & Real Estate',
    description: 'Find apartments, houses, property managers, and real estate agents to help with your housing needs in Switzerland.',
    icon: 'home',
    size: 'large', // This will span 2 rows and 2 columns
  },
  {
    id: 'legal',
    title: 'Legal & Immigration',
    description: 'Expert assistance with visas, work permits, residency applications, and legal advice for relocating to Switzerland.',
    icon: 'document',
    size: 'wide', // This will span 2 columns
  },
  {
    id: 'finance',
    title: 'Banking & Finance',
    description: 'Services for bank account setup, financial advisors, insurance, and tax consulting for expats in Switzerland.',
    icon: 'credit-card',
    size: 'wide', // This will span 2 columns
  },
  {
    id: 'health',
    title: 'Healthcare',
    description: 'Connect with health insurance providers, medical services, hospitals, and wellness providers in your new Swiss location.',
    icon: 'heart',
    size: 'normal', // Changed from 'tall' to 'normal' to match other standard boxes
  },
  {
    id: 'education',
    title: 'Education & Schools',
    description: 'Information on international schools, language courses, universities, and childcare options across Switzerland.',
    icon: 'academic-cap',
    size: 'wide', // This will span 2 columns
  },
  {
    id: 'transport',
    title: 'Transportation',
    description: 'Moving services, public transportation information, car leasing options, and assistance with driving licenses in Switzerland.',
    icon: 'truck',
    size: 'normal', // Standard sized box
  },
  {
    id: 'language',
    title: 'Language Services',
    description: 'Language schools, translation services, and intercultural training to help you communicate effectively in Switzerland.',
    icon: 'chat',
    size: 'normal', // Standard sized box
  },
  {
    id: 'job',
    title: 'Employment & Career',
    description: 'Job search assistance, recruitment agencies, and career coaching for expats looking to work in Switzerland.',
    icon: 'briefcase',
    size: 'normal', // Standard sized box
  },
];

// Common gradient for all icons
const commonGradient = 'from-primary-600 to-primary-700';

// Page metadata
const title = 'Relocation Services in Switzerland | ReloFinder.ch';
const description = 'Explore specialized relocation services for expats moving to Switzerland, from housing and legal assistance to education and healthcare support.';
---

<Layout title={title} description={description}>
  <!-- Services Page Header -->
  <section class="py-12 bg-gray-50 border-b border-gray-100">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl font-bold mb-4">Relocation <span class="text-primary-600">Services</span></h1>
        <p class="text-lg text-accent-600">
          Browse our comprehensive selection of services to help with every aspect of your relocation to Switzerland.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Services Bento Grid Section -->
  <section class="py-12 bg-white">
    <div class="container">
      <!-- True Bento Grid Layout -->
      <div class="grid grid-cols-4 gap-3 auto-rows-[minmax(150px,auto)]">
        {services.map(service => {
          // Calculate grid span classes based on size
          const colSpanClass = 
            service.size === 'large' ? 'col-span-2' : 
            service.size === 'wide' ? 'col-span-2' : 
            'col-span-1';
            
          const rowSpanClass = 
            service.size === 'large' ? 'row-span-2' : 
            service.size === 'tall' ? 'row-span-2' : 
            'row-span-1';
              
          return (
            <a href={`/services/${service.id}`} class={`group ${colSpanClass} ${rowSpanClass} relative overflow-hidden rounded-2xl shadow-sm hover:shadow-lg transition-all duration-500 ease-in-out border border-gray-100 bg-white`}>
              <!-- Content Container -->
              <div class="relative h-full w-full rounded-2xl p-5 flex flex-col justify-between overflow-hidden">
                <!-- Content -->
                <div class="relative z-10">
                  <div class={`w-12 h-12 rounded-full flex items-center justify-center mb-3 transition-all duration-500 group-hover:scale-110 bg-gradient-to-r ${commonGradient} shadow-lg`}>
                    <span class="text-white">
                      {service.icon === 'home' && (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                      )}
                      {service.icon === 'document' && (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                      )}
                      {service.icon === 'credit-card' && (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                        </svg>
                      )}
                      {service.icon === 'heart' && (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                      )}
                      {service.icon === 'academic-cap' && (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path d="M12 14l9-5-9-5-9 5 9 5z" />
                          <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998a12.078 12.078 0 01.665-6.479L12 14z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998a12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                        </svg>
                      )}
                      {service.icon === 'truck' && (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />
                        </svg>
                      )}
                      {service.icon === 'chat' && (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                        </svg>
                      )}
                      {service.icon === 'briefcase' && (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                      )}
                    </span>
                  </div>
                  <h3 class="text-lg md:text-xl font-semibold mb-2 group-hover:text-primary-600 transition-colors">{service.title}</h3>
                  <p class="text-accent-600 text-sm">{service.description}</p>
                </div>
                
                <div class="relative z-10 mt-3 flex items-center font-medium transition-all duration-500 ease-in-out group-hover:translate-x-2">
                  <span class="text-primary-600 text-sm">
                    Explore Services
                  </span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 text-primary-600" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>
  
  <!-- Regions Banner -->
  <section class="py-12 bg-gray-50">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-8">
        <h2 class="text-2xl font-bold mb-3">Explore Services by <span class="text-primary-600">Region</span></h2>
        <p class="text-accent-600">
          Find services tailored to your specific location in Switzerland.
        </p>
      </div>
      
      <RegionsBanner />
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-12 bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl font-bold mb-4">Not sure which service you need?</h2>
        <p class="text-lg text-accent-600 mb-6">
          Our experts can help you identify the right services for your specific relocation needs.
        </p>
        <a href="/contact" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors">
          Schedule a Free Consultation
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>