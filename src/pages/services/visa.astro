    badge="Immigration Services"
  />

  <ServiceProcess
    title="Your Immigration Success Journey"
    steps={processSteps}
  />

  <ServiceFeatures
    title="Comprehensive Immigration Solutions"
    features={features}
  />

  <ServiceLocations
    title="Immigration Services Across Switzerland"
    locations={locations}
  />

  <ServiceCompanies
    title="Trusted Immigration Specialists"
    companies={companies}
  />

  <ServiceBlog
    title="Immigration Resources & Guides"
    posts={relatedBlogs}
  />

  <ServiceCTA
    title="Ready to Start Your Swiss Immigration Journey?"
    description="Connect with our immigration specialists today for expert guidance."
    buttonText="Get Immigration Consultation"
    buttonLink="/contact?service=immigration"
  />

  <ServiceRelated
    title="Related Services"
    services={relatedServices}
  />
