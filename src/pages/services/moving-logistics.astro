---
import Layout from '../../layouts/Layout.astro';
import HeroSearch from '../../components/home/HeroSearch';
import UniversalContactModal from '../../components/common/UniversalContactModal';
import { 
    Truck, 
    ShieldCheck, 
    FileText, 
    ArrowRight, 
    CheckCircle2, 
    Scale, 
    Anchor, 
    Dog, 
    Gem,
    ChevronDown,
    Lock,
    Clock,
    UserCheck,
    Globe,
    Building2,
    Briefcase
} from 'lucide-react';

const title = "Moving & Logistics: Swiss Border & Customs Guide | ReloFinder.ch";
const description = "The definitive guide to Swiss move logistics. Navigate Form 18.44, customs clearance, vehicle imports, and pet relocation with elite Swiss moving partners.";

const seoSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Swiss Moving & Logistics Advisory",
  "description": "Professional coordination of international moves to Switzerland, including customs clearance (Form 18.44) and specialized transport.",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder.ch"
  },
  "areaServed": "Switzerland"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Can I import my car to Switzerland tax-free?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, if you have owned the vehicle for at least 6 months prior to your relocation and it is part of your household effects. You must file Form 18.44 and subsequent Form 13.20A for registration."
      }
    },
    {
      "@type": "Question",
      "name": "What is Form 18.44?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Form 18.44 is the mandatory Swiss Customs declaration for the 'Declaration of personal effects' which allows you to import your household goods tax-free upon relocation."
      }
    },
    {
      "@type": "Question",
      "name": "How long does an international move to Switzerland take?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Moves within Europe typically take 2-5 days door-to-door. Sea freight from the US or Asia generally takes 4-8 weeks depending on the customs clearance speed."
      }
    }
  ]
};
---

<Layout 
    title={title} 
    description={description}
    navbarVariant="transparent"
>
    <!-- SEO Schemas -->
    <script type="application/ld+json" set:html={JSON.stringify(seoSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

    <main class="bg-slate-900 overflow-x-hidden">
        <!-- 1. The "Border Control" Hero -->
            <!-- Background Image with Overlay -->
            <div class="absolute inset-0 z-0">
                <div class="absolute inset-0 bg-gradient-to-b from-slate-950/70 via-transparent to-slate-950/80 z-20 pointer-events-none"></div>
                <!-- Customs Hero Image -->
                <div class="absolute inset-0 bg-[url('https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976896/services/moving_hero_customs.jpg')] bg-cover bg-center grayscale opacity-80 group-hover:grayscale-0 transition-all duration-[2000ms] ease-in-out z-10"></div>
            </div>

            <div class="container mx-auto px-4 relative z-30 pt-32 pb-48">
                <div class="max-w-5xl mx-auto text-center">
                    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#FF6F61]/10 border border-[#FF6F61]/20 text-[#FF6F61] text-[10px] font-black uppercase tracking-[0.3em] mb-6 animate-fade-in shadow-[0_0_20px_rgba(255,111,97,0.1)]">
                        <Anchor className="w-4 h-4" />
                        International Move Coordination
                    </div>
                    <h1 class="text-5xl md:text-7xl font-black text-white mb-8 tracking-tighter leading-[0.9] select-none">
                        Moving & Logistics: <br/>
                        <span class="relative">
                            <span class="bg-gradient-to-r from-slate-200 via-white to-slate-200 bg-clip-text text-transparent">Crossing the Swiss Border.</span>
                            <div class="absolute -bottom-4 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-[#FF6F61]/50 to-transparent"></div>
                        </span>
                    </h1>
                    <p class="text-xl md:text-2xl text-slate-400 font-light mb-10 leading-relaxed max-w-3xl mx-auto">
                        Switzerland is not in the EU Customs Union. Importing household goods, vehicles, and pets requires professional Form 18.44 clearance to avoid heavy VAT penalties.
                    </p>

                    <!-- Hero Search Integration -->
                    <div class="max-w-4xl mx-auto px-4 transform hover:scale-[1.01] transition-all duration-700">
                        <HeroSearch client:load initialService="moving-logistics" />
                    </div>
                </div>
            </div>

            <!-- Scroll Indicator -->
            <div class="absolute bottom-10 inset-x-0 flex flex-col items-center justify-center gap-2 animate-bounce z-20 pointer-events-none">
                <span class="text-[10px] font-black text-[#FF6F61] uppercase tracking-[0.4em]">Bureaucracy Guarded</span>
                <ChevronDown className="w-5 h-5 text-[#FF6F61]/40" />
            </div>
        </section>

        <!-- 2. Section: The Swiss Difference (Customs Strategy) -->
        <section class="py-32 bg-white relative overflow-hidden">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <div class="grid md:grid-cols-2 gap-24 items-center">
                        <div>
                            <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-8 block">The 18.44 Regulation</span>
                            <h2 class="text-5xl md:text-6xl font-bold text-slate-900 mb-10 tracking-tight leading-tight">The Swiss Border is Not a Mere Formality.</h2>
                            <p class="text-slate-600 text-lg leading-relaxed mb-8 font-light">
                                Unlike moving within the EU, entering Switzerland is a **formal import event**. Every item in your truck must be inventoried and declared.
                            </p>
                            
                            <div class="space-y-6 mb-12">
                                <div class="p-8 bg-slate-50 rounded-[2.5rem] border border-slate-100 hover:border-[#FF6F61]/20 transition-all group">
                                    <h4 class="text-slate-900 font-bold mb-2 flex items-center gap-3">
                                        <Scale className="w-5 h-5 text-[#FF6F61]" />
                                        The 6-Month Rule
                                    </h4>
                                    <p class="text-slate-500 text-sm leading-relaxed">
                                        Goods owned for less than 6 months are considered "new" and are subject to 8.1% VAT plus customs duties at the border.
                                    </p>
                                </div>
                                <div class="p-8 bg-[#FF6F61]/5 rounded-[2.5rem] border border-[#FF6F61]/10">
                                    <h4 class="text-slate-900 font-bold mb-2 flex items-center gap-3">
                                        <ShieldCheck className="w-5 h-5 text-[#FF6F61]" />
                                        Border Risk Mitigation
                                    </h4>
                                    <p class="text-slate-500 text-sm leading-relaxed">
                                        Without a signed Swiss lease and a stamped 18.44 form, customs officers may hold your truck at the border, incurring thousands in storage fees.
                                    </p>
                                </div>
                            </div>

                            <a href="/search/results?service=moving-logistics" class="inline-flex items-center gap-4 text-slate-900 font-black hover:text-[#FF6F61] transition-colors uppercase tracking-widest text-xs group no-underline">
                                Find Customs Clearance Experts <ArrowRight className="w-5 h-5 group-hover:translate-x-2 transition-transform text-[#FF6F61]" />
                            </a>
                        </div>
                        <div class="relative group">
                            <div class="absolute -inset-10 bg-[#FF6F61]/5 blur-[80px] rounded-full"></div>
                            <img 
                                src="https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976898/services/moving_packers.jpg" 
                                alt="Professional Swiss Packing Experts" 
                                class="relative rounded-[5rem] shadow-[0_64px_96px_-12px_rgba(0,0,0,0.15)] border border-slate-100 grayscale opacity-80 group-hover:grayscale-0 transition-all duration-[2000ms] ease-in-out transform group-hover:scale-[1.02]"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 3. Section: Logistics Services Breakdown (Grid) -->
        <section class="py-32 bg-slate-50 relative overflow-hidden">
             <div class="container mx-auto px-4">
                <div class="text-center mb-24">
                    <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-4 block">Service Capabilities</span>
                    <h2 class="text-4xl md:text-6xl font-bold text-slate-900 tracking-tight">Specialized Logistic Streams</h2>
                </div>

                <div class="grid md:grid-cols-3 gap-8 max-w-7xl mx-auto">
                    <!-- International Movers -->
                    <div class="group bg-white p-12 rounded-[4rem] border border-slate-100 hover:border-[#FF6F61]/30 hover:shadow-2xl transition-all duration-700">
                        <div class="w-20 h-20 bg-slate-50 rounded-3xl flex items-center justify-center text-slate-900 mb-10 group-hover:bg-[#FF6F61] group-hover:text-white transition-all transform group-hover:rotate-6">
                            <Truck className="w-10 h-10" />
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900 mb-6">International Movers</h3>
                        <p class="text-slate-500 leading-relaxed mb-8 font-light italic">"Door-to-door execution."</p>
                        <ul class="space-y-4">
                            {["White-glove packing", "Global shipping networks", "Crating for fragile assets"].map(item => (
                                <li class="flex items-center gap-4 text-slate-600 text-sm font-medium">
                                    <CheckCircle2 className="w-4 h-4 text-[#FF6F61]" /> {item}
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Vehicle Import -->
                    <div class="group bg-white p-12 rounded-[4rem] border border-slate-100 hover:border-[#FF6F61]/30 hover:shadow-2xl transition-all duration-700">
                        <div class="w-20 h-20 bg-slate-50 rounded-3xl flex items-center justify-center text-slate-900 mb-10 group-hover:bg-[#FF6F61] group-hover:text-white transition-all transform group-hover:rotate-6">
                            <Globe className="w-10 h-10" />
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900 mb-6">Vehicle Technical Import</h3>
                        <p class="text-slate-500 leading-relaxed mb-8 font-light italic">"Plate changes & compliance."</p>
                        <ul class="space-y-4">
                            {["Form 13.20A preparation", "MFK technical inspections", "Swiss emissions compliance"].map(item => (
                                <li class="flex items-center gap-4 text-slate-600 text-sm font-medium">
                                    <CheckCircle2 className="w-4 h-4 text-[#FF6F61]" /> {item}
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Pet Relocation -->
                    <div class="group bg-white p-12 rounded-[4rem] border border-slate-100 hover:border-[#FF6F61]/30 hover:shadow-2xl transition-all duration-700">
                        <div class="w-20 h-20 bg-slate-50 rounded-3xl flex items-center justify-center text-slate-900 mb-10 group-hover:bg-[#FF6F61] group-hover:text-white transition-all transform group-hover:rotate-6">
                            <Dog className="w-10 h-10" />
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900 mb-6">Pet Relocation</h3>
                        <p class="text-slate-500 leading-relaxed mb-8 font-light italic">"Living assets coordination."</p>
                        <ul class="space-y-4">
                            {["IATA kennel compliance", "Vaccination audit", "Amicus database registration"].map(item => (
                                <li class="flex items-center gap-4 text-slate-600 text-sm font-medium">
                                    <CheckCircle2 className="w-4 h-4 text-[#FF6F61]" /> {item}
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
             </div>
        </section>

        <!-- 4. Section: The Housing Dependency (Offlist Integration) -->
        <section class="py-32 bg-slate-900 relative overflow-hidden">
            <div class="absolute inset-0 z-0">
                <div class="absolute top-1/2 left-0 w-full h-[600px] bg-[#FF6F61]/5 -skew-y-6 blur-[120px]"></div>
            </div>
            
            <div class="container mx-auto px-4 relative z-10">
                <div class="max-w-6xl mx-auto">
                    <div class="grid md:grid-cols-2 gap-24 items-center">
                        <div class="order-2 md:order-1 relative group">
                            <div class="absolute -inset-10 bg-[#FF6F61]/10 blur-[100px] rounded-full"></div>
                            <img 
                                src="https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976900/services/moving_truck.jpg" 
                                alt="Swiss Logistics Operations" 
                                class="relative rounded-[5rem] shadow-[0_64px_128px_-12px_rgba(0,0,0,0.9)] grayscale opacity-80 group-hover:grayscale-0 transition-all duration-[2000ms] ease-in-out transform group-hover:scale-[1.02]"
                            />
                            <div class="absolute -bottom-6 -right-6 bg-white p-8 rounded-[2.5rem] shadow-2xl max-w-xs border border-slate-100">
                                <p class="text-[10px] font-black text-[#FF6F61] uppercase tracking-[0.4em] mb-4">The Logic Gate</p>
                                <p class="text-slate-900 font-bold text-lg mb-4 leading-tight italic">"No Swiss Lease? No Customs Clearance."</p>
                                <p class="text-slate-500 text-xs leading-relaxed">
                                    You cannot legally import a container of goods without a target address in Switzerland.
                                </p>
                            </div>
                        </div>
                        <div class="order-1 md:order-2">
                            <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-8 block">Offlist Integration</span>
                            <h2 class="text-5xl md:text-7xl font-bold text-white mb-10 tracking-tight leading-[1.1]">The Housing Dependency.</h2>
                            <p class="text-slate-400 text-xl leading-relaxed mb-10 font-light">
                                Customs requires a **signed Swiss lease** to prove your change of residence. Many expats fail at the border because they haven't secured a home yet.
                            </p>
                            <div class="bg-white/5 backdrop-blur-3xl border border-white/10 p-10 rounded-[3rem] mb-12 shadow-inner">
                                <p class="text-slate-200 text-lg leading-relaxed font-light">
                                    "Our partners use <a href='https://offlist.ch' target='_blank' class='text-[#FF6F61] font-bold hover:text-[#ff8a7d] underline decoration-[#FF6F61]/30 underline-offset-8 decoration-2 transition-all'>Offlist.ch</a> to helps clients secure a Swiss lease *before* the truck leaves, ensuring the border crossing is a non-event."
                                </p>
                            </div>
                            <a href="https://offlist.ch" target="_blank" class="inline-flex items-center gap-4 bg-[#FF6F61]/10 text-white px-10 py-5 rounded-full font-bold uppercase tracking-widest text-[10px] hover:bg-[#FF6F61]/20 border border-[#FF6F61]/30 transition-all no-underline group shadow-lg">
                                Access Off-Market Secure Leases <ArrowRight className="w-5 h-5 group-hover:translate-x-2 transition-transform text-[#FF6F61]" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 5. Section: Protecting Your Assets (Expat-Savvy Integration) -->
        <section class="py-32 bg-white relative">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <div class="grid md:grid-cols-2 gap-24 items-center">
                        <div>
                            <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-8 block">Global Risk Cover</span>
                            <h2 class="text-4xl md:text-6xl font-bold text-slate-900 mb-10 tracking-tight">Security in Transit.</h2>
                            <p class="text-slate-500 text-xl leading-relaxed mb-12 font-light">
                                Standard moving liability is calculated by weight, not value. For high-value art, wine, and heirloom furniture, specialized transit insurance is mandatory.
                            </p>
                            <div class="bg-slate-50 border border-slate-100 p-12 rounded-[4rem] mb-12 relative group hover:border-[#FF6F61]/20 transition-all duration-700 overflow-hidden">
                                <div class="absolute top-0 right-0 w-40 h-40 bg-[#FF6F61]/5 blur-[60px] pointer-events-none"></div>
                                <div class="flex items-start gap-8">
                                    <div class="w-16 h-16 bg-white rounded-2xl flex items-center justify-center text-[#FF6F61] shadow-xl shrink-0 group-hover:scale-110 transition-transform">
                                        <ShieldCheck className="w-8 h-8" />
                                    </div>
                                    <div>
                                        <p class="text-slate-800 text-lg leading-relaxed italic font-medium mb-4">
                                            "Secure comprehensive **Household Goods In-Transit Insurance** and setup your permanent Swiss Household Insurance before the first box is opened."
                                        </p>
                                        <p class="text-slate-500 text-sm">
                                            Recommended Partner: <a href='https://expat-savvy.ch' target='_blank' class='text-[#FF6F61] font-bold hover:underline underline-offset-4 transition-all'>Expat-Savvy.ch</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <a href="https://expat-savvy.ch" target="_blank" class="inline-flex items-center gap-4 text-slate-900 font-extrabold hover:text-[#FF6F61] transition-colors uppercase tracking-[0.3em] text-[10px] no-underline group">
                                Compare Transit Insurance Rates <ArrowRight className="w-5 h-5 group-hover:translate-x-2 transition-transform text-[#FF6F61]" />
                            </a>
                        </div>
                        <div class="relative group">
                            <img 
                                src="https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976895/services/moving_happy_family.jpg" 
                                alt="Stress-Free Swiss Arrival" 
                                class="rounded-[5rem] shadow-2xl grayscale opacity-80 group-hover:grayscale-0 transition-all duration-[2000ms] ease-in-out border border-slate-100 transform group-hover:scale-[1.02]"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 6. Section: The Move Process (Vertical Timeline) -->
        <section class="py-32 bg-slate-50 relative overflow-hidden">
             <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <div class="text-center mb-24">
                        <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-4 block">Deployment Protocol</span>
                        <h2 class="text-4xl md:text-6xl font-bold text-slate-900 tracking-tight">The 5-Step Move Protocol</h2>
                    </div>

                    <div class="space-y-12">
                        {[
                            { 
                                step: "01", 
                                title: "Pre-Move Audit", 
                                text: "The 6-month ownership check. We identify assets that will trigger VAT and advise on specialized packing for high-value items.",
                                icon: FileText
                            },
                            { 
                                step: "02", 
                                title: "Housing Lock", 
                                text: "Secure your Swiss lease via Offlist. Without the signed 'Mietvertrag', customs agent can't begin Form 18.44 preparation.",
                                icon: UserCheck
                            },
                            { 
                                step: "03", 
                                title: "Customs Preparation", 
                                text: "Finalizing the inventory list (packing list). Our agents translate and format your contents to Swiss customs standards.",
                                icon: Scale
                            },
                            { 
                                step: "04", 
                                title: "The High-Risk Bridge", 
                                text: "The physical border crossing. Our partners handle the officers, duties, and temporary admissions for vehicles.",
                                icon: Anchor
                            },
                            { 
                                step: "05", 
                                title: "White-Glove Delivery", 
                                text: "Unpacking, furniture assembly, and disposal of materials at your new Swiss residence. Full insurance closure.",
                                icon: Truck
                            }
                        ].map((item, idx) => (
                            <div class="group relative bg-white p-12 rounded-[3.5rem] border border-slate-100 hover:border-[#FF6F61]/30 hover:shadow-xl transition-all duration-700 flex gap-12 items-center">
                                <div class="hidden md:flex flex-col items-center gap-2">
                                    <span class="text-4xl font-black text-slate-100 group-hover:text-[#FF6F61]/10 transition-colors duration-700">{item.step}</span>
                                    <div class="w-[2px] h-12 bg-slate-50"></div>
                                </div>
                                <div class="w-16 h-16 bg-slate-50 rounded-2xl flex items-center justify-center text-[#FF6F61] shrink-0 group-hover:bg-[#FF6F61] group-hover:text-white transition-all transform group-hover:rotate-12 group-hover:scale-110 shadow-sm">
                                    <item.icon className="w-8 h-8" />
                                </div>
                                <div>
                                    <h4 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-[#FF6F61] transition-colors">{item.title}</h4>
                                    <p class="text-slate-500 leading-relaxed font-light text-lg">{item.text}</p>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
             </div>
        </section>

        <!-- 7. Section: DIY vs Managed Move (Comparison) -->
        <section class="py-32 bg-slate-950 relative overflow-hidden">
            <div class="container mx-auto px-4">
                <div class="max-w-5xl mx-auto">
                    <div class="text-center mb-24">
                        <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-4 block">Risk Assessment</span>
                        <h2 class="text-5xl font-bold text-white tracking-tight">Move Management Options</h2>
                    </div>

                    <div class="grid md:grid-cols-2 gap-10">
                        <!-- DIY Move -->
                        <div class="p-12 bg-slate-900/50 rounded-[4rem] border border-slate-800 opacity-60 hover:opacity-100 transition-opacity">
                            <h4 class="text-2xl font-bold text-slate-400 mb-8 border-b border-slate-800 pb-8 flex items-center gap-4">
                                <Lock className="w-6 h-6" /> The DIY Route
                            </h4>
                            <ul class="space-y-6">
                                {[
                                    "You drive the truck through customs",
                                    "Individual Form 18.44 filing at border",
                                    "High risk of VAT audits and delays",
                                    "Standard carrier liability (minimal)",
                                    "Self-packing risk (insurance voids)"
                                ].map(item => (
                                    <li class="flex items-center gap-4 text-slate-500 text-sm">
                                        <div class="w-2 h-2 rounded-full bg-slate-700"></div> {item}
                                    </li>
                                ))}
                            </ul>
                            <div class="mt-12 pt-8 border-t border-slate-800">
                                <span class="text-xs text-slate-600 font-bold uppercase tracking-widest block mb-1">Estimated Stress</span>
                                <div class="flex gap-1">
                                    {[1,2,3,4,5].map(() => <div class="w-full h-1 bg-[#FF6F61]"></div>)}
                                </div>
                            </div>
                        </div>

                        <!-- Managed Move -->
                        <div class="p-12 bg-[#FF6F61] rounded-[4rem] shadow-[0_48px_96px_-12px_rgba(255,111,97,0.3)] transform -rotate-1 relative overflow-hidden group">
                             <div class="absolute -top-10 -right-10 w-40 h-40 bg-white/10 blur-3xl rounded-full"></div>
                             <h4 class="text-2xl font-black text-white mb-8 border-b border-white/20 pb-8 flex items-center justify-between">
                                <span>Relofinder Managed</span>
                                <div class="bg-white text-[#FF6F61] text-[8px] font-black px-3 py-1 rounded-full uppercase tracking-widest">Elite Standard</div>
                            </h4>
                            <ul class="space-y-6">
                                {[
                                    "Pre-cleared customs documentation",
                                    "Single point of move management",
                                    "Zero-VAT strategy implementation",
                                    "White-glove origin to destination",
                                    "High-value transit insurance closure"
                                ].map(item => (
                                    <li class="flex items-center gap-4 text-white text-sm font-bold">
                                        <CheckCircle2 className="w-5 h-5 text-white shadow-sm" /> {item}
                                    </li>
                                ))}
                            </ul>
                             <div class="mt-12 pt-8 border-t border-white/20">
                                <span class="text-xs text-white/70 font-bold uppercase tracking-widest block mb-1">Estimated Stress</span>
                                <div class="flex gap-1">
                                    <div class="w-1/5 h-1 bg-white"></div>
                                    <div class="w-4/5 h-1 bg-white/20"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 8. Section: FAQ (Journal Links) -->
        <section class="py-32 bg-white">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 mb-20">
