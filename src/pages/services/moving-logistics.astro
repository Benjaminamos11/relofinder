---
import Layout from '../../layouts/Layout.astro';
import SchemaMarkup from '../../components/common/SchemaMarkup.astro';
import ServiceHero from '../../components/services/ServiceHero.astro';
import ServiceRelated from '../../components/services/ServiceRelated.astro';
import ServiceBlog from '../../components/services/ServiceBlog.astro';

interface BlogPost {
  title: string;
  slug: string;
  excerpt: string;
  category: string;
  readTime: string;
}

interface ServiceCompany {
  name: string;
