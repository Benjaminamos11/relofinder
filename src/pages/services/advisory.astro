        <!-- FAQ Section -->
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">FAQ – Strategic Relocation Consulting</h2>
          <div class="space-y-6">
            
            <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition">
