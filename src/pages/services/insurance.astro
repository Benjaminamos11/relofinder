---
import Layout from '../../layouts/Layout.astro';
import HeroSearch from '../../components/home/HeroSearch';
import UniversalContactModal from '../../components/common/UniversalContactModal';
import { 
    ShieldCheck, 
    FileText, 
    ArrowRight, 
    CheckCircle2, 
    Scale, 
    ChevronDown,
    Lock,
    Clock,
    UserCheck,
    Globe,
    Building2,
    Briefcase,
    Zap,
    HeartPulse,
    Plane,
    PiggyBank,
    Stethoscope,
    Home,
    Search,
    Key,
    MapPin
} from 'lucide-react';

const title = "Insurance & Finance Switzerland: Mandatory KVG & Pillar 3a Guide | ReloFinder.ch";
const description = "The definitive guide to the Swiss insurance system. Navigate mandatory health insurance (KVG), personal liability, and tax-saving 3rd Pillar accounts with English-speaking experts.";

const seoSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Swiss Insurance & Finance Advisory",
  "description": "Comprehensive advisory for expats in Switzerland covering mandatory health insurance, liability, and private pension (3rd Pillar) optimization.",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder.ch"
  },
  "areaServed": "Switzerland"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is health insurance mandatory in Switzerland?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, basic health insurance (KVG/LAMal) is mandatory for every resident in Switzerland. You have a 90-day window from your arrival date to register with an insurer."
      }
    },
    {
      "@type": "Question",
      "name": "What happens if I miss the 3-month insurance deadline?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "If you miss the deadline, your local canton will assign you to a random insurer, often with a high premium. You will also be required to pay all premiums retrospectively since your arrival date, potentially with a penalty."
      }
    },
    {
      "@type": "Question",
      "name": "Can I deduct insurance premiums from my Swiss taxes?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Basic health insurance premiums are partially deductible in most cantons. However, contributions to the Pillar 3a (3rd Pillar) are 100% tax-deductible federally and can save you thousands of CHF per year."
      }
    }
  ]
};
---

<Layout 
    title={title} 
    description={description}
    navbarVariant="transparent"
>
    <!-- SEO Schemas -->
    <script type="application/ld+json" set:html={JSON.stringify(seoSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

    <main class="bg-slate-900 overflow-x-hidden">
        <!-- 1. The "Safety Net" Hero -->
        <section class="relative min-h-[95vh] flex items-center pt-20 pb-32 bg-slate-950 group">
            <!-- Background Image with Overlay -->
            <div class="absolute inset-0 z-0">
                <div class="absolute inset-0 bg-gradient-to-b from-slate-950/70 via-transparent to-slate-950/80 z-20 pointer-events-none"></div>
                <!-- Insurance Hero Image -->
                <div class="absolute inset-0 bg-[url('https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976891/services/insurance_hero_shield.jpg')] bg-cover bg-center grayscale opacity-80 group-hover:grayscale-0 transition-all duration-[2000ms] ease-in-out z-10"></div>
            </div>

            <div class="container mx-auto px-4 relative z-20">
                <div class="max-w-5xl mx-auto text-center">
                    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#FF6F61]/10 border border-[#FF6F61]/20 text-[#FF6F61] text-[10px] font-black uppercase tracking-[0.3em] mb-8 animate-fade-in shadow-[0_0_20px_rgba(255,111,97,0.1)]">
                        <ShieldCheck className="w-4 h-4" />
                        Complete Swiss Coverage Audit
                    </div>
                    <h1 class="text-6xl md:text-8xl font-black text-white mb-8 tracking-tighter leading-[0.9] select-none text-balance">
                        Insurance in Switzerland: <br/>
                        <span class="relative">
                            <span class="bg-gradient-to-r from-slate-200 via-white to-slate-200 bg-clip-text text-transparent">The Essential Guide.</span>
                            <div class="absolute -bottom-4 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-[#FF6F61]/50 to-transparent"></div>
                        </span>
                    </h1>
                    <p class="text-xl md:text-2xl text-slate-400 font-light mb-16 leading-relaxed max-w-3xl mx-auto">
                        From mandatory Health Insurance to the tax-saving 3rd Pillar. We connect you with English-speaking brokers who optimize your coverage and handle the paperwork.
                    </p>

                    <!-- Hero Search Integration -->
                    <div class="max-w-4xl mx-auto px-4 transform hover:scale-[1.01] transition-all duration-700">
                        <HeroSearch client:load initialService="moving-logistics" />
                    </div>
                </div>
            </div>

            <!-- Scroll Indicator -->
            <div class="absolute bottom-10 inset-x-0 flex flex-col items-center justify-center gap-2 animate-bounce z-20 pointer-events-none">
                <span class="text-[10px] font-black text-[#FF6F61] uppercase tracking-[0.4em]">Audit Your Options</span>
                <ChevronDown className="w-5 h-5 text-[#FF6F61]/40" />
            </div>
        </section>

        <!-- 2. Section: The Mandatory Basics (Day 1-90) -->
        <section class="py-32 bg-white relative overflow-hidden">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <div class="text-center mb-24">
                        <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-4 block">Compliance First</span>
                        <h2 class="text-4xl md:text-6xl font-bold text-slate-900 tracking-tight">The Mandatory Basics (Day 1-90)</h2>
                    </div>

                    <div class="grid md:grid-cols-2 gap-24 items-center">
                        <div class="relative">
                            <div class="absolute -inset-10 bg-[#FF6F61]/5 blur-[80px] rounded-full"></div>
                            <img 
                                src="https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976890/services/insurance_health_healthcare.jpg" 
                                alt="Swiss Health Security" 
                                class="relative rounded-[5rem] shadow-[0_64px_96px_-12px_rgba(0,0,0,0.15)] border border-slate-100 grayscale hover:grayscale-0 transition-all duration-[2000ms] ease-in-out transform hover:scale-[1.02]"
                            />
                        </div>
                        <div>
                            <div class="space-y-8">
                                <div class="p-10 bg-slate-50 rounded-[3rem] border border-slate-100 hover:border-[#FF6F61]/20 transition-all group">
                                    <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center text-[#FF6F61] mb-6 shadow-sm group-hover:bg-[#FF6F61] group-hover:text-white transition-all">
                                        <Home className="w-6 h-6" />
                                    </div>
                                    <h3 class="text-2xl font-bold text-slate-900 mb-4">Private Liability (Privathaftpflicht)</h3>
                                    <p class="text-slate-600 leading-relaxed mb-6 font-light">
                                        You cannot rent an apartment in Switzerland without it. It covers accidental damage to property (like scratching a parquet floor) and is often bundled with household insurance.
                                    </p>
                                    <a href="https://expat-savvy.ch" target="_blank" class="inline-flex items-center gap-2 text-[#FF6F61] font-bold hover:underline underline-offset-4 tracking-tight">
                                        Get certificate instantly via Expat-Savvy <ArrowRight className="w-4 h-4" />
                                    </a>
                                </div>

                                <div class="p-10 bg-[#FF6F61]/5 rounded-[3rem] border border-[#FF6F61]/10 group">
                                    <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center text-[#FF6F61] mb-6 shadow-sm group-hover:bg-[#FF6F61] group-hover:text-white transition-all">
                                        <HeartPulse className="w-6 h-6" />
                                    </div>
                                    <h3 class="text-2xl font-bold text-slate-900 mb-4">Basic Health (KVG/LAMal)</h3>
                                    <p class="text-slate-600 leading-relaxed mb-6 font-light">
                                        Mandatory for every resident. You have 90 days to sign up, but coverage is retroactive to your arrival date. Choosing the right franchise (deductible) is key to saving money.
                                    </p>
                                    <a href="https://expat-savvy.ch/healthcare/best-health-insurance-switzerland/" target="_blank" class="inline-flex items-center gap-2 text-[#FF6F61] font-bold hover:underline underline-offset-4 tracking-tight">
                                        Compare premiums at Expat-Savvy <ArrowRight className="w-4 h-4" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 3. Section: Local vs. Global Coverage (Partner Split) -->
        <section class="py-32 bg-slate-950 relative overflow-hidden">
             <div class="container mx-auto px-4 relative z-10">
                <div class="max-w-6xl mx-auto">
                    <div class="text-center mb-24">
                        <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-4 block">Strategic Advisory</span>
                        <h2 class="text-4xl md:text-6xl font-bold text-white tracking-tight">Local vs. Global Coverage</h2>
                        <p class="text-slate-400 mt-6 text-xl max-w-2xl mx-auto font-light">Choose the coverage model that matches your mobility profile.</p>
                    </div>

                    <div class="grid md:grid-cols-2 gap-12">
                        <!-- Option A: Expat-Savvy -->
                        <div class="group relative bg-slate-900 p-16 rounded-[4rem] border border-slate-800 hover:border-[#FF6F61]/30 transition-all duration-700">
                             <div class="absolute -top-10 -right-10 w-40 h-40 bg-[#FF6F61]/5 blur-[60px] pointer-events-none group-hover:bg-[#FF6F61]/10 transition-all"></div>
                             <div class="w-20 h-20 bg-slate-800 rounded-3xl flex items-center justify-center text-[#FF6F61] mb-10 group-hover:bg-[#FF6F61] group-hover:text-white transition-all transform group-hover:-rotate-6">
                                <Building2 className="w-10 h-10" />
                             </div>
                             <h3 class="text-3xl font-bold text-white mb-6">"I live and work in Switzerland."</h3>
                             <p class="text-slate-400 text-lg leading-relaxed mb-10 font-light">
                                You need optimized Swiss basic and supplementary insurance. Expat-Savvy specializes in English-speaking advisory for local residents, focusing on KVG, Pillar 3a, and Household cover.
                             </p>
                             <ul class="space-y-4 mb-12">
                                {["English-speaking local brokers", "Tax-optimized 3rd Pillar", "Household & Liability Certificates"].map(item => (
                                    <li class="flex items-center gap-4 text-slate-300 text-sm font-medium">
                                        <CheckCircle2 className="w-4 h-4 text-[#FF6F61]" /> {item}
                                    </li>
                                ))}
                             </ul>
                             <a href="https://expat-savvy.ch" target="_blank" class="inline-flex items-center gap-4 bg-white/5 text-white px-10 py-5 rounded-full font-bold uppercase tracking-widest text-[10px] hover:bg-white/10 border border-white/10 transition-all no-underline group shadow-lg">
                                Consult Expat-Savvy <ArrowRight className="w-5 h-5 group-hover:translate-x-2 transition-transform text-[#FF6F61]" />
                             </a>
                        </div>

                        <!-- Option B: SIP -->
                        <div class="group relative bg-[#FF6F61] p-16 rounded-[4rem] shadow-[0_48px_96px_-12px_rgba(255,111,97,0.3)] transform md:rotate-1">
                             <div class="absolute -top-10 -right-10 w-40 h-40 bg-white/10 blur-3xl rounded-full"></div>
                             <div class="w-20 h-20 bg-white rounded-3xl flex items-center justify-center text-[#FF6F61] mb-10 group-hover:scale-110 transition-all transform group-hover:rotate-6">
                                <Globe className="w-10 h-10" />
                             </div>
                             <h3 class="text-3xl font-bold text-white mb-6">"I am a Global Citizen."</h3>
                             <p class="text-white/80 text-lg leading-relaxed mb-10 font-bold italic">
                                International Private Medical Insurance (IPMI) for high-net-worth individuals and frequent travelers who require global portability.
                             </p>
                             <ul class="space-y-4 mb-12">
                                {["Global Portability (180+ countries)", "Access to best private clinics", "HNW Tailored Solutions"].map(item => (
                                    <li class="flex items-center gap-4 text-white text-sm font-bold">
                                        <CheckCircle2 className="w-5 h-5 text-white shadow-sm" /> {item}
                                    </li>
                                ))}
                             </ul>
                             <a href="https://sip.ch" target="_blank" class="inline-flex items-center gap-4 bg-white text-[#FF6F61] px-10 py-5 rounded-full font-bold uppercase tracking-widest text-[10px] hover:bg-slate-50 transition-all no-underline group shadow-xl">
                                Consult SIP (Swiss Insurance Partners) <ArrowRight className="w-5 h-5 group-hover:translate-x-2 transition-transform" />
                             </a>
                        </div>
                    </div>

                    <div class="mt-24 relative rounded-[4rem] overflow-hidden group">
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-transparent to-transparent z-20 pointer-events-none"></div>
                        <img 
                            src="/images/services/insurance_global_traveler.png" 
                            alt="Global Mobility Insurance" 
                            class="w-full h-[500px] object-cover grayscale opacity-80 group-hover:grayscale-0 transition-all duration-[2000ms] ease-in-out z-10"
                        />
                        <div class="absolute bottom-16 left-16 max-w-xl z-30">
                            <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-4 block">Portability Protocol</span>
                            <h3 class="text-4xl font-bold text-white tracking-tight">Your health shouldn't be gated by borders.</h3>
                        </div>
                    </div>
                </div>
             </div>
        </section>

        <!-- 4. Section: Wealth & Taxes (The 3rd Pillar) -->
        <section class="py-32 bg-white relative">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <div class="grid md:grid-cols-2 gap-24 items-center">
                        <div class="order-2 md:order-1">
                            <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-8 block">Tax Optimization</span>
                            <h2 class="text-5xl md:text-7xl font-bold text-slate-900 mb-10 tracking-tight leading-[1.1]">The Pillar 3a: Save Taxes, Build Wealth.</h2>
                            <p class="text-slate-500 text-xl leading-relaxed mb-10 font-light">
                                The 3rd Pillar is a voluntary private pension scheme. Contributions are **100% tax-deductible** from your Swiss taxable income (up to ~CHF 7k/year).
                            </p>
                            <div class="bg-slate-50 border-l-4 border-[#FF6F61] p-10 rounded-r-[3rem] mb-12 shadow-sm">
                                <p class="text-slate-800 text-lg leading-relaxed font-bold italic">
                                    "It is the single easiest tax hack for expats in Switzerland. Whether you stay for 2 years or 20, the tax savings are immediate."
                                </p>
                            </div>
                            <a href="https://expat-savvy.ch" target="_blank" class="inline-flex items-center gap-4 bg-slate-900 text-white px-10 py-5 rounded-full font-bold uppercase tracking-widest text-[10px] hover:bg-slate-800 transition-all no-underline group shadow-lg">
                                Open a 3rd Pillar Account <ArrowRight className="w-5 h-5 group-hover:translate-x-2 transition-transform text-[#FF6F61]" />
                            </a>
                        </div>
                        <div class="order-1 md:order-2 relative">
                            <div class="absolute -inset-10 bg-[#FF6F61]/5 blur-[100px] rounded-full"></div>
                            <img 
                                src="https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976893/services/insurance_tax_wealth.jpg" 
                                alt="Swiss Tax Optimization" 
                                class="relative rounded-[5rem] shadow-[0_64px_128px_-12px_rgba(0,0,0,0.15)] border border-slate-100 grayscale hover:grayscale-0 transition-all duration-[2000ms] ease-in-out transform hover:scale-[1.02]"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 5. Section: The Relocation Timeline (Vertical Timeline) -->
        <section class="py-32 bg-slate-50 relative overflow-hidden">
             <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <div class="text-center mb-24">
                        <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-4 block">Insurance Road Map</span>
                        <h2 class="text-4xl md:text-6xl font-bold text-slate-900 tracking-tight">The Relocation Timeline</h2>
                    </div>

                    <div class="space-y-8">
                        {[
                            { 
                                phase: "Before Arrival", 
                                title: "Research Coverage Models", 
                                text: "Compare Telmed, HMO, and Standard health models. Setup your initial liability cover.",
                                icon: Search,
                                time: "T-minus 30 Days"
                            },
                            { 
                                phase: "Day 01", 
                                title: "Liability & Lease", 
                                text: "Secure your Private Liability certificate. Most Swiss landlords require this before handing over keys.",
                                icon: Key,
                                time: "Entry Date"
                            },
                            { 
                                phase: "Month 01", 
                                title: "Municipal Registration", 
                                text: "Register at the Gemeinde/Town Hall. This triggers your 90-day countdown for health insurance.",
                                icon: MapPin,
                                time: "Registering Arrival"
                            },
                            { 
                                phase: "Month 03", 
                                title: "KVG Deadline", 
                                text: "Final deadline to sign your health insurance contract. Coverage is backdated to your arrival month.",
                                icon: Clock,
                                time: "Mandatory Cutoff"
                            },
                            { 
                                phase: "Year 01", 
                                title: "Tax Optimization", 
                                text: "Open your Pillar 3a account before Dec 31st to claim the maximum tax deduction for the year.",
                                icon: PiggyBank,
                                time: "December 31st"
                            }
                        ].map((item, idx) => (
                            <div class="group relative bg-white p-12 rounded-[3.5rem] border border-slate-100 hover:border-[#FF6F61]/30 hover:shadow-xl transition-all duration-700 flex flex-col md:flex-row gap-8 items-start md:items-center">
                                <div class="shrink-0">
                                    <div class="bg-slate-50 px-6 py-2 rounded-full text-[#FF6F61] text-[10px] font-black uppercase tracking-[0.2em] mb-4 md:mb-0">
                                        {item.time}
                                    </div>
                                </div>
                                <div class="w-16 h-16 bg-slate-50 rounded-2xl flex items-center justify-center text-[#FF6F61] shrink-0 group-hover:bg-[#FF6F61] group-hover:text-white transition-all transform group-hover:rotate-12 shadow-sm">
                                    <item.icon className="w-8 h-8" />
                                </div>
                                <div class="flex-1">
                                    <span class="text-[#FF6F61]/40 font-black uppercase tracking-[0.3em] text-[10px] block mb-2">{item.phase}</span>
                                    <h4 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-[#FF6F61] transition-colors">{item.title}</h4>
                                    <p class="text-slate-500 leading-relaxed font-light text-lg">{item.text}</p>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
             </div>
        </section>

        <!-- Visible FAQ Section -->
        <section class="py-32 bg-white relative">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <div class="text-center mb-24">
                        <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-4 block">Common Queries</span>
                        <h2 class="text-4xl md:text-5xl font-bold text-slate-900 tracking-tight">Insurance & Finance FAQ</h2>
                    </div>

                    <div class="space-y-6">
                        {faqSchema.mainEntity.map((faq, idx) => (
                            <div class="p-10 bg-slate-50 rounded-[3rem] border border-slate-100 hover:border-[#FF6F61]/20 transition-all group">
                                <h4 class="text-xl font-bold text-slate-900 mb-4 flex gap-4">
                                    <span class="text-[#FF6F61] opacity-50">{idx + 1}.</span>
                                    {faq.name}
                                </h4>
                                <p class="text-slate-600 leading-relaxed font-light">
                                    {faq.acceptedAnswer.text}
                                </p>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </section>

        <!-- Final CTA Section (Family Image) -->
        <section class="py-32 bg-slate-950 relative overflow-hidden group">
            <div class="absolute inset-0 z-0">
                <div class="absolute inset-0 bg-gradient-to-b from-slate-950 via-slate-950/40 to-slate-950 z-20 pointer-events-none"></div>
                <img 
                    src="https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976887/services/insurance_family_home.jpg" 
                    alt="Secure Swiss Home" 
                    class="absolute inset-0 w-full h-full object-cover grayscale opacity-80 group-hover:grayscale-0 transition-all duration-[2000ms] ease-in-out z-10"
                />
            </div>
            
            <div class="container mx-auto px-4 relative z-20">
                <div class="max-w-4xl mx-auto bg-white/5 backdrop-blur-3xl rounded-[5rem] p-16 md:p-24 text-center border border-white/10 shadow-3xl">
                    <div class="relative z-10">
                        <Lock className="w-16 h-16 text-[#FF6F61] mx-auto mb-10 opacity-60" />
                        <h2 class="text-5xl md:text-7xl font-black text-white mb-8 tracking-tighter leading-tight font-display">Secure & Protected.</h2>
                        <p class="text-slate-300 text-xl font-light mb-16 leading-relaxed">
                            Don't leave your Swiss coverage to chance. Connect with English-speaking specialists who optimize your risk and your tax bill.
                        </p>
                        <div class="flex flex-col md:flex-row gap-6 justify-center items-center">
                            <a 
                                href="https://expat-savvy.ch" 
                                target="_blank"
                                class="inline-flex items-center gap-4 bg-[#FF6F61] text-white px-12 py-6 rounded-full font-black uppercase tracking-widest text-xs hover:bg-[#ff8a7d] transition-all no-underline shadow-2xl shadow-[#FF6F61]/20 hover:scale-105"
                            >
                                Get Your Insurance Audit <ArrowRight className="w-5 h-5" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <UniversalContactModal client:load />

    <script is:inline>
        console.log('âœ¨ Insurance & Finance: Security Optimized');
    </script>
</Layout>

<style>
    @keyframes fade-in {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in {
        animation: fade-in 1s ease-out forwards;
    }
    .shadow-3xl {
        box-shadow: 0 64px 128px -12px rgba(0, 0, 0, 1);
    }
    .font-display {
        letter-spacing: -0.05em;
    }
</style>
