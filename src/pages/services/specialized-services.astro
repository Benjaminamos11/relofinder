// Page metadata
const title = 'Specialized Relocation Services Switzerland | Executive, Diplomatic & Academic';
const description = 'Specialized Swiss relocation services for executives, diplomatic personnel, academics, and medical professionals. Tailored solutions for unique professional circumstances.';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-indigo-50 via-white to-violet-50 overflow-hidden">
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0 bg-repeat" style="background-image: url(data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%234f46e5%22%20fill-opacity%3D%220.05%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%224%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E);"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Content -->
          <div class="space-y-8">
            <!-- Breadcrumb -->
            <nav class="flex items-center space-x-2 text-sm text-gray-600">
              <a href="/" class="hover:text-primary-600 transition-colors">Home</a>
              <span>→</span>
              <a href="/services" class="hover:text-primary-600 transition-colors">Services</a>
              <span>→</span>
              <span class="text-gray-900">Specialized Services</span>
            </nav>

            <!-- Service Badge -->
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-indigo-100 text-indigo-700 font-medium text-sm">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Premium Specialist
            </div>

            <!-- Title & Description -->
            <div class="space-y-6">
              <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
                Specialized Swiss <span class="gradient-text">Relocation Services</span>
              </h1>
              <p class="text-xl text-gray-600 leading-relaxed">
                {serviceData.description}
              </p>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-3 gap-6">
              <div class="text-center">
                <div class="text-3xl font-bold text-indigo-600">{serviceData.stats?.providers || '25+'}</div>
                <div class="text-sm text-gray-600">Specialist Providers</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-indigo-600">{serviceData.stats?.avgTime || '1-4 months'}</div>
                <div class="text-sm text-gray-600">Specialized Timeline</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-indigo-600">{serviceData.stats?.satisfaction || '4.9/5'}</div>
                <div class="text-sm text-gray-600">Expert Rating</div>
              </div>
            </div>

            <!-- CTA -->
            <div class="flex flex-wrap gap-4">
                              <button onclick="openModal({page: 'service', service: 'Specialized Services'})" class="btn-primary px-8 py-4">
                Get Specialized Support
              </button>
              <a href="/swiss-relocation-guide#specialized" class="btn-secondary px-8 py-4">
                Specialized Guide
              </a>
            </div>
          </div>

          <!-- Hero Image -->
          <div class="relative">
            <img 
              src={serviceData.heroImage} 
              alt="Specialized Swiss Relocation Services" 
              class="rounded-3xl shadow-2xl"
              loading="eager"
            />
            <div class="absolute inset-0 rounded-3xl bg-gradient-to-tr from-indigo-600/20 to-transparent"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Services Section -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Related Specialized Services</h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Specialized relocations require comprehensive coordination with strategic advisory and professional services
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {relatedServices.map((service) => (
            <a href={service.href} class="group bg-gradient-to-br from-gray-50 to-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                {service.icon === 'lightbulb' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                )}
                {service.icon === 'document' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                )}
                {service.icon === 'credit-card' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                  </svg>
                )}
                {service.icon === 'support' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
              </div>
              <h3 class="font-bold text-lg mb-2 group-hover:text-primary-600 transition-colors">{service.title}</h3>
              <p class="text-gray-600 text-sm">{service.description}</p>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Specialized Service Categories -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Specialized <span class="gradient-text">Service Categories</span></h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Tailored relocation solutions for specific professional and industry requirements
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {specializedCategories.map((category) => (
            <a href={category.href} class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300 group hover:-translate-y-1">
              <h3 class="font-bold text-2xl mb-4 group-hover:text-primary-600 transition-colors">{category.category}</h3>
              <p class="text-gray-600 mb-6 leading-relaxed">{category.description}</p>
              <div class="space-y-3">
                <div class="text-sm font-medium text-gray-500">Specialties:</div>
                <div class="flex flex-wrap gap-2">
                  {category.specialties.map((specialty) => (
                    <span class="text-sm px-3 py-1 bg-indigo-100 text-indigo-700 rounded-full">{specialty}</span>
                  ))}
                </div>
              </div>
              <div class="mt-6 flex items-center text-primary-600 text-sm font-medium">
                Explore Category
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Specialized Services by Location -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Specialized Services by <span class="gradient-text">Swiss Region</span></h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Each Swiss region offers unique specialized opportunities and industry concentrations
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {locationSpecialized.map((location) => (
            <a href={location.href} class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg transition-all duration-300 group hover:-translate-y-1">
              <h3 class="font-bold text-xl mb-3 group-hover:text-primary-600 transition-colors">{location.location}</h3>
              <p class="text-gray-600 text-sm mb-4 leading-relaxed">{location.description}</p>
              <div class="space-y-2">
                <div class="text-xs font-medium text-gray-500">Specialties:</div>
                <div class="flex flex-wrap gap-1">
                  {location.specialties.map((specialty) => (
                    <span class="text-xs px-2 py-1 bg-indigo-100 text-indigo-700 rounded-full">{specialty}</span>
                  ))}
                </div>
              </div>
              <div class="mt-4 flex items-center text-primary-600 text-sm font-medium">
                Explore Specialists
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- How Specialized Services Work -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">How Specialized Services Work</h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Our tailored approach addresses unique professional requirements and specialized circumstances
          </p>
        </div>

        <div class="space-y-8">
          {serviceData.process?.map((step, index) => (
            <div class="flex items-start space-x-6 group">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl flex items-center justify-center text-white font-bold text-lg group-hover:scale-110 transition-transform duration-300">
                {step.step}
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between mb-2">
                  <h3 class="font-bold text-xl">{step.title}</h3>
                  <span class="text-sm text-indigo-600 font-medium">{step.duration}</span>
                </div>
                <p class="text-gray-600 leading-relaxed">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Specialized Providers -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Featured <span class="gradient-text">Specialized Providers</span></h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Connect with specialized relocation experts who understand unique professional requirements
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {companies.map((company) => (
            <CompanyCard company={company} />
          ))}
        </div>

        <div class="text-center mt-12">
          <a href="/companies?service=specialized-services" class="btn-primary px-8 py-4">
            View All Specialized Providers
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Essential Reading Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Essential <span class="gradient-text">Specialized Resources</span></h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Expert guides and insights for specialized professional relocations to Switzerland
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {blogResources.map((resource) => (
            <a href={resource.href} class="bg-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg transition-all duration-300 group">
              <div class="mb-4">
                <span class="text-xs font-medium px-3 py-1 bg-indigo-100 text-indigo-700 rounded-full">{resource.category}</span>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                {resource.title}
              </h3>
              <div class="flex items-center justify-between text-xs text-gray-500">
                <span>{resource.readTime}</span>
                <span class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
                  Read More
                  <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Next Steps CTA -->
  <section class="py-16 bg-gradient-to-br from-indigo-600 to-violet-700 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready for Specialized Support?
        </h2>
        <p class="text-xl text-white/90 mb-8">
          Connect with specialized relocation experts who understand your unique professional requirements and industry needs.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
                          <button onclick="openModal({page: 'service', service: 'Specialized Services'})" class="bg-white text-indigo-600 px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-colors inline-flex items-center">
            Get Specialized Support
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7"/>
            </svg>
          </button>
          <a href="/services/advisory-services" class="bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold hover:bg-white/20 transition-colors inline-flex items-center">
