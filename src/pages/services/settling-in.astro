import Navbar from '../../components/layout/Navbar.astro';
import Footer from '../../components/layout/Footer.astro';
import HeroSearch from '../../components/home/HeroSearch.tsx';

// --- Assets ---
const heroImage = 'https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976905/services/settling-hero.jpg';
const adminImage = 'https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976904/services/settling-content.jpg';

// --- Data ---
const faqs = [
  {
    q: "How do I import my car to Switzerland?",
    a: "You have 12 months to switch your plates after arrival. You can import your vehicle tax-free if you have owned it for more than 6 months. An agency can handle the MFK (technical inspection) and administrative swap for you."
  },
  {
    q: "How long do I have to register with the authorities?",
    a: "You must register at your local Einwohnerkontrolle (City Hall) within 14 days of arrival and before you start working. You will need your passport, employment contract, and rental agreement."
  },
  {
    q: "Do I need a Swiss driving license?",
    a: "Foreign driving licenses are valid for 12 months. After that, you must convert it to a Swiss license. For most EU/EFTA and many other countries, this is a purely administrative process without a new driving test."
  },
  {
      q: "What are the mandatory insurances?",
      a: "Health insurance (KVG) is mandatory for everyone living in Switzerland. Additionally, personal liability insurance (RC) and household insurance are essential and often required by landlords before you move in."
  }
];

// --- Structured Data ---
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Swiss Settling-In Services",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Switzerland"
  },
  "description": "Comprehensive arrival support for expats in Switzerland. We handle registration, banking, insurance, car imports, and utility setup.",
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
};

const structuredData = [serviceSchema, faqSchema];
