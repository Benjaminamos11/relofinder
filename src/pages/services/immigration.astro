---
import { 
  Building2, 
  Users, 
  Clock, 
  TrendingUp,
  ShieldCheck,
  Search,
  Key,
  ChevronDown,
  ArrowRight,
  CheckCircle2,
  XCircle,
  FileText,
  Globe,
  Briefcase,
  AlertTriangle
} from 'lucide-react';
import '../../styles/global.css';
import '../../styles/alpine-clarity.css';
import SEOHead from '../../components/common/SEOHead.astro';
import UniversalContactModal from '../../components/common/UniversalContactModal.tsx';
import '../../lib/expose-modal-stores.client.ts';
import Navbar from '../../components/layout/Navbar.astro';
import Footer from '../../components/layout/Footer.astro';
import HeroSearch from '../../components/home/HeroSearch.tsx';

// --- Assets ---
const heroImage = 'https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976910/services/visa-hero.jpg';
const documentsImage = 'https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976909/services/visa-documents.jpg';
const officeImage = 'https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1766976908/services/visa-consult.jpg';

// --- Data ---
const faqs = [
  {
    q: "How long does a Swiss work permit take?",
    a: "For EU/EFTA citizens, the process is largely administrative and takes 2-4 weeks. For Third-Country Nationals (Non-EU), the process involves federal approval and quota checks, typically taking 8-12 weeks."
  },
  {
    q: "Can my spouse work in Switzerland?",
    a: "Yes. If you hold a valid work permit (L, B, or C), your spouse and accompanying children essentially have the right to work and attend school in Switzerland. Family reunification rights are strong."
  },
  {
    q: "What is the Non-EU Quota?",
    a: "The Swiss Federal Council sets a strict annual limit on the number of L and B permits issued to non-EU/EFTA nationals. Once these quotas are exhausted, no new permits can be issued until the next year."
  },
  {
      q: "Do I need a visa to enter Switzerland?",
      a: "EU/EFTA citizens do not need a visa. Non-EU citizens may need a 'Visa D' (long-stay visa) to enter the country for work, even if they have a work contract. This must be collected at a glorious Swiss embassy abroad before entering."
  }
];

// --- Structured Data (LLM/SEO) ---
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Swiss Visa & Immigration Service",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Switzerland"
  },
  "description": "Expert immigration services for EU and Non-EU nationals moving to Switzerland. We handle quotas, work permits (L, B, C), and family reunification.",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Immigration Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Non-EU Work Permit Application"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "EU Registration Support"
        }
      }
    ]
  }
};

const definedTermSchema = {
  "@context": "https://schema.org",
  "@type": "DefinedTermSet",
  "name": "Swiss Immigration Terminology",
  "hasDefinedTerm": [
    {
      "@type": "DefinedTerm",
      "termCode": "Permit B",
      "name": "Residence Permit B",
      "description": "A residence permit granted to foreign nationals who work in Switzerland for an extended period. Typically valid for 5 years for EU citizens and 1 year (renewable) for Non-EU."
    },
    {
      "@type": "DefinedTerm",
      "termCode": "Third-Country National",
      "name": "Drittstaatangeh√∂rige",
      "description": "Citizens of countries outside the EU/EFTA (e.g., UK, USA, Canada). They face stricter entry requirements and quotas."
    }
  ]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
};

const structuredData = [serviceSchema, definedTermSchema, faqSchema];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <SEOHead 
      title="Swiss Immigration & Visa Service | ReloFinder"
      description="Secure your Swiss work permit with confidence. Expert support for EU registration and Non-EU quota applications."
      keywords={["swiss work permit", "immigration switzerland", "visa quota switzerland", "relocation agency visa", "residence permit b"]}
      schema={structuredData}
      openGraph={{
        title: "Swiss Immigration: Navigating the Quota System",
        description: "Mistakes with your work permit can delay your start date by months. Compare expert immigration providers.",
        image: heroImage,
        type: "service",
        url: "https://relofinder.ch/services/immigration"
      }}
      twitter={{
        card: "summary_large_image",
        site: "@relofinder",
        title: "Swiss Immigration Guide",
        description: "Navigating Swiss work permits and quotas.",
        image: heroImage
      }}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
