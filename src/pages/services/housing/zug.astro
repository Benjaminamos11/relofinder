  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://relofinder.ch/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Housing",
      "item": "https://relofinder.ch/services/housing"
    },
    {
      "@type": "ListItem",
      "position": 4,
      "name": "Zug",
      "item": "https://relofinder.ch/services/housing/zug"
    }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Housing Services in Zug",
  "description": "Compare housing providers and relocation agencies for apartment search in Zug, Switzerland including lakeside properties and executive housing",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "City",
    "name": "Zug",
    "containedIn": {
      "@type": "Country",
      "name": "Switzerland"
    }
  },
  "serviceType": "Housing Search Services"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How competitive is the Zug housing market for expats?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Zug's housing market is extremely competitive with vacancy rates often below 0.5%. The canton attracts executives, crypto professionals, and international families due to low taxes and excellent quality of life. Lakeside apartments in Zug city and Walchwil (Gold Coast of Zug) are especially competitive, often renting within 2-3 days of listing with multiple qualified applicants. Using a relocation agency with off-market access significantly improves success rates."
      }
    },
    {
      "@type": "Question",
      "name": "Which Zug neighborhoods are best for families?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Best family neighborhoods in Zug: Baar (excellent international schools, family-friendly, great train connections), Cham (lakeside, quieter, still international), Rotkreuz (growing business hub, more housing availability, family-oriented), and parts of Zug city near schools. Walchwil offers premium family living with lake views but at higher prices. Consider proximity to international schools like the International School of Zug and Luzern (ISZL) when choosing."
      }
    },
    {
      "@type": "Question",
      "name": "What are average rents for apartments in Zug city?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Zug city apartments are among Switzerland's most expensive. Average rents: 2.5-room apartments CHF 2,200-3,000/month, 3.5-room CHF 2,800-4,200/month, 4.5-room CHF 3,500-5,500/month plus Nebenkosten (CHF 150-300). Lakeside properties and Gold Coast of Zug (Walchwil) command premium prices of CHF 4,000-7,000+ for larger apartments. Baar and Rotkreuz offer slightly more moderate pricing at CHF 1,900-3,500 for 2.5-3.5 rooms."
      }
    },
    {
      "@type": "Question",
      "name": "What documents do landlords in Zug typically request?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Required documents for Zug rentals: valid passport/ID, Swiss residence/work permit, employment contract (permanent contracts strongly preferred), last 3 months salary slips, Betreibungsregisterauszug (debt collection certificate) from Zug or current canton, employer reference letter, completed rental application form, and sometimes proof of assets for premium properties. Zug landlords are particularly selective given high demand. Professional dossier preparation through agencies improves approval rates significantly."
      }
    },
    {
      "@type": "Question",
      "name": "Is temporary housing common in Zug?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, temporary furnished housing is very common in Zug due to the large corporate and expat community. Executive apartments and serviced housing are readily available at CHF 2,500-6,000/month depending on size and location. Many international companies use temporary housing for relocating employees during the 4-8 week permanent housing search. Agencies can coordinate both temporary and permanent housing to ensure smooth transition without gaps."
      }
    },
    {
      "@type": "Question",
      "name": "Can Prime Relocation help me find a home in Zug quickly?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, Prime Relocation is headquartered in Zug and specializes in the local housing market. They provide off-market access to apartments before public listing, professional dossier preparation, landlord connections, and comprehensive support throughout the search and move-in process. Their local expertise and relationships with landlords in Zug city, Baar, Cham, Walchwil, and Rotkreuz significantly reduce search time from 3-6 months (solo) to 4-8 weeks with agency support."
      }
    }
  ]
};

