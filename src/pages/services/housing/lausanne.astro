const title = "Housing in Lausanne | Compare Relocation Agencies | ReloFinder";
const description = "Compare relocation providers in Lausanne. ReloFinder helps you evaluate agencies and find apartments in Ouchy, Pully, Chailly, Renens & beyond.";
const canonicalURL = "https://relofinder.ch/services/housing/lausanne";

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://relofinder.ch/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Housing",
      "item": "https://relofinder.ch/services/housing"
    },
    {
      "@type": "ListItem",
      "position": 4,
      "name": "Lausanne",
      "item": "https://relofinder.ch/services/housing/lausanne"
    }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Housing Services in Lausanne",
  "description": "Compare housing providers and relocation agencies for apartment search in Lausanne, Switzerland including Ouchy, Pully, Chailly, Renens, and student housing near EPFL and UNIL",
  "provider": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "areaServed": {
    "@type": "City",
    "name": "Lausanne",
    "containedIn": {
      "@type": "Country",
      "name": "Switzerland"
    }
  },
  "serviceType": "Housing Search Services"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How competitive is the Lausanne housing market?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Lausanne's housing market is competitive due to strong demand from EPFL (École Polytechnique Fédérale de Lausanne), UNIL (University of Lausanne), and corporate relocations. Students, researchers, and young professionals create constant pressure on housing stock. Apartments near universities (Renens, Lausanne Centre) and lakefront areas (Ouchy, Pully) are especially competitive with 8-20 applications per listing. However, Lausanne offers more availability than Geneva or Zurich, with search times typically 4-8 weeks with agency support."
      }
    },
    {
      "@type": "Question",
      "name": "What are the best neighborhoods for expats in Lausanne?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Best Lausanne neighborhoods for expats: Ouchy (lakeside luxury, international atmosphere, premium dining), Pully (upscale residential, families, excellent schools), Chailly (quiet suburban, long-term residents, peaceful), Lausanne Centre (lively, international, students, restaurants), Renens (multicultural, affordable, near EPFL/UNIL), and Flon (modern, startup culture, nightlife). Consider proximity to workplace, international schools, and Metro M2 line. Lakefront areas command premium prices; Renens offers better value for students and young professionals."
      }
    },
    {
      "@type": "Question",
      "name": "How much does it cost to rent an apartment in Ouchy or Pully?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Ouchy (lakefront Lausanne): CHF 2,200-3,500/month for 2.5-3.5 rooms plus Nebenkosten CHF 150-250. Premium lakeside apartments with views can reach CHF 4,000-6,000 for larger units. Pully (upscale suburb): CHF 2,000-3,200/month for 2.5-3.5 rooms. Both areas popular with families and corporate expats seeking quality living near the lake with excellent amenities. More affordable alternatives: Renens CHF 1,500-2,200, Lausanne Centre CHF 1,700-2,500, Chailly CHF 1,800-2,600 for similar apartment sizes."
      }
    },
    {
      "@type": "Question",
      "name": "Are Lausanne rental contracts in French?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, most Lausanne rental contracts are in French as Lausanne is in French-speaking Switzerland (Canton de Vaud). Landlords typically expect French-language application dossiers and communication. Non-French speakers face challenges without translation and cultural support. Relocation agencies provide essential French-language services: dossier preparation, contract translation, landlord communication, and legal term explanation. Some landlords accept English for international students/researchers, but French fluency or professional support significantly improves application success rates."
      }
    },
    {
      "@type": "Question",
      "name": "Is student housing available for EPFL and UNIL?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, both EPFL and UNIL offer student housing but demand far exceeds supply. EPFL provides some on-campus housing at its campus in Ecublens/Renens. UNIL has limited dormitory options. Most students search private market apartments in Renens (near EPFL, affordable, good transport), Lausanne Centre (lively, social), or shared accommodations. Student housing agencies and university services help with searches. Many students use temporary housing for first 1-2 months while securing permanent apartments. Apply early (3-6 months ahead) for university housing; private market searches typically take 4-8 weeks."
      }
    },
    {
      "@type": "Question",
      "name": "Are temporary furnished apartments common in Lausanne?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, temporary furnished housing is common in Lausanne due to EPFL/UNIL researchers, corporate expats, and students. Furnished apartments cost CHF 1,800-3,500/month depending on size and location. Many available near universities, lakefront, or city center. Corporate housing providers cater to short-term assignments. Students often use temporary housing during first semester while finding permanent apartments. Agencies coordinate temporary and permanent housing timing. Typical temporary stays: 1-3 months during permanent search. Advance booking recommended, especially August-September (academic year start)."
      }
    }
  ]
};

const siblingCities = [
  { name: 'Zurich', slug: 'zurich' },
  { name: 'Zug', slug: 'zug' },
  { name: 'Geneva', slug: 'geneva' },
  { name: 'Basel', slug: 'basel' }
];
---

<Layout title={title} description={description}>
  <SchemaMarkup schema={breadcrumbSchema} />
  <SchemaMarkup schema={serviceSchema} />
  <SchemaMarkup schema={faqSchema} />

  <ServiceHero
    title="Find an Apartment in Lausanne"
    subtitle="Housing Help for Expats"
    description="Lausanne offers a mix of lakeside living, university culture, and startup energy. With strong demand from students, researchers, and corporate expats, the housing market is highly competitive. ReloFinder helps you compare relocation providers in Lausanne and connect with the right agency. We don't deliver the services ourselves — we connect you to trusted partners."
    badge="Housing in Lausanne"
  />

  <!-- Platform Disclaimer -->
  <section class="py-8 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <PlatformDisclaimer compact={true} />
      </div>
    </div>
  </section>

  <!-- Primary CTA after Hero -->
  <section class="py-12 bg-gradient-to-br from-gray-50 via-white to-primary-50">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Need Help Finding Your Lausanne Home?
