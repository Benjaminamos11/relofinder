                  </svg>
                )}
                {service.icon === 'support' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
              </div>
              <h3 class="font-bold text-lg mb-2 group-hover:text-primary-600 transition-colors">{service.title}</h3>
              <p class="text-gray-600 text-sm">{service.description}</p>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Cultural Areas -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Complete <span class="gradient-text">Cultural Support</span></h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Comprehensive cultural adaptation services covering all aspects of Swiss integration
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {culturalAreas.map((area) => (
            <a href={area.href} class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300 group hover:-translate-y-1">
              <h3 class="font-bold text-2xl mb-4 group-hover:text-primary-600 transition-colors">{area.area}</h3>
              <p class="text-gray-600 mb-6 leading-relaxed">{area.description}</p>
              <div class="space-y-3">
                <div class="text-sm font-medium text-gray-500">Key Components:</div>
                <div class="flex flex-wrap gap-2">
                  {area.components.map((component) => (
                    <span class="text-sm px-3 py-1 bg-purple-100 text-purple-700 rounded-full">{component}</span>
                  ))}
                </div>
              </div>
              <div class="mt-6 flex items-center text-primary-600 text-sm font-medium">
                Explore Area
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
