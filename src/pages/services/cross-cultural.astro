      <div class="absolute inset-0 bg-repeat" style="background-image: url(data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%239333ea%22%20fill-opacity%3D%220.05%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%224%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E);"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Content -->
          <div class="space-y-8">
            <!-- Breadcrumb -->
            <nav class="flex items-center space-x-2 text-sm text-gray-600">
              <a href="/" class="hover:text-primary-600 transition-colors">Home</a>
              <span>→</span>
              <a href="/services" class="hover:text-primary-600 transition-colors">Services</a>
              <span>→</span>
              <span class="text-gray-900">Cross-Cultural Services</span>
            </nav>

            <!-- Service Badge -->
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-purple-100 text-purple-700 font-medium text-sm">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
              </svg>
              Cultural Integration
            </div>

            <!-- Title & Description -->
            <div class="space-y-6">
              <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
                Swiss <span class="gradient-text">Cross-Cultural Services</span>
              </h1>
              <p class="text-xl text-gray-600 leading-relaxed">
                {serviceData.description}
              </p>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-3 gap-6">
              <div class="text-center">
                <div class="text-3xl font-bold text-purple-600">{serviceData.stats?.providers || '25+'}</div>
                <div class="text-sm text-gray-600">Cultural Experts</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-purple-600">{serviceData.stats?.avgTime || '3-12 months'}</div>
                <div class="text-sm text-gray-600">Integration Timeline</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-purple-600">{serviceData.stats?.satisfaction || '4.8/5'}</div>
                <div class="text-sm text-gray-600">Success Rate</div>
              </div>
            </div>

            <!-- CTA -->
            <div class="flex flex-wrap gap-4">
              <button onclick="openModal('cultural-consultation-modal')" class="btn-primary px-8 py-4">
                Start Cultural Integration
              </button>
              <a href="/swiss-relocation-guide#culture" class="btn-secondary px-8 py-4">
                Cultural Guide
              </a>
            </div>
          </div>

          <!-- Hero Image -->
          <div class="relative">
            <img 
              src={serviceData.heroImage} 
              alt="Swiss Cross-Cultural Services" 
              class="rounded-3xl shadow-2xl"
              loading="eager"
            />
            <div class="absolute inset-0 rounded-3xl bg-gradient-to-tr from-purple-600/20 to-transparent"></div>
          </div>
        </div>
      </div>
    </div>
