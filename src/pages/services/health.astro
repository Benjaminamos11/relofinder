---
import ServiceLayout from '../../layouts/ServiceLayout.astro';
import CompanyCard from '../../components/companies/CompanyCard.astro';

const title = 'Healthcare Services in Switzerland | ReloFinder.ch';
const description = 'Expert assistance with navigating the Swiss healthcare system, from insurance selection to finding medical providers for expatriates.';

// Define service object
const service = {
  title: 'Healthcare Services',
  description: 'Navigate the Swiss healthcare system with expert guidance, from insurance selection to finding the right medical providers.',
  icon: 'health'
};

// Sample companies offering healthcare services
const companies = [
  {
    id: 'swiss-health-advisors',
    name: 'Swiss Health Advisors',
    logo: 'https://images.pexels.com/photos/7579831/pexels-photo-7579831.jpeg?auto=compress&cs=tinysrgb&w=200',
    description: 'Specialized healthcare consultancy for expatriates with a focus on insurance selection and provider matching.',
    services: ['Insurance Consulting', 'Doctor Referrals', 'Medical Translation'],
    regions: ['ZÃ¼rich', 'Basel', 'Geneva'],
    rating: 4.8,
    reviewCount: 167
  },
  {
    id: 'expat-medical',
    name: 'Expat Medical Network',
    logo: 'https://images.pexels.com/photos/5407206/pexels-photo-5407206.jpeg?auto=compress&cs=tinysrgb&w=200',
    description: 'Comprehensive medical support services for international residents in Switzerland.',
    services: ['Provider Matching', 'Insurance Claims', 'Hospital Assistance'],
    regions: ['Nationwide'],
    rating: 4.7,
    reviewCount: 122
  }
];

// Process steps
const steps = [
  {
    title: 'Initial Health Assessment',
    description: 'Discuss your healthcare needs, preferences, and any existing conditions with our health experts.',
    icon: 'chat'
  },
  {
    title: 'Insurance Analysis',
    description: 'We analyze available health insurance options to find the best fit for your situation.',
    icon: 'search'
  },
  {
    title: 'Provider Selection',
    description: 'We help you find doctors, specialists, and facilities that meet your needs and language preferences.',
    icon: 'check'
  },
  {
    title: 'Insurance Enrollment',
    description: 'Assistance with completing health insurance applications and enrollment process.',
    icon: 'document'
  },
  {
    title: 'Medical Setup',
    description: 'Support in scheduling initial consultations and transferring medical records.',
    icon: 'health'
  },
  {
    title: 'Ongoing Support',
    description: 'Continued assistance with healthcare questions, claims, and issues as they arise.',
    icon: 'calendar'
  }
];

// Key benefits
const benefits = [
  {
    title: 'Expert Guidance',
    description: 'Navigate the Swiss healthcare system with confidence'
  },
  {
    title: 'Optimal Coverage',
    description: 'Find the right insurance for your unique healthcare needs'
  },
  {
    title: 'Language Support',
    description: 'Connect with medical providers who speak your language'
  },
  {
    title: 'Administrative Relief',
    description: 'Simplify paperwork and healthcare bureaucracy'
  }
];

// Healthcare challenges for expats
const challenges = [
  "Understanding the mandatory insurance requirements",
  "Finding doctors and specialists who speak your language",
  "Navigating insurance claim processes and reimbursements",
  "Managing high out-of-pocket costs and deductibles",
  "Transferring medical records and prescription medications"
];

// Swiss healthcare system facts
const healthcareFacts = [
  {
    figure: "8.7%",
    description: "of GDP spent on healthcare (one of the highest in Europe)"
  },
  {
    figure: "300+",
    description: "Basic health insurance providers to choose from"
  },
  {
    figure: "4.5",
    description: "Doctors per 1,000 residents (high provider density)"
  },
  {
    figure: "83.7 years",
    description: "Life expectancy (among the world's highest)"
  }
];
---

<ServiceLayout title={title} description={description} service={service}>
  <!-- Hero Banner with Key Message -->
  <section class="py-12 bg-gradient-to-r from-purple-50 to-indigo-50">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-6">Swiss Healthcare <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600">Made Simple</span></h2>
        <p class="text-xl text-accent-700 mb-8">
          Switzerland offers world-class healthcare, but navigating the system as an expatriate can be challenging. Our healthcare services provide the guidance you need for peace of mind.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="#process" class="btn btn-primary px-6 py-3 rounded-lg bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-medium hover:shadow-lg transition-all duration-300">
            Our Process
          </a>
          <a href="#contact" class="btn btn-secondary px-6 py-3 rounded-lg border-2 border-purple-600 text-purple-600 font-medium hover:bg-purple-50 transition-all duration-300">
            Get Expert Help
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Healthcare System Challenges -->
  <section class="section bg-white py-16">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Healthcare <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600">Challenges</span></h2>
        <p class="text-lg text-accent-600">
          Expatriates face unique healthcare challenges when moving to Switzerland. We help you overcome these obstacles.
        </p>
      </div>

      <div class="bg-gray-50 rounded-2xl p-8 shadow-sm">
        <ul class="space-y-4">
          {challenges.map(challenge => (
            <li class="flex items-start">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-gradient-to-r from-purple-600 to-indigo-600 text-white flex items-center justify-center mr-3 mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
              </span>
              <span class="text-accent-700">{challenge}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Swiss Healthcare System Facts -->
      <div class="mt-12 grid grid-cols-2 md:grid-cols-4 gap-6">
        {healthcareFacts.map(fact => (
          <div class="bg-white rounded-xl p-6 text-center shadow-sm hover:shadow-md transition-all duration-300">
            <div class="text-2xl md:text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600 mb-2">
              {fact.figure}
            </div>
            <p class="text-accent-600 text-sm">{fact.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Key Benefits -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Why Use Our Healthcare <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600">Services</span></h2>
        <p class="text-lg text-accent-600">
          Expert assistance to make your healthcare transition to Switzerland smooth and worry-free.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {benefits.map(benefit => (
          <div class="card p-6 text-center hover:shadow-lg transition-all duration-300 border border-gray-100 rounded-xl relative overflow-hidden group">
            <!-- Subtle Gradient Border Effect -->
            <div class="absolute inset-0 rounded-xl p-0.5 bg-gradient-to-r from-purple-600 to-indigo-600 opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
            <div class="relative bg-white rounded-xl p-5">
              <div class="w-16 h-16 mx-auto mb-6 rounded-full flex items-center justify-center bg-gradient-to-r from-purple-600 to-indigo-600 shadow-md transition-all duration-300 group-hover:scale-110">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-3">{benefit.title}</h3>
              <p class="text-accent-600">{benefit.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Steps -->
  <section id="process" class="section bg-accent-50">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Our Healthcare Setup <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600">Process</span></h2>
        <p class="text-lg text-accent-600">
          A structured approach to establishing your healthcare foundation in Switzerland.
        </p>
      </div>

      <div class="relative">
        <!-- Connection Line -->
        <div class="absolute hidden md:block left-1/2 top-0 bottom-0 w-1 bg-gradient-to-b from-purple-600 to-indigo-600 transform -translate-x-1/2 z-0"></div>
        
        <!-- Steps -->
        <div class="space-y-12 relative z-10">
          {steps.map((step, index) => (
            <div class="md:flex items-center">
              <!-- Step Number and Content -->
              <div class={"md:w-1/2 " + (index % 2 === 0 ? 'md:pr-12 md:text-right' : 'md:pl-12 md:order-2')}>
                <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all duration-300">
                  <h3 class="text-xl font-semibold mb-3">{step.title}</h3>
                  <p class="text-accent-600">{step.description}</p>
                </div>
              </div>
              
              <!-- Circle Icon -->
              <div class="hidden md:flex w-14 h-14 rounded-full bg-gradient-to-r from-purple-600 to-indigo-600 text-white items-center justify-center text-2xl font-bold absolute left-1/2 transform -translate-x-1/2 shadow-md z-20">
                {index + 1}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Swiss Healthcare System -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">The Swiss Healthcare <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600">System</span></h2>
        <p class="text-lg text-accent-600">
          Understanding the key aspects of healthcare in Switzerland.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="card p-6 hover:shadow-md transition-all duration-300 rounded-xl border border-gray-100">
          <h3 class="text-xl font-semibold mb-4">Health Insurance</h3>
          <p class="mb-4 text-accent-600">
            Health insurance is mandatory for all residents in Switzerland. The basic insurance (Grundversicherung) 
            covers essential medical services, but many expatriates choose supplementary insurance for additional coverage.
          </p>
          <ul class="space-y-3">
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="font-medium">Multiple provider options</p>
                <p class="text-accent-600 text-sm">Choose from numerous insurance companies</p>
              </div>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="font-medium">Deductible choices</p>
                <p class="text-accent-600 text-sm">Select your preferred franchise amount</p>
              </div>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="font-medium">Supplementary options</p>
                <p class="text-accent-600 text-sm">Add coverage for additional medical needs</p>
              </div>
            </li>
          </ul>
        </div>
        
        <div class="card p-6 hover:shadow-md transition-all duration-300 rounded-xl border border-gray-100">
          <h3 class="text-xl font-semibold mb-4">Medical Care</h3>
          <p class="mb-4 text-accent-600">
            Switzerland offers excellent medical care with state-of-the-art facilities and highly trained professionals.
            Patients have freedom to choose their providers, but understanding the system is essential.
          </p>
          <ul class="space-y-3">
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="font-medium">General Practitioners</p>
                <p class="text-accent-600 text-sm">First contact for most medical needs</p>
              </div>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="font-medium">Specialists and Hospitals</p>
                <p class="text-accent-600 text-sm">Advanced care for specific conditions</p>
              </div>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="font-medium">Multilingual Services</p>
                <p class="text-accent-600 text-sm">Many providers speak English and other languages</p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Companies -->
  <section class="section bg-accent-50">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Trusted Healthcare <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600">Partners</span></h2>
        <p class="text-lg text-accent-600">
          Connect with experienced healthcare advisors specializing in expatriate services.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {companies.map(company => (
          <CompanyCard company={company} />
        ))}
      </div>

      <div class="mt-12 text-center">
        <a href="/companies" class="btn-primary px-6 py-3 rounded-lg bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-medium inline-flex items-center hover:shadow-lg transition-all duration-300">
          View All Companies
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Frequently Asked <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600">Questions</span></h2>
        
        <div class="space-y-6">
          <div class="card p-6 hover:shadow-md transition-all duration-300 rounded-xl border border-gray-100">
            <h3 class="text-xl font-semibold mb-3">Is health insurance really mandatory in Switzerland?</h3>
            <p class="text-accent-600">
              Yes, health insurance is mandatory for everyone residing in Switzerland, including expatriates. You must obtain basic health insurance (Grundversicherung) within three months of arrival or when your residence permit is issued.
            </p>
          </div>
          
          <div class="card p-6 hover:shadow-md transition-all duration-300 rounded-xl border border-gray-100">
            <h3 class="text-xl font-semibold mb-3">How do I find doctors who speak English?</h3>
            <p class="text-accent-600">
              Many Swiss doctors, especially in urban areas, speak English. Our healthcare advisors can help you find appropriate medical providers based on your language preferences and medical needs. University hospitals and private clinics typically have multilingual staff.
            </p>
          </div>
          
          <div class="card p-6 hover:shadow-md transition-all duration-300 rounded-xl border border-gray-100">
            <h3 class="text-xl font-semibold mb-3">What's the difference between basic and supplementary health insurance?</h3>
            <p class="text-accent-600">
              Basic insurance covers essential medical treatments, while supplementary insurance (Zusatzversicherung) provides additional benefits like private hospital rooms, alternative medicine treatments, more extensive dental care, and international coverage. Our advisors can help determine which supplementary options best match your needs.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section id="contact" class="py-16 bg-accent-50">
    <div class="container">
      <div class="bg-gradient-to-r from-purple-600 to-indigo-600 rounded-2xl shadow-xl overflow-hidden">
        <div class="grid grid-cols-1 md:grid-cols-2">
          <div class="p-8 md:p-12 flex items-center">
            <div class="text-white max-w-lg">
              <h2 class="text-2xl md:text-3xl font-bold mb-4">Ready for healthcare peace of mind?</h2>
              <p class="text-white/90 mb-8">
                Connect with our expert team to discuss your specific healthcare needs and receive personalized recommendations.
              </p>
              <a href="/contact" class="inline-flex items-center px-6 py-3 rounded-lg bg-white text-purple-600 font-semibold hover:bg-white/90 transition-all duration-300">
                Schedule a Free Consultation
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
          <div class="hidden md:block relative">
            <img 
              src="https://images.pexels.com/photos/7088530/pexels-photo-7088530.jpeg?auto=compress&cs=tinysrgb&w=800" 
              alt="Healthcare consultation" 
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</ServiceLayout> 