// Page metadata
const title = 'Healthcare Services Switzerland | Swiss Health Insurance & Medical Navigation | ReloFinder.ch';
const description = 'Expert healthcare navigation for expats in Switzerland. Get guidance on mandatory health insurance, finding doctors, and accessing the Swiss medical system with confidence.';
const keywords = 'swiss healthcare services, health insurance switzerland, doctors switzerland, swiss medical system, healthcare navigation switzerland, expat health insurance';
---

<Layout title={title} description={description}>
  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)}></script>

  <!-- Hero Section -->
  <section class="relative py-24 bg-gradient-to-br from-primary-50 via-white to-secondary-50 overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src={service.heroImage} 
        alt="Swiss healthcare services"
        class="w-full h-full object-cover opacity-10"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-primary-500/10 to-secondary-500/10"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="flex items-center justify-center space-x-2 text-sm text-gray-600 mb-8">
          <a href="/" class="hover:text-primary-600 transition-colors">Home</a>
          <span>→</span>
          <a href="/services" class="hover:text-primary-600 transition-colors">Services</a>
          <span>→</span>
          <span class="text-gray-900">{service.name}</span>
        </nav>

        <!-- Badge -->
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-secondary-100 text-secondary-700 font-medium text-sm mb-8">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          {service.subtitle}
        </div>

        <!-- Title & Description -->
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          {service.name.split(' ')[0]} <span class="gradient-text">{service.name.split(' ').slice(1).join(' ')}</span>
        </h1>
        <p class="text-xl text-gray-600 leading-relaxed mb-12 max-w-3xl mx-auto">
          {service.description}
        </p>

        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary-600 mb-2">{service.stats.specialists}</div>
            <div class="text-sm text-gray-600">Specialists</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary-600 mb-2">{service.stats.avgProject}</div>
            <div class="text-sm text-gray-600">Avg. Timeline</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary-600 mb-2">{service.stats.satisfaction}</div>
            <div class="text-sm text-gray-600">Satisfaction</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary-600 mb-2">{service.stats.savedCosts}</div>
            <div class="text-sm text-gray-600">Cost Savings</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4 justify-center">
          <button onclick="openModal('individual-lead-modal')" class="btn-primary px-8 py-4">
            Get Healthcare Guidance
          </button>
          <a href="#companies" class="btn-secondary px-8 py-4">
            View Specialists
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Service Section -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">{aboutService.title}</h2>
          <p class="text-xl text-gray-600 leading-relaxed">
            {aboutService.description}
          </p>
        </div>

        <!-- Key Features Grid -->
        <div class="grid md:grid-cols-5 gap-6 mb-16">
          {service.keyFeatures.map((feature, index) => (
            <div class="text-center p-6 rounded-2xl bg-gradient-to-br from-gray-50 to-white border border-gray-100 hover:shadow-lg transition-all duration-300">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-xl flex items-center justify-center mx-auto mb-4">
                <span class="text-white font-bold text-lg">{index + 1}</span>
              </div>
              <p class="text-sm font-medium text-gray-900">{feature}</p>
            </div>
          ))}
        </div>

        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-2 gap-8">
          {aboutService.benefits.map((benefit) => (
            <div class="flex items-start space-x-4 p-6 rounded-2xl bg-gradient-to-br from-primary-50 to-white">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-xl flex items-center justify-center flex-shrink-0">
                {benefit.icon === 'lightbulb' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                )}
                {benefit.icon === 'shield' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                )}
                {benefit.icon === 'chart' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                )}
                {benefit.icon === 'calculator' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                  </svg>
                )}
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900 mb-2">{benefit.title}</h3>
                <p class="text-gray-600">{benefit.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- How Process Works -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          How <span class="gradient-text">Healthcare Navigation</span> Works
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our systematic approach ensures you receive optimal healthcare coverage and access to the Swiss medical system.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {relocatorProcess.map((step, index) => (
          <div class="relative">
            <!-- Connector Line -->
            {index < relocatorProcess.length - 1 && (
              <div class="hidden lg:block absolute top-8 left-full w-full h-0.5 bg-gradient-to-r from-primary-200 to-secondary-200 transform translate-x-4 z-0"></div>
            )}
            
            <div class="relative bg-white rounded-3xl p-6 shadow-sm hover:shadow-xl transition-all duration-500 h-full">
              <!-- Step Number -->
              <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-2xl flex items-center justify-center mb-6 relative z-10">
