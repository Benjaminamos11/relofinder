---
import Layout from '../../layouts/Layout.astro';
import CompanyCard from '../../components/companies/CompanyCard.astro';
import { getCollection } from 'astro:content';

// Get the move management service content
const services = await getCollection('services');
const moveService = services.find(service => service.slug === 'move-management');

// Mock data for move management service if not found
const serviceData = moveService?.data || {
  title: 'Move Management Services',
  description: 'End-to-end relocation logistics management for seamless international moves to Switzerland. Professional coordination of shipping, customs, and delivery.',
  heroImage: 'https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=1600&h=900&fit=crop',
  stats: {
    providers: '25+',
    avgTime: '4-8 weeks',
    satisfaction: '4.6/5'
  },
  process: [
    {
      step: '1',
      title: 'Pre-Move Survey',
      description: 'Comprehensive assessment of belongings, packing requirements, and logistics planning.',
      duration: '1-2 weeks'
    },
    {
      step: '2',
      title: 'Logistics Planning',
      description: 'Detailed planning of transportation routes, customs documentation, and delivery schedules.',
      duration: '1-2 weeks'
    },
    {
      step: '3',
      title: 'Packing & Collection',
      description: 'Professional packing, inventory creation, and collection from your current location.',
      duration: '1-3 days'
    },
    {
      step: '4',
      title: 'International Transit',
      description: 'Shipping coordination, customs clearance, and transportation to Switzerland.',
      duration: '2-6 weeks'
    },
    {
      step: '5',
      title: 'Delivery & Unpacking',
      description: 'Delivery to your Swiss residence with optional unpacking and setup services.',
      duration: '1-2 days'
    }
  ]
};

// Featured companies offering move management services
const companies = [
  {
    id: 'alpine-move-masters',
    name: 'Alpine Move Masters',
    logo: 'https://images.pexels.com/photos/7464230/pexels-photo-7464230.jpeg?auto=compress&cs=tinysrgb&w=200',
    description: 'Premium international moving services specializing in Switzerland relocations with white-glove service.',
    services: ['International Moving', 'Customs Clearance', 'Premium Packing'],
    regions: ['Zürich', 'Geneva', 'Basel'],
    rating: 4.8,
    reviewCount: 189,
    consultationUrl: 'https://alpinemovemasters.ch/consultation',
    quoteUrl: 'https://alpinemovemasters.ch/quote'
  },
  {
    id: 'swiss-global-movers',
    name: 'Swiss Global Movers',
    logo: 'https://images.pexels.com/photos/7464231/pexels-photo-7464231.jpeg?auto=compress&cs=tinysrgb&w=200',
    description: 'Comprehensive international relocation services with expertise in Swiss customs and logistics.',
    services: ['Global Moving', 'Storage Solutions', 'Pet Relocation'],
    regions: ['All Swiss Regions'],
    rating: 4.7,
    reviewCount: 267,
    consultationUrl: 'https://swissglobalmovers.ch/book',
    quoteUrl: 'https://swissglobalmovers.ch/quote'
  },
  {
    id: 'executive-relocation-logistics',
    name: 'Executive Relocation Logistics',
    logo: 'https://images.pexels.com/photos/3184339/pexels-photo-3184339.jpeg?auto=compress&cs=tinysrgb&w=200',
    description: 'High-end move management for executives and corporations with expedited Swiss delivery.',
    services: ['Executive Moving', 'Corporate Logistics', 'Expedited Service'],
    regions: ['Zurich', 'Geneva', 'Zug'],
    rating: 4.9,
    reviewCount: 134,
    consultationUrl: 'https://executivelogistics.ch/consultation',
    quoteUrl: 'https://executivelogistics.ch/proposal'
  },
  {
    id: 'family-moving-specialists',
    name: 'Family Moving Specialists',
    logo: 'https://images.pexels.com/photos/8112165/pexels-photo-8112165.jpeg?auto=compress&cs=tinysrgb&w=200',
    description: 'Family-focused moving services with special handling for delicate items and children\'s belongings.',
    services: ['Family Moving', 'Delicate Items', 'Child-Friendly Service'],
    regions: ['Basel', 'Lausanne', 'Bern'],
    rating: 4.6,
    reviewCount: 178,
    consultationUrl: 'https://familymoving.ch/book',
    quoteUrl: 'https://familymoving.ch/quote'
  }
];

// Related services for internal linking
const relatedServices = [
  {
    title: 'Housing Services',
    description: 'Find your new home before coordinating your move delivery.',
    href: '/services/housing',
    icon: 'home'
  },
  {
    title: 'Departure Services',
    description: 'Complete departure coordination from your current location.',
    href: '/services/departure-repatriation',
    icon: 'arrow-right'
  },
  {
    title: 'Advisory Services',
    description: 'Strategic planning for complex international move logistics.',
    href: '/services/advisory-services',
    icon: 'lightbulb'
  },
  {
    title: 'Ongoing Support',
    description: 'Continued assistance after your belongings arrive.',
    href: '/services/ongoing-support',
    icon: 'support'
  }
];

// Location-specific move information
const locationMoves = [
  {
    location: 'Zurich',
    href: '/locations/zurich#moving',
    description: 'Urban delivery coordination with elevator restrictions and parking permits for city center moves.',
    keyFactors: ['Urban Access', 'Elevator Permits', 'Time Restrictions']
  },
  {
    location: 'Geneva',
    href: '/locations/geneva#moving',
    description: 'International border coordination with customs clearance and diplomatic shipping experience.',
    keyFactors: ['Border Clearance', 'Diplomatic Service', 'International Hub']
  },
  {
    location: 'Basel',
    href: '/locations/basel#moving',
    description: 'Cross-border logistics with tri-national area experience and pharmaceutical company moves.',
    keyFactors: ['Cross-Border', 'Corporate Moves', 'Tri-National Experience']
  },
  {
    location: 'Zug',
    href: '/locations/zug',
    description: 'Premium service area with executive-level moves and luxury item handling expertise.',
    keyFactors: ['Executive Service', 'Luxury Handling', 'Premium Area']
  }
];

// Blog resources
const blogResources = [
  {
    title: 'International Moving to Switzerland Guide',
    href: '/blog/international-moving-switzerland',
    category: 'Moving',
    readTime: '18 min'
  },
  {
    title: 'Swiss Customs and Import Regulations',
    href: '/blog/swiss-customs-import-guide',
    category: 'Customs',
    readTime: '15 min'
  },
  {
    title: 'Packing Tips for International Moves',
    href: '/blog/international-packing-tips',
    category: 'Packing',
    readTime: '12 min'
  },
  {
    title: 'Moving with Pets to Switzerland',
    href: '/blog/moving-pets-switzerland',
    category: 'Pets',
    readTime: '10 min'
  }
];

// Page metadata
const title = 'Swiss Move Management Services | International Relocation Logistics';
const description = 'Professional move management for international relocations to Switzerland. Comprehensive logistics, customs clearance, and delivery coordination services.';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-amber-50 via-white to-yellow-50 overflow-hidden">
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0 bg-repeat" style="background-image: url(data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%23f59e0b%22%20fill-opacity%3D%220.05%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%224%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E);"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Content -->
          <div class="space-y-8">
            <!-- Breadcrumb -->
            <nav class="flex items-center space-x-2 text-sm text-gray-600">
              <a href="/" class="hover:text-primary-600 transition-colors">Home</a>
              <span>→</span>
              <a href="/services" class="hover:text-primary-600 transition-colors">Services</a>
              <span>→</span>
              <span class="text-gray-900">Move Management</span>
            </nav>

            <!-- Service Badge -->
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-amber-100 text-amber-700 font-medium text-sm">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h12a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8z" clip-rule="evenodd"/>
              </svg>
              International Logistics
            </div>

            <!-- Title & Description -->
            <div class="space-y-6">
              <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
                Swiss Move <span class="gradient-text">Management Services</span>
              </h1>
              <p class="text-xl text-gray-600 leading-relaxed">
                {serviceData.description}
              </p>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-3 gap-6">
              <div class="text-center">
                <div class="text-3xl font-bold text-amber-600">{serviceData.stats?.providers || '25+'}</div>
                <div class="text-sm text-gray-600">Moving Companies</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-amber-600">{serviceData.stats?.avgTime || '4-8 weeks'}</div>
                <div class="text-sm text-gray-600">Transit Time</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-amber-600">{serviceData.stats?.satisfaction || '4.6/5'}</div>
                <div class="text-sm text-gray-600">Success Rate</div>
              </div>
            </div>

            <!-- CTA -->
            <div class="flex flex-wrap gap-4">
              <button onclick="openModal('move-consultation-modal')" class="btn-primary px-8 py-4">
                Plan Your Move
              </button>
              <a href="/swiss-relocation-guide#moving" class="btn-secondary px-8 py-4">
                Moving Guide
              </a>
            </div>
          </div>

          <!-- Hero Image -->
          <div class="relative">
            <img 
              src={serviceData.heroImage} 
              alt="Swiss Move Management Services" 
              class="rounded-3xl shadow-2xl"
              loading="eager"
            />
            <div class="absolute inset-0 rounded-3xl bg-gradient-to-tr from-amber-600/20 to-transparent"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Services Section -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Related Moving Services</h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Move management works best when coordinated with housing and departure services
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {relatedServices.map((service) => (
            <a href={service.href} class="group bg-gradient-to-br from-gray-50 to-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
                {service.icon === 'home' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                  </svg>
                )}
                {service.icon === 'arrow-right' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                )}
                {service.icon === 'lightbulb' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                )}
                {service.icon === 'support' && (
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
              </div>
              <h3 class="font-bold text-lg mb-2 group-hover:text-primary-600 transition-colors">{service.title}</h3>
              <p class="text-gray-600 text-sm">{service.description}</p>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Moving by Location Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Moving to <span class="gradient-text">Swiss Regions</span></h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Each Swiss region has unique moving requirements and logistics considerations
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {locationMoves.map((location) => (
            <a href={location.href} class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 group hover:-translate-y-1">
              <h3 class="font-bold text-xl mb-3 group-hover:text-primary-600 transition-colors">{location.location}</h3>
              <p class="text-gray-600 text-sm mb-4 leading-relaxed">{location.description}</p>
              <div class="space-y-2">
                <div class="text-xs font-medium text-gray-500">Key Factors:</div>
                <div class="flex flex-wrap gap-1">
                  {location.keyFactors.map((factor) => (
                    <span class="text-xs px-2 py-1 bg-amber-100 text-amber-700 rounded-full">{factor}</span>
                  ))}
                </div>
              </div>
              <div class="mt-4 flex items-center text-primary-600 text-sm font-medium">
                Moving Info
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- How Move Management Works -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">How International Move Management Works</h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Our systematic approach ensures seamless logistics for your international move to Switzerland
          </p>
        </div>

        <div class="space-y-8">
          {serviceData.process?.map((step, index) => (
            <div class="flex items-start space-x-6 group">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-amber-500 to-amber-600 rounded-xl flex items-center justify-center text-white font-bold text-lg group-hover:scale-110 transition-transform duration-300">
                {step.step}
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between mb-2">
                  <h3 class="font-bold text-xl">{step.title}</h3>
                  <span class="text-sm text-amber-600 font-medium">{step.duration}</span>
                </div>
                <p class="text-gray-600 leading-relaxed">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Moving Companies -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Featured <span class="gradient-text">Moving Specialists</span></h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Connect with expert move management companies for seamless Swiss relocations
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {companies.map((company) => (
            <CompanyCard company={company} />
          ))}
        </div>

        <div class="text-center mt-12">
          <a href="/companies?service=move-management" class="btn-primary px-8 py-4">
            View All Moving Companies
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Essential Reading Section -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Essential <span class="gradient-text">Moving Resources</span></h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Expert guides and practical information for successful international moves to Switzerland
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {blogResources.map((resource) => (
            <a href={resource.href} class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-6 border border-gray-100 hover:shadow-lg transition-all duration-300 group">
              <div class="mb-4">
                <span class="text-xs font-medium px-3 py-1 bg-amber-100 text-amber-700 rounded-full">{resource.category}</span>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                {resource.title}
              </h3>
              <div class="flex items-center justify-between text-xs text-gray-500">
                <span>{resource.readTime}</span>
                <span class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
                  Read More
                  <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Next Steps CTA -->
  <section class="py-16 bg-gradient-to-br from-amber-600 to-yellow-700 text-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready to Plan Your Move?
        </h2>
        <p class="text-xl text-white/90 mb-8">
          Connect with professional move management specialists who will coordinate every aspect of your international relocation to Switzerland.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <button onclick="openModal('move-consultation-modal')" class="bg-white text-amber-600 px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-colors inline-flex items-center">
            Plan Your Move
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7"/>
            </svg>
          </button>
          <a href="/services/housing" class="bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold hover:bg-white/20 transition-colors inline-flex items-center">
            Find Housing
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout> 