    icon: 'lightbulb',
    specialization: 'Business Setup Hub'
  },
  {
    title: 'Legal Services',
    description: 'Corporate law, business formation, compliance, crypto regulations in Zug.',
    href: '/services/legal-services',
    icon: 'scale',
    specialization: 'Corporate Formation'
  },
  {
    title: 'Banking & Finance Services',
    description: 'Business banking, crypto banking, wealth management, corporate finance.',
