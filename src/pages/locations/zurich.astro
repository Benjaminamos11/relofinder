---
import Layout from '../../layouts/Layout.astro';
import SEOHead from '../../components/common/SEOHead.astro';
import SchemaMarkup from '../../components/common/SchemaMarkup.astro';

const title = 'Relocation to Zurich 2024 | Complete Moving Guide & Services';
const description = 'Complete guide to relocating to Zurich, Switzerland. Find trusted relocation services, neighborhood guides, cost of living, and everything you need for a successful move to Zurich.';

const zurichData = {
  name: 'Zurich',
  city: 'Zurich',
  description: 'Switzerland\'s largest city and global financial hub',
  coordinates: { lat: 47.3769, lng: 8.5417 }
};

const schema = {
  "@context": "https://schema.org",
  "@type": "Place",
  "name": "Zurich Relocation Guide",
  "description": description,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Zurich",
    "addressCountry": "CH"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 47.3769,
    "longitude": 8.5417
  }
};
---

<SEOHead 
  title={title}
  description={description}
  keywords={[
    'relocation zurich', 
    'moving to zurich', 
    'zurich relocation services', 
    'expat zurich',
    'zurich neighborhoods',
    'cost of living zurich',
    'zurich housing',
    'working in zurich'
  ]}
