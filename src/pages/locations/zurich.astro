      </div>
    </section>

    <!-- Quick Stats -->
    <section class="py-12 bg-gray-50">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-4 gap-6">
            <div class="bg-white p-6 rounded-xl text-center shadow-md">
              <div class="text-3xl font-bold text-blue-600 mb-2">433,000</div>
              <div class="text-gray-600">Population</div>
            </div>
            <div class="bg-white p-6 rounded-xl text-center shadow-md">
              <div class="text-3xl font-bold text-green-600 mb-2">CHF 6,900</div>
              <div class="text-gray-600">Avg. Monthly Salary</div>
            </div>
            <div class="bg-white p-6 rounded-xl text-center shadow-md">
              <div class="text-3xl font-bold text-purple-600 mb-2">35%</div>
              <div class="text-gray-600">Expat Population</div>
            </div>
            <div class="bg-white p-6 rounded-xl text-center shadow-md">
