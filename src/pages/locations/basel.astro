---
import Layout from '../../layouts/Layout.astro';
import SEOHead from '../../components/common/SEOHead.astro';
import SchemaMarkup from '../../components/common/SchemaMarkup.astro';

const title = 'Relocation to Basel 2025 | Complete Moving Guide & Services';
const description = 'Complete guide to relocating to Basel, Switzerland. Cultural hub, pharmaceutical industry, tri-border location. Find trusted relocation services and neighborhood insights.';

const baselData = {
  name: 'Basel',
  city: 'Basel',
  description: 'Switzerland\'s cultural capital and pharmaceutical hub',
  coordinates: { lat: 47.5596, lng: 7.5886 }
};

const schema = {
  "@context": "https://schema.org",
  "@type": "Place",
  "name": "Basel Relocation Guide",
  "description": description,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Basel",
    "addressCountry": "CH"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 47.5596,
    "longitude": 7.5886
  }
};
---

<SEOHead 
  title={title}
  description={description}
  keywords={[
    'relocation basel', 
    'moving to basel', 
    'basel relocation services', 
    'expat basel',
    'basel neighborhoods',
    'pharmaceutical basel',
    'basel housing',
    'working in basel',
    'basel cultural city'
  ]}
  schema={schema}
/>

<Layout title={title} description={description}>
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-red-600 to-orange-700 text-white">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">
            Relocating to 
            <span class="text-yellow-300">Basel</span>
          </h1>
          <p class="text-xl md:text-2xl text-white/90 mb-8">
            Your complete guide to moving to Switzerland's cultural and pharmaceutical capital
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <div class="bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full">
              <span class="font-semibold">üé® Cultural Capital</span>
            </div>
            <div class="bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full">
              <span class="font-semibold">üíä Pharma Hub</span>
            </div>
            <div class="bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full">
              <span class="font-semibold">üåç Tri-Border Region</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Stats -->
    <section class="py-16 bg-white">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="text-center">
              <div class="text-3xl font-bold text-red-600 mb-2">25%</div>
              <div class="text-gray-600">Foreign Residents</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-orange-600 mb-2">40+</div>
              <div class="text-gray-600">Museums & Galleries</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-green-600 mb-2">CHF 5,800</div>
              <div class="text-gray-600">Average Monthly Salary</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-blue-600 mb-2">3</div>
              <div class="text-gray-600">Countries Border</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Basel Section -->
    <section class="py-16 bg-gray-50">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Why Choose <span class="text-red-600">Basel</span>?
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Basel offers a unique blend of Swiss efficiency, cultural richness, and international business opportunities at the heart of Europe.
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="text-center">
              <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3">Pharmaceutical Industry</h3>
              <p class="text-gray-600">Global headquarters of Novartis, Roche, and other major pharmaceutical companies offering world-class career opportunities.</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3">Cultural Capital</h3>
              <p class="text-gray-600">Home to over 40 museums, Art Basel fair, and rich cultural heritage. Perfect blend of traditional and contemporary arts.</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3">Strategic Location</h3>
              <p class="text-gray-600">Tri-border region with Germany and France. Easy access to three countries, cultures, and job markets within walking distance.</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3">Economic Stability</h3>
              <p class="text-gray-600">Strong economy driven by life sciences, logistics, and finance. Competitive salaries with lower cost of living than Zurich or Geneva.</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3">Rich Events Calendar</h3>
              <p class="text-gray-600">Famous Basel Carnival, Art Basel, numerous festivals and cultural events throughout the year creating vibrant city life.</p>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3">Education Excellence</h3>
              <p class="text-gray-600">University of Basel, international schools, and excellent educational infrastructure supporting families and professionals.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Neighborhoods Guide -->
    <section class="py-16 bg-white">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Basel <span class="text-red-600">Neighborhoods</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Explore Basel's diverse districts, from the historic Old Town to modern residential areas.
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-gray-50 rounded-3xl p-8">
              <h3 class="text-2xl font-bold mb-4">Altstadt (Old Town)</h3>
              <div class="mb-4">
                <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm mr-2">Historic</span>
                <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm mr-2">Cultural</span>
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">Central</span>
              </div>
              <p class="text-gray-600 mb-4">Medieval old town with cobblestone streets, historic buildings, and the famous Basel Minster. Heart of cultural activities.</p>
              <div class="text-lg font-semibold text-gray-800">CHF 1,800-3,500/month</div>
            </div>

            <div class="bg-gray-50 rounded-3xl p-8">
              <h3 class="text-2xl font-bold mb-4">Gundeldingen</h3>
              <div class="mb-4">
                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm mr-2">Trendy</span>
                <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm mr-2">Young professionals</span>
                <span class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm">Affordable</span>
              </div>
              <p class="text-gray-600 mb-4">Hip neighborhood with creative scene, cafes, and young professionals. Former industrial area transformed into vibrant district.</p>
              <div class="text-lg font-semibold text-gray-800">CHF 1,400-2,500/month</div>
            </div>

            <div class="bg-gray-50 rounded-3xl p-8">
              <h3 class="text-2xl font-bold mb-4">Riehen</h3>
              <div class="mb-4">
                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm mr-2">Family-friendly</span>
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm mr-2">Suburban</span>
                <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm">Museums</span>
              </div>
              <p class="text-gray-600 mb-4">Upscale suburb with family homes, excellent schools, and cultural attractions like Fondation Beyeler. Close to German border.</p>
              <div class="text-lg font-semibold text-gray-800">CHF 2,000-3,800/month</div>
            </div>

            <div class="bg-gray-50 rounded-3xl p-8">
              <h3 class="text-2xl font-bold mb-4">St. Johann</h3>
              <div class="mb-4">
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm mr-2">Residential</span>
                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm mr-2">Rhine access</span>
                <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm">Mixed</span>
              </div>
              <p class="text-gray-600 mb-4">Diverse neighborhood along the Rhine with mix of residential and commercial areas. Good transport connections.</p>
              <div class="text-lg font-semibold text-gray-800">CHF 1,600-2,800/month</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Industry Focus -->
    <section class="py-16 bg-red-50">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Basel's <span class="text-red-600">Industries</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Basel is a global center for life sciences and offers diverse career opportunities.
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white rounded-2xl p-6 shadow-lg">
              <h3 class="font-bold text-lg mb-2">Pharmaceutical & Life Sciences</h3>
              <p class="text-gray-600 text-sm">Home to Novartis, Roche, and many biotech companies. Global hub for pharmaceutical research and development.</p>
            </div>
            <div class="bg-white rounded-2xl p-6 shadow-lg">
              <h3 class="font-bold text-lg mb-2">Chemical Industry</h3>
              <p class="text-gray-600 text-sm">Major chemical companies including BASF, Syngenta, and specialty chemical manufacturers.</p>
            </div>
            <div class="bg-white rounded-2xl p-6 shadow-lg">
              <h3 class="font-bold text-lg mb-2">Logistics & Transportation</h3>
              <p class="text-gray-600 text-sm">Strategic location for European logistics, with major river port and transport connections.</p>
            </div>
            <div class="bg-white rounded-2xl p-6 shadow-lg">
              <h3 class="font-bold text-lg mb-2">Banking & Finance</h3>
              <p class="text-gray-600 text-sm">Traditional banking center with private banks and financial services.</p>
            </div>
            <div class="bg-white rounded-2xl p-6 shadow-lg">
              <h3 class="font-bold text-lg mb-2">Art & Culture</h3>
              <p class="text-gray-600 text-sm">Art Basel, museums, galleries, and cultural institutions creating creative economy opportunities.</p>
            </div>
            <div class="bg-white rounded-2xl p-6 shadow-lg">
              <h3 class="font-bold text-lg mb-2">Education & Research</h3>
              <p class="text-gray-600 text-sm">University of Basel and research institutions driving innovation and academic careers.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Cost of Living -->
    <section class="py-16 bg-white">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Cost of Living in <span class="text-red-600">Basel</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Basel offers a more affordable Swiss lifestyle while maintaining high quality of life and excellent salaries.
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="text-center bg-gray-50 rounded-2xl p-6">
              <div class="text-2xl font-bold text-red-600 mb-2">CHF 1,500-3,000</div>
              <div class="text-gray-600">Monthly Housing</div>
              <div class="text-sm text-gray-500 mt-2">1-3 bedroom apartment</div>
            </div>
            <div class="text-center bg-gray-50 rounded-2xl p-6">
              <div class="text-2xl font-bold text-green-600 mb-2">CHF 1,200-2,000</div>
              <div class="text-gray-600">Monthly Living</div>
              <div class="text-sm text-gray-500 mt-2">Food, transport, utilities</div>
            </div>
            <div class="text-center bg-gray-50 rounded-2xl p-6">
              <div class="text-2xl font-bold text-purple-600 mb-2">CHF 140-320</div>
              <div class="text-gray-600">Health Insurance</div>
              <div class="text-sm text-gray-500 mt-2">Mandatory basic coverage</div>
            </div>
            <div class="text-center bg-gray-50 rounded-2xl p-6">
              <div class="text-2xl font-bold text-orange-600 mb-2">CHF 5,800+</div>
              <div class="text-gray-600">Average Salary</div>
              <div class="text-sm text-gray-500 mt-2">Professional positions</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-br from-red-600 to-orange-700 text-white">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Ready to Make Basel Your New Home?
          </h2>
          <p class="text-xl text-white/90 mb-8">
            Connect with trusted relocation experts who specialize in Basel moves and understand the tri-border region.
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <a href="/companies?location=basel" class="bg-white text-red-600 px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-colors inline-flex items-center">
              Find Basel Relocation Services
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7"/>
              </svg>
            </a>
            <a href="/swiss-relocation-guide" class="bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold hover:bg-white/20 transition-colors inline-flex items-center">
              Complete Switzerland Guide
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <SchemaMarkup type="location" data={baselData} />
</Layout> 