---
import Layout from '../layouts/Layout.astro';
import SchemaMarkup from '../components/common/SchemaMarkup.astro';

const title = "Swiss Relocation Guide 2025 | Complete Expat Moving Guide | ReloFinder";
const description = "Complete guide to relocating to Switzerland. Housing, permits, banking, insurance, schools, and relocation services. Everything you need for a successful move to Switzerland.";
const canonicalURL = "https://relofinder.ch/swiss-relocation-guide";
const keywords = ['swiss relocation guide', 'moving to switzerland', 'relocation switzerland', 'expat guide switzerland', 'swiss relocation', 'moving to zurich', 'relocating to geneva', 'switzerland expat guide'];

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://relofinder.ch"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Swiss Relocation Guide",
      "item": "https://relofinder.ch/swiss-relocation-guide"
    }
  ]
};

const guideSchema = {
  "@context": "https://schema.org",
  "@type": "Guide",
  "name": "Swiss Relocation Guide",
  "description": "Complete guide to relocating to Switzerland covering housing, permits, banking, insurance, education, and relocation services",
  "author": {
    "@type": "Organization",
    "name": "ReloFinder",
    "url": "https://relofinder.ch"
  },
  "about": {
    "@type": "Thing",
    "name": "Relocating to Switzerland"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How long does it take to relocate to Switzerland?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "A typical relocation takes 3-6 months from job offer to move-in. EU citizens have faster permit processing (2-4 weeks). Non-EU nationals face quota systems and longer timelines (2-3 months for permits). Housing is usually the bottleneck, taking 1-3 months to secure."
      }
    },
    {
      "@type": "Question",
      "name": "What permits do I need to live in Switzerland?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "EU/EFTA citizens receive a B-Permit (resident, 5 years renewable) or L-Permit (short-term, up to 12 months) with an employment contract. Non-EU nationals need employer sponsorship and are subject to annual quotas. Your employer typically handles the application."
      }
    },
    {
      "@type": "Question",
      "name": "How do I find housing in Switzerland's competitive market?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Public portals like Homegate receive 100+ applications per listing. The most effective approach is using off-market networks, relocation agencies, or direct connections. Start your search 2-3 months before your move date."
      }
    },
    {
      "@type": "Question",
      "name": "What insurance is mandatory in Switzerland?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Health insurance (LAMal/KVG) is mandatory — you have 3 months to enroll after arrival. Liability insurance (Privathaftpflicht) is often required to sign a rental contract. Household insurance is strongly recommended."
      }
    },
    {
      "@type": "Question",
      "name": "Should I hire a relocation agency or do it myself?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Hire an agency if you're a senior executive, have school-age children, or your company pays. Use DIY tools if you're digitally savvy and budget-conscious. Compare agencies on ReloFinder for transparent quotes."
      }
    }
  ]
};

const combinedSchema = {
  "@context": "https://schema.org",
  "@graph": [breadcrumbSchema, guideSchema, faqSchema]
};
---

<Layout 
  title={title}
  description={description}
  canonical={canonicalURL}
  keywords={keywords}
  schema={combinedSchema}
>

  <!-- Hero Section -->
  <section class="relative min-h-[600px] flex items-center justify-center overflow-hidden bg-gradient-to-br from-coral-500 via-coral-600 to-coral-700">
