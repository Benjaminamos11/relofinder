---
import Layout from '../layouts/Layout.astro';
const title = 'Partner With Us | ReloFinder.ch';
const description = 'Join ReloFinder.ch as a partner - whether you\'re a relocation company, service provider, or international network. Together, we can transform the Swiss relocation industry.';
const canonical = 'https://relofinder.ch/partners';
const keywords = ['relocation partner', 'partner with relofinder', 'swiss relocation agency partner', 'become partner relocation', 'relocation network switzerland', 'partner program relocation'];

const combinedSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://relofinder.ch"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Partners",
          "item": "https://relofinder.ch/partners"
        }
      ]
    },
    {
      "@type": "WebPage",
      "name": title,
      "description": description,
      "url": canonical
    },
    {
      "@type": "Service",
      "name": "ReloFinder Partner Program",
      "description": "Partnership opportunities for relocation companies and service providers in Switzerland. Choose from Free Partner or Preferred Partner tiers.",
      "provider": {
        "@type": "Organization",
        "name": "ReloFinder",
        "url": "https://relofinder.ch"
      },
      "offers": [
        {
          "@type": "Offer",
          "name": "Free Partner",
          "description": "Basic listing on ReloFinder platform with profile, services, and reviews",
          "price": "0",
          "priceCurrency": "CHF"
        },
        {
          "@type": "Offer",
          "name": "Preferred Partner",
          "description": "Premium visibility with priority placement, featured listings, and lead generation support",
          "priceSpecification": {
            "@type": "PriceSpecification",
            "priceCurrency": "CHF"
          }
        }
      ]
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What are the benefits of becoming a ReloFinder partner?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "As a ReloFinder partner, you gain increased visibility to expats and companies seeking relocation services in Switzerland, access to qualified leads, verified profile with Google reviews, and connection to our growing network. Free partners get basic listings, while Preferred Partners receive priority placement and lead generation support."
          }
        },
        {
          "@type": "Question",
          "name": "What's the difference between Free Partner and Preferred Partner?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Free Partners receive a basic profile listing with services, locations, and reviews. Preferred Partners get premium benefits including priority placement on search results, featured listings, dedicated support, lead generation tools, and enhanced profile customization."
          }
        },
        {
          "@type": "Question",
          "name": "How do I become a partner?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "For Free Partner status, complete our online application form with your company details and services. For Preferred Partner inquiries, schedule a consultation call with our team to discuss your needs and partnership benefits."
          }
        },
        {
          "@type": "Question",
          "name": "Do you work with all types of relocation service providers?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, we welcome relocation agencies, housing specialists, immigration consultants, moving companies, settling-in services, and related service providers operating in Switzerland. We verify all partners to maintain quality standards."
          }
        }
      ]
    }
  ]
};
