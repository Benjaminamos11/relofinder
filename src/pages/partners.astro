---
import Layout from '../layouts/Layout.astro';
import { ArrowRight, CheckCircle2 } from 'lucide-react';
const title = 'Partner With Us | ReloFinder.ch';
const description = 'Join ReloFinder.ch as a partner - whether you\'re a relocation company, service provider, or international network. Together, we can transform the Swiss relocation industry.';
const canonical = 'https://relofinder.ch/partners';
const keywords = ['relocation partner', 'partner with relofinder', 'swiss relocation agency partner', 'become partner relocation', 'relocation network switzerland', 'partner program relocation'];

const combinedSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://relofinder.ch"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Partners",
          "item": "https://relofinder.ch/partners"
        }
      ]
    },
    {
      "@type": "WebPage",
      "name": title,
      "description": description,
      "url": canonical
    },
    {
      "@type": "Service",
      "name": "ReloFinder Partner Program",
      "description": "Partnership opportunities for relocation companies and service providers in Switzerland. Choose from Free Partner or Preferred Partner tiers.",
      "provider": {
        "@type": "Organization",
        "name": "ReloFinder",
        "url": "https://relofinder.ch"
      },
      "offers": [
        {
          "@type": "Offer",
          "name": "Free Partner",
          "description": "Basic listing on ReloFinder platform with profile, services, and reviews",
          "price": "0",
          "priceCurrency": "CHF"
        },
        {
          "@type": "Offer",
          "name": "Preferred Partner",
          "description": "Premium visibility with priority placement, featured listings, and lead generation support",
          "priceSpecification": {
            "@type": "PriceSpecification",
            "priceCurrency": "CHF"
          }
        }
      ]
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What are the benefits of becoming a ReloFinder partner?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "As a ReloFinder partner, you gain increased visibility to expats and companies seeking relocation services in Switzerland, access to qualified leads, verified profile with Google reviews, and connection to our growing network. Free partners get basic listings, while Preferred Partners receive priority placement and lead generation support."
          }
        },
        {
          "@type": "Question",
          "name": "What's the difference between Free Partner and Preferred Partner?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Free Partners receive a basic profile listing with services, locations, and reviews. Preferred Partners get premium benefits including priority placement on search results, featured listings, dedicated support, lead generation tools, and enhanced profile customization."
          }
        },
        {
          "@type": "Question",
          "name": "How do I become a partner?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "For Free Partner status, complete our online application form with your company details and services. For Preferred Partner inquiries, schedule a consultation call with our team to discuss your needs and partnership benefits."
          }
        },
        {
          "@type": "Question",
          "name": "Do you work with all types of relocation service providers?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, we welcome relocation agencies, housing specialists, immigration consultants, moving companies, settling-in services, and related service providers operating in Switzerland. We verify all partners to maintain quality standards."
          }
        }
      ]
    }
  ]
};
---
<Layout 
  title={title} 
  description={description}
  canonical={canonical}
  keywords={keywords}
  schema={combinedSchema}
>
  <!-- 1. Cinematic Hero Section -->
  <section class="relative py-24 md:py-40 bg-slate-900 overflow-hidden group">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-b from-slate-950/90 via-slate-950/60 to-slate-950/95 z-20 pointer-events-none"></div>
        <div class="absolute inset-0 bg-[url('/images/partners/hero_handshake.png')] bg-cover bg-center grayscale opacity-50 group-hover:grayscale-0 transition-all duration-[2000ms] ease-in-out z-10"></div>
    </div>

    <div class="container relative z-30">
      <div class="max-w-5xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#FF6F61]/10 border border-[#FF6F61]/20 text-[#FF6F61] text-[10px] font-black uppercase tracking-[0.3em] mb-8 animate-fade-in shadow-[0_0_20px_rgba(255,111,97,0.1)]">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Strategic Growth Network
        </div>
        
        <h1 class="text-5xl md:text-8xl font-black text-white mb-8 tracking-tighter leading-[0.9]">
          Partner With <br/>
          <span class="relative">
              <span class="bg-gradient-to-r from-slate-200 via-white to-slate-200 bg-clip-text text-transparent italic pr-4">ReloFinder</span>
              <div class="absolute -bottom-4 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-[#FF6F61]/50 to-transparent"></div>
          </span>
        </h1>
        
        <p class="text-xl md:text-2xl text-white font-medium mb-16 leading-relaxed max-w-3xl mx-auto text-shadow-md">
          Scale your relocation business with a high-intent ecosystem designed for the modern Swiss market.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
            <a href="#booking-section" class="bg-[#FF6F61] text-white px-10 py-5 rounded-full font-bold uppercase tracking-widest text-xs hover:bg-[#ff5a4d] transition-all transform hover:scale-[1.05] shadow-2xl shadow-[#FF6F61]/20">
                Partner Consultation
            </a>
            <a href="#tier-comparison" class="text-white border border-white/20 px-10 py-5 rounded-full font-bold uppercase tracking-widest text-xs hover:bg-white/10 transition-all backdrop-blur-sm">
                Explore Tiers
            </a>
        </div>
      </div>
    </div>
  </section>

  <!-- 2. The Profit Core (Value Matrix) -->
  <section class="py-32 bg-white relative overflow-hidden">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-24">
          <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-8 block">Profitability Factors</span>
          <h2 class="text-5xl md:text-7xl font-black text-slate-900 mb-10 tracking-tight leading-[0.9]">How Partners Profit.</h2>
          <p class="text-slate-500 text-xl font-light max-w-2xl mx-auto">
            We don't just provide listings. We provide a strategic advantage for your expansion into the Swiss relocation market.
          </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-12">
          <!-- Card 1: Demand -->
          <div class="group h-full">
            <div class="bg-white rounded-3xl border border-slate-100 overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 flex flex-col h-full hover:border-[#FF6F61]/20">
                <div class="h-64 overflow-hidden relative">
                    <img src="/images/partners/leads_analysis.png" class="w-full h-full object-cover grayscale brightness-90 group-hover:grayscale-0 group-hover:scale-110 transition-all duration-[1500ms]" alt="High-intent demand" />
                    <div class="absolute inset-0 bg-gradient-to-t from-white/20 to-transparent group-hover:from-[#FF6F61]/10 transition-colors duration-700"></div>
                </div>
                <div class="p-10 flex-grow">
                    <div class="w-12 h-12 bg-slate-50 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-[#FF6F61]/5 transition-colors">
                        <svg class="w-6 h-6 text-slate-400 group-hover:text-[#FF6F61] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-slate-900 mb-4 tracking-tighter">High-Intent Demand</h3>
                    <p class="text-slate-500 font-light leading-relaxed">
                        Access an audience of premium expats and international hires actively seeking relocation support, already qualified by our ecosystem.
                    </p>
                </div>
            </div>
          </div>

          <!-- Card 2: Authority -->
          <div class="group h-full">
            <div class="bg-white rounded-3xl border border-slate-100 overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 flex flex-col h-full hover:border-[#FF6F61]/20">
                <div class="h-64 overflow-hidden relative">
                    <img src="/images/partners/trust_badge.png" class="w-full h-full object-cover grayscale brightness-90 group-hover:grayscale-0 group-hover:scale-110 transition-all duration-[1500ms]" alt="Trusted Authority" />
                    <div class="absolute inset-0 bg-gradient-to-t from-white/20 to-transparent group-hover:from-[#FF6F61]/10 transition-colors duration-700"></div>
                </div>
                <div class="p-10 flex-grow">
                    <div class="w-12 h-12 bg-slate-50 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-[#FF6F61]/5 transition-colors">
                        <svg class="w-6 h-6 text-slate-400 group-hover:text-[#FF6F61] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-slate-900 mb-4 tracking-tighter">Preferred Authority</h3>
                    <p class="text-slate-500 font-light leading-relaxed">
                        Leverage our "Preferred Partner" status and AI-summarized verification to instantly build trust with foreign clients who value Swiss standards.
                    </p>
                </div>
            </div>
          </div>

          <!-- Card 3: Efficiency -->
          <div class="group h-full">
            <div class="bg-white rounded-3xl border border-slate-100 overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 flex flex-col h-full hover:border-[#FF6F61]/20">
                <div class="h-64 overflow-hidden relative">
                    <img src="/images/partners/meeting_room.png" class="w-full h-full object-cover grayscale brightness-90 group-hover:grayscale-0 group-hover:scale-110 transition-all duration-[1500ms]" alt="Direct Integration" />
                    <div class="absolute inset-0 bg-gradient-to-t from-white/20 to-transparent group-hover:from-[#FF6F61]/10 transition-colors duration-700"></div>
                </div>
                <div class="p-10 flex-grow">
                    <div class="w-12 h-12 bg-slate-50 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-[#FF6F61]/5 transition-colors">
                        <svg class="w-6 h-6 text-slate-400 group-hover:text-[#FF6F61] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-slate-900 mb-4 tracking-tighter">Frictionless Scale</h3>
                    <p class="text-slate-500 font-light leading-relaxed">
                        Reduce your sales cycle with direct calendar integrations and lead distribution that funnels clients directly into your existing workflow.
                    </p>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Redesigned Benefits Section: The Strategic Advantage -->
  <section class="py-32 bg-slate-50 relative overflow-hidden">
    <!-- Subtle background elements -->
    <div class="absolute top-0 right-0 w-1/2 h-full bg-white hidden lg:block skew-x-[-12deg] translate-x-24 border-l border-slate-100"></div>

    <div class="container relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-20 items-center">
            <div>
                <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-8 block">Competitive Edge</span>
                <h2 class="text-5xl md:text-7xl font-black text-slate-900 mb-10 tracking-tight leading-[0.9]">
                    The Strategic <br/>
                    <span class="text-[#FF6F61]">Advantage.</span>
                </h2>
                <p class="text-slate-500 text-xl font-light mb-12 max-w-lg leading-relaxed">
                    Moving beyond traditional listings, we've built an infrastructure that elevates every facet of your relocation operations.
                </p>
                
                <div class="space-y-10">
                    <div class="flex gap-6 group">
                        <div class="w-14 h-14 rounded-full bg-white border border-slate-200 flex items-center justify-center flex-shrink-0 shadow-sm group-hover:border-[#FF6F61]/30 group-hover:shadow-md transition-all">
                            <span class="text-slate-900 font-black text-lg group-hover:text-[#FF6F61]">01</span>
                        </div>
                        <div>
                            <h4 class="text-xl font-bold text-slate-900 mb-2">Unmatched Visibility</h4>
                            <p class="text-slate-400 font-light">Dominating Swiss relocation keywords and providing a premium stage for your brand to be discovered by affluent expats.</p>
                        </div>
                    </div>
                    <div class="flex gap-6 group">
                        <div class="w-14 h-14 rounded-full bg-white border border-slate-200 flex items-center justify-center flex-shrink-0 shadow-sm group-hover:border-[#FF6F61]/30 group-hover:shadow-md transition-all">
                            <span class="text-slate-900 font-black text-lg group-hover:text-[#FF6F61]">02</span>
                        </div>
                        <div>
                            <h4 class="text-xl font-bold text-slate-900 mb-2">Verified Authority</h4>
                            <p class="text-slate-400 font-light">Set the benchmark for industry standards. Our verification protocols instantly communicate quality and trust to your prospects.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="relative">
                <div class="bg-white rounded-[3.5rem] p-16 border border-slate-100 shadow-2xl relative z-20">
                    <h3 class="text-3xl font-black text-slate-900 mb-8 tracking-tight italic">ReloFinder <span class="not-italic opacity-30">x</span> Your Growth</h3>
                    
                    <ul class="space-y-8">
                        <li class="flex items-center gap-6 group">
                            <div class="w-2 h-2 rounded-full bg-[#FF6F61] group-hover:scale-150 transition-transform"></div>
                            <span class="text-lg text-slate-600 font-medium">Precision Lead Matching Architecture</span>
                        </li>
                        <li class="flex items-center gap-6 group">
                            <div class="w-2 h-2 rounded-full bg-[#FF6F61] group-hover:scale-150 transition-transform"></div>
                            <span class="text-lg text-slate-600 font-medium">Frictionless Collaboration Pipeline</span>
                        </li>
                        <li class="flex items-center gap-6 group">
                            <div class="w-2 h-2 rounded-full bg-[#FF6F61] group-hover:scale-150 transition-transform"></div>
                            <span class="text-lg text-slate-600 font-medium">Real-time Industry Insights & Data</span>
                        </li>
                        <li class="flex items-center gap-6 group">
                            <div class="w-2 h-2 rounded-full bg-[#FF6F61] group-hover:scale-150 transition-transform"></div>
                            <span class="text-lg text-slate-600 font-medium">Direct-to-Calendar Booking Tech</span>
                        </li>
                    </ul>

                    <div class="mt-12 pt-12 border-t border-slate-50 flex items-center gap-6">
                        <p class="text-xs text-slate-400 font-bold uppercase tracking-widest leading-none">Joined by <br/> 50+ Swiss Partners</p>
                    </div>
                </div>
                
                <!-- Decorative Elements -->
                <div class="absolute -bottom-10 -right-10 w-64 h-64 bg-[#FF6F61]/5 rounded-full blur-3xl -z-10"></div>
            </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 3. Partnership Tiers (Professional SaaS Style) -->
  <section id="tier-comparison" class="py-32 bg-slate-50 relative overflow-hidden">
    <!-- Background Decor -->
    <div class="absolute inset-0 z-0 opacity-40 pointer-events-none">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-[#FF6F61]/5 blur-[120px]"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-24">
          <span class="text-[#FF6F61] font-black uppercase tracking-[0.4em] text-xs mb-8 block">Network Participation</span>
          <h2 class="text-5xl md:text-7xl font-black text-slate-900 mb-10 tracking-tight leading-[0.9]">Select Your Tier.</h2>
          <p class="text-slate-500 text-xl font-light max-w-2xl mx-auto">
            Choose the level of visibility and integration that matches your business objectives.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 items-stretch max-w-4xl mx-auto">
          <!-- Network Partner (Standard) -->
          <div class="flex flex-col">
            <div class="bg-white rounded-[2.5rem] p-10 border border-slate-100 shadow-xl flex flex-col h-full hover:shadow-2xl transition-all duration-500">
                <div class="mb-10">
                    <h3 class="text-2xl font-black text-slate-900 mb-2">Network Partner</h3>
                    <p class="text-slate-400 text-sm font-light">Essential Swiss Presence</p>
                </div>

                <div class="mb-10 flex items-baseline gap-1">
                    <span class="text-4xl font-black text-slate-900">Free</span>
                    <span class="text-slate-400 text-sm font-light">/ listing</span>
                </div>

                <ul class="space-y-5 mb-12 flex-grow">
                    <li class="flex items-center gap-4">
                        <div class="w-5 h-5 rounded-full bg-slate-50 flex items-center justify-center flex-shrink-0">
                            <svg class="w-3 h-3 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                            </svg>
                        </div>
                        <span class="text-slate-600 text-sm">Professional profile page</span>
                    </li>
                    <li class="flex items-center gap-4">
                        <div class="w-5 h-5 rounded-full bg-slate-50 flex items-center justify-center flex-shrink-0">
                            <svg class="w-3 h-3 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                            </svg>
                        </div>
                        <span class="text-slate-600 text-sm">Service directory listing</span>
                    </li>
                    <li class="flex items-center gap-4">
                        <div class="w-5 h-5 rounded-full bg-slate-50 flex items-center justify-center flex-shrink-0">
                            <svg class="w-3 h-3 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                            </svg>
                        </div>
                        <span class="text-slate-600 text-sm">Google Review verification</span>
                    </li>
                </ul>

                <button 
                  class="w-full py-4 border border-slate-200 text-slate-900 font-bold uppercase tracking-widest text-[10px] rounded-full hover:bg-slate-50 transition-all cta-trigger"
                  data-context='{"page": "partners", "tier": "network"}'
                >
                  Apply Now
                </button>
            </div>
          </div>

          <!-- Strategic Partner (Preferred) -->
          <div class="flex flex-col relative">
            <!-- Strategic Badge -->
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 z-20">
                <span class="bg-[#FF6F61] text-white text-[9px] font-black uppercase tracking-[0.2em] px-6 py-2 rounded-full shadow-lg shadow-[#FF6F61]/30">Strategic Choice</span>
            </div>
            
            <div class="bg-slate-900 rounded-[2.5rem] p-10 border border-slate-800 shadow-2xl flex flex-col h-full relative overflow-hidden transform md:scale-[1.05] z-10 transition-all duration-500 hover:shadow-[0_48px_96px_-12px_rgba(255,111,97,0.25)]">
                <!-- Highlight Glow -->
                <div class="absolute top-0 right-0 w-32 h-32 bg-[#FF6F61] opacity-[0.05] blur-3xl"></div>
                
                <div class="mb-10">
                    <h3 class="text-2xl font-black text-white mb-2">Strategic Partner</h3>
                    <p class="text-slate-500 text-sm font-light">The Growth Accelerator</p>
                </div>

                <div class="mb-10 flex items-baseline gap-1">
                    <span class="text-4xl font-black text-white">Preferred</span>
                </div>

                <ul class="space-y-5 mb-12 flex-grow">
                    <li class="flex items-center gap-4 group">
                        <div class="w-5 h-5 rounded-full bg-[#FF6F61]/20 flex items-center justify-center flex-shrink-0">
                            <svg class="w-3 h-3 text-[#FF6F61]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                            </svg>
                        </div>
                        <span class="text-slate-200 text-sm font-bold">Priority Directory Ranking</span>
                    </li>
                    <li class="flex items-center gap-4 group">
                        <div class="w-5 h-5 rounded-full bg-[#FF6F61]/20 flex items-center justify-center flex-shrink-0">
                            <svg class="w-3 h-3 text-[#FF6F61]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                            </svg>
                        </div>
                        <span class="text-slate-200 text-sm font-bold">Direct Cal.com Integration</span>
                    </li>
                    <li class="flex items-center gap-4 group">
                        <div class="w-5 h-5 rounded-full bg-[#FF6F61]/20 flex items-center justify-center flex-shrink-0">
                            <svg class="w-3 h-3 text-[#FF6F61]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                            </svg>
                        </div>
                        <span class="text-slate-200 text-sm font-bold">AI Verification Badge</span>
                    </li>
                    <li class="flex items-center gap-4 group">
                        <div class="w-5 h-5 rounded-full bg-[#FF6F61]/20 flex items-center justify-center flex-shrink-0">
                            <svg class="w-3 h-3 text-[#FF6F61]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                            </svg>
                        </div>
                        <span class="text-slate-200 text-sm font-bold">Featured Content Placement</span>
                    </li>
                </ul>

                <button 
                  class="w-full py-5 bg-[#FF6F61] text-white font-bold uppercase tracking-widest text-xs rounded-full text-center hover:bg-[#ff5a4d] transition-all transform hover:scale-[1.02] shadow-2xl shadow-[#FF6F61]/30 cta-trigger"
                  data-context='{"page": "partners", "tier": "strategic"}'
                >
                  Talk to Growth Team
                </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 5. Contact Hub (General Inquiries) -->
  <section id="contact-hub" class="py-32 bg-slate-50 relative overflow-hidden">
    <div class="container relative z-10">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-[3rem] p-12 md:p-20 border border-slate-100 shadow-2xl relative overflow-hidden">
            <!-- Decorative Accent -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-[#FF6F61]/5 rounded-bl-[5rem]"></div>
            
            <div class="grid lg:grid-cols-5 gap-16">
