---
import Layout from "../../layouts/Layout.astro";
import RFPForm from "../../components/corporate/RFPForm";
import { corporateTranslations } from "../../i18n/corporate";
---

<Layout
    title="Corporate Relocation Services | Relofinder"
    navbarVariant="solid"
>
    <div class="min-h-screen bg-slate-50 pb-20" style="padding-top: 180px;">
        <div class="container mx-auto px-4">
            <div
                class="max-w-3xl mx-auto text-center mb-10 w-full flex flex-col items-center"
            >
                <span
                    class="inline-block px-3 py-1 bg-slate-900 text-white text-xs font-bold uppercase tracking-wider rounded-full mb-4"
                >
                    Corporate Concierge
                </span>
                <h1
                    class="text-4xl md:text-5xl font-bold text-slate-900 mb-4 tracking-tight text-center"
                >
                    Streamline Your Employee Relocations.
                </h1>
                <p class="text-lg text-slate-600 max-w-xl mx-auto text-center">
                    Get curated proposals from top-tier Swiss agencies. Compare
                    benchmarks, service levels, and costs in 24 hours.
                </p>
            </div>

            <RFPForm
                client:load
                lang="en"
                translations={corporateTranslations.en.form}
            />
        </div>
    </div>
</Layout>
